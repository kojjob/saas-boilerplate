<% content_for :page_title, "Materials Report" %>

<%# Report Content - Updates via Turbo Frame %>
<%= turbo_frame_tag "material_report_content" do %>
  <div class="space-y-6">
    <%# Hero Header with Dark Background %>
    <div class="relative overflow-hidden bg-gradient-to-r from-slate-900 via-slate-800 to-slate-900 rounded-2xl shadow-2xl">
      <%# Decorative grid pattern %>
      <div class="absolute inset-0 opacity-10">
        <svg class="w-full h-full" viewBox="0 0 100 100" preserveAspectRatio="none">
          <defs>
            <pattern id="materials-report-grid" width="10" height="10" patternUnits="userSpaceOnUse">
              <path d="M 10 0 L 0 0 0 10" fill="none" stroke="currentColor" stroke-width="0.5"/>
            </pattern>
          </defs>
          <rect width="100%" height="100%" fill="url(#materials-report-grid)"/>
        </svg>
      </div>

      <%# Gradient orbs %>
      <div class="absolute top-0 right-0 w-72 h-72 bg-orange-500/20 rounded-full blur-3xl"></div>
      <div class="absolute bottom-0 left-0 w-48 h-48 bg-amber-500/20 rounded-full blur-3xl"></div>

      <div class="relative px-6 py-8 sm:px-8 sm:py-10">
        <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-6">
          <%# Title and stats %>
          <div class="flex items-start gap-4">
            <div class="flex-shrink-0 w-14 h-14 rounded-2xl bg-gradient-to-br from-orange-500 to-amber-600 flex items-center justify-center shadow-lg shadow-orange-500/30">
              <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.25 7.5l-.625 10.632a2.25 2.25 0 01-2.247 2.118H6.622a2.25 2.25 0 01-2.247-2.118L3.75 7.5M10 11.25h4M3.375 7.5h17.25c.621 0 1.125-.504 1.125-1.125v-1.5c0-.621-.504-1.125-1.125-1.125H3.375c-.621 0-1.125.504-1.125 1.125v1.5c0 .621.504 1.125 1.125 1.125z"/>
              </svg>
            </div>
            <div>
              <h1 class="text-2xl sm:text-3xl font-bold text-white">Materials Report</h1>
              <p class="mt-1 text-slate-400"><%= @start_date.strftime("%b %d, %Y") %> - <%= @end_date.strftime("%b %d, %Y") %></p>
              <div class="mt-3 flex items-center gap-4">
                <div class="flex items-center gap-2">
                  <span class="text-2xl font-bold text-white"><%= number_to_currency(@total_amount, precision: 0) %></span>
                  <span class="text-sm text-slate-400">total</span>
                </div>
                <div class="w-px h-6 bg-slate-700"></div>
                <div class="flex items-center gap-2">
                  <span class="text-2xl font-bold text-orange-400"><%= number_to_currency(@total_billable, precision: 0) %></span>
                  <span class="text-sm text-slate-400">billable</span>
                </div>
              </div>
            </div>
          </div>

          <%# Back button %>
          <div class="flex-shrink-0">
            <%= link_to material_entries_path, class: "inline-flex items-center gap-2 px-4 py-2.5 bg-slate-800/80 hover:bg-slate-700 text-slate-300 hover:text-white font-medium rounded-xl border border-slate-700/50 transition-all duration-200" do %>
              <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5L3 12m0 0l7.5-7.5M3 12h18" />
              </svg>
              Back to materials
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <%# Date Range Filter %>
    <div class="bg-white rounded-2xl shadow-sm border border-slate-200 p-4">
      <%= form_with url: report_material_entries_path, method: :get, class: "flex flex-wrap items-end gap-4", data: { turbo_frame: "material_report_content", turbo_action: "advance" } do |f| %>
        <div class="flex-1 min-w-[150px]">
          <label class="block text-xs font-medium text-slate-500 uppercase tracking-wider mb-2">Start Date</label>
          <%= date_field_tag :start_date, @start_date,
              class: "w-full px-4 py-3 border border-slate-200 rounded-xl text-sm focus:outline-none focus:ring-2 focus:ring-orange-500 focus:border-orange-500 transition-all bg-white" %>
        </div>

        <div class="flex-1 min-w-[150px]">
          <label class="block text-xs font-medium text-slate-500 uppercase tracking-wider mb-2">End Date</label>
          <%= date_field_tag :end_date, @end_date,
              class: "w-full px-4 py-3 border border-slate-200 rounded-xl text-sm focus:outline-none focus:ring-2 focus:ring-orange-500 focus:border-orange-500 transition-all bg-white" %>
        </div>

        <div class="flex gap-2">
          <%= submit_tag "Update Report", class: "px-5 py-3 bg-gradient-to-r from-orange-500 to-amber-600 hover:from-orange-600 hover:to-amber-700 text-white text-sm font-semibold rounded-xl shadow-lg shadow-orange-500/25 hover:shadow-orange-500/40 transition-all cursor-pointer", data: { turbo_submits_with: "Loading..." } %>
        </div>
      <% end %>
    </div>

  <%# Stats Cards %>
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
    <%# Total Materials %>
    <div class="bg-white rounded-2xl shadow-sm border border-slate-200 p-5 hover:shadow-lg hover:border-orange-200 transition-all duration-300 group">
      <div class="flex items-center gap-4">
        <div class="w-12 h-12 rounded-xl bg-gradient-to-br from-blue-500 to-blue-600 flex items-center justify-center shadow-lg shadow-blue-500/25 group-hover:scale-110 transition-transform duration-300">
          <svg class="w-6 h-6 text-white" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M20.25 7.5l-.625 10.632a2.25 2.25 0 01-2.247 2.118H6.622a2.25 2.25 0 01-2.247-2.118L3.75 7.5M10 11.25h4M3.375 7.5h17.25c.621 0 1.125-.504 1.125-1.125v-1.5c0-.621-.504-1.125-1.125-1.125H3.375c-.621 0-1.125.504-1.125 1.125v1.5c0 .621.504 1.125 1.125 1.125z" />
          </svg>
        </div>
        <div>
          <p class="text-xs font-medium text-slate-500 uppercase tracking-wider">Total Materials</p>
          <p class="text-2xl font-bold text-slate-900"><%= number_to_currency(@total_amount) %></p>
        </div>
      </div>
    </div>

    <%# Billable Amount %>
    <div class="bg-white rounded-2xl shadow-sm border border-slate-200 p-5 hover:shadow-lg hover:border-orange-200 transition-all duration-300 group">
      <div class="flex items-center gap-4">
        <div class="w-12 h-12 rounded-xl bg-gradient-to-br from-green-500 to-emerald-600 flex items-center justify-center shadow-lg shadow-green-500/25 group-hover:scale-110 transition-transform duration-300">
          <svg class="w-6 h-6 text-white" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v12m-3-2.818l.879.659c1.171.879 3.07.879 4.242 0 1.172-.879 1.172-2.303 0-3.182C13.536 12.219 12.768 12 12 12c-.725 0-1.45-.22-2.003-.659-1.106-.879-1.106-2.303 0-3.182s2.9-.879 4.006 0l.415.33M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
        <div>
          <p class="text-xs font-medium text-slate-500 uppercase tracking-wider">Billable Amount</p>
          <p class="text-2xl font-bold text-slate-900"><%= number_to_currency(@total_billable) %></p>
        </div>
      </div>
    </div>

    <%# Projects %>
    <div class="bg-white rounded-2xl shadow-sm border border-slate-200 p-5 hover:shadow-lg hover:border-orange-200 transition-all duration-300 group">
      <div class="flex items-center gap-4">
        <div class="w-12 h-12 rounded-xl bg-gradient-to-br from-purple-500 to-purple-600 flex items-center justify-center shadow-lg shadow-purple-500/25 group-hover:scale-110 transition-transform duration-300">
          <svg class="w-6 h-6 text-white" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 12.75V12A2.25 2.25 0 014.5 9.75h15A2.25 2.25 0 0121.75 12v.75m-8.69-6.44l-2.12-2.12a1.5 1.5 0 00-1.061-.44H4.5A2.25 2.25 0 002.25 6v12a2.25 2.25 0 002.25 2.25h15A2.25 2.25 0 0021.75 18V9a2.25 2.25 0 00-2.25-2.25h-5.379a1.5 1.5 0 01-1.06-.44z" />
          </svg>
        </div>
        <div>
          <p class="text-xs font-medium text-slate-500 uppercase tracking-wider">Projects</p>
          <p class="text-2xl font-bold text-slate-900"><%= @project_summary.keys.count %></p>
        </div>
      </div>
    </div>
  </div>

  <%# Project Breakdown %>
  <div class="bg-white rounded-2xl shadow-sm border border-slate-200 overflow-hidden">
    <div class="px-6 py-4 border-b border-slate-200 bg-gradient-to-r from-slate-50 to-slate-100">
      <div class="flex items-center gap-3">
        <div class="w-8 h-8 rounded-lg bg-gradient-to-br from-blue-500 to-indigo-600 flex items-center justify-center">
          <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z"/>
          </svg>
        </div>
        <h2 class="text-lg font-semibold text-slate-900">Materials by Project</h2>
      </div>
    </div>
    <% if @project_summary.any? %>
      <div class="divide-y divide-slate-100">
        <% @project_summary.each do |project_id, amount| %>
          <% project = Project.find_by(id: project_id) %>
          <% next unless project %>
          <div class="px-6 py-4 flex items-center justify-between hover:bg-orange-50/50 transition-colors group">
            <div class="flex items-center gap-3">
              <div class="w-10 h-10 rounded-xl bg-gradient-to-br from-blue-100 to-indigo-100 flex items-center justify-center group-hover:scale-105 transition-transform">
                <svg class="w-5 h-5 text-blue-600" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 12.75V12A2.25 2.25 0 014.5 9.75h15A2.25 2.25 0 0121.75 12v.75m-8.69-6.44l-2.12-2.12a1.5 1.5 0 00-1.061-.44H4.5A2.25 2.25 0 002.25 6v12a2.25 2.25 0 002.25 2.25h15A2.25 2.25 0 0021.75 18V9a2.25 2.25 0 00-2.25-2.25h-5.379a1.5 1.5 0 01-1.06-.44z" />
                </svg>
              </div>
              <div>
                <p class="text-sm font-semibold text-slate-900 group-hover:text-orange-600 transition-colors"><%= project.name %></p>
                <p class="text-xs text-slate-500"><%= project.client&.name %></p>
              </div>
            </div>
            <div class="text-right">
              <p class="text-sm font-bold text-slate-900"><%= number_to_currency(amount) %></p>
              <p class="text-xs text-slate-500"><%= @total_amount > 0 ? number_with_precision((amount / @total_amount * 100), precision: 0) : 0 %>% of total</p>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="text-center py-12">
        <p class="text-sm text-slate-500">No materials for this period.</p>
      </div>
    <% end %>
  </div>

  <%# Detailed Entries %>
  <div class="bg-white rounded-2xl shadow-sm border border-slate-200 overflow-hidden">
    <div class="px-6 py-4 border-b border-slate-200 bg-gradient-to-r from-slate-50 to-slate-100">
      <div class="flex items-center gap-3">
        <div class="w-8 h-8 rounded-lg bg-gradient-to-br from-orange-500 to-amber-600 flex items-center justify-center">
          <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
          </svg>
        </div>
        <h2 class="text-lg font-semibold text-slate-900">Detailed Entries</h2>
      </div>
    </div>
    <% if @material_entries.any? %>
      <div class="overflow-x-auto">
        <table class="min-w-full">
          <thead>
            <tr class="bg-gradient-to-r from-slate-50 to-slate-100 border-b border-slate-200">
              <th class="px-6 py-4 text-left text-xs font-semibold text-slate-600 uppercase tracking-wider">Date</th>
              <th class="px-6 py-4 text-left text-xs font-semibold text-slate-600 uppercase tracking-wider">Item</th>
              <th class="px-6 py-4 text-left text-xs font-semibold text-slate-600 uppercase tracking-wider">Project</th>
              <th class="px-6 py-4 text-right text-xs font-semibold text-slate-600 uppercase tracking-wider">Qty</th>
              <th class="px-6 py-4 text-right text-xs font-semibold text-slate-600 uppercase tracking-wider">Unit Cost</th>
              <th class="px-6 py-4 text-right text-xs font-semibold text-slate-600 uppercase tracking-wider">Total</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-slate-100">
            <% @material_entries.each do |entry| %>
              <tr class="hover:bg-orange-50/50 transition-colors group">
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="flex items-center gap-3">
                    <div class="w-8 h-8 rounded-lg bg-slate-100 flex items-center justify-center group-hover:bg-orange-100 transition-colors">
                      <span class="text-xs font-bold text-slate-600 group-hover:text-orange-600"><%= entry.date.strftime("%d") %></span>
                    </div>
                    <span class="text-sm font-medium text-slate-900"><%= entry.date.strftime("%b %d") %></span>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-slate-900">
                  <%= entry.name %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-600">
                  <%= entry.project.name %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-right text-slate-900">
                  <%= entry.quantity %> <%= entry.unit %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-right text-slate-900">
                  <%= number_to_currency(entry.unit_cost) %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-right font-semibold text-slate-900">
                  <%= number_to_currency(entry.total_amount) %>
                </td>
              </tr>
            <% end %>
          </tbody>
          <tfoot>
            <tr class="bg-gradient-to-r from-orange-50 to-amber-50 border-t-2 border-orange-200">
              <td colspan="5" class="px-6 py-4 text-sm font-bold text-slate-900">Total</td>
              <td class="px-6 py-4 text-sm font-bold text-right text-orange-600"><%= number_to_currency(@total_amount) %></td>
            </tr>
          </tfoot>
        </table>
      </div>
    <% else %>
      <div class="text-center py-12">
        <div class="mx-auto w-16 h-16 rounded-xl bg-gradient-to-br from-slate-100 to-slate-200 flex items-center justify-center mb-4">
          <svg class="w-8 h-8 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.25 7.5l-.625 10.632a2.25 2.25 0 01-2.247 2.118H6.622a2.25 2.25 0 01-2.247-2.118L3.75 7.5M10 11.25h4M3.375 7.5h17.25c.621 0 1.125-.504 1.125-1.125v-1.5c0-.621-.504-1.125-1.125-1.125H3.375c-.621 0-1.125.504-1.125 1.125v1.5c0 .621.504 1.125 1.125 1.125z"/>
          </svg>
        </div>
        <p class="text-sm text-slate-500">No materials for this period.</p>
      </div>
    <% end %>
  </div>
  </div>
<% end %>
