<div class="max-w-2xl mx-auto">
  <div class="mb-6">
    <%= link_to material_entries_path, class: "inline-flex items-center gap-2 text-sm text-gray-500 hover:text-gray-700 transition-colors" do %>
      <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5L3 12m0 0l7.5-7.5M3 12h18" />
      </svg>
      Back to materials
    <% end %>
  </div>

  <div class="bg-white rounded-xl border border-gray-200 overflow-hidden">
    <%# Header %>
    <div class="px-6 py-5 border-b border-gray-100">
      <div class="flex items-start justify-between">
        <div>
          <h1 class="text-xl font-semibold text-gray-900"><%= @material_entry.name %></h1>
          <p class="mt-1 text-sm text-gray-500"><%= @material_entry.date.strftime("%B %d, %Y") %></p>
        </div>
        <div class="flex items-center gap-2">
          <%= link_to edit_material_entry_path(@material_entry),
              class: "inline-flex items-center gap-2 px-3 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-200 rounded-lg hover:bg-gray-50 transition-colors",
              data: { turbo_frame: "modal" } do %>
            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M16.862 4.487l1.687-1.688a1.875 1.875 0 112.652 2.652L10.582 16.07a4.5 4.5 0 01-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 011.13-1.897l8.932-8.931zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0115.75 21H5.25A2.25 2.25 0 013 18.75V8.25A2.25 2.25 0 015.25 6H10" />
            </svg>
            Edit
          <% end %>
          <%= button_to material_entry_path(@material_entry),
              method: :delete,
              form: { data: { turbo_confirm: "Are you sure you want to delete this material entry?" } },
              class: "inline-flex items-center gap-2 px-3 py-2 text-sm font-medium text-red-700 bg-white border border-red-200 rounded-lg hover:bg-red-50 transition-colors" do %>
            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0" />
            </svg>
            Delete
          <% end %>
        </div>
      </div>
    </div>

    <%# Content %>
    <div class="px-6 py-5 space-y-6">
      <%# Project Info %>
      <div>
        <h3 class="text-sm font-medium text-gray-500 mb-2">Project</h3>
        <div class="flex items-center gap-3">
          <div class="p-2 rounded-lg bg-indigo-50">
            <svg class="w-5 h-5 text-indigo-600" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 12.75V12A2.25 2.25 0 014.5 9.75h15A2.25 2.25 0 0121.75 12v.75m-8.69-6.44l-2.12-2.12a1.5 1.5 0 00-1.061-.44H4.5A2.25 2.25 0 002.25 6v12a2.25 2.25 0 002.25 2.25h15A2.25 2.25 0 0021.75 18V9a2.25 2.25 0 00-2.25-2.25h-5.379a1.5 1.5 0 01-1.06-.44z" />
            </svg>
          </div>
          <div>
            <p class="text-sm font-medium text-gray-900"><%= @material_entry.project.name %></p>
            <p class="text-xs text-gray-500"><%= @material_entry.project.client&.name %></p>
          </div>
        </div>
      </div>

      <%# Description %>
      <% if @material_entry.description.present? %>
        <div>
          <h3 class="text-sm font-medium text-gray-500 mb-2">Description</h3>
          <p class="text-sm text-gray-900"><%= @material_entry.description %></p>
        </div>
      <% end %>

      <%# Quantity & Pricing %>
      <div class="grid grid-cols-3 gap-6">
        <div>
          <h3 class="text-sm font-medium text-gray-500 mb-2">Quantity</h3>
          <p class="text-xl font-bold text-gray-900"><%= @material_entry.quantity %> <%= @material_entry.unit %></p>
        </div>
        <div>
          <h3 class="text-sm font-medium text-gray-500 mb-2">Unit Cost</h3>
          <p class="text-xl font-bold text-gray-900"><%= number_to_currency(@material_entry.unit_cost) %></p>
        </div>
        <div>
          <h3 class="text-sm font-medium text-gray-500 mb-2">Subtotal</h3>
          <p class="text-xl font-bold text-gray-900"><%= number_to_currency(@material_entry.subtotal) %></p>
        </div>
      </div>

      <%# Markup %>
      <% if @material_entry.markup_percentage.to_f > 0 %>
        <div class="grid grid-cols-2 gap-6">
          <div>
            <h3 class="text-sm font-medium text-gray-500 mb-2">Markup</h3>
            <p class="text-xl font-bold text-gray-900"><%= @material_entry.markup_percentage %>%</p>
          </div>
          <div>
            <h3 class="text-sm font-medium text-gray-500 mb-2">Markup Amount</h3>
            <p class="text-xl font-bold text-gray-900"><%= number_to_currency(@material_entry.markup_amount) %></p>
          </div>
        </div>
      <% end %>

      <%# Status Badges %>
      <div>
        <h3 class="text-sm font-medium text-gray-500 mb-2">Status</h3>
        <div class="flex items-center gap-2">
          <% if @material_entry.billable? %>
            <span class="inline-flex items-center px-2.5 py-1 rounded-lg text-xs font-medium bg-green-100 text-green-800">
              Billable
            </span>
          <% else %>
            <span class="inline-flex items-center px-2.5 py-1 rounded-lg text-xs font-medium bg-gray-100 text-gray-600">
              Non-billable
            </span>
          <% end %>
          <% if @material_entry.invoiced? %>
            <span class="inline-flex items-center px-2.5 py-1 rounded-lg text-xs font-medium bg-blue-100 text-blue-800">
              Invoiced
            </span>
          <% else %>
            <span class="inline-flex items-center px-2.5 py-1 rounded-lg text-xs font-medium bg-amber-100 text-amber-800">
              Not Invoiced
            </span>
          <% end %>
        </div>
      </div>

      <%# Total Amount %>
      <div class="pt-4 border-t border-gray-100">
        <div class="flex items-center justify-between">
          <h3 class="text-sm font-medium text-gray-500">Total Amount</h3>
          <p class="text-2xl font-bold text-gray-900"><%= number_to_currency(@material_entry.total_amount) %></p>
        </div>
      </div>
    </div>

    <%# Footer %>
    <div class="px-6 py-4 bg-gray-50 border-t border-gray-100">
      <div class="flex items-center justify-between text-xs text-gray-500">
        <span>Added by <%= @material_entry.user.email %></span>
        <span>Created <%= time_ago_in_words(@material_entry.created_at) %> ago</span>
      </div>
    </div>
  </div>
</div>

<%# Modal container %>
<%= turbo_frame_tag "modal" %>
