<% content_for :page_title, @material_entry.name %>

<div class="space-y-6">
  <%# Hero Header with Dark Background %>
  <div class="relative overflow-hidden bg-gradient-to-r from-slate-900 via-slate-800 to-slate-900 rounded-2xl shadow-2xl">
    <%# Decorative grid pattern %>
    <div class="absolute inset-0 opacity-10">
      <svg class="w-full h-full" viewBox="0 0 100 100" preserveAspectRatio="none">
        <defs>
          <pattern id="material-grid" width="10" height="10" patternUnits="userSpaceOnUse">
            <path d="M 10 0 L 0 0 0 10" fill="none" stroke="currentColor" stroke-width="0.5"/>
          </pattern>
        </defs>
        <rect width="100%" height="100%" fill="url(#material-grid)"/>
      </svg>
    </div>

    <%# Gradient orbs %>
    <div class="absolute top-0 right-0 w-72 h-72 bg-amber-500/20 rounded-full blur-3xl"></div>
    <div class="absolute bottom-0 left-0 w-48 h-48 bg-orange-500/20 rounded-full blur-3xl"></div>

    <div class="relative px-6 py-8 sm:px-8 sm:py-10">
      <%# Back button %>
      <div class="mb-6">
        <%= link_to material_entries_path, class: "inline-flex items-center gap-2 text-sm text-slate-400 hover:text-white transition-colors group" do %>
          <svg class="w-4 h-4 transform group-hover:-translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5L3 12m0 0l7.5-7.5M3 12h18" />
          </svg>
          Back to materials
        <% end %>
      </div>

      <div class="flex flex-col sm:flex-row sm:items-start sm:justify-between gap-6">
        <%# Title and info %>
        <div class="flex items-start gap-4">
          <div class="flex-shrink-0 w-14 h-14 rounded-2xl bg-gradient-to-br from-amber-500 to-orange-600 flex items-center justify-center shadow-lg shadow-amber-500/30">
            <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"/>
            </svg>
          </div>
          <div>
            <h1 class="text-2xl sm:text-3xl font-bold text-white"><%= @material_entry.name %></h1>
            <p class="mt-1 text-slate-400"><%= @material_entry.date.strftime("%B %d, %Y") %></p>
            <div class="mt-3 flex items-center gap-3">
              <% if @material_entry.billable? %>
                <span class="inline-flex items-center px-3 py-1 rounded-lg text-xs font-medium bg-green-500/20 text-green-400 border border-green-500/30">
                  <svg class="w-3 h-3 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                  </svg>
                  Billable
                </span>
              <% else %>
                <span class="inline-flex items-center px-3 py-1 rounded-lg text-xs font-medium bg-slate-500/20 text-slate-400 border border-slate-500/30">
                  Non-billable
                </span>
              <% end %>
              <% if @material_entry.invoiced? %>
                <span class="inline-flex items-center px-3 py-1 rounded-lg text-xs font-medium bg-blue-500/20 text-blue-400 border border-blue-500/30">
                  <svg class="w-3 h-3 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                  </svg>
                  Invoiced
                </span>
              <% else %>
                <span class="inline-flex items-center px-3 py-1 rounded-lg text-xs font-medium bg-amber-500/20 text-amber-400 border border-amber-500/30">
                  <svg class="w-3 h-3 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  </svg>
                  Not Invoiced
                </span>
              <% end %>
            </div>
          </div>
        </div>

        <%# Action buttons %>
        <div class="flex-shrink-0 flex items-center gap-3">
          <%= link_to edit_material_entry_path(@material_entry),
              class: "inline-flex items-center gap-2 px-4 py-2.5 bg-white/10 hover:bg-white/20 text-white font-medium rounded-xl border border-white/20 transition-all duration-200",
              data: { turbo_frame: "modal" } do %>
            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M16.862 4.487l1.687-1.688a1.875 1.875 0 112.652 2.652L10.582 16.07a4.5 4.5 0 01-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 011.13-1.897l8.932-8.931zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0115.75 21H5.25A2.25 2.25 0 013 18.75V8.25A2.25 2.25 0 015.25 6H10" />
            </svg>
            Edit
          <% end %>
          <%= button_to material_entry_path(@material_entry),
              method: :delete,
              form: { data: { turbo_confirm: "Are you sure you want to delete this material entry?" } },
              class: "inline-flex items-center gap-2 px-4 py-2.5 bg-red-500/20 hover:bg-red-500/30 text-red-400 font-medium rounded-xl border border-red-500/30 transition-all duration-200" do %>
            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0" />
            </svg>
            Delete
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <%# Main Content - 2 columns %>
    <div class="lg:col-span-2 space-y-6">
      <%# Pricing Card %>
      <div class="bg-white rounded-2xl shadow-sm border border-slate-200 overflow-hidden">
        <div class="px-6 py-4 border-b border-slate-200 bg-gradient-to-r from-slate-50 to-slate-100">
          <div class="flex items-center gap-3">
            <div class="w-8 h-8 rounded-lg bg-gradient-to-br from-green-500 to-emerald-600 flex items-center justify-center">
              <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
            </div>
            <h2 class="text-lg font-semibold text-slate-900">Pricing Details</h2>
          </div>
        </div>

        <div class="p-6">
          <div class="grid grid-cols-3 gap-6 mb-6">
            <div class="text-center p-4 bg-gradient-to-br from-slate-50 to-slate-100 rounded-xl">
              <p class="text-sm font-medium text-slate-500 mb-1">Quantity</p>
              <p class="text-2xl font-bold text-slate-900"><%= @material_entry.quantity %></p>
              <p class="text-xs text-slate-400 mt-1"><%= @material_entry.unit %></p>
            </div>
            <div class="text-center p-4 bg-gradient-to-br from-slate-50 to-slate-100 rounded-xl">
              <p class="text-sm font-medium text-slate-500 mb-1">Unit Cost</p>
              <p class="text-2xl font-bold text-slate-900"><%= number_to_currency(@material_entry.unit_cost) %></p>
              <p class="text-xs text-slate-400 mt-1">per <%= @material_entry.unit %></p>
            </div>
            <div class="text-center p-4 bg-gradient-to-br from-amber-50 to-orange-50 rounded-xl border border-amber-200">
              <p class="text-sm font-medium text-amber-600 mb-1">Subtotal</p>
              <p class="text-2xl font-bold text-amber-600"><%= number_to_currency(@material_entry.subtotal) %></p>
              <p class="text-xs text-amber-500 mt-1">before markup</p>
            </div>
          </div>

          <% if @material_entry.markup_percentage.to_f > 0 %>
            <div class="border-t border-slate-100 pt-6">
              <div class="flex items-center justify-between mb-4">
                <span class="text-sm text-slate-500">Markup Rate</span>
                <span class="text-sm font-semibold text-slate-900"><%= @material_entry.markup_percentage %>%</span>
              </div>
              <div class="flex items-center justify-between mb-4">
                <span class="text-sm text-slate-500">Markup Amount</span>
                <span class="text-sm font-semibold text-green-600">+ <%= number_to_currency(@material_entry.markup_amount) %></span>
              </div>
            </div>
          <% end %>

          <div class="border-t border-slate-200 pt-6 mt-6">
            <div class="flex items-center justify-between">
              <span class="text-lg font-medium text-slate-900">Total Amount</span>
              <span class="text-3xl font-bold bg-gradient-to-r from-amber-500 to-orange-600 bg-clip-text text-transparent">
                <%= number_to_currency(@material_entry.total_amount) %>
              </span>
            </div>
          </div>
        </div>
      </div>

      <%# Description Card (if present) %>
      <% if @material_entry.description.present? %>
        <div class="bg-white rounded-2xl shadow-sm border border-slate-200 overflow-hidden">
          <div class="px-6 py-4 border-b border-slate-200 bg-gradient-to-r from-slate-50 to-slate-100">
            <div class="flex items-center gap-3">
              <div class="w-8 h-8 rounded-lg bg-gradient-to-br from-blue-500 to-indigo-600 flex items-center justify-center">
                <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h7"/>
                </svg>
              </div>
              <h2 class="text-lg font-semibold text-slate-900">Description</h2>
            </div>
          </div>
          <div class="p-6">
            <p class="text-slate-700 leading-relaxed"><%= @material_entry.description %></p>
          </div>
        </div>
      <% end %>
    </div>

    <%# Sidebar - 1 column %>
    <div class="space-y-6">
      <%# Project Card %>
      <div class="bg-white rounded-2xl shadow-sm border border-slate-200 overflow-hidden">
        <div class="px-6 py-4 border-b border-slate-200 bg-gradient-to-r from-slate-50 to-slate-100">
          <div class="flex items-center gap-3">
            <div class="w-8 h-8 rounded-lg bg-gradient-to-br from-amber-500 to-orange-600 flex items-center justify-center">
              <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z"/>
              </svg>
            </div>
            <h2 class="text-lg font-semibold text-slate-900">Project</h2>
          </div>
        </div>
        <div class="p-6">
          <%= link_to project_path(@material_entry.project), class: "group block" do %>
            <div class="flex items-center gap-4">
              <div class="w-12 h-12 rounded-xl bg-gradient-to-br from-amber-100 to-orange-100 flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
                <svg class="w-6 h-6 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z"/>
                </svg>
              </div>
              <div class="flex-1 min-w-0">
                <p class="font-semibold text-slate-900 group-hover:text-amber-600 transition-colors truncate"><%= @material_entry.project.name %></p>
                <p class="text-sm text-slate-500 truncate"><%= @material_entry.project.client&.name || 'No client' %></p>
              </div>
              <svg class="w-5 h-5 text-slate-400 group-hover:text-amber-500 group-hover:translate-x-1 transition-all" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
              </svg>
            </div>
          <% end %>
        </div>
      </div>

      <%# Quick Stats Card %>
      <div class="bg-gradient-to-br from-slate-900 via-slate-800 to-slate-900 rounded-2xl shadow-lg p-6 text-white">
        <div class="flex items-center gap-3 mb-4">
          <div class="w-8 h-8 rounded-lg bg-white/10 flex items-center justify-center">
            <svg class="w-4 h-4 text-amber-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
            </svg>
          </div>
          <h3 class="font-semibold">Quick Stats</h3>
        </div>
        <div class="space-y-4">
          <div class="flex items-center justify-between">
            <span class="text-sm text-slate-400">Unit</span>
            <span class="text-sm font-medium"><%= @material_entry.unit %></span>
          </div>
          <div class="flex items-center justify-between">
            <span class="text-sm text-slate-400">Quantity</span>
            <span class="text-sm font-medium"><%= @material_entry.quantity %></span>
          </div>
          <div class="flex items-center justify-between">
            <span class="text-sm text-slate-400">Markup</span>
            <span class="text-sm font-medium"><%= @material_entry.markup_percentage || 0 %>%</span>
          </div>
          <div class="pt-4 border-t border-slate-700">
            <div class="flex items-center justify-between">
              <span class="text-sm text-slate-400">Billable</span>
              <% if @material_entry.billable? %>
                <span class="flex items-center text-sm font-medium text-green-400">
                  <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                  </svg>
                  Yes
                </span>
              <% else %>
                <span class="text-sm font-medium text-slate-400">No</span>
              <% end %>
            </div>
          </div>
        </div>
      </div>

      <%# Metadata Card %>
      <div class="bg-white rounded-2xl shadow-sm border border-slate-200 overflow-hidden">
        <div class="px-6 py-4 border-b border-slate-200 bg-gradient-to-r from-slate-50 to-slate-100">
          <div class="flex items-center gap-3">
            <div class="w-8 h-8 rounded-lg bg-gradient-to-br from-slate-400 to-slate-600 flex items-center justify-center">
              <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
            </div>
            <h2 class="text-lg font-semibold text-slate-900">Details</h2>
          </div>
        </div>
        <div class="p-6 space-y-4">
          <div class="flex items-center gap-3">
            <div class="w-8 h-8 rounded-lg bg-slate-100 flex items-center justify-center">
              <svg class="w-4 h-4 text-slate-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
              </svg>
            </div>
            <div>
              <p class="text-xs text-slate-500">Added by</p>
              <p class="text-sm font-medium text-slate-900"><%= @material_entry.user.full_name.presence || @material_entry.user.email %></p>
            </div>
          </div>
          <div class="flex items-center gap-3">
            <div class="w-8 h-8 rounded-lg bg-slate-100 flex items-center justify-center">
              <svg class="w-4 h-4 text-slate-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
              </svg>
            </div>
            <div>
              <p class="text-xs text-slate-500">Created</p>
              <p class="text-sm font-medium text-slate-900"><%= time_ago_in_words(@material_entry.created_at) %> ago</p>
            </div>
          </div>
          <% if @material_entry.updated_at != @material_entry.created_at %>
            <div class="flex items-center gap-3">
              <div class="w-8 h-8 rounded-lg bg-slate-100 flex items-center justify-center">
                <svg class="w-4 h-4 text-slate-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
                </svg>
              </div>
              <div>
                <p class="text-xs text-slate-500">Last updated</p>
                <p class="text-sm font-medium text-slate-900"><%= time_ago_in_words(@material_entry.updated_at) %> ago</p>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<%# Modal container %>
<%= turbo_frame_tag "modal" %>
