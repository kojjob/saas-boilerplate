<%# Premium Contact Page - Sophisticated design with glassmorphism %>

<% content_for :title, "Contact Us - Subcontractor Command" %>

<%# ================================== %>
<%# Hero Section with Animated Background %>
<%# ================================== %>
<section class="relative min-h-[50vh] flex items-center justify-center overflow-hidden bg-gradient-to-br from-slate-900 via-slate-800 to-slate-900">
  <%# Animated background elements %>
  <div class="absolute inset-0 overflow-hidden">
    <%# Gradient orbs %>
    <div class="absolute -top-40 -right-40 w-96 h-96 bg-gradient-to-br from-amber-400/20 to-orange-500/20 rounded-full blur-3xl animate-pulse"></div>
    <div class="absolute -bottom-40 -left-40 w-96 h-96 bg-gradient-to-br from-blue-400/20 to-indigo-500/20 rounded-full blur-3xl animate-pulse" style="animation-delay: 1s;"></div>
    <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[600px] h-[600px] bg-gradient-to-br from-purple-400/10 to-pink-500/10 rounded-full blur-3xl animate-pulse" style="animation-delay: 2s;"></div>

    <%# Grid pattern overlay %>
    <div class="absolute inset-0 bg-[linear-gradient(rgba(255,255,255,0.03)_1px,transparent_1px),linear-gradient(90deg,rgba(255,255,255,0.03)_1px,transparent_1px)] bg-[size:60px_60px]"></div>
  </div>

  <div class="relative z-10 max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center py-20">
    <%# Badge %>
    <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-white/10 backdrop-blur-sm border border-white/20 mb-8">
      <span class="w-2 h-2 bg-green-400 rounded-full animate-pulse"></span>
      <span class="text-sm font-medium text-white/90">We respond within 24 hours</span>
    </div>

    <%# Title %>
    <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-white mb-6">
      <span class="bg-gradient-to-r from-white via-amber-100 to-amber-200 bg-clip-text text-transparent">Get in Touch</span>
    </h1>

    <%# Subtitle %>
    <p class="text-xl text-slate-300 max-w-2xl mx-auto leading-relaxed">
      Have a question or want to learn more about how Subcontractor Command can help your business? We'd love to hear from you.
    </p>
  </div>

  <%# Decorative bottom wave %>
  <div class="absolute bottom-0 left-0 right-0">
    <svg viewBox="0 0 1440 100" fill="none" xmlns="http://www.w3.org/2000/svg" class="w-full h-auto">
      <path d="M0 50L48 45.7C96 41 192 33 288 35.3C384 38 480 50 576 55C672 60 768 58 864 53.3C960 48 1056 40 1152 40.3C1248 40 1344 48 1392 52L1440 56V100H1392C1344 100 1248 100 1152 100C1056 100 960 100 864 100C768 100 672 100 576 100C480 100 384 100 288 100C192 100 96 100 48 100H0V50Z" fill="white"/>
    </svg>
  </div>
</section>

<%# ================================== %>
<%# Main Contact Section %>
<%# ================================== %>
<section class="relative py-20 bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid lg:grid-cols-5 gap-12 lg:gap-16">

      <%# Contact Info Column %>
      <div class="lg:col-span-2 space-y-8">
        <%# Section header %>
        <div>
