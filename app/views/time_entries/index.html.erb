<% content_for :page_title, "Time Entries" %>

<div class="space-y-6">
  <%# Hero Header with Dark Background %>
  <div class="relative overflow-hidden bg-gradient-to-r from-slate-900 via-slate-800 to-slate-900 rounded-2xl shadow-2xl">
    <%# Decorative grid pattern %>
    <div class="absolute inset-0 opacity-10">
      <svg class="w-full h-full" viewBox="0 0 100 100" preserveAspectRatio="none">
        <defs>
          <pattern id="time-grid" width="10" height="10" patternUnits="userSpaceOnUse">
            <path d="M 10 0 L 0 0 0 10" fill="none" stroke="currentColor" stroke-width="0.5"/>
          </pattern>
        </defs>
        <rect width="100%" height="100%" fill="url(#time-grid)"/>
      </svg>
    </div>

    <%# Gradient orbs %>
    <div class="absolute top-0 right-0 w-72 h-72 bg-amber-500/20 rounded-full blur-3xl"></div>
    <div class="absolute bottom-0 left-0 w-48 h-48 bg-orange-500/20 rounded-full blur-3xl"></div>

    <div class="relative px-6 py-8 sm:px-8 sm:py-10">
      <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-6">
        <%# Title and stats %>
        <div class="flex items-start gap-4">
          <div class="flex-shrink-0 w-14 h-14 rounded-2xl bg-gradient-to-br from-amber-500 to-orange-600 flex items-center justify-center shadow-lg shadow-amber-500/30">
            <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
          <div>
            <h1 class="text-2xl sm:text-3xl font-bold text-white">Time Entries</h1>
            <p class="mt-1 text-slate-400">Track time spent on projects</p>
            <div class="mt-3 flex items-center gap-4">
              <div class="flex items-center gap-2">
                <span class="text-2xl font-bold text-white"><%= number_with_precision(@stats[:total_hours_this_week], precision: 1) %></span>
                <span class="text-sm text-slate-400">hrs this week</span>
              </div>
              <div class="w-px h-6 bg-slate-700"></div>
              <div class="flex items-center gap-2">
                <span class="text-2xl font-bold text-amber-400"><%= number_to_currency(@stats[:uninvoiced_total], precision: 0) %></span>
                <span class="text-sm text-slate-400">uninvoiced</span>
              </div>
            </div>
          </div>
        </div>

        <%# Action button %>
        <div class="flex-shrink-0">
          <%= link_to new_time_entry_path, data: { turbo_frame: "modal" }, class: "inline-flex items-center gap-2 px-5 py-3 bg-gradient-to-r from-amber-500 to-orange-600 hover:from-amber-600 hover:to-orange-700 text-white font-semibold rounded-xl shadow-lg shadow-amber-500/30 hover:shadow-amber-500/50 transition-all duration-300 hover:scale-105" do %>
            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
            </svg>
            Log Time
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <%# Stats Cards %>
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
    <%# This Week %>
    <div class="bg-white rounded-2xl shadow-sm border border-slate-200 p-5 hover:shadow-lg hover:border-amber-200 transition-all duration-300 group">
      <div class="flex items-center gap-4">
        <div class="w-12 h-12 rounded-xl bg-gradient-to-br from-blue-500 to-blue-600 flex items-center justify-center shadow-lg shadow-blue-500/25 group-hover:scale-110 transition-transform duration-300">
          <svg class="w-6 h-6 text-white" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
        <div>
          <p class="text-xs font-medium text-slate-500 uppercase tracking-wider">This Week</p>
          <p class="text-2xl font-bold text-slate-900"><%= number_with_precision(@stats[:total_hours_this_week], precision: 1) %> <span class="text-sm font-medium text-slate-500">hrs</span></p>
        </div>
      </div>
    </div>

    <%# This Month %>
    <div class="bg-white rounded-2xl shadow-sm border border-slate-200 p-5 hover:shadow-lg hover:border-amber-200 transition-all duration-300 group">
      <div class="flex items-center gap-4">
        <div class="w-12 h-12 rounded-xl bg-gradient-to-br from-purple-500 to-purple-600 flex items-center justify-center shadow-lg shadow-purple-500/25 group-hover:scale-110 transition-transform duration-300">
          <svg class="w-6 h-6 text-white" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M6.75 3v2.25M17.25 3v2.25M3 18.75V7.5a2.25 2.25 0 012.25-2.25h13.5A2.25 2.25 0 0121 7.5v11.25m-18 0A2.25 2.25 0 005.25 21h13.5A2.25 2.25 0 0021 18.75m-18 0v-7.5A2.25 2.25 0 015.25 9h13.5A2.25 2.25 0 0121 11.25v7.5" />
          </svg>
        </div>
        <div>
          <p class="text-xs font-medium text-slate-500 uppercase tracking-wider">This Month</p>
          <p class="text-2xl font-bold text-slate-900"><%= number_with_precision(@stats[:total_hours_this_month], precision: 1) %> <span class="text-sm font-medium text-slate-500">hrs</span></p>
        </div>
      </div>
    </div>

    <%# Billable This Month %>
    <div class="bg-white rounded-2xl shadow-sm border border-slate-200 p-5 hover:shadow-lg hover:border-amber-200 transition-all duration-300 group">
      <div class="flex items-center gap-4">
        <div class="w-12 h-12 rounded-xl bg-gradient-to-br from-green-500 to-emerald-600 flex items-center justify-center shadow-lg shadow-green-500/25 group-hover:scale-110 transition-transform duration-300">
          <svg class="w-6 h-6 text-white" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v12m-3-2.818l.879.659c1.171.879 3.07.879 4.242 0 1.172-.879 1.172-2.303 0-3.182C13.536 12.219 12.768 12 12 12c-.725 0-1.45-.22-2.003-.659-1.106-.879-1.106-2.303 0-3.182s2.9-.879 4.006 0l.415.33M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
        <div>
          <p class="text-xs font-medium text-slate-500 uppercase tracking-wider">Billable (Month)</p>
          <p class="text-2xl font-bold text-slate-900"><%= number_to_currency(@stats[:billable_this_month], precision: 0) %></p>
        </div>
      </div>
    </div>

    <%# Uninvoiced %>
    <div class="bg-white rounded-2xl shadow-sm border border-slate-200 p-5 hover:shadow-lg hover:border-amber-200 transition-all duration-300 group">
      <div class="flex items-center gap-4">
        <div class="w-12 h-12 rounded-xl bg-gradient-to-br from-amber-500 to-orange-600 flex items-center justify-center shadow-lg shadow-amber-500/25 group-hover:scale-110 transition-transform duration-300">
          <svg class="w-6 h-6 text-white" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 14.25v-2.625a3.375 3.375 0 00-3.375-3.375h-1.5A1.125 1.125 0 0113.5 7.125v-1.5a3.375 3.375 0 00-3.375-3.375H8.25m0 12.75h7.5m-7.5 3H12M10.5 2.25H5.625c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 00-9-9z" />
          </svg>
        </div>
        <div>
          <p class="text-xs font-medium text-slate-500 uppercase tracking-wider">Uninvoiced</p>
          <p class="text-2xl font-bold text-slate-900"><%= number_to_currency(@stats[:uninvoiced_total], precision: 0) %></p>
        </div>
      </div>
    </div>
  </div>

  <%# Filters %>
  <div class="bg-white rounded-2xl shadow-sm border border-slate-200 p-4">
    <%= form_with url: time_entries_path, method: :get, class: "flex flex-wrap items-end gap-4" do |f| %>
      <div class="flex-1 min-w-[150px]">
        <label class="block text-xs font-medium text-slate-500 uppercase tracking-wider mb-2">Project</label>
        <%= select_tag :project_id,
            options_from_collection_for_select(current_account.projects.order(:name), :id, :name, params[:project_id]),
            include_blank: "All projects",
            class: "w-full px-4 py-3 border border-slate-200 rounded-xl text-sm focus:outline-none focus:ring-2 focus:ring-amber-500 focus:border-amber-500 transition-all bg-white" %>
      </div>

      <div class="flex-1 min-w-[150px]">
        <label class="block text-xs font-medium text-slate-500 uppercase tracking-wider mb-2">Period</label>
        <%= select_tag :period,
            options_for_select([["All time", ""], ["This week", "this_week"], ["This month", "this_month"]], params[:period]),
            class: "w-full px-4 py-3 border border-slate-200 rounded-xl text-sm focus:outline-none focus:ring-2 focus:ring-amber-500 focus:border-amber-500 transition-all bg-white" %>
      </div>

      <div class="flex-1 min-w-[120px]">
        <label class="block text-xs font-medium text-slate-500 uppercase tracking-wider mb-2">Billable</label>
        <%= select_tag :billable,
            options_for_select([["All", ""], ["Billable", "true"], ["Non-billable", "false"]], params[:billable]),
            class: "w-full px-4 py-3 border border-slate-200 rounded-xl text-sm focus:outline-none focus:ring-2 focus:ring-amber-500 focus:border-amber-500 transition-all bg-white" %>
      </div>

      <div class="flex-1 min-w-[120px]">
        <label class="block text-xs font-medium text-slate-500 uppercase tracking-wider mb-2">Invoiced</label>
        <%= select_tag :invoiced,
            options_for_select([["All", ""], ["Invoiced", "true"], ["Not invoiced", "false"]], params[:invoiced]),
            class: "w-full px-4 py-3 border border-slate-200 rounded-xl text-sm focus:outline-none focus:ring-2 focus:ring-amber-500 focus:border-amber-500 transition-all bg-white" %>
      </div>

      <div class="flex items-center gap-2">
        <%= submit_tag "Filter", class: "px-5 py-3 bg-slate-100 text-slate-700 text-sm font-medium rounded-xl hover:bg-slate-200 transition-colors cursor-pointer" %>
        <% if params[:project_id].present? || params[:period].present? || params[:billable].present? || params[:invoiced].present? %>
          <%= link_to "Clear", time_entries_path, class: "px-5 py-3 text-slate-600 text-sm font-medium hover:text-slate-900 transition-colors" %>
        <% end %>
      </div>
    <% end %>
  </div>

  <%# Time Entries List %>
  <% if @time_entries.any? %>
    <div class="bg-white rounded-2xl shadow-sm border border-slate-200 overflow-hidden">
      <div class="overflow-x-auto">
        <table class="min-w-full">
          <thead>
            <tr class="bg-gradient-to-r from-slate-50 to-slate-100 border-b border-slate-200">
              <th class="px-6 py-4 text-left text-xs font-semibold text-slate-600 uppercase tracking-wider">Date</th>
              <th class="px-6 py-4 text-left text-xs font-semibold text-slate-600 uppercase tracking-wider">Project</th>
              <th class="px-6 py-4 text-left text-xs font-semibold text-slate-600 uppercase tracking-wider">Description</th>
              <th class="px-6 py-4 text-right text-xs font-semibold text-slate-600 uppercase tracking-wider">Hours</th>
              <th class="px-6 py-4 text-right text-xs font-semibold text-slate-600 uppercase tracking-wider">Rate</th>
              <th class="px-6 py-4 text-right text-xs font-semibold text-slate-600 uppercase tracking-wider">Amount</th>
              <th class="px-6 py-4 text-center text-xs font-semibold text-slate-600 uppercase tracking-wider">Status</th>
              <th class="px-6 py-4 text-right text-xs font-semibold text-slate-600 uppercase tracking-wider">Actions</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-slate-100">
            <% @time_entries.each do |time_entry| %>
              <tr class="hover:bg-amber-50/50 transition-colors group">
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="flex items-center gap-3">
                    <div class="w-10 h-10 rounded-xl bg-gradient-to-br from-slate-100 to-slate-200 flex items-center justify-center group-hover:from-amber-100 group-hover:to-orange-100 transition-colors">
                      <span class="text-xs font-bold text-slate-600 group-hover:text-amber-600"><%= time_entry.date.strftime("%d") %></span>
                    </div>
                    <div>
                      <p class="text-sm font-medium text-slate-900"><%= time_entry.date.strftime("%b %d") %></p>
                      <p class="text-xs text-slate-500"><%= time_entry.date.strftime("%Y") %></p>
                    </div>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="flex items-center gap-3">
                    <div class="w-8 h-8 rounded-lg bg-gradient-to-br from-blue-500 to-indigo-600 flex items-center justify-center text-white text-xs font-bold shadow-sm">
                      <%= time_entry.project.name.first(2).upcase %>
                    </div>
                    <div>
                      <p class="text-sm font-medium text-slate-900 group-hover:text-amber-600 transition-colors"><%= time_entry.project.name %></p>
                      <p class="text-xs text-slate-500"><%= time_entry.project.client&.name %></p>
                    </div>
                  </div>
                </td>
                <td class="px-6 py-4 max-w-xs">
                  <p class="text-sm text-slate-600 truncate"><%= time_entry.description.presence || "-" %></p>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-right">
                  <span class="text-sm font-semibold text-slate-900"><%= number_with_precision(time_entry.hours, precision: 2) %></span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-right">
                  <% if time_entry.billable? %>
                    <span class="text-sm text-slate-600"><%= number_to_currency(time_entry.effective_hourly_rate) %>/hr</span>
                  <% else %>
                    <span class="text-sm text-slate-400">-</span>
                  <% end %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-right">
                  <% if time_entry.billable? %>
                    <span class="text-sm font-semibold text-slate-900"><%= number_to_currency(time_entry.total_amount) %></span>
                  <% else %>
                    <span class="text-sm text-slate-400">-</span>
                  <% end %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="flex items-center justify-center gap-1.5">
                    <% if time_entry.billable? %>
                      <span class="inline-flex items-center px-2.5 py-1 rounded-lg text-xs font-medium bg-green-100 text-green-700">
                        Billable
                      </span>
                    <% else %>
                      <span class="inline-flex items-center px-2.5 py-1 rounded-lg text-xs font-medium bg-slate-100 text-slate-600">
                        Non-billable
                      </span>
                    <% end %>
                    <% if time_entry.invoiced? %>
                      <span class="inline-flex items-center px-2.5 py-1 rounded-lg text-xs font-medium bg-blue-100 text-blue-700">
                        Invoiced
                      </span>
                    <% end %>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-right">
                  <div class="flex items-center justify-end gap-1">
                    <%= link_to edit_time_entry_path(time_entry),
                        class: "p-2 text-slate-400 hover:text-amber-600 hover:bg-amber-50 rounded-lg transition-all",
                        data: { turbo_frame: "modal" } do %>
                      <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M16.862 4.487l1.687-1.688a1.875 1.875 0 112.652 2.652L10.582 16.07a4.5 4.5 0 01-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 011.13-1.897l8.932-8.931zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0115.75 21H5.25A2.25 2.25 0 013 18.75V8.25A2.25 2.25 0 015.25 6H10" />
                      </svg>
                    <% end %>
                    <%= button_to time_entry_path(time_entry),
                        method: :delete,
                        form: { data: { turbo_confirm: "Are you sure you want to delete this time entry?" } },
                        class: "p-2 text-slate-400 hover:text-red-600 hover:bg-red-50 rounded-lg transition-all" do %>
                      <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0" />
                      </svg>
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>

    <%# Pagination %>
    <% if @time_entries.respond_to?(:total_pages) && @time_entries.total_pages > 1 %>
      <div class="flex justify-center">
        <div class="bg-white rounded-2xl shadow-sm border border-slate-200 px-6 py-4">
          <%== pagy_nav(@pagy) if defined?(@pagy) %>
        </div>
      </div>
    <% end %>
  <% else %>
    <%# Empty State %>
    <div class="bg-white rounded-2xl shadow-sm border border-slate-200 overflow-hidden">
      <div class="px-6 py-16 text-center">
        <div class="mx-auto w-20 h-20 rounded-2xl bg-gradient-to-br from-amber-100 to-orange-100 flex items-center justify-center mb-6">
          <svg class="w-10 h-10 text-amber-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
        </div>
        <h3 class="text-xl font-semibold text-slate-900 mb-2">No time entries yet</h3>
        <p class="text-slate-500 mb-8 max-w-sm mx-auto">
          <% if params[:project_id].present? || params[:period].present? || params[:billable].present? || params[:invoiced].present? %>
            Try adjusting your filters to find what you're looking for.
          <% else %>
            Get started by logging your first time entry. Track hours worked on projects and bill clients accurately.
          <% end %>
        </p>
        <div class="flex flex-col sm:flex-row items-center justify-center gap-3">
          <%= link_to new_time_entry_path, data: { turbo_frame: "modal" }, class: "inline-flex items-center gap-2 px-6 py-3 bg-gradient-to-r from-amber-500 to-orange-600 hover:from-amber-600 hover:to-orange-700 text-white font-semibold rounded-xl shadow-lg shadow-amber-500/30 hover:shadow-amber-500/50 transition-all" do %>
            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
            </svg>
            Log Your First Time Entry
          <% end %>
          <% if params[:project_id].present? || params[:period].present? || params[:billable].present? || params[:invoiced].present? %>
            <%= link_to time_entries_path, class: "inline-flex items-center gap-2 px-6 py-3 bg-slate-100 hover:bg-slate-200 text-slate-700 font-medium rounded-xl transition-colors" do %>
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
              </svg>
              Clear Filters
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>

<%# Modal container %>
<%= turbo_frame_tag "modal" %>
