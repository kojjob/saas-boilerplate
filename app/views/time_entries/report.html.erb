<div class="space-y-6">
  <%# Header %>
  <div class="flex items-center justify-between">
    <div>
      <h1 class="text-2xl font-bold text-gray-900">Time Report</h1>
      <p class="mt-1 text-sm text-gray-500">
        <%= @start_date.strftime("%b %d, %Y") %> - <%= @end_date.strftime("%b %d, %Y") %>
      </p>
    </div>
    <%= link_to time_entries_path, class: "inline-flex items-center gap-2 px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-200 rounded-lg hover:bg-gray-50 transition-colors" do %>
      <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5L3 12m0 0l7.5-7.5M3 12h18" />
      </svg>
      Back to entries
    <% end %>
  </div>

  <%# Date Range Filter %>
  <div class="bg-white rounded-xl border border-gray-200 p-4">
    <%= form_with url: report_time_entries_path, method: :get, class: "flex flex-wrap items-end gap-4" do |f| %>
      <div class="flex-1 min-w-[150px]">
        <label class="block text-sm font-medium text-gray-700 mb-1">Start Date</label>
        <%= date_field_tag :start_date, @start_date,
            class: "w-full px-3 py-2 border border-gray-200 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent" %>
      </div>

      <div class="flex-1 min-w-[150px]">
        <label class="block text-sm font-medium text-gray-700 mb-1">End Date</label>
        <%= date_field_tag :end_date, @end_date,
            class: "w-full px-3 py-2 border border-gray-200 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent" %>
      </div>

      <div class="flex gap-2">
        <%= submit_tag "Update Report", class: "px-4 py-2 text-sm font-medium text-white bg-indigo-600 rounded-lg hover:bg-indigo-700 transition-colors cursor-pointer" %>
      </div>
    <% end %>
  </div>

  <%# Summary Cards %>
  <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
    <div class="bg-white rounded-xl border border-gray-200 p-6">
      <div class="flex items-center gap-4">
        <div class="p-3 rounded-lg bg-blue-50">
          <svg class="w-6 h-6 text-blue-600" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
        <div>
          <p class="text-sm text-gray-500">Total Hours</p>
          <p class="text-2xl font-bold text-gray-900"><%= number_with_precision(@total_hours, precision: 1) %></p>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-xl border border-gray-200 p-6">
      <div class="flex items-center gap-4">
        <div class="p-3 rounded-lg bg-green-50">
          <svg class="w-6 h-6 text-green-600" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v12m-3-2.818l.879.659c1.171.879 3.07.879 4.242 0 1.172-.879 1.172-2.303 0-3.182C13.536 12.219 12.768 12 12 12c-.725 0-1.45-.22-2.003-.659-1.106-.879-1.106-2.303 0-3.182s2.9-.879 4.006 0l.415.33M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
        <div>
          <p class="text-sm text-gray-500">Billable Amount</p>
          <p class="text-2xl font-bold text-gray-900"><%= number_to_currency(@total_billable) %></p>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-xl border border-gray-200 p-6">
      <div class="flex items-center gap-4">
        <div class="p-3 rounded-lg bg-indigo-50">
          <svg class="w-6 h-6 text-indigo-600" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 12.75V12A2.25 2.25 0 014.5 9.75h15A2.25 2.25 0 0121.75 12v.75m-8.69-6.44l-2.12-2.12a1.5 1.5 0 00-1.061-.44H4.5A2.25 2.25 0 002.25 6v12a2.25 2.25 0 002.25 2.25h15A2.25 2.25 0 0021.75 18V9a2.25 2.25 0 00-2.25-2.25h-5.379a1.5 1.5 0 01-1.06-.44z" />
          </svg>
        </div>
        <div>
          <p class="text-sm text-gray-500">Projects</p>
          <p class="text-2xl font-bold text-gray-900"><%= @project_summary.keys.count %></p>
        </div>
      </div>
    </div>
  </div>

  <%# Project Breakdown %>
  <div class="bg-white rounded-xl border border-gray-200 overflow-hidden">
    <div class="px-6 py-4 border-b border-gray-100">
      <h2 class="text-lg font-semibold text-gray-900">Hours by Project</h2>
    </div>
    <% if @project_summary.any? %>
      <div class="divide-y divide-gray-100">
        <% @project_summary.each do |project_id, hours| %>
          <% project = Project.find_by(id: project_id) %>
          <% next unless project %>
          <div class="px-6 py-4 flex items-center justify-between">
            <div class="flex items-center gap-3">
              <div class="p-2 rounded-lg bg-gray-100">
                <svg class="w-4 h-4 text-gray-600" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 12.75V12A2.25 2.25 0 014.5 9.75h15A2.25 2.25 0 0121.75 12v.75m-8.69-6.44l-2.12-2.12a1.5 1.5 0 00-1.061-.44H4.5A2.25 2.25 0 002.25 6v12a2.25 2.25 0 002.25 2.25h15A2.25 2.25 0 0021.75 18V9a2.25 2.25 0 00-2.25-2.25h-5.379a1.5 1.5 0 01-1.06-.44z" />
                </svg>
              </div>
              <div>
                <p class="text-sm font-medium text-gray-900"><%= project.name %></p>
                <p class="text-xs text-gray-500"><%= project.client&.name %></p>
              </div>
            </div>
            <div class="text-right">
              <p class="text-sm font-medium text-gray-900"><%= number_with_precision(hours, precision: 1) %> hrs</p>
              <p class="text-xs text-gray-500"><%= number_with_precision((hours / @total_hours * 100), precision: 0) %>% of total</p>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="text-center py-12">
        <p class="text-sm text-gray-500">No time entries for this period.</p>
      </div>
    <% end %>
  </div>

  <%# Detailed Entries %>
  <div class="bg-white rounded-xl border border-gray-200 overflow-hidden">
    <div class="px-6 py-4 border-b border-gray-100">
      <h2 class="text-lg font-semibold text-gray-900">Detailed Entries</h2>
    </div>
    <% if @time_entries.any? %>
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Project</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Description</th>
              <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Hours</th>
              <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Amount</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @time_entries.each do |entry| %>
              <tr class="hover:bg-gray-50">
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                  <%= entry.date.strftime("%b %d") %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                  <%= entry.project.name %>
                </td>
                <td class="px-6 py-4 text-sm text-gray-500 max-w-xs truncate">
                  <%= entry.description.presence || "-" %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-right text-gray-900">
                  <%= number_with_precision(entry.hours, precision: 2) %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-right text-gray-900">
                  <% if entry.billable? %>
                    <%= number_to_currency(entry.total_amount) %>
                  <% else %>
                    <span class="text-gray-400">-</span>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
          <tfoot class="bg-gray-50">
            <tr>
              <td colspan="3" class="px-6 py-3 text-sm font-medium text-gray-900">Total</td>
              <td class="px-6 py-3 text-sm font-bold text-right text-gray-900"><%= number_with_precision(@total_hours, precision: 2) %></td>
              <td class="px-6 py-3 text-sm font-bold text-right text-gray-900"><%= number_to_currency(@total_billable) %></td>
            </tr>
          </tfoot>
        </table>
      </div>
    <% else %>
      <div class="text-center py-12">
        <p class="text-sm text-gray-500">No time entries for this period.</p>
      </div>
    <% end %>
  </div>
</div>
