<div class="min-h-screen bg-gray-50 py-8">
  <div class="max-w-lg mx-auto px-4 sm:px-6 lg:px-8">
    <div class="mb-8">
      <%= link_to account_members_path, class: "inline-flex items-center text-sm text-gray-600 hover:text-gray-900" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd" />
        </svg>
        Back to Team
      <% end %>
    </div>

    <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
      <div class="px-6 py-4 border-b border-gray-200">
        <h1 class="text-xl font-semibold text-gray-900">Invite Team Member</h1>
        <p class="mt-1 text-sm text-gray-600">Send an invitation to join <%= current_account.name %></p>
      </div>

      <% if flash[:alert] %>
        <div class="mx-6 mt-4 p-4 bg-red-50 border border-red-200 rounded-lg">
          <p class="text-red-800"><%= flash[:alert] %></p>
        </div>
      <% end %>

      <div class="p-6">
        <%= form_with model: @invitation, url: account_invitations_path, class: "space-y-6" do |f| %>
          <div>
            <%= f.label :invitation_email, "Email Address", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.email_field :invitation_email, class: "w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-colors", placeholder: "colleague@company.com", required: true, autofocus: true %>
            <p class="mt-1 text-sm text-gray-500">They'll receive an email with instructions to join.</p>
          </div>

          <div>
            <%= f.label :role, "Role", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.select :role, @available_roles.map { |r| [r.humanize, r] }, {}, class: "w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-colors" %>
            <div class="mt-2 text-sm text-gray-500 space-y-1">
              <p><strong>Admin:</strong> Can manage team members, settings, and billing</p>
              <p><strong>Member:</strong> Can access all features but cannot manage team</p>
              <p><strong>Guest:</strong> Limited read-only access</p>
            </div>
          </div>

          <div class="pt-4">
            <%= f.submit "Send Invitation", class: "w-full py-3 px-4 bg-gradient-to-r from-indigo-600 to-purple-600 text-white font-semibold rounded-lg shadow-md hover:from-indigo-700 hover:to-purple-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 transition-all duration-200 cursor-pointer" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
