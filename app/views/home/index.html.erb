<% content_for :head do %>
  <%= stylesheet_link_tag "landing", "data-turbo-track": "reload" %>
<% end %>

<div class="relative overflow-hidden bg-gradient-to-br from-[#0f0c29] via-[#302b63] to-[#24243e]">
  <!-- Mesh Gradient Orbs -->
  <div class="mesh-orb mesh-orb-1"></div>
  <div class="mesh-orb mesh-orb-2"></div>
  <div class="mesh-orb mesh-orb-3"></div>

  <!-- Grid Pattern Overlay -->
  <div class="absolute inset-0 grid-pattern"></div>
  <div class="absolute inset-0 radial-overlay"></div>

  <!-- Navigation -->
  <nav class="relative z-50" data-controller="scroll-animator">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between h-20 items-center" data-scroll-animator-target="item" data-animation="fade-down">
        <div class="flex items-center space-x-2">
          <div class="w-10 h-10 rounded-xl bg-gradient-to-br from-indigo-500 to-purple-600 flex items-center justify-center">
            <svg class="w-6 h-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
            </svg>
          </div>
          <span class="text-xl font-bold text-white">Deployable</span>
        </div>
        <div class="hidden md:flex items-center space-x-8">
          <a href="#features" class="text-gray-300 hover:text-white transition-colors link-hover">Features</a>
          <a href="#tech-stack" class="text-gray-300 hover:text-white transition-colors link-hover">Tech Stack</a>
          <a href="#pricing" class="text-gray-300 hover:text-white transition-colors link-hover">Pricing</a>
        </div>
        <div class="flex items-center space-x-4">
          <%= link_to 'Sign in', sign_in_path, class: 'text-gray-300 hover:text-white font-medium transition-colors' %>
          <%= link_to sign_up_path, class: 'btn-gradient px-5 py-2.5 rounded-lg text-white font-semibold' do %>
            <span>Get Started</span>
          <% end %>
        </div>
      </div>
    </div>
  </nav>

  <!-- Hero Section -->
  <section class="relative z-10 pt-16 pb-32 lg:pt-24 lg:pb-40" data-controller="scroll-animator">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center max-w-4xl mx-auto">
        <!-- Badge -->
        <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full glass-card mb-8" data-scroll-animator-target="item" data-animation="fade-up">
          <span class="relative flex h-2 w-2">
            <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-green-400 opacity-75"></span>
            <span class="relative inline-flex rounded-full h-2 w-2 bg-green-500"></span>
          </span>
          <span class="text-sm text-gray-300">Rails 8 + Hotwire + Tailwind 4</span>
        </div>

        <!-- Main Headline -->
        <h1 class="text-5xl sm:text-6xl lg:text-7xl font-extrabold tracking-tight mb-6" data-scroll-animator-target="item" data-animation="fade-up" data-delay="100">
          <span class="gradient-text">Ship Your SaaS</span>
          <br>
          <span class="text-white">in Days, Not Months</span>
        </h1>

        <!-- Dynamic Tagline with Typewriter -->
        <p class="text-xl sm:text-2xl text-gray-300 mb-4" data-scroll-animator-target="item" data-animation="fade-up" data-delay="200">
          A production-ready Rails 8 boilerplate to
          <span
            class="text-indigo-400 font-semibold"
            data-controller="typewriter"
            data-typewriter-words-value='["launch faster", "scale confidently", "build smarter", "deploy anywhere"]'
            data-typewriter-type-speed-value="70"
            data-typewriter-pause-duration-value="2500"
          ></span>
        </p>

        <!-- Subheadline -->
        <p class="text-lg text-gray-400 max-w-2xl mx-auto mb-10" data-scroll-animator-target="item" data-animation="fade-up" data-delay="300">
          Multi-tenancy, authentication, team management, billing, and deployment baked in. Stop reinventing the wheel and start shipping.
        </p>

        <!-- CTA Buttons -->
        <div class="flex flex-col sm:flex-row items-center justify-center gap-4" data-scroll-animator-target="item" data-animation="fade-up" data-delay="400">
          <%= link_to sign_up_path, class: 'btn-gradient px-8 py-4 rounded-xl text-white font-bold text-lg w-full sm:w-auto' do %>
            <span class="flex items-center justify-center gap-2">
              Start Building Free
              <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
              </svg>
            </span>
          <% end %>
          <a href="#features" class="btn-ghost px-8 py-4 rounded-xl text-white font-semibold text-lg w-full sm:w-auto flex items-center justify-center gap-2">
            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            Watch Demo
          </a>
        </div>

        <!-- Social Proof Mini -->
        <div class="mt-12 flex flex-wrap items-center justify-center gap-6 text-gray-400" data-scroll-animator-target="item" data-animation="fade-up" data-delay="500">
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5 text-yellow-500" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
            </svg>
            <span>4.9/5 from 200+ developers</span>
          </div>
          <div class="hidden sm:block w-px h-4 bg-gray-600"></div>
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5 text-green-500" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
            <span>86%+ test coverage</span>
          </div>
          <div class="hidden sm:block w-px h-4 bg-gray-600"></div>
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5 text-indigo-500" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M12.316 3.051a1 1 0 01.633 1.265l-4 12a1 1 0 11-1.898-.632l4-12a1 1 0 011.265-.633zM5.707 6.293a1 1 0 010 1.414L3.414 10l2.293 2.293a1 1 0 11-1.414 1.414l-3-3a1 1 0 010-1.414l3-3a1 1 0 011.414 0zm8.586 0a1 1 0 011.414 0l3 3a1 1 0 010 1.414l-3 3a1 1 0 11-1.414-1.414L16.586 10l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
            </svg>
            <span>Production ready</span>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Trusted By Section -->
  <section class="relative z-10 py-16 border-t border-white/5">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8" data-controller="scroll-animator">
      <p class="text-center text-sm text-gray-500 uppercase tracking-wider mb-8" data-scroll-animator-target="item" data-animation="fade-up">
        Trusted by developers at innovative companies
      </p>
      <div class="flex flex-wrap items-center justify-center gap-x-12 gap-y-6 opacity-50">
        <% %w[Stripe Shopify Basecamp GitHub GitLab Heroku].each_with_index do |company, i| %>
          <div class="text-gray-400 text-xl font-semibold" data-scroll-animator-target="item" data-animation="fade-up" data-delay="<%= (i + 1) * 100 %>">
            <%= company %>
          </div>
        <% end %>
      </div>
    </div>
  </section>
</div>

<!-- Features Section -->
<section id="features" class="py-24 bg-gradient-to-b from-gray-50 to-white" data-controller="scroll-animator">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section Header -->
    <div class="text-center max-w-3xl mx-auto mb-16">
      <span class="inline-block px-4 py-1.5 rounded-full bg-indigo-100 text-indigo-700 text-sm font-semibold mb-4" data-scroll-animator-target="item" data-animation="fade-up">
        Everything You Need
      </span>
      <h2 class="text-4xl sm:text-5xl font-bold text-gray-900 mb-4" data-scroll-animator-target="item" data-animation="fade-up" data-delay="100">
        Built for <span class="gradient-text-primary">Modern SaaS</span>
      </h2>
      <p class="text-xl text-gray-600" data-scroll-animator-target="item" data-animation="fade-up" data-delay="200">
        Stop building boilerplate. Start building your product. Every feature is production-tested and ready to scale.
      </p>
    </div>

    <!-- Feature Cards Grid -->
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
      <!-- Feature 1: Multi-Tenancy -->
      <div class="glass-card-light rounded-2xl p-8" data-scroll-animator-target="item" data-animation="fade-up" data-delay="100">
        <div class="feature-icon w-14 h-14 rounded-xl bg-gradient-to-br from-indigo-500 to-purple-600 flex items-center justify-center mb-6">
          <svg class="w-7 h-7 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
          </svg>
        </div>
        <h3 class="text-xl font-bold text-gray-900 mb-3">Multi-Tenant Architecture</h3>
        <p class="text-gray-600 mb-4">
          Secure data isolation with acts_as_tenant. Each account's data is automatically scoped and protected.
        </p>
        <ul class="space-y-2 text-sm text-gray-500">
          <li class="flex items-center gap-2">
            <svg class="w-4 h-4 text-green-500" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
            </svg>
            Automatic tenant scoping
          </li>
          <li class="flex items-center gap-2">
            <svg class="w-4 h-4 text-green-500" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
            </svg>
            Session persistence
          </li>
          <li class="flex items-center gap-2">
            <svg class="w-4 h-4 text-green-500" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
            </svg>
            Account switching
          </li>
        </ul>
      </div>

      <!-- Feature 2: Authentication -->
      <div class="glass-card-light rounded-2xl p-8" data-scroll-animator-target="item" data-animation="fade-up" data-delay="200">
        <div class="feature-icon w-14 h-14 rounded-xl bg-gradient-to-br from-green-500 to-emerald-600 flex items-center justify-center mb-6">
          <svg class="w-7 h-7 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
