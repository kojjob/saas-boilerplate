<% content_for :head do %>
  <meta name="turbo-visit-control" content="reload">
  <script>
    // Clear any stale service workers that might show offline messages
    if ('serviceWorker' in navigator) {
      navigator.serviceWorker.getRegistrations().then(function(registrations) {
        registrations.forEach(function(registration) {
          registration.unregister();
        });
      });
    }
  </script>
<% end %>

<div class="max-w-lg mx-auto px-4 py-16 text-center">
  <div class="rounded-full bg-yellow-100 p-3 mx-auto w-fit">
    <svg class="h-12 w-12 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
    </svg>
  </div>

  <h1 class="mt-6 text-3xl font-bold text-gray-900">Checkout Cancelled</h1>

  <p class="mt-4 text-lg text-gray-600">
    Your checkout was cancelled and no charges were made.
    You can try again whenever you're ready.
  </p>

  <div class="mt-8 space-x-4">
    <%= link_to "View Plans", billing_path,
        class: "inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>

    <%= link_to "Go to Dashboard", dashboard_path,
        class: "inline-flex items-center px-6 py-3 border border-gray-300 text-base font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
  </div>
</div>
