<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="text-center">
    <h1 class="text-3xl font-bold text-gray-900">Billing & Subscription</h1>
    <p class="mt-4 text-lg text-gray-600">
      Manage your subscription and billing information
    </p>
  </div>

  <% if @current_plan.present? %>
    <div class="mt-8 bg-white shadow overflow-hidden rounded-lg">
      <div class="px-4 py-5 sm:p-6">
        <h2 class="text-lg font-medium text-gray-900">Current Plan</h2>
        <div class="mt-4 flex items-center justify-between">
          <div>
            <p class="text-2xl font-bold text-indigo-600"><%= @current_plan.name %></p>
            <p class="text-sm text-gray-500">
              <%= @current_plan.formatted_price %><%= " / #{@current_plan.interval}" unless @current_plan.free? %>
            </p>
          </div>
          <div>
            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium
              <%= current_account.subscription_status == 'active' ? 'bg-green-100 text-green-800' : 'bg-yellow-100 text-yellow-800' %>">
              <%= current_account.subscription_status.humanize %>
            </span>
          </div>
        </div>

        <% if current_account.on_trial? %>
          <div class="mt-4 p-4 bg-yellow-50 rounded-md">
            <p class="text-sm text-yellow-700">
              Your trial ends in <%= current_account.days_remaining_in_trial %> days
            </p>
          </div>
        <% end %>

        <% if current_account.payment_processor.present? %>
          <div class="mt-6">
            <%= link_to "Manage Billing", billing_portal_path,
                class: "inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>

  <div class="mt-12">
    <h2 class="text-2xl font-bold text-gray-900 text-center">Available Plans</h2>
    <p class="mt-4 text-center text-gray-600">Choose the plan that works best for you</p>

    <div class="mt-8 grid gap-8 lg:grid-cols-3">
      <% @plans.each do |plan| %>
        <div class="relative bg-white rounded-lg shadow-lg overflow-hidden
          <%= plan == @current_plan ? 'ring-2 ring-indigo-500' : '' %>">

          <% if plan == @current_plan %>
            <div class="absolute top-0 inset-x-0 h-1 bg-indigo-500"></div>
          <% end %>

          <div class="p-6">
            <h3 class="text-xl font-semibold text-gray-900"><%= plan.name %></h3>

            <div class="mt-4">
              <span class="text-4xl font-extrabold text-gray-900"><%= plan.formatted_price %></span>
              <% unless plan.free? %>
                <span class="text-base font-medium text-gray-500">/ <%= plan.interval %></span>
              <% end %>
            </div>

            <% if plan.description.present? %>
              <p class="mt-4 text-sm text-gray-500"><%= plan.description %></p>
            <% end %>

            <ul class="mt-6 space-y-4">
              <% plan.feature_list.each do |feature| %>
                <li class="flex items-start">
                  <svg class="flex-shrink-0 h-5 w-5 text-green-500" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                  </svg>
                  <span class="ml-3 text-sm text-gray-700"><%= feature %></span>
                </li>
              <% end %>
            </ul>

            <% if plan.limits.present? %>
              <div class="mt-6 pt-4 border-t border-gray-200">
                <h4 class="text-sm font-medium text-gray-900">Limits</h4>
                <ul class="mt-2 space-y-1">
                  <% plan.limits.each do |resource, limit| %>
                    <li class="text-sm text-gray-500">
                      <%= resource.humanize %>: <%= limit == -1 ? 'Unlimited' : limit %>
                    </li>
                  <% end %>
                </ul>
              </div>
            <% end %>
          </div>

          <div class="px-6 pb-6">
            <% if plan == @current_plan %>
              <button disabled
                class="w-full px-4 py-2 text-sm font-medium text-gray-400 bg-gray-100 rounded-md cursor-not-allowed">
                Current Plan
              </button>
            <% else %>
              <%= button_to "Select #{plan.name}", billing_checkout_path(plan_id: plan.id),
                  method: :post,
                  class: "w-full px-4 py-2 text-sm font-medium text-white bg-indigo-600 rounded-md hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
