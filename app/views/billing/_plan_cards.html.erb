<% plans.each_with_index do |plan, index| %>
  <% is_popular = plan.name == 'Pro' || plan.name == 'Pro (Yearly)' %>
  <% is_current = plan == current_plan %>
  <% is_yearly = plan.interval == 'year' %>

  <div class="relative group">
    <!-- Popular Badge -->
    <% if is_popular %>
      <div class="absolute -top-4 left-0 right-0 flex justify-center z-10">
        <span class="inline-flex items-center px-4 py-1 rounded-full text-sm font-semibold bg-gradient-to-r from-indigo-600 to-purple-600 text-white shadow-lg">
          <svg class="w-4 h-4 mr-1.5" fill="currentColor" viewBox="0 0 20 20">
            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
          </svg>
          Most Popular
        </span>
      </div>
    <% end %>

    <div class="h-full flex flex-col bg-white rounded-2xl shadow-xl border-2 transition-all duration-300 hover:shadow-2xl hover:-translate-y-1
      <%= is_popular ? 'border-indigo-500 ring-4 ring-indigo-100' : 'border-gray-100' %>
      <%= is_current ? 'ring-4 ring-emerald-100 border-emerald-400' : '' %>">

      <!-- Current Plan Indicator -->
      <% if is_current %>
        <div class="bg-emerald-500 text-white text-center py-2 text-sm font-semibold rounded-t-xl">
          Your Current Plan
        </div>
      <% end %>

      <div class="p-8 flex-grow">
        <!-- Plan Name & Icon -->
        <div class="flex items-center gap-3">
          <div class="w-12 h-12 rounded-xl flex items-center justify-center
            <%= plan.free? ? 'bg-gray-100' : (plan.name.include?('Enterprise') ? 'bg-gradient-to-br from-purple-500 to-pink-500' : 'bg-gradient-to-br from-indigo-500 to-blue-500') %>">
            <% if plan.free? %>
              <svg class="w-6 h-6 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            <% elsif plan.name.include?('Enterprise') %>
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
              </svg>
            <% else %>
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
              </svg>
            <% end %>
          </div>
          <div>
            <h3 class="text-xl font-bold text-gray-900">
              <%= plan.name.gsub(' (Yearly)', '') %>
            </h3>
            <% if plan.trial_days > 0 %>
              <p class="text-sm text-indigo-600 font-medium"><%= plan.trial_days %>-day free trial</p>
            <% end %>
          </div>
        </div>

        <!-- Price -->
        <div class="mt-6">
          <div class="flex items-baseline gap-1">
            <% if is_yearly %>
              <span class="text-5xl font-extrabold tracking-tight text-gray-900">
                $<%= (plan.price / 12).to_i %>
              </span>
              <span class="text-lg text-gray-500 font-medium">/mo</span>
            <% else %>
              <span class="text-5xl font-extrabold tracking-tight text-gray-900">
                <%= plan.free? ? 'Free' : "$#{plan.price.to_i}" %>
              </span>
              <% unless plan.free? %>
                <span class="text-lg text-gray-500 font-medium">/mo</span>
              <% end %>
            <% end %>
          </div>

          <% if is_yearly %>
            <p class="mt-1 text-sm text-gray-500">
              Billed annually at <span class="font-semibold">$<%= plan.price.to_i %>/year</span>
            </p>
            <% savings = plan.yearly_savings %>
            <% if savings > 0 %>
              <p class="mt-2 inline-flex items-center gap-1 text-sm font-semibold text-emerald-600">
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                Save $<%= savings.to_i %>/year
              </p>
            <% end %>
          <% end %>

          <% if plan.description.present? %>
            <p class="mt-3 text-gray-500 text-sm leading-relaxed"><%= plan.description.gsub(' - save 2 months!', '') %></p>
          <% end %>
        </div>

        <!-- Features List -->
        <div class="mt-8">
          <p class="text-sm font-semibold text-gray-900 uppercase tracking-wide">What's included</p>
          <ul class="mt-4 space-y-3">
            <% display_features = plan.feature_list.reject { |f| f.include?('Save $') } %>
            <% display_features.first(7).each do |feature| %>
              <li class="flex items-start gap-3">
                <div class="flex-shrink-0 w-5 h-5 rounded-full bg-emerald-100 flex items-center justify-center mt-0.5">
                  <svg class="w-3 h-3 text-emerald-600" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                  </svg>
                </div>
                <span class="text-sm text-gray-600 leading-tight"><%= feature %></span>
              </li>
            <% end %>
            <% if display_features.size > 7 %>
              <li class="text-sm text-indigo-600 font-medium pt-1">
                + <%= display_features.size - 7 %> more features
              </li>
            <% end %>
          </ul>
        </div>
      </div>

      <!-- CTA Button -->
      <div class="p-8 pt-0">
        <% if is_current %>
          <button disabled class="w-full py-3.5 px-6 rounded-xl text-sm font-semibold bg-gray-100 text-gray-400 cursor-not-allowed">
            Current Plan
          </button>
        <% elsif !plan.free? && !stripe_configured %>
          <button disabled class="w-full py-3.5 px-6 rounded-xl text-sm font-semibold bg-gray-100 text-gray-400 cursor-not-allowed" title="Stripe configuration required">
            Setup Required
          </button>
        <% else %>
          <%= button_to billing_checkout_path(plan_id: plan.id),
              method: :post,
              class: "w-full py-3.5 px-6 rounded-xl text-sm font-semibold transition-all duration-200 #{is_popular ? 'bg-gradient-to-r from-indigo-600 to-purple-600 text-white hover:from-indigo-700 hover:to-purple-700 shadow-lg hover:shadow-xl' : 'bg-gray-900 text-white hover:bg-gray-800'}" do %>
            <span class="flex items-center justify-center gap-2">
              <%= plan.free? ? 'Get Started Free' : "Start #{plan.trial_days > 0 ? 'Free Trial' : 'Now'}" %>
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
              </svg>
            </span>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
