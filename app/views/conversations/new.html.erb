<%= render "shared/modal" do %>
  <div class="bg-white px-4 pb-4 pt-5 sm:p-6 sm:pb-4">
    <div class="sm:flex sm:items-start">
      <div class="mt-3 text-center sm:ml-4 sm:mt-0 sm:text-left w-full">
        <h3 class="text-base font-semibold leading-6 text-gray-900" id="modal-title">New Conversation</h3>
        <div class="mt-2">
          <p class="text-sm text-gray-500 mb-4">Select a team member to message</p>

          <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden max-h-[60vh] overflow-y-auto">
            <% if @users.any? %>
              <ul class="divide-y divide-gray-200">
                <% @users.each do |user| %>
                  <li>
                    <%= button_to conversations_path(recipient_id: user.id), method: :post, class: "w-full text-left hover:bg-gray-50 transition-colors duration-200", data: { turbo_frame: "_top" } do %>
                      <div class="flex items-center px-4 py-3">
                        <!-- Avatar -->
                        <div class="flex-shrink-0">
                          <div class="w-10 h-10 rounded-full bg-gradient-to-br from-indigo-500 to-purple-600 flex items-center justify-center text-white font-semibold text-sm">
                            <%= user.initials %>
                          </div>
                        </div>

                        <!-- User Details -->
                        <div class="ml-3 flex-1 min-w-0">
                          <p class="text-sm font-semibold text-gray-900 truncate">
                            <%= user.full_name %>
                          </p>
                          <p class="text-xs text-gray-500 truncate">
                            <%= user.email %>
                          </p>
                        </div>

                        <!-- Arrow Icon -->
                        <div class="ml-3 flex-shrink-0">
                          <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                          </svg>
                        </div>
                      </div>
                    <% end %>
                  </li>
                <% end %>
              </ul>
            <% else %>
              <!-- Empty State -->
              <div class="px-6 py-10 text-center">
                <svg class="mx-auto h-12 w-12 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
                </svg>
                <h3 class="mt-2 text-sm font-medium text-gray-900">No team members available</h3>
                <p class="mt-1 text-xs text-gray-500">Invite team members to your account to start messaging.</p>
                <div class="mt-4">
                  <%= link_to new_account_invitation_path, class: "inline-flex items-center px-3 py-2 bg-indigo-600 text-white text-xs font-medium rounded-lg hover:bg-indigo-700 transition-colors", data: { turbo_frame: "modal" } do %>
                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"/>
                    </svg>
                    Invite Team Members
                  <% end %>
                </div>
              </div>
            <% end %>
          </div>

          <div class="mt-5 sm:mt-4 sm:flex sm:flex-row-reverse">
            <button type="button" data-action="modal#close" class="mt-3 inline-flex w-full justify-center rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50 sm:mt-0 sm:w-auto cursor-pointer">Cancel</button>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
