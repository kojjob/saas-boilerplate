<div class="max-w-4xl mx-auto">
  <!-- Header -->
  <div class="flex items-center justify-between mb-6">
    <div>
      <h1 class="text-2xl font-bold text-gray-900">Messages</h1>
      <p class="mt-1 text-sm text-gray-500">Communicate with your team members</p>
    </div>
    <%= link_to new_conversation_path, class: "inline-flex items-center px-4 py-2 bg-gradient-to-r from-indigo-600 to-purple-600 text-white text-sm font-medium rounded-lg shadow-sm hover:from-indigo-700 hover:to-purple-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-all duration-200" do %>
      <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
      </svg>
      New Conversation
    <% end %>
  </div>

  <!-- Conversations List -->
  <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
    <% if @conversations.any? %>
      <ul class="divide-y divide-gray-200">
        <% @conversations.each do |conversation| %>
          <li>
            <%= link_to conversation_path(conversation), class: "block hover:bg-gray-50 transition-colors duration-200" do %>
              <div class="flex items-center px-6 py-4">
                <!-- Avatar -->
                <div class="flex-shrink-0">
                  <% other_user = conversation.other_participant(current_user) %>
                  <div class="w-12 h-12 rounded-full bg-gradient-to-br from-indigo-500 to-purple-600 flex items-center justify-center text-white font-semibold text-lg">
                    <%= other_user.initials %>
                  </div>
                </div>

                <!-- Conversation Details -->
                <div class="ml-4 flex-1 min-w-0">
                  <div class="flex items-center justify-between">
                    <p class="text-sm font-semibold text-gray-900 truncate">
                      <%= other_user.full_name %>
                    </p>
                    <% if conversation.last_message %>
                      <span class="text-xs text-gray-500">
                        <%= time_ago_in_words(conversation.last_message.created_at) %> ago
                      </span>
                    <% end %>
                  </div>
                  <% if conversation.last_message %>
                    <p class="mt-1 text-sm text-gray-500 truncate">
                      <% if conversation.last_message.sender == current_user %>
                        <span class="text-gray-400">You: </span>
                      <% end %>
                      <%= truncate(conversation.last_message.body, length: 60) %>
                    </p>
                  <% else %>
                    <p class="mt-1 text-sm text-gray-400 italic">No messages yet</p>
                  <% end %>
                </div>

                <!-- Unread Badge -->
                <% unread_count = conversation.unread_count_for(current_user) %>
                <% if unread_count > 0 %>
                  <div class="ml-4 flex-shrink-0">
                    <span class="inline-flex items-center justify-center min-w-[1.5rem] h-6 px-2 rounded-full bg-indigo-600 text-white text-xs font-medium">
                      <%= unread_count %>
                    </span>
                  </div>
                <% end %>
              </div>
            <% end %>
          </li>
        <% end %>
      </ul>
    <% else %>
      <!-- Empty State -->
      <div class="px-6 py-16 text-center">
        <svg class="mx-auto h-16 w-16 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
        </svg>
        <h3 class="mt-4 text-lg font-medium text-gray-900">No conversations yet</h3>
        <p class="mt-2 text-sm text-gray-500">Start a conversation with a team member to get started.</p>
        <div class="mt-6">
          <%= link_to new_conversation_path, class: "inline-flex items-center px-4 py-2 bg-indigo-600 text-white text-sm font-medium rounded-lg hover:bg-indigo-700 transition-colors" do %>
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
            </svg>
            Start a Conversation
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
