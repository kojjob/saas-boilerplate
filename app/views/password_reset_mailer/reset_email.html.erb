<%= email_heading "Reset your password" %>

<%= email_paragraph "Hi #{@user.first_name}," %>

<%= email_paragraph "We received a request to reset your password. Click the button below to create a new password:" %>

<%= email_spacer %>

<table role="presentation" cellspacing="0" cellpadding="0" border="0" align="center">
  <tr>
    <td>
      <%= email_button "Reset Password", @reset_url %>
    </td>
  </tr>
</table>

<%= email_spacer %>

<%= email_info_box "This link will expire in 2 hours.", type: :warning %>

<%= email_paragraph "If you didn't request this password reset, you can safely ignore this email. Your password will remain unchanged." %>

<%= email_divider %>

<p style="margin: 0; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif; font-size: 13px; line-height: 1.5; color: #6b7280;">
  If the button doesn't work, copy and paste this link into your browser:<br>
  <%= email_text_link @reset_url, @reset_url %>
</p>
