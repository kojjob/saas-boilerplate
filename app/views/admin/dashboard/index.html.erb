<% content_for(:title) { "Dashboard - Admin" } %>

<h1 class="text-2xl font-bold text-slate-900 mb-6">Dashboard</h1>

<%# Stats Cards %>
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
  <div class="bg-white rounded-lg shadow p-6">
    <div class="text-sm font-medium text-slate-500">Total Users</div>
    <div class="text-3xl font-bold text-slate-900"><%= @total_users %></div>
  </div>
  <div class="bg-white rounded-lg shadow p-6">
    <div class="text-sm font-medium text-slate-500">Total Accounts</div>
    <div class="text-3xl font-bold text-slate-900"><%= @total_accounts %></div>
  </div>
  <div class="bg-white rounded-lg shadow p-6">
    <div class="text-sm font-medium text-slate-500">Active Subscriptions</div>
    <div class="text-3xl font-bold text-green-600"><%= @subscription_stats[:active] %></div>
  </div>
  <div class="bg-white rounded-lg shadow p-6">
    <div class="text-sm font-medium text-slate-500">Trialing</div>
    <div class="text-3xl font-bold text-blue-600"><%= @subscription_stats[:trialing] %></div>
  </div>
</div>

<%# Subscription Status Breakdown %>
<div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-8">
  <div class="bg-white rounded-lg shadow">
    <div class="px-6 py-4 border-b border-slate-200">
      <h2 class="text-lg font-semibold text-slate-900">Subscription Status</h2>
    </div>
    <div class="p-6">
      <dl class="space-y-4">
        <div class="flex justify-between">
          <dt class="text-slate-600">Trialing</dt>
          <dd class="font-semibold text-blue-600"><%= @subscription_stats[:trialing] %></dd>
        </div>
        <div class="flex justify-between">
          <dt class="text-slate-600">Active</dt>
          <dd class="font-semibold text-green-600"><%= @subscription_stats[:active] %></dd>
        </div>
        <div class="flex justify-between">
          <dt class="text-slate-600">Past Due</dt>
          <dd class="font-semibold text-amber-600"><%= @subscription_stats[:past_due] %></dd>
        </div>
        <div class="flex justify-between">
          <dt class="text-slate-600">Canceled</dt>
          <dd class="font-semibold text-red-600"><%= @subscription_stats[:canceled] %></dd>
        </div>
      </dl>
    </div>
  </div>

  <%# Recent Users %>
  <div class="bg-white rounded-lg shadow">
    <div class="px-6 py-4 border-b border-slate-200 flex justify-between items-center">
      <h2 class="text-lg font-semibold text-slate-900">Recent Users</h2>
      <%= link_to "View All", admin_users_path, class: "text-sm text-indigo-600 hover:text-indigo-500" %>
    </div>
    <div class="divide-y divide-slate-200">
      <% @recent_users.each do |user| %>
        <div class="px-6 py-3 flex justify-between items-center">
          <div>
            <div class="font-medium text-slate-900"><%= user.full_name %></div>
            <div class="text-sm text-slate-500"><%= user.email %></div>
          </div>
          <div class="text-sm text-slate-500">
            <%= time_ago_in_words(user.created_at) %> ago
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<%# Recent Accounts %>
<div class="bg-white rounded-lg shadow">
  <div class="px-6 py-4 border-b border-slate-200 flex justify-between items-center">
    <h2 class="text-lg font-semibold text-slate-900">Recent Accounts</h2>
    <%= link_to "View All", admin_accounts_path, class: "text-sm text-indigo-600 hover:text-indigo-500" %>
  </div>
  <div class="overflow-x-auto">
    <table class="min-w-full divide-y divide-slate-200">
      <thead class="bg-slate-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">Name</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">Plan</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">Status</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">Created</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-slate-200">
        <% @recent_accounts.each do |account| %>
          <tr>
            <td class="px-6 py-4 whitespace-nowrap">
              <%= link_to account.name, admin_account_path(account), class: "text-indigo-600 hover:text-indigo-500" %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-500">
              <%= account.plan&.name || "No Plan" %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <%= render_subscription_badge(account.subscription_status) %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-500">
              <%= account.created_at.strftime("%b %d, %Y") %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
