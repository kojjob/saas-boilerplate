<%= form_with(model: [:admin, :blog, @post], local: true, class: "space-y-6") do |f| %>
  <% if @post.errors.any? %>
    <div class="rounded-md bg-red-50 p-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800"><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h3>
          <div class="mt-2 text-sm text-red-700">
            <ul class="list-disc pl-5 space-y-1">
              <% @post.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <%# Main Content Column %>
    <div class="lg:col-span-2 space-y-6">
      <%# Title %>
      <div class="bg-white rounded-lg shadow p-6">
        <div class="space-y-4">
          <div>
            <%= f.label :title, class: "block text-sm font-medium text-slate-700" %>
            <%= f.text_field :title, class: "mt-1 block w-full rounded-md border-slate-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm", placeholder: "Enter post title..." %>
          </div>

          <div>
            <%= f.label :slug, class: "block text-sm font-medium text-slate-700" %>
            <div class="mt-1 flex rounded-md shadow-sm">
              <span class="inline-flex items-center px-3 rounded-l-md border border-r-0 border-slate-300 bg-slate-50 text-slate-500 sm:text-sm">/blog/</span>
              <%= f.text_field :slug, class: "flex-1 min-w-0 block w-full px-3 py-2 rounded-none rounded-r-md border-slate-300 focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm", placeholder: "auto-generated-from-title" %>
            </div>
            <p class="mt-1 text-xs text-slate-500">Leave blank to auto-generate from title</p>
          </div>
        </div>
      </div>

      <%# Content %>
      <div class="bg-white rounded-lg shadow p-6">
        <div>
          <%= f.label :content, class: "block text-sm font-medium text-slate-700 mb-2" %>
          <%= f.text_area :content, rows: 20, class: "mt-1 block w-full rounded-md border-slate-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm font-mono", placeholder: "Write your blog post content here... (Markdown supported)" %>
          <p class="mt-1 text-xs text-slate-500">Supports Markdown formatting</p>
        </div>
      </div>

      <%# Excerpt %>
      <div class="bg-white rounded-lg shadow p-6">
        <div>
          <%= f.label :excerpt, class: "block text-sm font-medium text-slate-700" %>
          <%= f.text_area :excerpt, rows: 3, class: "mt-1 block w-full rounded-md border-slate-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm", placeholder: "Brief summary for search results and social sharing..." %>
          <p class="mt-1 text-xs text-slate-500">Optional. Will be auto-generated from content if left blank.</p>
        </div>
      </div>

      <%# SEO Settings %>
      <div class="bg-white rounded-lg shadow p-6">
        <h3 class="text-lg font-medium text-slate-900 mb-4">SEO Settings</h3>
        <div class="space-y-4">
          <div>
            <%= f.label :meta_title, class: "block text-sm font-medium text-slate-700" %>
            <%= f.text_field :meta_title, class: "mt-1 block w-full rounded-md border-slate-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm", placeholder: "Custom title for search engines (optional)" %>
            <p class="mt-1 text-xs text-slate-500">Leave blank to use post title</p>
          </div>

          <div>
            <%= f.label :meta_description, class: "block text-sm font-medium text-slate-700" %>
            <%= f.text_area :meta_description, rows: 2, class: "mt-1 block w-full rounded-md border-slate-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm", placeholder: "Description for search results (155-160 characters recommended)" %>
          </div>

          <div>
            <%= f.label :meta_keywords, class: "block text-sm font-medium text-slate-700" %>
            <%= f.text_field :meta_keywords, class: "mt-1 block w-full rounded-md border-slate-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm", placeholder: "keyword1, keyword2, keyword3" %>
          </div>
        </div>
      </div>
    </div>

    <%# Sidebar Column %>
    <div class="space-y-6">
      <%# Publish Settings %>
      <div class="bg-white rounded-lg shadow p-6">
        <h3 class="text-lg font-medium text-slate-900 mb-4">Publish</h3>
        <div class="space-y-4">
          <div>
            <%= f.label :status, class: "block text-sm font-medium text-slate-700" %>
            <%= f.select :status, BlogPost.statuses.keys.map { |s| [s.titleize, s] }, {}, class: "mt-1 block w-full rounded-md border-slate-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
          </div>

          <div>
            <%= f.label :published_at, "Publish Date", class: "block text-sm font-medium text-slate-700" %>
            <%= f.datetime_local_field :published_at, class: "mt-1 block w-full rounded-md border-slate-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
            <p class="mt-1 text-xs text-slate-500">Schedule for future publishing</p>
          </div>

          <div class="flex items-center">
            <%= f.check_box :featured, class: "h-4 w-4 rounded border-slate-300 text-indigo-600 focus:ring-indigo-500" %>
            <%= f.label :featured, class: "ml-2 text-sm font-medium text-slate-700" %>
            <span class="ml-1 text-xs text-slate-500">(Show in featured section)</span>
          </div>
        </div>
      </div>

      <%# Category %>
      <div class="bg-white rounded-lg shadow p-6">
        <h3 class="text-lg font-medium text-slate-900 mb-4">Category</h3>
        <div>
          <%= f.collection_select :blog_category_id, BlogCategory.ordered, :id, :name, { include_blank: "Select a category..." }, class: "block w-full rounded-md border-slate-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
        </div>
      </div>

      <%# Tags %>
      <div class="bg-white rounded-lg shadow p-6">
        <h3 class="text-lg font-medium text-slate-900 mb-4">Tags</h3>
        <div class="space-y-2">
          <% BlogTag.ordered.each do |tag| %>
            <div class="flex items-center">
              <%= check_box_tag "blog_post[tag_ids][]", tag.id, @post.tags.include?(tag), id: "tag_#{tag.id}", class: "h-4 w-4 rounded border-slate-300 text-indigo-600 focus:ring-indigo-500" %>
              <%= label_tag "tag_#{tag.id}", tag.name, class: "ml-2 text-sm text-slate-700" %>
            </div>
          <% end %>
          <% if BlogTag.none? %>
            <p class="text-sm text-slate-500">No tags available. <%= link_to "Create one", new_admin_blog_tag_path, class: "text-indigo-600 hover:text-indigo-500" %>.</p>
          <% end %>
        </div>
        <%= hidden_field_tag "blog_post[tag_ids][]", "" %>
      </div>

      <%# Featured Image %>
      <div class="bg-white rounded-lg shadow p-6">
        <h3 class="text-lg font-medium text-slate-900 mb-4">Featured Image</h3>
        <div>
          <%= f.label :featured_image_url, "Image URL", class: "block text-sm font-medium text-slate-700" %>
          <%= f.url_field :featured_image_url, class: "mt-1 block w-full rounded-md border-slate-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm", placeholder: "https://..." %>
          <p class="mt-1 text-xs text-slate-500">Enter URL of featured image</p>

          <% if @post.featured_image_url.present? %>
            <div class="mt-4">
              <p class="text-xs text-slate-500 mb-2">Preview:</p>
              <img src="<%= @post.featured_image_url %>" alt="Featured image preview" class="rounded-lg max-h-40 object-cover">
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <%# Actions %>
  <div class="flex justify-end space-x-3 pt-6 border-t border-slate-200">
    <%= link_to "Cancel", admin_blog_posts_path, class: "inline-flex items-center px-4 py-2 border border-slate-300 rounded-md shadow-sm text-sm font-medium text-slate-700 bg-white hover:bg-slate-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>

    <%= f.submit @post.persisted? ? "Update Post" : "Create Post", class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 cursor-pointer" %>
  </div>
<% end %>
