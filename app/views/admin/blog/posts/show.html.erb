<% content_for(:title) { "#{@post.title} - Admin" } %>

<div class="mb-6">
  <nav class="flex" aria-label="Breadcrumb">
    <ol class="flex items-center space-x-2">
      <li>
        <%= link_to admin_root_path, class: "text-slate-400 hover:text-slate-500" do %>
          <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 20 20">
            <path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"/>
          </svg>
        <% end %>
      </li>
      <li>
        <div class="flex items-center">
          <svg class="h-5 w-5 text-slate-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
          </svg>
          <%= link_to "Blog Posts", admin_blog_posts_path, class: "ml-2 text-sm font-medium text-slate-500 hover:text-slate-700" %>
        </div>
      </li>
      <li>
        <div class="flex items-center">
          <svg class="h-5 w-5 text-slate-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
          </svg>
          <span class="ml-2 text-sm font-medium text-slate-700 truncate max-w-xs"><%= @post.title %></span>
        </div>
      </li>
    </ol>
  </nav>
</div>

<div class="flex justify-between items-start mb-6">
  <div>
    <h1 class="text-2xl font-bold text-slate-900"><%= @post.title %></h1>
    <div class="mt-2 flex items-center space-x-4 text-sm text-slate-500">
      <span>By <%= @post.author&.email&.split('@')&.first || "Unknown" %></span>
      <span>&bull;</span>
      <span>Created <%= @post.created_at.strftime("%B %d, %Y") %></span>
      <% if @post.published_at.present? %>
        <span>&bull;</span>
        <span>Published <%= @post.published_at.strftime("%B %d, %Y") %></span>
      <% end %>
    </div>
  </div>
  <div class="flex space-x-3">
    <% if @post.published? %>
      <%= link_to post_path(@post), target: "_blank", class: "inline-flex items-center px-4 py-2 border border-slate-300 rounded-md shadow-sm text-sm font-medium text-slate-700 bg-white hover:bg-slate-50" do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
        </svg>
        View Live
      <% end %>
    <% end %>
    <%= link_to edit_admin_blog_post_path(@post), class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700" do %>
      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
      </svg>
      Edit Post
    <% end %>
  </div>
</div>

<div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
  <%# Main Content %>
  <div class="lg:col-span-2 space-y-6">
    <%# Featured Image %>
    <% if @post.featured_image_url.present? %>
      <div class="bg-white rounded-lg shadow overflow-hidden">
        <img src="<%= @post.featured_image_url %>" alt="<%= @post.title %>" class="w-full h-64 object-cover">
      </div>
    <% end %>

    <%# Content Preview %>
    <div class="bg-white rounded-lg shadow p-6">
      <h3 class="text-lg font-medium text-slate-900 mb-4">Content Preview</h3>
      <div class="prose max-w-none">
        <%= simple_format(@post.content) %>
      </div>
    </div>

    <%# Excerpt %>
    <% if @post.excerpt.present? %>
      <div class="bg-white rounded-lg shadow p-6">
        <h3 class="text-lg font-medium text-slate-900 mb-4">Excerpt</h3>
        <p class="text-slate-600"><%= @post.excerpt %></p>
      </div>
    <% end %>
  </div>

  <%# Sidebar %>
  <div class="space-y-6">
    <%# Status & Info %>
    <div class="bg-white rounded-lg shadow p-6">
      <h3 class="text-lg font-medium text-slate-900 mb-4">Post Details</h3>
      <dl class="space-y-4">
        <div>
          <dt class="text-sm font-medium text-slate-500">Status</dt>
          <dd class="mt-1">
            <% case @post.status %>
            <% when "draft" %>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-slate-100 text-slate-800">Draft</span>
            <% when "published" %>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">Published</span>
            <% when "scheduled" %>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">Scheduled</span>
            <% when "archived" %>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">Archived</span>
            <% end %>
          </dd>
        </div>

        <div>
          <dt class="text-sm font-medium text-slate-500">Featured</dt>
          <dd class="mt-1 text-sm text-slate-900">
            <%= @post.featured? ? "Yes" : "No" %>
          </dd>
        </div>

        <div>
          <dt class="text-sm font-medium text-slate-500">Views</dt>
          <dd class="mt-1 text-sm text-slate-900"><%= number_with_delimiter(@post.views_count) %></dd>
        </div>

        <div>
          <dt class="text-sm font-medium text-slate-500">Slug</dt>
          <dd class="mt-1 text-sm text-slate-900 font-mono text-xs break-all">/blog/<%= @post.slug %></dd>
        </div>

        <div>
          <dt class="text-sm font-medium text-slate-500">Reading Time</dt>
          <dd class="mt-1 text-sm text-slate-900"><%= @post.reading_time %> min read</dd>
        </div>
      </dl>
    </div>

    <%# Category %>
    <div class="bg-white rounded-lg shadow p-6">
      <h3 class="text-lg font-medium text-slate-900 mb-4">Category</h3>
      <% if @post.blog_category %>
        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-indigo-100 text-indigo-800">
          <%= @post.blog_category.name %>
        </span>
      <% else %>
        <p class="text-sm text-slate-500">No category assigned</p>
      <% end %>
    </div>

    <%# Tags %>
    <div class="bg-white rounded-lg shadow p-6">
      <h3 class="text-lg font-medium text-slate-900 mb-4">Tags</h3>
      <% if @post.tags.any? %>
        <div class="flex flex-wrap gap-2">
          <% @post.tags.each do |tag| %>
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-slate-100 text-slate-800">
              <%= tag.name %>
            </span>
          <% end %>
        </div>
      <% else %>
        <p class="text-sm text-slate-500">No tags assigned</p>
      <% end %>
    </div>

    <%# SEO Info %>
    <div class="bg-white rounded-lg shadow p-6">
      <h3 class="text-lg font-medium text-slate-900 mb-4">SEO Settings</h3>
      <dl class="space-y-4">
        <div>
          <dt class="text-sm font-medium text-slate-500">Meta Title</dt>
          <dd class="mt-1 text-sm text-slate-900"><%= @post.meta_title.presence || @post.title %></dd>
        </div>

        <div>
          <dt class="text-sm font-medium text-slate-500">Meta Description</dt>
          <dd class="mt-1 text-sm text-slate-900"><%= @post.meta_description.presence || "Not set" %></dd>
        </div>

        <% if @post.meta_keywords.present? %>
          <div>
            <dt class="text-sm font-medium text-slate-500">Meta Keywords</dt>
            <dd class="mt-1 text-sm text-slate-900"><%= @post.meta_keywords %></dd>
          </div>
        <% end %>
      </dl>
    </div>

    <%# Danger Zone %>
    <div class="bg-white rounded-lg shadow p-6 border border-red-200">
      <h3 class="text-lg font-medium text-red-900 mb-4">Danger Zone</h3>
      <%= link_to admin_blog_post_path(@post), method: :delete, data: { turbo_confirm: "Are you sure you want to permanently delete this post? This action cannot be undone." }, class: "w-full inline-flex justify-center items-center px-4 py-2 border border-red-300 rounded-md shadow-sm text-sm font-medium text-red-700 bg-white hover:bg-red-50" do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
        </svg>
        Delete Post
      <% end %>
    </div>
  </div>
</div>
