<% content_for(:title) { "Blog Posts - Admin" } %>

<div class="flex justify-between items-center mb-6">
  <h1 class="text-2xl font-bold text-slate-900">Blog Posts</h1>
  <%= link_to new_admin_blog_post_path, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do %>
    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
    </svg>
    New Post
  <% end %>
</div>

<%# Filter Form %>
<div class="bg-white rounded-lg shadow mb-6">
  <div class="p-4">
    <%= form_with url: admin_blog_posts_path, method: :get, local: true, class: "flex flex-wrap gap-4" do |f| %>
      <div>
        <%= f.select :status, options_for_select([
          ["All Statuses", ""],
          ["Draft", "draft"],
          ["Published", "published"],
          ["Scheduled", "scheduled"],
          ["Archived", "archived"]
        ], params[:status]), {}, class: "block w-full rounded-md border-slate-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
      </div>
      <div>
        <%= f.select :category, options_for_select(
          [["All Categories", ""]] + BlogCategory.ordered.pluck(:name, :id),
          params[:category]
        ), {}, class: "block w-full rounded-md border-slate-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
      </div>
      <div>
        <%= f.submit "Filter", class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 cursor-pointer" %>
      </div>
      <% if params[:status].present? || params[:category].present? %>
        <%= link_to "Clear", admin_blog_posts_path, class: "inline-flex items-center px-4 py-2 border border-slate-300 rounded-md shadow-sm text-sm font-medium text-slate-700 bg-white hover:bg-slate-50" %>
      <% end %>
    <% end %>
  </div>
</div>

<%# Posts Table %>
<div class="bg-white rounded-lg shadow overflow-hidden">
  <% if @posts.any? %>
    <table class="min-w-full divide-y divide-slate-200">
      <thead class="bg-slate-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">Title</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">Category</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">Status</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">Author</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">Views</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">Published</th>
          <th class="px-6 py-3 text-right text-xs font-medium text-slate-500 uppercase tracking-wider">Actions</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-slate-200">
        <% @posts.each do |post| %>
          <tr>
            <td class="px-6 py-4">
              <div class="flex items-center">
                <% if post.featured_image_url.present? %>
                  <div class="flex-shrink-0 h-10 w-14 mr-3">
                    <img class="h-10 w-14 rounded object-cover" src="<%= post.featured_image_url %>" alt="">
                  </div>
                <% end %>
                <div>
                  <%= link_to post.title, admin_blog_post_path(post), class: "font-medium text-indigo-600 hover:text-indigo-500 line-clamp-1" %>
                  <% if post.featured? %>
                    <span class="ml-2 inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-amber-100 text-amber-800">
                      Featured
                    </span>
                  <% end %>
                </div>
              </div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-500">
              <%= post.blog_category&.name || "—" %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <% case post.status %>
              <% when "draft" %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-slate-100 text-slate-800">Draft</span>
              <% when "published" %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">Published</span>
              <% when "scheduled" %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">Scheduled</span>
              <% when "archived" %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">Archived</span>
              <% end %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-500">
              <%= post.author&.email&.split('@')&.first || "—" %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-500">
              <%= number_with_delimiter(post.views_count) %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-500">
              <%= post.published_at&.strftime("%b %d, %Y") || "—" %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium space-x-2">
              <% if post.published? %>
                <%= link_to "View", post_path(post), target: "_blank", class: "text-slate-600 hover:text-slate-900" %>
              <% end %>
              <%= link_to "Edit", edit_admin_blog_post_path(post), class: "text-indigo-600 hover:text-indigo-900" %>
              <%= link_to "Delete", admin_blog_post_path(post), method: :delete, data: { turbo_confirm: "Are you sure you want to delete this post?" }, class: "text-red-600 hover:text-red-900" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <%# Pagination %>
    <% if @pagy.pages > 1 %>
      <div class="bg-white px-4 py-3 border-t border-slate-200 sm:px-6">
        <div class="flex items-center justify-between">
          <div class="text-sm text-slate-700">
            Showing <%= @pagy.from %> to <%= @pagy.to %> of <%= @pagy.count %> posts
          </div>
          <nav class="flex space-x-2">
            <% if @pagy.page > 1 %>
              <%= link_to admin_blog_posts_path(page: @pagy.page - 1, status: params[:status], category: params[:category]), class: "px-3 py-1 border border-slate-300 rounded text-sm text-slate-700 hover:bg-slate-50" do %>
                Previous
              <% end %>
            <% end %>
            <% if @pagy.page < @pagy.pages %>
              <%= link_to admin_blog_posts_path(page: @pagy.page + 1, status: params[:status], category: params[:category]), class: "px-3 py-1 border border-slate-300 rounded text-sm text-slate-700 hover:bg-slate-50" do %>
                Next
              <% end %>
            <% end %>
          </nav>
        </div>
      </div>
    <% end %>
  <% else %>
    <div class="text-center py-12">
      <svg class="mx-auto h-12 w-12 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"/>
      </svg>
      <h3 class="mt-2 text-sm font-medium text-slate-900">No blog posts</h3>
      <p class="mt-1 text-sm text-slate-500">Get started by creating your first blog post.</p>
      <div class="mt-6">
        <%= link_to new_admin_blog_post_path, class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700" do %>
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
          </svg>
          New Post
        <% end %>
      </div>
    </div>
  <% end %>
</div>
