<%= form_with(model: [:admin, :blog, @category], local: true, class: "space-y-6") do |f| %>
  <% if @category.errors.any? %>
    <div class="rounded-md bg-red-50 p-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800"><%= pluralize(@category.errors.count, "error") %> prohibited this category from being saved:</h3>
          <div class="mt-2 text-sm text-red-700">
            <ul class="list-disc pl-5 space-y-1">
              <% @category.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div class="bg-white rounded-lg shadow p-6">
    <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
      <div class="sm:col-span-2">
        <%= f.label :name, class: "block text-sm font-medium text-slate-700" %>
        <%= f.text_field :name, class: "mt-1 block w-full rounded-md border-slate-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm", placeholder: "Category name" %>
      </div>

      <div class="sm:col-span-2">
        <%= f.label :slug, class: "block text-sm font-medium text-slate-700" %>
        <div class="mt-1 flex rounded-md shadow-sm">
          <span class="inline-flex items-center px-3 rounded-l-md border border-r-0 border-slate-300 bg-slate-50 text-slate-500 sm:text-sm">/blog/categories/</span>
          <%= f.text_field :slug, class: "flex-1 min-w-0 block w-full px-3 py-2 rounded-none rounded-r-md border-slate-300 focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm", placeholder: "auto-generated" %>
        </div>
        <p class="mt-1 text-xs text-slate-500">Leave blank to auto-generate from name</p>
      </div>

      <div class="sm:col-span-2">
        <%= f.label :description, class: "block text-sm font-medium text-slate-700" %>
        <%= f.text_area :description, rows: 3, class: "mt-1 block w-full rounded-md border-slate-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm", placeholder: "Optional category description" %>
      </div>

      <div>
        <%= f.label :parent_id, "Parent Category", class: "block text-sm font-medium text-slate-700" %>
        <%= f.collection_select :parent_id, BlogCategory.where.not(id: @category.id).ordered, :id, :name, { include_blank: "None (Top Level)" }, class: "mt-1 block w-full rounded-md border-slate-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
        <p class="mt-1 text-xs text-slate-500">Create hierarchical categories</p>
      </div>

      <div>
        <%= f.label :position, class: "block text-sm font-medium text-slate-700" %>
        <%= f.number_field :position, class: "mt-1 block w-full rounded-md border-slate-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm", min: 0 %>
        <p class="mt-1 text-xs text-slate-500">Lower numbers appear first</p>
      </div>
    </div>
  </div>

  <div class="flex justify-end space-x-3">
    <%= link_to "Cancel", admin_blog_categories_path, class: "inline-flex items-center px-4 py-2 border border-slate-300 rounded-md shadow-sm text-sm font-medium text-slate-700 bg-white hover:bg-slate-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
    <%= f.submit @category.persisted? ? "Update Category" : "Create Category", class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 cursor-pointer" %>
  </div>
<% end %>
