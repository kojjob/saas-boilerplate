<% content_for(:title) { "Edit: #{@category.name} - Admin" } %>

<div class="mb-6">
  <nav class="flex" aria-label="Breadcrumb">
    <ol class="flex items-center space-x-2">
      <li>
        <%= link_to admin_root_path, class: "text-slate-400 hover:text-slate-500" do %>
          <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 20 20">
            <path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"/>
          </svg>
        <% end %>
      </li>
      <li>
        <div class="flex items-center">
          <svg class="h-5 w-5 text-slate-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
          </svg>
          <%= link_to "Categories", admin_blog_categories_path, class: "ml-2 text-sm font-medium text-slate-500 hover:text-slate-700" %>
        </div>
      </li>
      <li>
        <div class="flex items-center">
          <svg class="h-5 w-5 text-slate-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
          </svg>
          <span class="ml-2 text-sm font-medium text-slate-700">Edit: <%= @category.name %></span>
        </div>
      </li>
    </ol>
  </nav>
</div>

<div class="flex justify-between items-center mb-6">
  <div>
    <h1 class="text-2xl font-bold text-slate-900">Edit Category</h1>
    <p class="mt-1 text-sm text-slate-500"><%= @category.posts_count %> posts in this category</p>
  </div>
  <% if @category.posts_count == 0 %>
    <%= link_to admin_blog_category_path(@category), method: :delete, data: { turbo_confirm: "Are you sure you want to delete this category?" }, class: "inline-flex items-center px-3 py-2 border border-red-300 rounded-md shadow-sm text-sm font-medium text-red-700 bg-white hover:bg-red-50" do %>
      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
      </svg>
      Delete
    <% end %>
  <% end %>
</div>

<%= render "form" %>
