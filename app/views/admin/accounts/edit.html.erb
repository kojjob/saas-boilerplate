<% content_for(:title) { "Edit #{@account.name} - Admin" } %>

<div class="mb-6">
  <%= link_to "â† Back to Account", admin_account_path(@account), class: "text-indigo-600 hover:text-indigo-500" %>
</div>

<div class="bg-white rounded-lg shadow overflow-hidden">
  <div class="px-6 py-5 border-b border-slate-200">
    <h1 class="text-2xl font-bold text-slate-900">Edit Account</h1>
  </div>

  <div class="px-6 py-5">
    <%= form_with model: [:admin, @account], local: true do |f| %>
      <% if @account.errors.any? %>
        <div class="mb-6 bg-red-50 border border-red-200 rounded-md p-4">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-red-400" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
              </svg>
            </div>
            <div class="ml-3">
              <h3 class="text-sm font-medium text-red-800">There were <%= pluralize(@account.errors.count, "error") %> with your submission:</h3>
              <div class="mt-2 text-sm text-red-700">
                <ul class="list-disc pl-5 space-y-1">
                  <% @account.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
        </div>
      <% end %>

      <div class="space-y-6">
        <div>
          <%= f.label :name, class: "block text-sm font-medium text-slate-700" %>
          <%= f.text_field :name, class: "mt-1 block w-full rounded-md border-slate-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
        </div>

        <div>
          <%= f.label :plan_id, "Plan", class: "block text-sm font-medium text-slate-700" %>
          <%= f.select :plan_id, Plan.all.map { |p| [p.name, p.id] }, { include_blank: "No Plan" }, class: "mt-1 block w-full rounded-md border-slate-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
        </div>

        <div>
          <%= f.label :subscription_status, class: "block text-sm font-medium text-slate-700" %>
          <%= f.select :subscription_status, options_for_select([
            ["Trialing", "trialing"],
            ["Active", "active"],
            ["Past Due", "past_due"],
            ["Canceled", "canceled"],
            ["Paused", "paused"]
          ], @account.subscription_status), {}, class: "mt-1 block w-full rounded-md border-slate-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
        </div>
      </div>

      <div class="mt-6 flex justify-end space-x-3">
        <%= link_to "Cancel", admin_account_path(@account), class: "inline-flex items-center px-4 py-2 border border-slate-300 rounded-md shadow-sm text-sm font-medium text-slate-700 bg-white hover:bg-slate-50" %>
        <%= f.submit "Save Changes", class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 cursor-pointer" %>
      </div>
    <% end %>
  </div>
</div>
