<% content_for(:title) { "Accounts - Admin" } %>

<div class="flex justify-between items-center mb-6">
  <h1 class="text-2xl font-bold text-slate-900">Accounts</h1>
</div>

<%# Filter Form %>
<div class="bg-white rounded-lg shadow mb-6">
  <div class="p-4">
    <%= form_with url: admin_accounts_path, method: :get, local: true, class: "flex gap-4" do |f| %>
      <div>
        <%= f.select :status, options_for_select([
          ["All Statuses", ""],
          ["Trialing", "trialing"],
          ["Active", "active"],
          ["Past Due", "past_due"],
          ["Canceled", "canceled"]
        ], params[:status]), {}, class: "block w-full rounded-md border-slate-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
      </div>
      <div>
        <%= f.submit "Filter", class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 cursor-pointer" %>
      </div>
      <% if params[:status].present? %>
        <%= link_to "Clear", admin_accounts_path, class: "inline-flex items-center px-4 py-2 border border-slate-300 rounded-md shadow-sm text-sm font-medium text-slate-700 bg-white hover:bg-slate-50" %>
      <% end %>
    <% end %>
  </div>
</div>

<%# Accounts Table %>
<div class="bg-white rounded-lg shadow overflow-hidden">
  <table class="min-w-full divide-y divide-slate-200">
    <thead class="bg-slate-50">
      <tr>
        <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">Name</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">Plan</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">Status</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">Members</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">Created</th>
        <th class="px-6 py-3 text-right text-xs font-medium text-slate-500 uppercase tracking-wider">Actions</th>
      </tr>
    </thead>
    <tbody class="bg-white divide-y divide-slate-200">
      <% @accounts.each do |account| %>
        <tr>
          <td class="px-6 py-4 whitespace-nowrap">
            <%= link_to account.name, admin_account_path(account), class: "font-medium text-indigo-600 hover:text-indigo-500" %>
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-500">
            <%= account.plan&.name || "No Plan" %>
          </td>
          <td class="px-6 py-4 whitespace-nowrap">
            <%= render_subscription_badge(account.subscription_status) %>
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-500">
            <%= account.memberships.count %>
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-500">
            <%= account.created_at.strftime("%b %d, %Y") %>
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium space-x-2">
            <%= link_to "View", admin_account_path(account), class: "text-indigo-600 hover:text-indigo-900" %>
            <%= link_to "Edit", edit_admin_account_path(account), class: "text-indigo-600 hover:text-indigo-900", data: { turbo_frame: "modal" } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
