<% content_for :title, "Owner Dashboard - Deployable" %>

<div class="space-y-8">
  <%# Header %>
  <div class="flex items-center justify-between">
    <div>
      <h1 class="text-3xl font-bold text-white">Owner Dashboard</h1>
      <p class="mt-1 text-sm text-slate-400">Business metrics and platform health overview</p>
    </div>
    <div class="text-sm text-slate-400">
      Last updated: <%= Time.current.strftime("%B %d, %Y at %I:%M %p") %>
    </div>
  </div>

  <%# MRR Metrics Section %>
  <section>
    <h2 class="text-xl font-semibold text-white mb-4 flex items-center">
      <svg class="w-5 h-5 mr-2 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
      </svg>
      Revenue Metrics
    </h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
      <%# MRR Card %>
      <div class="bg-slate-800 rounded-lg p-6 border border-slate-700">
        <div class="flex items-center justify-between">
          <h3 class="text-sm font-medium text-slate-400">MRR</h3>
          <span class="text-green-400 text-xs font-medium">Monthly</span>
        </div>
        <p class="mt-2 text-3xl font-bold text-white"><%= number_to_currency(@mrr) %></p>
        <p class="mt-1 text-sm text-slate-500">Monthly Recurring Revenue</p>
      </div>

      <%# ARR Card %>
      <div class="bg-slate-800 rounded-lg p-6 border border-slate-700">
        <div class="flex items-center justify-between">
          <h3 class="text-sm font-medium text-slate-400">ARR</h3>
          <span class="text-blue-400 text-xs font-medium">Annual</span>
        </div>
        <p class="mt-2 text-3xl font-bold text-white"><%= number_to_currency(@arr) %></p>
        <p class="mt-1 text-sm text-slate-500">Annual Recurring Revenue</p>
      </div>

      <%# MRR Growth Rate %>
      <div class="bg-slate-800 rounded-lg p-6 border border-slate-700">
        <div class="flex items-center justify-between">
          <h3 class="text-sm font-medium text-slate-400">MRR Growth</h3>
          <span class="<%= @mrr_growth_rate >= 0 ? 'text-green-400' : 'text-red-400' %> text-xs font-medium">
            <%= @mrr_growth_rate >= 0 ? '+' : '' %><%= number_to_percentage(@mrr_growth_rate, precision: 1) %>
          </span>
        </div>
        <p class="mt-2 text-3xl font-bold text-white"><%= number_to_percentage(@mrr_growth_rate, precision: 1) %></p>
        <p class="mt-1 text-sm text-slate-500">Month over Month</p>
      </div>

      <%# Net MRR Movement %>
      <div class="bg-slate-800 rounded-lg p-6 border border-slate-700">
        <div class="flex items-center justify-between">
          <h3 class="text-sm font-medium text-slate-400">Net MRR Movement</h3>
          <span class="<%= @net_mrr_movement >= 0 ? 'text-green-400' : 'text-red-400' %> text-xs font-medium">
            <%= @net_mrr_movement >= 0 ? 'Growth' : 'Decline' %>
          </span>
        </div>
        <p class="mt-2 text-3xl font-bold text-white"><%= number_to_currency(@net_mrr_movement) %></p>
        <p class="mt-1 text-sm text-slate-500">This Period</p>
      </div>
    </div>

    <%# MRR by Plan Breakdown %>
    <% if @mrr_by_plan.present? %>
      <div class="mt-4 bg-slate-800 rounded-lg p-6 border border-slate-700">
        <h3 class="text-sm font-medium text-slate-400 mb-4">MRR by Plan</h3>
        <div class="space-y-3">
          <% @mrr_by_plan.each do |plan_name, mrr_value| %>
            <div class="flex items-center justify-between">
              <span class="text-white"><%= plan_name %></span>
              <span class="text-slate-300 font-medium"><%= number_to_currency(mrr_value) %></span>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </section>

  <%# Customer Metrics Section %>
  <section>
    <h2 class="text-xl font-semibold text-white mb-4 flex items-center">
      <svg class="w-5 h-5 mr-2 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
      </svg>
      Customer Metrics
    </h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
      <%# Total Customers %>
      <div class="bg-slate-800 rounded-lg p-6 border border-slate-700">
        <div class="flex items-center justify-between">
          <h3 class="text-sm font-medium text-slate-400">Total Customers</h3>
        </div>
        <p class="mt-2 text-3xl font-bold text-white"><%= number_with_delimiter(@total_customers) %></p>
        <p class="mt-1 text-sm text-slate-500">All Accounts</p>
      </div>

      <%# Active Customers %>
      <div class="bg-slate-800 rounded-lg p-6 border border-slate-700">
        <div class="flex items-center justify-between">
          <h3 class="text-sm font-medium text-slate-400">Active Customers</h3>
          <span class="text-green-400 text-xs font-medium">Active</span>
        </div>
        <p class="mt-2 text-3xl font-bold text-white"><%= number_with_delimiter(@active_customers) %></p>
        <p class="mt-1 text-sm text-slate-500">Paying Accounts</p>
      </div>

      <%# Churn Rate %>
      <div class="bg-slate-800 rounded-lg p-6 border border-slate-700">
        <div class="flex items-center justify-between">
          <h3 class="text-sm font-medium text-slate-400">Churn Rate</h3>
          <span class="<%= @churn_rate <= 5 ? 'text-green-400' : 'text-amber-400' %> text-xs font-medium">
            <%= @churn_rate <= 5 ? 'Healthy' : 'Monitor' %>
          </span>
        </div>
        <p class="mt-2 text-3xl font-bold text-white"><%= number_to_percentage(@churn_rate, precision: 1) %></p>
        <p class="mt-1 text-sm text-slate-500">Monthly Churn</p>
      </div>

      <%# Trial Conversion Rate %>
      <div class="bg-slate-800 rounded-lg p-6 border border-slate-700">
        <div class="flex items-center justify-between">
          <h3 class="text-sm font-medium text-slate-400">Trial Conversion</h3>
          <span class="<%= @trial_conversion_rate >= 50 ? 'text-green-400' : 'text-amber-400' %> text-xs font-medium">
            <%= @trial_conversion_rate >= 50 ? 'Strong' : 'Improve' %>
          </span>
        </div>
        <p class="mt-2 text-3xl font-bold text-white"><%= number_to_percentage(@trial_conversion_rate, precision: 1) %></p>
        <p class="mt-1 text-sm text-slate-500">Trial to Paid</p>
      </div>
    </div>

    <%# Second Row of Customer Metrics %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4 mt-4">
      <%# LTV %>
      <div class="bg-slate-800 rounded-lg p-6 border border-slate-700">
        <div class="flex items-center justify-between">
          <h3 class="text-sm font-medium text-slate-400">LTV</h3>
          <span class="text-purple-400 text-xs font-medium">Lifetime</span>
        </div>
        <p class="mt-2 text-3xl font-bold text-white"><%= number_to_currency(@ltv) %></p>
        <p class="mt-1 text-sm text-slate-500">Customer Lifetime Value</p>
      </div>

      <%# ARPU %>
      <div class="bg-slate-800 rounded-lg p-6 border border-slate-700">
        <div class="flex items-center justify-between">
          <h3 class="text-sm font-medium text-slate-400">ARPU</h3>
          <span class="text-indigo-400 text-xs font-medium">Per User</span>
        </div>
        <p class="mt-2 text-3xl font-bold text-white"><%= number_to_currency(@arpu) %></p>
        <p class="mt-1 text-sm text-slate-500">Avg Revenue Per User</p>
      </div>

      <%# Net Customer Growth %>
      <div class="bg-slate-800 rounded-lg p-6 border border-slate-700">
        <div class="flex items-center justify-between">
          <h3 class="text-sm font-medium text-slate-400">Net Growth</h3>
          <span class="<%= @net_customer_growth >= 0 ? 'text-green-400' : 'text-red-400' %> text-xs font-medium">
            <%= @net_customer_growth >= 0 ? '+' : '' %><%= @net_customer_growth %>
          </span>
        </div>
        <p class="mt-2 text-3xl font-bold text-white"><%= @net_customer_growth >= 0 ? '+' : '' %><%= @net_customer_growth %></p>
        <p class="mt-1 text-sm text-slate-500">New - Churned (30d)</p>
      </div>

      <%# Customers by Status %>
      <div class="bg-slate-800 rounded-lg p-6 border border-slate-700">
        <h3 class="text-sm font-medium text-slate-400 mb-3">By Status</h3>
        <div class="space-y-2 text-sm">
          <% @customers_by_status.each do |status, count| %>
            <div class="flex justify-between">
              <span class="text-slate-300 capitalize"><%= status %></span>
              <span class="text-white font-medium"><%= count %></span>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </section>

  <%# Payment Health Section %>
  <section>
    <h2 class="text-xl font-semibold text-white mb-4 flex items-center">
      <svg class="w-5 h-5 mr-2 text-amber-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
      </svg>
      Payment Health
    </h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-4">
      <%# Past Due Accounts %>
      <div class="bg-slate-800 rounded-lg p-6 border border-slate-700">
        <div class="flex items-center justify-between">
          <h3 class="text-sm font-medium text-slate-400">Past Due</h3>
          <span class="<%= @past_due_accounts_count > 0 ? 'text-red-400' : 'text-green-400' %> text-xs font-medium">
            <%= @past_due_accounts_count > 0 ? 'Action Needed' : 'Clear' %>
          </span>
        </div>
        <p class="mt-2 text-3xl font-bold text-white"><%= @past_due_accounts_count %></p>
        <p class="mt-1 text-sm text-slate-500">Accounts</p>
      </div>

      <%# Past Due Percentage %>
      <div class="bg-slate-800 rounded-lg p-6 border border-slate-700">
        <div class="flex items-center justify-between">
          <h3 class="text-sm font-medium text-slate-400">Past Due %</h3>
        </div>
        <p class="mt-2 text-3xl font-bold text-white"><%= number_to_percentage(@past_due_percentage, precision: 1) %></p>
        <p class="mt-1 text-sm text-slate-500">Of Total Accounts</p>
      </div>

      <%# At-Risk Revenue %>
      <div class="bg-slate-800 rounded-lg p-6 border border-slate-700">
        <div class="flex items-center justify-between">
          <h3 class="text-sm font-medium text-slate-400">At-Risk Revenue</h3>
          <span class="<%= @at_risk_revenue > 0 ? 'text-amber-400' : 'text-green-400' %> text-xs font-medium">
            <%= @at_risk_revenue > 0 ? 'Monitor' : 'Healthy' %>
          </span>
        </div>
        <p class="mt-2 text-3xl font-bold text-white"><%= number_to_currency(@at_risk_revenue) %></p>
        <p class="mt-1 text-sm text-slate-500">MRR at Risk</p>
      </div>

      <%# Failed Payment Rate %>
      <div class="bg-slate-800 rounded-lg p-6 border border-slate-700">
        <div class="flex items-center justify-between">
          <h3 class="text-sm font-medium text-slate-400">Failed Payments</h3>
        </div>
        <p class="mt-2 text-3xl font-bold text-white"><%= number_to_percentage(@failed_payment_rate, precision: 1) %></p>
        <p class="mt-1 text-sm text-slate-500">Failure Rate</p>
      </div>

      <%# Recovery Rate %>
      <div class="bg-slate-800 rounded-lg p-6 border border-slate-700">
        <div class="flex items-center justify-between">
          <h3 class="text-sm font-medium text-slate-400">Recovery Rate</h3>
          <span class="<%= @recovery_rate >= 70 ? 'text-green-400' : 'text-amber-400' %> text-xs font-medium">
            <%= @recovery_rate >= 70 ? 'Strong' : 'Improve' %>
          </span>
        </div>
        <p class="mt-2 text-3xl font-bold text-white"><%= number_to_percentage(@recovery_rate, precision: 1) %></p>
        <p class="mt-1 text-sm text-slate-500">Recovered Payments</p>
      </div>
    </div>
  </section>

  <%# Quick Actions %>
  <section class="border-t border-slate-700 pt-6">
    <h2 class="text-xl font-semibold text-white mb-4">Quick Actions</h2>
    <div class="flex flex-wrap gap-4">
      <%= link_to owner_accounts_path, class: "inline-flex items-center px-4 py-2 bg-indigo-600 hover:bg-indigo-700 rounded-md text-sm font-medium text-white transition-colors" do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
        </svg>
        View All Accounts
      <% end %>
      <%= link_to owner_reports_path, class: "inline-flex items-center px-4 py-2 bg-slate-700 hover:bg-slate-600 rounded-md text-sm font-medium text-white transition-colors" do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
        </svg>
        View Reports
      <% end %>
      <%= link_to admin_root_path, class: "inline-flex items-center px-4 py-2 bg-slate-700 hover:bg-slate-600 rounded-md text-sm font-medium text-white transition-colors" do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
        </svg>
        Admin Panel
      <% end %>
    </div>
  </section>
</div>
