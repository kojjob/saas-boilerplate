<% content_for :title, "Owner Dashboard - Deployable" %>

<div class="min-h-screen -mx-4 sm:-mx-6 lg:-mx-8 -mt-6 px-4 sm:px-6 lg:px-8 py-6 sm:py-8">
  <%# Ambient glow effects %>
  <div class="fixed inset-0 overflow-hidden pointer-events-none">
    <div class="absolute top-0 left-1/4 w-[500px] h-[500px] bg-indigo-600/15 rounded-full blur-[120px] mix-blend-screen"></div>
    <div class="absolute top-1/2 right-0 w-[400px] h-[400px] bg-purple-500/10 rounded-full blur-[100px] mix-blend-screen"></div>
    <div class="absolute bottom-0 left-1/2 w-[300px] h-[300px] bg-blue-500/10 rounded-full blur-[80px] mix-blend-screen"></div>
  </div>

  <div class="relative max-w-7xl mx-auto space-y-8 sm:space-y-10">
    <%# Header %>
    <div class="flex flex-col sm:flex-row sm:items-center justify-between gap-4 pt-4 sm:pt-6">
      <div class="flex items-center gap-4">
        <div class="w-12 h-12 sm:w-14 sm:h-14 rounded-xl bg-linear-to-br from-indigo-400 via-purple-400 to-pink-500 p-px shadow-lg shadow-indigo-500/30">
          <div class="w-full h-full rounded-xl bg-linear-to-br from-indigo-500/80 to-purple-600/80 backdrop-blur flex items-center justify-center">
            <svg class="w-6 h-6 sm:w-7 sm:h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3.75 3v11.25A2.25 2.25 0 006 16.5h2.25M3.75 3h-1.5m1.5 0h16.5m0 0h1.5m-1.5 0v11.25A2.25 2.25 0 0118 16.5h-2.25m-7.5 0h7.5m-7.5 0l-1 3m8.5-3l1 3m0 0l.5 1.5m-.5-1.5h-9.5m0 0l-.5 1.5" />
            </svg>
          </div>
        </div>
        <div>
          <h1 class="text-2xl sm:text-3xl font-bold text-white tracking-tight">Owner Dashboard</h1>
          <p class="text-sm text-slate-400 mt-1">Business metrics and platform health overview</p>
        </div>
      </div>
      <div class="flex items-center gap-2 px-4 py-2 rounded-xl bg-white/5 border border-white/10 backdrop-blur-sm">
        <div class="w-2 h-2 rounded-full bg-emerald-400 animate-pulse"></div>
        <span class="text-sm text-slate-400">Updated <%= Time.current.strftime("%b %d, %I:%M %p") %></span>
      </div>
    </div>

    <%# Revenue Metrics Section %>
    <section class="space-y-4">
      <div class="flex items-center gap-3">
        <div class="w-10 h-10 rounded-xl bg-linear-to-br from-emerald-500/20 to-teal-500/20 flex items-center justify-center">
          <svg class="w-5 h-5 text-emerald-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
        </div>
        <h2 class="text-lg font-semibold text-white">Revenue Metrics</h2>
      </div>

      <div class="grid grid-cols-2 lg:grid-cols-4 gap-3 sm:gap-4">
        <%# MRR Card %>
        <div class="relative group">
          <div class="absolute -inset-0.5 bg-linear-to-br from-emerald-500/30 to-teal-500/20 rounded-2xl blur-lg opacity-0 group-hover:opacity-100 transition-all duration-300"></div>
          <div class="relative overflow-hidden rounded-xl bg-linear-to-br from-slate-800/90 via-slate-900/95 to-slate-950 backdrop-blur-xl border border-white/10 p-4 sm:p-5">
            <div class="absolute inset-0 bg-linear-to-br from-emerald-600/15 to-transparent"></div>
            <div class="absolute -top-8 -right-8 w-20 h-20 bg-emerald-500/20 rounded-full blur-2xl"></div>
            <div class="relative">
              <div class="flex items-center justify-between mb-2">
                <p class="text-[10px] sm:text-xs font-medium text-slate-400 uppercase tracking-wider">MRR</p>
                <span class="text-[10px] text-emerald-400 font-medium px-2 py-0.5 rounded-full bg-emerald-500/10">Monthly</span>
              </div>
              <p class="text-xl sm:text-2xl lg:text-3xl font-bold text-white"><%= number_to_currency(@mrr) %></p>
              <p class="text-xs text-slate-500 mt-1">Monthly Recurring Revenue</p>
            </div>
          </div>
        </div>

        <%# ARR Card %>
        <div class="relative group">
          <div class="absolute -inset-0.5 bg-linear-to-br from-blue-500/30 to-indigo-500/20 rounded-2xl blur-lg opacity-0 group-hover:opacity-100 transition-all duration-300"></div>
          <div class="relative overflow-hidden rounded-xl bg-linear-to-br from-slate-800/90 via-slate-900/95 to-slate-950 backdrop-blur-xl border border-white/10 p-4 sm:p-5">
            <div class="absolute inset-0 bg-linear-to-br from-blue-600/15 to-transparent"></div>
            <div class="absolute -top-8 -right-8 w-20 h-20 bg-blue-500/20 rounded-full blur-2xl"></div>
            <div class="relative">
              <div class="flex items-center justify-between mb-2">
                <p class="text-[10px] sm:text-xs font-medium text-slate-400 uppercase tracking-wider">ARR</p>
                <span class="text-[10px] text-blue-400 font-medium px-2 py-0.5 rounded-full bg-blue-500/10">Annual</span>
              </div>
              <p class="text-xl sm:text-2xl lg:text-3xl font-bold text-white"><%= number_to_currency(@arr) %></p>
              <p class="text-xs text-slate-500 mt-1">Annual Recurring Revenue</p>
            </div>
          </div>
        </div>

        <%# MRR Growth Rate %>
        <div class="relative group">
          <div class="absolute -inset-0.5 bg-linear-to-br from-cyan-500/30 to-teal-500/20 rounded-2xl blur-lg opacity-0 group-hover:opacity-100 transition-all duration-300"></div>
          <div class="relative overflow-hidden rounded-xl bg-linear-to-br from-slate-800/90 via-slate-900/95 to-slate-950 backdrop-blur-xl border border-white/10 p-4 sm:p-5">
            <div class="absolute inset-0 bg-linear-to-br from-cyan-600/15 to-transparent"></div>
            <div class="absolute -top-8 -right-8 w-20 h-20 bg-cyan-500/20 rounded-full blur-2xl"></div>
            <div class="relative">
              <div class="flex items-center justify-between mb-2">
                <p class="text-[10px] sm:text-xs font-medium text-slate-400 uppercase tracking-wider">Growth</p>
                <span class="text-[10px] <%= @mrr_growth_rate >= 0 ? 'text-emerald-400 bg-emerald-500/10' : 'text-red-400 bg-red-500/10' %> font-medium px-2 py-0.5 rounded-full">
                  <%= @mrr_growth_rate >= 0 ? '+' : '' %><%= number_to_percentage(@mrr_growth_rate, precision: 1) %>
                </span>
              </div>
              <p class="text-xl sm:text-2xl lg:text-3xl font-bold <%= @mrr_growth_rate >= 0 ? 'text-emerald-400' : 'text-red-400' %>"><%= number_to_percentage(@mrr_growth_rate, precision: 1) %></p>
              <p class="text-xs text-slate-500 mt-1">Month over Month</p>
            </div>
          </div>
        </div>

        <%# Net MRR Movement %>
        <div class="relative group">
          <div class="absolute -inset-0.5 bg-linear-to-br from-purple-500/30 to-pink-500/20 rounded-2xl blur-lg opacity-0 group-hover:opacity-100 transition-all duration-300"></div>
          <div class="relative overflow-hidden rounded-xl bg-linear-to-br from-slate-800/90 via-slate-900/95 to-slate-950 backdrop-blur-xl border border-white/10 p-4 sm:p-5">
            <div class="absolute inset-0 bg-linear-to-br from-purple-600/15 to-transparent"></div>
            <div class="absolute -top-8 -right-8 w-20 h-20 bg-purple-500/20 rounded-full blur-2xl"></div>
            <div class="relative">
              <div class="flex items-center justify-between mb-2">
                <p class="text-[10px] sm:text-xs font-medium text-slate-400 uppercase tracking-wider">Net</p>
                <span class="text-[10px] <%= @net_mrr_movement >= 0 ? 'text-emerald-400 bg-emerald-500/10' : 'text-red-400 bg-red-500/10' %> font-medium px-2 py-0.5 rounded-full">
                  <%= @net_mrr_movement >= 0 ? 'Growth' : 'Decline' %>
                </span>
              </div>
              <p class="text-xl sm:text-2xl lg:text-3xl font-bold <%= @net_mrr_movement >= 0 ? 'text-emerald-400' : 'text-red-400' %>"><%= number_to_currency(@net_mrr_movement) %></p>
              <p class="text-xs text-slate-500 mt-1">This Period</p>
            </div>
          </div>
        </div>
      </div>

      <%# MRR by Plan Breakdown %>
      <% if @mrr_by_plan.present? %>
        <div class="relative">
          <div class="absolute -inset-0.5 bg-linear-to-br from-emerald-500/10 to-teal-500/5 rounded-2xl blur-lg"></div>
          <div class="relative overflow-hidden rounded-xl bg-linear-to-br from-slate-800/90 via-slate-900/95 to-slate-950 backdrop-blur-xl border border-white/10 p-5 sm:p-6">
            <h3 class="text-sm font-medium text-slate-400 mb-4">MRR by Plan</h3>
            <div class="space-y-3">
              <% colors = ['emerald', 'teal', 'cyan', 'blue', 'indigo'] %>
              <% @mrr_by_plan.each_with_index do |(plan_name, mrr_value), index| %>
                <% color = colors[index % colors.length] %>
                <% percentage = @mrr > 0 ? (mrr_value / @mrr) * 100 : 0 %>
                <div class="flex items-center justify-between gap-4">
                  <div class="flex items-center gap-3 min-w-0">
                    <div class="w-8 h-8 rounded-lg bg-<%= color %>-500/20 flex items-center justify-center shrink-0">
                      <span class="text-sm font-bold text-<%= color %>-400"><%= plan_name.first.upcase %></span>
                    </div>
                    <span class="text-white truncate"><%= plan_name %></span>
                  </div>
                  <div class="flex items-center gap-4">
                    <div class="hidden sm:block w-24 h-2 rounded-full bg-white/10 overflow-hidden">
                      <div class="h-full rounded-full bg-linear-to-r from-<%= color %>-500 to-<%= color %>-400" style="width: <%= percentage %>%"></div>
                    </div>
                    <span class="text-slate-300 font-medium whitespace-nowrap"><%= number_to_currency(mrr_value) %></span>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </section>

    <%# Customer Metrics Section %>
    <section class="space-y-4">
      <div class="flex items-center gap-3">
        <div class="w-10 h-10 rounded-xl bg-linear-to-br from-fuchsia-500/20 to-purple-500/20 flex items-center justify-center">
          <svg class="w-5 h-5 text-fuchsia-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
          </svg>
        </div>
        <h2 class="text-lg font-semibold text-white">Customer Metrics</h2>
      </div>

      <div class="grid grid-cols-2 lg:grid-cols-4 gap-3 sm:gap-4">
        <%# Total Customers %>
        <div class="relative group">
          <div class="absolute -inset-0.5 bg-linear-to-br from-fuchsia-500/30 to-purple-500/20 rounded-2xl blur-lg opacity-0 group-hover:opacity-100 transition-all duration-300"></div>
          <div class="relative overflow-hidden rounded-xl bg-linear-to-br from-slate-800/90 via-slate-900/95 to-slate-950 backdrop-blur-xl border border-white/10 p-4 sm:p-5">
            <div class="absolute inset-0 bg-linear-to-br from-fuchsia-600/15 to-transparent"></div>
            <div class="absolute -top-8 -right-8 w-20 h-20 bg-fuchsia-500/20 rounded-full blur-2xl"></div>
            <div class="relative">
              <p class="text-[10px] sm:text-xs font-medium text-slate-400 uppercase tracking-wider mb-2">Total</p>
              <p class="text-xl sm:text-2xl lg:text-3xl font-bold text-white"><%= number_with_delimiter(@total_customers) %></p>
              <p class="text-xs text-slate-500 mt-1">All Accounts</p>
            </div>
          </div>
        </div>

        <%# Active Customers %>
        <div class="relative group">
          <div class="absolute -inset-0.5 bg-linear-to-br from-purple-500/30 to-pink-500/20 rounded-2xl blur-lg opacity-0 group-hover:opacity-100 transition-all duration-300"></div>
          <div class="relative overflow-hidden rounded-xl bg-linear-to-br from-slate-800/90 via-slate-900/95 to-slate-950 backdrop-blur-xl border border-white/10 p-4 sm:p-5">
            <div class="absolute inset-0 bg-linear-to-br from-purple-600/15 to-transparent"></div>
            <div class="absolute -top-8 -right-8 w-20 h-20 bg-purple-500/20 rounded-full blur-2xl"></div>
            <div class="relative">
              <div class="flex items-center justify-between mb-2">
                <p class="text-[10px] sm:text-xs font-medium text-slate-400 uppercase tracking-wider">Active</p>
                <span class="text-[10px] text-emerald-400 font-medium px-2 py-0.5 rounded-full bg-emerald-500/10">Paying</span>
              </div>
              <p class="text-xl sm:text-2xl lg:text-3xl font-bold text-white"><%= number_with_delimiter(@active_customers) %></p>
              <p class="text-xs text-slate-500 mt-1">Paying Accounts</p>
            </div>
          </div>
        </div>

        <%# Churn Rate %>
        <div class="relative group">
          <div class="absolute -inset-0.5 bg-linear-to-br from-pink-500/30 to-rose-500/20 rounded-2xl blur-lg opacity-0 group-hover:opacity-100 transition-all duration-300"></div>
          <div class="relative overflow-hidden rounded-xl bg-linear-to-br from-slate-800/90 via-slate-900/95 to-slate-950 backdrop-blur-xl border border-white/10 p-4 sm:p-5">
            <div class="absolute inset-0 bg-linear-to-br from-pink-600/15 to-transparent"></div>
            <div class="absolute -top-8 -right-8 w-20 h-20 bg-pink-500/20 rounded-full blur-2xl"></div>
            <div class="relative">
              <div class="flex items-center justify-between mb-2">
                <p class="text-[10px] sm:text-xs font-medium text-slate-400 uppercase tracking-wider">Churn</p>
                <span class="text-[10px] <%= @churn_rate <= 5 ? 'text-emerald-400 bg-emerald-500/10' : 'text-amber-400 bg-amber-500/10' %> font-medium px-2 py-0.5 rounded-full">
                  <%= @churn_rate <= 5 ? 'Healthy' : 'Monitor' %>
                </span>
              </div>
              <p class="text-xl sm:text-2xl lg:text-3xl font-bold <%= @churn_rate <= 5 ? 'text-emerald-400' : 'text-amber-400' %>"><%= number_to_percentage(@churn_rate, precision: 1) %></p>
              <p class="text-xs text-slate-500 mt-1">Monthly Churn</p>
            </div>
          </div>
        </div>

        <%# Trial Conversion %>
        <div class="relative group">
          <div class="absolute -inset-0.5 bg-linear-to-br from-indigo-500/30 to-violet-500/20 rounded-2xl blur-lg opacity-0 group-hover:opacity-100 transition-all duration-300"></div>
          <div class="relative overflow-hidden rounded-xl bg-linear-to-br from-slate-800/90 via-slate-900/95 to-slate-950 backdrop-blur-xl border border-white/10 p-4 sm:p-5">
            <div class="absolute inset-0 bg-linear-to-br from-indigo-600/15 to-transparent"></div>
            <div class="absolute -top-8 -right-8 w-20 h-20 bg-indigo-500/20 rounded-full blur-2xl"></div>
            <div class="relative">
              <div class="flex items-center justify-between mb-2">
                <p class="text-[10px] sm:text-xs font-medium text-slate-400 uppercase tracking-wider">Convert</p>
                <span class="text-[10px] <%= @trial_conversion_rate >= 50 ? 'text-emerald-400 bg-emerald-500/10' : 'text-amber-400 bg-amber-500/10' %> font-medium px-2 py-0.5 rounded-full">
                  <%= @trial_conversion_rate >= 50 ? 'Strong' : 'Improve' %>
                </span>
              </div>
              <p class="text-xl sm:text-2xl lg:text-3xl font-bold <%= @trial_conversion_rate >= 50 ? 'text-emerald-400' : 'text-amber-400' %>"><%= number_to_percentage(@trial_conversion_rate, precision: 1) %></p>
              <p class="text-xs text-slate-500 mt-1">Trial to Paid</p>
            </div>
          </div>
        </div>
      </div>

      <%# Second Row %>
      <div class="grid grid-cols-2 lg:grid-cols-4 gap-3 sm:gap-4">
        <%# LTV %>
        <div class="relative group">
          <div class="absolute -inset-0.5 bg-linear-to-br from-violet-500/30 to-purple-500/20 rounded-2xl blur-lg opacity-0 group-hover:opacity-100 transition-all duration-300"></div>
          <div class="relative overflow-hidden rounded-xl bg-linear-to-br from-slate-800/90 via-slate-900/95 to-slate-950 backdrop-blur-xl border border-white/10 p-4 sm:p-5">
            <div class="absolute inset-0 bg-linear-to-br from-violet-600/15 to-transparent"></div>
            <div class="absolute -top-8 -right-8 w-20 h-20 bg-violet-500/20 rounded-full blur-2xl"></div>
            <div class="relative">
              <div class="flex items-center justify-between mb-2">
                <p class="text-[10px] sm:text-xs font-medium text-slate-400 uppercase tracking-wider">LTV</p>
                <span class="text-[10px] text-violet-400 font-medium px-2 py-0.5 rounded-full bg-violet-500/10">Lifetime</span>
              </div>
              <p class="text-xl sm:text-2xl lg:text-3xl font-bold text-white"><%= number_to_currency(@ltv) %></p>
              <p class="text-xs text-slate-500 mt-1">Customer Lifetime Value</p>
            </div>
          </div>
        </div>

        <%# ARPU %>
        <div class="relative group">
          <div class="absolute -inset-0.5 bg-linear-to-br from-indigo-500/30 to-blue-500/20 rounded-2xl blur-lg opacity-0 group-hover:opacity-100 transition-all duration-300"></div>
          <div class="relative overflow-hidden rounded-xl bg-linear-to-br from-slate-800/90 via-slate-900/95 to-slate-950 backdrop-blur-xl border border-white/10 p-4 sm:p-5">
            <div class="absolute inset-0 bg-linear-to-br from-indigo-600/15 to-transparent"></div>
            <div class="absolute -top-8 -right-8 w-20 h-20 bg-indigo-500/20 rounded-full blur-2xl"></div>
            <div class="relative">
              <div class="flex items-center justify-between mb-2">
                <p class="text-[10px] sm:text-xs font-medium text-slate-400 uppercase tracking-wider">ARPU</p>
                <span class="text-[10px] text-indigo-400 font-medium px-2 py-0.5 rounded-full bg-indigo-500/10">Per User</span>
              </div>
              <p class="text-xl sm:text-2xl lg:text-3xl font-bold text-white"><%= number_to_currency(@arpu) %></p>
              <p class="text-xs text-slate-500 mt-1">Avg Revenue Per User</p>
            </div>
          </div>
        </div>

        <%# Net Growth %>
        <div class="relative group">
          <div class="absolute -inset-0.5 bg-linear-to-br from-teal-500/30 to-emerald-500/20 rounded-2xl blur-lg opacity-0 group-hover:opacity-100 transition-all duration-300"></div>
          <div class="relative overflow-hidden rounded-xl bg-linear-to-br from-slate-800/90 via-slate-900/95 to-slate-950 backdrop-blur-xl border border-white/10 p-4 sm:p-5">
            <div class="absolute inset-0 bg-linear-to-br from-teal-600/15 to-transparent"></div>
            <div class="absolute -top-8 -right-8 w-20 h-20 bg-teal-500/20 rounded-full blur-2xl"></div>
            <div class="relative">
              <div class="flex items-center justify-between mb-2">
                <p class="text-[10px] sm:text-xs font-medium text-slate-400 uppercase tracking-wider">Net</p>
                <span class="text-[10px] <%= @net_customer_growth >= 0 ? 'text-emerald-400 bg-emerald-500/10' : 'text-red-400 bg-red-500/10' %> font-medium px-2 py-0.5 rounded-full">
                  <%= @net_customer_growth >= 0 ? '+' : '' %><%= @net_customer_growth %>
                </span>
              </div>
              <p class="text-xl sm:text-2xl lg:text-3xl font-bold <%= @net_customer_growth >= 0 ? 'text-emerald-400' : 'text-red-400' %>"><%= @net_customer_growth >= 0 ? '+' : '' %><%= @net_customer_growth %></p>
              <p class="text-xs text-slate-500 mt-1">New - Churned (30d)</p>
            </div>
          </div>
        </div>

        <%# By Status %>
        <div class="relative group">
          <div class="absolute -inset-0.5 bg-linear-to-br from-slate-500/30 to-slate-600/20 rounded-2xl blur-lg opacity-0 group-hover:opacity-100 transition-all duration-300"></div>
          <div class="relative overflow-hidden rounded-xl bg-linear-to-br from-slate-800/90 via-slate-900/95 to-slate-950 backdrop-blur-xl border border-white/10 p-4 sm:p-5">
            <div class="absolute inset-0 bg-linear-to-br from-slate-600/15 to-transparent"></div>
            <div class="relative">
              <p class="text-[10px] sm:text-xs font-medium text-slate-400 uppercase tracking-wider mb-3">By Status</p>
              <div class="space-y-2 text-sm">
                <% status_colors = { 'active' => 'emerald', 'trialing' => 'blue', 'past_due' => 'amber', 'canceled' => 'slate' } %>
                <% @customers_by_status.each do |status, count| %>
                  <% color = status_colors[status.to_s] || 'slate' %>
                  <div class="flex justify-between items-center">
                    <div class="flex items-center gap-2">
                      <div class="w-2 h-2 rounded-full bg-<%= color %>-400"></div>
                      <span class="text-slate-300 capitalize text-xs"><%= status %></span>
                    </div>
                    <span class="text-white font-medium text-sm"><%= count %></span>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <%# Payment Health Section %>
    <section class="space-y-4">
      <div class="flex items-center gap-3">
        <div class="w-10 h-10 rounded-xl bg-linear-to-br from-amber-500/20 to-orange-500/20 flex items-center justify-center">
          <svg class="w-5 h-5 text-amber-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
          </svg>
        </div>
        <h2 class="text-lg font-semibold text-white">Payment Health</h2>
      </div>

      <div class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-5 gap-3 sm:gap-4">
        <%# Past Due %>
        <div class="relative group">
