            <div class="relative">
              <div class="flex items-center justify-between mb-2">
                <p class="text-[10px] sm:text-xs font-medium text-slate-400 uppercase tracking-wider">Past Due</p>
                <span class="text-[10px] <%= @past_due_accounts_count > 0 ? 'text-red-400 bg-red-500/10' : 'text-emerald-400 bg-emerald-500/10' %> font-medium px-2 py-0.5 rounded-full">
