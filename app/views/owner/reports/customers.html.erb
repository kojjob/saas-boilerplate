<% content_for :page_title, "Customers Report" %>

<div class="space-y-8">
  <%# Hero Header %>
  <div class="relative overflow-hidden bg-gradient-to-br from-indigo-600 via-purple-600 to-purple-700 rounded-2xl shadow-xl">
    <div class="absolute inset-0 bg-grid-white/10 [mask-image:linear-gradient(0deg,transparent,rgba(255,255,255,0.5))]"></div>
    <div class="absolute -top-24 -right-24 w-96 h-96 bg-white/10 rounded-full blur-3xl"></div>
    <div class="absolute -bottom-24 -left-24 w-96 h-96 bg-indigo-500/20 rounded-full blur-3xl"></div>

    <div class="relative px-6 py-8 sm:px-8 sm:py-10">
      <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4 mb-8">
        <div class="flex items-center gap-4">
          <%= link_to owner_reports_path, class: "p-2.5 bg-white/10 hover:bg-white/20 text-white rounded-xl transition-all duration-200 backdrop-blur-sm" do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.5 19.5L3 12m0 0l7.5-7.5M3 12h18" />
            </svg>
          <% end %>
          <div>
            <h1 class="text-2xl sm:text-3xl font-bold text-white">Customer Analytics</h1>
            <p class="text-indigo-100 mt-1">Comprehensive view of your customer base</p>
          </div>
        </div>
        <div class="flex items-center gap-2 text-sm text-indigo-100">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <span>Last 30 days</span>
        </div>
      </div>

      <%# Hero Stats %>
      <div class="grid grid-cols-2 lg:grid-cols-4 gap-4 sm:gap-6">
        <div class="bg-white/10 backdrop-blur-sm rounded-xl p-4 sm:p-5 border border-white/10">
          <div class="flex items-center gap-3 mb-3">
            <div class="w-10 h-10 rounded-lg bg-white/20 flex items-center justify-center">
              <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
              </svg>
            </div>
            <span class="text-xs font-medium text-indigo-100 uppercase tracking-wider">Total</span>
          </div>
          <p class="text-3xl sm:text-4xl font-bold text-white"><%= number_with_delimiter(@total_customers) %></p>
          <p class="text-sm text-indigo-200 mt-1">All customers</p>
        </div>

        <div class="bg-white/10 backdrop-blur-sm rounded-xl p-4 sm:p-5 border border-white/10">
          <div class="flex items-center gap-3 mb-3">
            <div class="w-10 h-10 rounded-lg bg-emerald-500/30 flex items-center justify-center">
              <svg class="w-5 h-5 text-emerald-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <span class="text-xs font-medium text-indigo-100 uppercase tracking-wider">Active</span>
          </div>
          <p class="text-3xl sm:text-4xl font-bold text-white"><%= number_with_delimiter(@active_customers) %></p>
          <p class="text-sm text-indigo-200 mt-1">Paying customers</p>
        </div>

        <div class="bg-white/10 backdrop-blur-sm rounded-xl p-4 sm:p-5 border border-white/10">
          <div class="flex items-center gap-3 mb-3">
            <div class="w-10 h-10 rounded-lg bg-blue-500/30 flex items-center justify-center">
              <svg class="w-5 h-5 text-blue-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <span class="text-xs font-medium text-indigo-100 uppercase tracking-wider">Trial</span>
          </div>
          <p class="text-3xl sm:text-4xl font-bold text-white"><%= number_with_delimiter(@trialing_customers) %></p>
          <p class="text-sm text-indigo-200 mt-1"><%= @trials_expiring_soon %> expiring soon</p>
        </div>

        <div class="bg-white/10 backdrop-blur-sm rounded-xl p-4 sm:p-5 border border-white/10">
          <div class="flex items-center gap-3 mb-3">
            <div class="w-10 h-10 rounded-lg <%= @net_customer_growth >= 0 ? 'bg-emerald-500/30' : 'bg-red-500/30' %> flex items-center justify-center">
              <svg class="w-5 h-5 <%= @net_customer_growth >= 0 ? 'text-emerald-300' : 'text-red-300' %>" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="<%= @net_customer_growth >= 0 ? 'M13 7h8m0 0v8m0-8l-8 8-4-4-6 6' : 'M13 17h8m0 0v-8m0 8l-8-8-4 4-6-6' %>" />
              </svg>
            </div>
            <span class="text-xs font-medium text-indigo-100 uppercase tracking-wider">Growth</span>
          </div>
          <p class="text-3xl sm:text-4xl font-bold text-white"><%= @net_customer_growth >= 0 ? '+' : '' %><%= @net_customer_growth %></p>
          <p class="text-sm text-indigo-200 mt-1">Net this month</p>
        </div>
      </div>
    </div>
  </div>

  <%# Key Metrics Cards %>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-5">
    <%# Retention Rate %>
    <div class="group bg-white rounded-2xl shadow-sm border border-slate-200/80 p-6 hover:shadow-lg hover:border-purple-200 transition-all duration-300">
      <div class="flex items-start justify-between mb-4">
        <div class="w-12 h-12 rounded-xl bg-gradient-to-br from-emerald-500 to-teal-600 flex items-center justify-center shadow-lg shadow-emerald-500/20">
          <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
          </svg>
        </div>
        <span class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-semibold <%= @retention_rate >= 90 ? 'bg-emerald-100 text-emerald-700' : @retention_rate >= 70 ? 'bg-amber-100 text-amber-700' : 'bg-red-100 text-red-700' %>">
          <%= @retention_rate >= 90 ? 'Excellent' : @retention_rate >= 70 ? 'Good' : 'Needs Work' %>
        </span>
      </div>
      <p class="text-sm font-medium text-slate-500 mb-1">Retention Rate</p>
      <p class="text-3xl font-bold text-slate-900"><%= number_to_percentage(@retention_rate, precision: 1) %></p>
      <p class="text-xs text-slate-400 mt-2">30-day retention</p>
    </div>

    <%# Churn Rate %>
    <div class="group bg-white rounded-2xl shadow-sm border border-slate-200/80 p-6 hover:shadow-lg hover:border-purple-200 transition-all duration-300">
      <div class="flex items-start justify-between mb-4">
        <div class="w-12 h-12 rounded-xl bg-gradient-to-br from-red-500 to-rose-600 flex items-center justify-center shadow-lg shadow-red-500/20">
          <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 17h8m0 0v-8m0 8l-8-8-4 4-6-6" />
          </svg>
        </div>
        <span class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-semibold <%= @churn_rate <= 5 ? 'bg-emerald-100 text-emerald-700' : @churn_rate <= 10 ? 'bg-amber-100 text-amber-700' : 'bg-red-100 text-red-700' %>">
          <%= @churn_rate <= 5 ? 'Low' : @churn_rate <= 10 ? 'Moderate' : 'High' %>
        </span>
      </div>
      <p class="text-sm font-medium text-slate-500 mb-1">Churn Rate</p>
      <p class="text-3xl font-bold text-slate-900"><%= number_to_percentage(@churn_rate, precision: 1) %></p>
      <div class="flex items-center gap-2 mt-2">
        <span class="text-xs text-slate-400"><%= @churned_customers %> churned</span>
        <span class="text-slate-300">Â·</span>
        <span class="text-xs text-emerald-600">+<%= @new_customers %> new</span>
      </div>
    </div>

    <%# Trial Conversion %>
    <div class="group bg-white rounded-2xl shadow-sm border border-slate-200/80 p-6 hover:shadow-lg hover:border-purple-200 transition-all duration-300">
      <div class="flex items-start justify-between mb-4">
        <div class="w-12 h-12 rounded-xl bg-gradient-to-br from-blue-500 to-indigo-600 flex items-center justify-center shadow-lg shadow-blue-500/20">
          <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z" />
          </svg>
        </div>
        <span class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-semibold <%= @trial_conversion_rate >= 25 ? 'bg-emerald-100 text-emerald-700' : @trial_conversion_rate >= 10 ? 'bg-amber-100 text-amber-700' : 'bg-red-100 text-red-700' %>">
          <%= @trial_conversion_rate >= 25 ? 'Strong' : @trial_conversion_rate >= 10 ? 'Average' : 'Low' %>
        </span>
      </div>
      <p class="text-sm font-medium text-slate-500 mb-1">Trial Conversion</p>
      <p class="text-3xl font-bold text-slate-900"><%= number_to_percentage(@trial_conversion_rate, precision: 1) %></p>
      <p class="text-xs text-slate-400 mt-2">Trial to paid rate</p>
    </div>

    <%# Avg Customer Age %>
    <div class="group bg-white rounded-2xl shadow-sm border border-slate-200/80 p-6 hover:shadow-lg hover:border-purple-200 transition-all duration-300">
      <div class="flex items-start justify-between mb-4">
        <div class="w-12 h-12 rounded-xl bg-gradient-to-br from-purple-500 to-violet-600 flex items-center justify-center shadow-lg shadow-purple-500/20">
          <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
          </svg>
        </div>
      </div>
      <p class="text-sm font-medium text-slate-500 mb-1">Avg Customer Age</p>
      <p class="text-3xl font-bold text-slate-900"><%= @average_customer_age %> <span class="text-lg font-normal text-slate-400">days</span></p>
      <p class="text-xs text-slate-400 mt-2">Average tenure</p>
    </div>
  </div>

  <%# Revenue Metrics %>
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-5">
    <%# LTV Card %>
    <div class="bg-gradient-to-br from-slate-800 to-slate-900 rounded-2xl shadow-xl p-6 text-white">
      <div class="flex items-center gap-3 mb-6">
        <div class="w-12 h-12 rounded-xl bg-white/10 flex items-center justify-center">
          <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
        <div>
          <p class="text-slate-400 text-sm">Customer Lifetime Value</p>
          <p class="text-3xl font-bold"><%= number_to_currency(@ltv) %></p>
        </div>
      </div>
      <div class="h-px bg-white/10 mb-4"></div>
      <p class="text-sm text-slate-400">Expected revenue per customer over their entire relationship with your business.</p>
    </div>

    <%# ARPU Card %>
    <div class="bg-gradient-to-br from-indigo-600 to-purple-700 rounded-2xl shadow-xl p-6 text-white">
      <div class="flex items-center gap-3 mb-6">
        <div class="w-12 h-12 rounded-xl bg-white/10 flex items-center justify-center">
          <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
          </svg>
        </div>
        <div>
          <p class="text-indigo-200 text-sm">Avg Revenue Per User</p>
          <p class="text-3xl font-bold"><%= number_to_currency(@arpu) %></p>
        </div>
      </div>
      <div class="h-px bg-white/10 mb-4"></div>
      <p class="text-sm text-indigo-200">Monthly revenue generated per active customer.</p>
    </div>

    <%# Customer Health Insight %>
    <div class="bg-white rounded-2xl shadow-sm border border-slate-200/80 p-6">
      <div class="flex items-center gap-3 mb-4">
        <div class="w-12 h-12 rounded-xl bg-gradient-to-br from-amber-500 to-orange-600 flex items-center justify-center shadow-lg shadow-amber-500/20">
          <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
          </svg>
        </div>
        <div>
          <p class="text-sm font-medium text-slate-500">Quick Insight</p>
          <p class="text-lg font-bold text-slate-900">Customer Health</p>
        </div>
      </div>
      <div class="space-y-3">
        <div class="flex justify-between items-center">
          <span class="text-sm text-slate-600">Active Rate</span>
          <span class="font-semibold text-slate-900"><%= @total_customers > 0 ? number_to_percentage((@active_customers.to_f / @total_customers) * 100, precision: 1) : '0%' %></span>
        </div>
        <div class="flex justify-between items-center">
          <span class="text-sm text-slate-600">Trials Expiring</span>
          <span class="font-semibold <%= @trials_expiring_soon > 0 ? 'text-amber-600' : 'text-slate-900' %>"><%= @trials_expiring_soon %> in 7 days</span>
        </div>
      </div>
    </div>
  </div>

  <%# Distribution Tables %>
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
    <%# Customers by Status %>
    <div class="bg-white rounded-2xl shadow-sm border border-slate-200/80 overflow-hidden">
      <div class="px-6 py-5 border-b border-slate-100 bg-slate-50/50">
        <div class="flex items-center gap-3">
          <div class="w-10 h-10 rounded-lg bg-gradient-to-br from-indigo-500 to-purple-600 flex items-center justify-center">
            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
            </svg>
          </div>
          <div>
            <h2 class="text-lg font-semibold text-slate-900">Customers by Status</h2>
            <p class="text-sm text-slate-500">Distribution across subscription states</p>
          </div>
        </div>
      </div>
      <div class="divide-y divide-slate-100">
        <% if @customers_by_status.any? %>
          <% @customers_by_status.each do |status, count| %>
            <%
              percentage = @total_customers > 0 ? (count.to_f / @total_customers) * 100 : 0
              status_config = case status.to_s
                when "active" then { bg: "bg-emerald-500", text: "text-emerald-700", light: "bg-emerald-100", icon: "M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" }
                when "trialing" then { bg: "bg-blue-500", text: "text-blue-700", light: "bg-blue-100", icon: "M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" }
                when "past_due" then { bg: "bg-amber-500", text: "text-amber-700", light: "bg-amber-100", icon: "M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" }
                when "canceled" then { bg: "bg-slate-400", text: "text-slate-600", light: "bg-slate-100", icon: "M6 18L18 6M6 6l12 12" }
                else { bg: "bg-slate-400", text: "text-slate-600", light: "bg-slate-100", icon: "M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" }
              end
            %>
            <div class="px-6 py-4 hover:bg-slate-50 transition-colors">
              <div class="flex items-center justify-between mb-2">
                <div class="flex items-center gap-3">
                  <div class="w-8 h-8 rounded-lg <%= status_config[:light] %> flex items-center justify-center">
                    <svg class="w-4 h-4 <%= status_config[:text] %>" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="<%= status_config[:icon] %>" />
                    </svg>
                  </div>
                  <span class="font-medium text-slate-900"><%= status.to_s.titleize %></span>
                </div>
                <div class="text-right">
                  <span class="text-lg font-bold text-slate-900"><%= number_with_delimiter(count) %></span>
                  <span class="text-sm text-slate-400 ml-2">(<%= number_to_percentage(percentage, precision: 1) %>)</span>
                </div>
              </div>
              <div class="h-2 bg-slate-100 rounded-full overflow-hidden">
                <div class="h-full <%= status_config[:bg] %> rounded-full transition-all duration-500" style="width: <%= percentage %>%"></div>
              </div>
            </div>
          <% end %>
        <% else %>
          <div class="px-6 py-12 text-center">
            <div class="w-16 h-16 mx-auto mb-4 rounded-full bg-slate-100 flex items-center justify-center">
              <svg class="w-8 h-8 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
            </div>
            <p class="text-slate-500 font-medium">No customers yet</p>
            <p class="text-sm text-slate-400 mt-1">Customers will appear here once they sign up</p>
          </div>
        <% end %>
      </div>
    </div>

    <%# Customers by Plan %>
    <div class="bg-white rounded-2xl shadow-sm border border-slate-200/80 overflow-hidden">
      <div class="px-6 py-5 border-b border-slate-100 bg-slate-50/50">
        <div class="flex items-center gap-3">
          <div class="w-10 h-10 rounded-lg bg-gradient-to-br from-purple-500 to-violet-600 flex items-center justify-center">
            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
            </svg>
          </div>
          <div>
            <h2 class="text-lg font-semibold text-slate-900">Customers by Plan</h2>
            <p class="text-sm text-slate-500">Distribution across pricing tiers</p>
          </div>
        </div>
      </div>
      <div class="divide-y divide-slate-100">
        <% if @customers_by_plan.any? %>
          <% plan_colors = ["from-purple-500 to-violet-600", "from-blue-500 to-indigo-600", "from-emerald-500 to-teal-600", "from-amber-500 to-orange-600", "from-rose-500 to-pink-600"] %>
          <% @customers_by_plan.each_with_index do |(plan_name, count), index| %>
            <% percentage = @total_customers > 0 ? (count.to_f / @total_customers) * 100 : 0 %>
            <div class="px-6 py-4 hover:bg-slate-50 transition-colors">
              <div class="flex items-center justify-between mb-2">
                <div class="flex items-center gap-3">
                  <div class="w-8 h-8 rounded-lg bg-gradient-to-br <%= plan_colors[index % plan_colors.length] %> flex items-center justify-center">
                    <span class="text-xs font-bold text-white"><%= plan_name.first.upcase %></span>
                  </div>
                  <span class="font-medium text-slate-900"><%= plan_name %></span>
                </div>
                <div class="text-right">
                  <span class="text-lg font-bold text-slate-900"><%= number_with_delimiter(count) %></span>
                  <span class="text-sm text-slate-400 ml-2">(<%= number_to_percentage(percentage, precision: 1) %>)</span>
                </div>
              </div>
              <div class="h-2 bg-slate-100 rounded-full overflow-hidden">
                <div class="h-full bg-gradient-to-r <%= plan_colors[index % plan_colors.length] %> rounded-full transition-all duration-500" style="width: <%= percentage %>%"></div>
              </div>
            </div>
          <% end %>
        <% else %>
          <div class="px-6 py-12 text-center">
            <div class="w-16 h-16 mx-auto mb-4 rounded-full bg-slate-100 flex items-center justify-center">
              <svg class="w-8 h-8 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
              </svg>
            </div>
            <p class="text-slate-500 font-medium">No plan data</p>
            <p class="text-sm text-slate-400 mt-1">Plan distribution will appear here</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
