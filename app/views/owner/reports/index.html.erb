<% content_for :page_title, "Reports" %>

<div class="min-h-screen -mx-4 sm:-mx-6 lg:-mx-8 -mt-6 px-4 sm:px-6 lg:px-8 py-6 sm:py-8">
  <%# Deep ambient glow effects - credit card inspired %>
  <div class="fixed inset-0 overflow-hidden pointer-events-none">
    <%# Primary magenta/purple glow - top left %>
    <div class="absolute top-0 left-1/4 w-[500px] h-[500px] bg-fuchsia-600/30 rounded-full blur-[120px] mix-blend-screen"></div>
    <%# Secondary purple glow - center %>
    <div class="absolute top-1/3 left-1/2 -translate-x-1/2 w-[600px] h-[400px] bg-yellow-700/25 rounded-full blur-[100px] mix-blend-screen"></div>
    <%# Accent indigo glow - bottom right %>
    <div class="absolute bottom-0 right-0 w-[400px] h-[400px] bg-indigo-600/20 rounded-full blur-[100px] mix-blend-screen"></div>
    <%# Subtle pink accent %>
    <div class="absolute top-1/2 right-1/4 w-[300px] h-[300px] bg-pink-500/15 rounded-full blur-[80px] mix-blend-screen"></div>
  </div>

  <div class="relative max-w-6xl mx-auto space-y-8 sm:space-y-10">
    <%# Header %>
    <div class="text-center pt-6 sm:pt-10 pb-2 sm:pb-4">
      <%# Status indicator badge %>
      <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-white/[0.03] border border-white/[0.08] backdrop-blur-xl mb-6 shadow-lg shadow-purple-500/5">
        <div class="relative">
          <div class="w-2 h-2 rounded-full bg-emerald-400"></div>
          <div class="absolute inset-0 w-2 h-2 rounded-full bg-emerald-400 animate-ping"></div>
        </div>
        <span class="text-sm text-slate-300 font-medium">Live Analytics</span>
      </div>
      <h1 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-white mb-3 tracking-tight">Platform Reports</h1>
      <p class="text-slate-400 max-w-lg mx-auto text-sm sm:text-base">Real-time insights into your business metrics and performance</p>
    </div>

    <%# Report Cards Grid %>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-5 sm:gap-6 lg:gap-8">

      <%# MRR Report Card - Emerald/Teal theme %>
      <%= link_to mrr_owner_reports_path, class: "group relative block min-h-[220px]" do %>
        <%# Outer glow on hover %>
        <div class="absolute -inset-1 bg-linear-to-br from-emerald-500/40 via-teal-500/30 to-cyan-500/20 rounded-3xl blur-xl opacity-0 group-hover:opacity-100 transition-all duration-500"></div>

        <%# Card container with credit card styling %>
        <div class="relative h-full overflow-hidden rounded-2xl bg-linear-to-br from-slate-800/90 via-slate-900/95 to-slate-950 backdrop-blur-xl border border-white/10 group-hover:border-emerald-500/40 transition-all duration-300 group-hover:-translate-y-1 group-hover:shadow-2xl group-hover:shadow-emerald-500/20">
          <%# Gradient overlay - credit card inspired %>
          <div class="absolute inset-0 bg-linear-to-br from-emerald-600/30 via-teal-600/20 to-transparent opacity-80"></div>
          <%# Shine effect %>
          <div class="absolute inset-0 bg-linear-to-tr from-transparent via-white/5 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-700"></div>
          <%# Glow orb - top right %>
          <div class="absolute -top-16 -right-16 w-40 h-40 bg-emerald-500/40 rounded-full blur-3xl group-hover:bg-emerald-400/50 transition-all duration-500"></div>
          <%# Secondary glow %>
          <div class="absolute bottom-0 left-0 w-32 h-32 bg-teal-600/20 rounded-full blur-2xl"></div>

          <div class="relative p-5 sm:p-6 h-full flex flex-col">
            <%# Header with chip icon and arrow %>
            <div class="flex items-start justify-between mb-4 sm:mb-6">
              <%# Chip-style icon %>
              <div class="relative">
                <div class="w-12 h-12 sm:w-14 sm:h-14 rounded-xl bg-linear-to-br from-emerald-400 via-teal-400 to-cyan-500 p-[1px] shadow-lg shadow-emerald-500/30">
                  <div class="w-full h-full rounded-xl bg-linear-to-br from-emerald-500/80 to-teal-600/80 backdrop-blur flex items-center justify-center">
                    <svg class="w-6 h-6 sm:w-7 sm:h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                  </div>
                </div>
              </div>
              <%# Contactless/wifi icon like credit card %>
              <div class="flex items-center gap-2">
                <svg class="w-6 h-6 text-emerald-400/60 group-hover:text-emerald-300 transition-colors" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-1 17.93c-3.94-.49-7-3.85-7-7.93s3.05-7.44 7-7.93v15.86zm2-15.86c1.03.13 2 .45 2.87.93H13v-.93zM13 7h5.24c.25.31.48.65.68 1H13V7zm0 3h6.74c.08.33.15.66.19 1H13v-1zm0 9.93V19h2.87c-.87.48-1.84.8-2.87.93zM18.24 17H13v-1h5.92c-.2.35-.43.69-.68 1zm1.5-3H13v-1h6.93c-.04.34-.11.67-.19 1z"/>
                </svg>
                <svg class="w-5 h-5 text-slate-500 group-hover:text-emerald-400 group-hover:translate-x-1 transition-all duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                </svg>
              </div>
            </div>

            <%# Card content %>
            <div class="flex-1">
              <h3 class="text-lg sm:text-xl font-semibold text-white mb-1">MRR Report</h3>
              <p class="text-sm text-slate-400">Monthly recurring revenue</p>
            </div>

            <%# Bottom section with value %>
            <div class="pt-4 mt-auto border-t border-white/10">
              <div class="flex items-end justify-between">
                <div>
                  <p class="text-xs text-slate-500 uppercase tracking-wider mb-1">Current MRR</p>
                  <p class="text-2xl sm:text-3xl font-bold text-white tracking-tight"><%= number_to_currency(@mrr_calculator.mrr) %></p>
                </div>
                <div class="text-emerald-400 text-xs font-medium flex items-center gap-1">
                  <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M12 7a1 1 0 110-2h5a1 1 0 011 1v5a1 1 0 11-2 0V8.414l-4.293 4.293a1 1 0 01-1.414 0L8 10.414l-4.293 4.293a1 1 0 01-1.414-1.414l5-5a1 1 0 011.414 0L11 10.586 14.586 7H12z" clip-rule="evenodd" />
                  </svg>
                  <span>Revenue</span>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>

      <%# Customers Report Card - Purple/Fuchsia/Magenta theme (matches credit card) %>
      <%= link_to customers_owner_reports_path, class: "group relative block min-h-[220px]" do %>
        <%# Outer glow on hover %>
        <div class="absolute -inset-1 bg-linear-to-br from-fuchsia-500/40 via-purple-500/30 to-pink-500/20 rounded-3xl blur-xl opacity-0 group-hover:opacity-100 transition-all duration-500"></div>

        <%# Card container with credit card styling %>
        <div class="relative h-full overflow-hidden rounded-2xl bg-linear-to-br from-slate-800/90 via-slate-900/95 to-slate-950 backdrop-blur-xl border border-white/10 group-hover:border-fuchsia-500/40 transition-all duration-300 group-hover:-translate-y-1 group-hover:shadow-2xl group-hover:shadow-fuchsia-500/20">
          <%# Gradient overlay - credit card magenta/purple inspired %>
          <div class="absolute inset-0 bg-linear-to-br from-fuchsia-600/35 via-purple-600/25 to-pink-600/15 opacity-80"></div>
          <%# Shine effect %>
          <div class="absolute inset-0 bg-linear-to-tr from-transparent via-white/5 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-700"></div>
          <%# Glow orb - top right %>
          <div class="absolute -top-16 -right-16 w-40 h-40 bg-fuchsia-500/40 rounded-full blur-3xl group-hover:bg-fuchsia-400/50 transition-all duration-500"></div>
          <%# Secondary glow - bottom left %>
          <div class="absolute bottom-0 left-0 w-32 h-32 bg-purple-600/25 rounded-full blur-2xl"></div>
          <%# Accent pink glow %>
          <div class="absolute top-1/2 left-1/4 w-24 h-24 bg-pink-500/20 rounded-full blur-2xl"></div>

          <div class="relative p-5 sm:p-6 h-full flex flex-col">
            <%# Header with chip icon and arrow %>
            <div class="flex items-start justify-between mb-4 sm:mb-6">
              <%# Chip-style icon %>
              <div class="relative">
                <div class="w-12 h-12 sm:w-14 sm:h-14 rounded-xl bg-linear-to-br from-fuchsia-400 via-purple-400 to-pink-500 p-[1px] shadow-lg shadow-fuchsia-500/30">
                  <div class="w-full h-full rounded-xl bg-linear-to-br from-fuchsia-500/80 to-purple-600/80 backdrop-blur flex items-center justify-center">
                    <svg class="w-6 h-6 sm:w-7 sm:h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
                    </svg>
                  </div>
                </div>
              </div>
              <%# Contactless icon %>
              <div class="flex items-center gap-2">
                <svg class="w-6 h-6 text-fuchsia-400/60 group-hover:text-fuchsia-300 transition-colors" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-1 17.93c-3.94-.49-7-3.85-7-7.93s3.05-7.44 7-7.93v15.86zm2-15.86c1.03.13 2 .45 2.87.93H13v-.93zM13 7h5.24c.25.31.48.65.68 1H13V7zm0 3h6.74c.08.33.15.66.19 1H13v-1zm0 9.93V19h2.87c-.87.48-1.84.8-2.87.93zM18.24 17H13v-1h5.92c-.2.35-.43.69-.68 1zm1.5-3H13v-1h6.93c-.04.34-.11.67-.19 1z"/>
                </svg>
                <svg class="w-5 h-5 text-slate-500 group-hover:text-fuchsia-400 group-hover:translate-x-1 transition-all duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                </svg>
              </div>
            </div>

            <%# Card content %>
            <div class="flex-1">
              <h3 class="text-lg sm:text-xl font-semibold text-white mb-1">Customers Report</h3>
              <p class="text-sm text-slate-400">Analytics and churn metrics</p>
            </div>

            <%# Bottom section with value %>
            <div class="pt-4 mt-auto border-t border-white/10">
              <div class="flex items-end justify-between">
                <div>
                  <p class="text-xs text-slate-500 uppercase tracking-wider mb-1">Total Customers</p>
                  <p class="text-2xl sm:text-3xl font-bold text-white tracking-tight"><%= number_with_delimiter(@customer_analytics.total_customers) %></p>
                </div>
                <div class="text-fuchsia-400 text-xs font-medium flex items-center gap-1">
                  <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M9 6a3 3 0 11-6 0 3 3 0 016 0zM17 6a3 3 0 11-6 0 3 3 0 016 0zM12.93 17c.046-.327.07-.66.07-1a6.97 6.97 0 00-1.5-4.33A5 5 0 0119 16v1h-6.07zM6 11a5 5 0 015 5v1H1v-1a5 5 0 015-5z" />
                  </svg>
                  <span>Users</span>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>

      <%# Payments Report Card - Amber/Orange/Red theme %>
      <%= link_to payments_owner_reports_path, class: "group relative block min-h-[220px]" do %>
        <%# Outer glow on hover %>
        <div class="absolute -inset-1 bg-linear-to-br from-amber-500/40 via-orange-500/30 to-red-500/20 rounded-3xl blur-xl opacity-0 group-hover:opacity-100 transition-all duration-500"></div>

        <%# Card container with credit card styling %>
        <div class="relative h-full overflow-hidden rounded-2xl bg-linear-to-br from-slate-800/90 via-slate-900/95 to-slate-950 backdrop-blur-xl border border-white/10 group-hover:border-amber-500/40 transition-all duration-300 group-hover:-translate-y-1 group-hover:shadow-2xl group-hover:shadow-amber-500/20">
          <%# Gradient overlay - warm tones %>
          <div class="absolute inset-0 bg-linear-to-br from-amber-600/30 via-orange-600/20 to-red-600/10 opacity-80"></div>
          <%# Shine effect %>
          <div class="absolute inset-0 bg-linear-to-tr from-transparent via-white/5 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-700"></div>
          <%# Glow orb - top right %>
          <div class="absolute -top-16 -right-16 w-40 h-40 bg-amber-500/40 rounded-full blur-3xl group-hover:bg-orange-400/50 transition-all duration-500"></div>
          <%# Secondary glow %>
          <div class="absolute bottom-0 left-0 w-32 h-32 bg-orange-600/20 rounded-full blur-2xl"></div>

          <div class="relative p-5 sm:p-6 h-full flex flex-col">
            <%# Header with chip icon and arrow %>
            <div class="flex items-start justify-between mb-4 sm:mb-6">
              <%# Chip-style icon %>
              <div class="relative">
                <div class="w-12 h-12 sm:w-14 sm:h-14 rounded-xl bg-linear-to-br from-amber-400 via-orange-400 to-red-500 p-px shadow-lg shadow-amber-500/30">
                  <div class="w-full h-full rounded-xl bg-linear-to-br from-amber-500/80 to-orange-600/80 backdrop-blur flex items-center justify-center">
                    <svg class="w-6 h-6 sm:w-7 sm:h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z" />
                    </svg>
                  </div>
                </div>
              </div>
              <%# Mastercard-style circles %>
              <div class="flex items-center gap-2">
                <div class="flex -space-x-2">
                  <div class="w-5 h-5 rounded-full bg-red-500 opacity-80"></div>
                  <div class="w-5 h-5 rounded-full bg-amber-400 opacity-80"></div>
                </div>
                <svg class="w-5 h-5 text-slate-500 group-hover:text-amber-400 group-hover:translate-x-1 transition-all duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                </svg>
              </div>
            </div>

            <%# Card content %>
            <div class="flex-1">
              <h3 class="text-lg sm:text-xl font-semibold text-white mb-1">Payments Report</h3>
              <p class="text-sm text-slate-400">Payment health & recovery</p>
            </div>

            <%# Bottom section with value %>
            <div class="pt-4 mt-auto border-t border-white/10">
              <div class="flex items-end justify-between">
                <div>
                  <p class="text-xs text-slate-500 uppercase tracking-wider mb-1">Past Due</p>
                  <p class="text-2xl sm:text-3xl font-bold <%= @payment_health.past_due_accounts_count > 0 ? 'text-amber-400' : 'text-white' %> tracking-tight"><%= @payment_health.past_due_accounts_count %></p>
                </div>
                <div class="text-amber-400 text-xs font-medium flex items-center gap-1">
                  <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M4 4a2 2 0 00-2 2v4a2 2 0 002 2V6h10a2 2 0 00-2-2H4zm2 6a2 2 0 012-2h8a2 2 0 012 2v4a2 2 0 01-2 2H8a2 2 0 01-2-2v-4zm6 4a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd" />
                  </svg>
                  <span>Accounts</span>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>

    </div>

    <%# Quick Stats Bar - Premium glassmorphic style %>
    <div class="relative mt-10 sm:mt-12">
      <%# Subtle glow behind the bar %>
      <div class="absolute inset-0 bg-linear-to-r from-fuchsia-500/10 via-purple-500/5 to-amber-500/10 rounded-2xl blur-xl"></div>

      <div class="relative overflow-hidden rounded-2xl bg-linear-to-br from-white/8 via-white/4 to-white/2 backdrop-blur-xl border border-white/10 p-5 sm:p-6 lg:p-8">
        <%# Decorative gradient line at top %>
        <div class="absolute top-0 left-0 right-0 h-px bg-linear-to-r from-transparent via-fuchsia-500/50 to-transparent"></div>

        <div class="grid grid-cols-2 md:grid-cols-4 gap-4 sm:gap-6 lg:gap-8">
          <%# MRR Stat %>
          <div class="relative text-center p-3 sm:p-4 rounded-xl hover:bg-white/5 transition-colors">
            <div class="inline-flex items-center justify-center w-8 h-8 rounded-lg bg-emerald-500/20 mb-2">
              <svg class="w-4 h-4 text-emerald-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1" />
              </svg>
            </div>
            <p class="text-xl sm:text-2xl lg:text-3xl font-bold text-white"><%= number_to_currency(@mrr_calculator.mrr, precision: 0) %></p>
            <p class="text-[10px] sm:text-xs text-slate-500 mt-1 uppercase tracking-wider">Monthly Revenue</p>
          </div>

          <%# Total Customers Stat %>
          <div class="relative text-center p-3 sm:p-4 rounded-xl hover:bg-white/5 transition-colors">
            <div class="inline-flex items-center justify-center w-8 h-8 rounded-lg bg-fuchsia-500/20 mb-2">
              <svg class="w-4 h-4 text-fuchsia-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197" />
              </svg>
            </div>
            <p class="text-xl sm:text-2xl lg:text-3xl font-bold text-white"><%= number_with_delimiter(@customer_analytics.total_customers) %></p>
            <p class="text-[10px] sm:text-xs text-slate-500 mt-1 uppercase tracking-wider">Total Customers</p>
          </div>

          <%# Active Customers Stat %>
          <div class="relative text-center p-3 sm:p-4 rounded-xl hover:bg-white/5 transition-colors">
            <div class="inline-flex items-center justify-center w-8 h-8 rounded-lg bg-blue-500/20 mb-2">
              <svg class="w-4 h-4 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <p class="text-xl sm:text-2xl lg:text-3xl font-bold text-white"><%= number_with_delimiter(@customer_analytics.active_customers) %></p>
            <p class="text-[10px] sm:text-xs text-slate-500 mt-1 uppercase tracking-wider">Active</p>
          </div>

          <%# Past Due Stat %>
          <div class="relative text-center p-3 sm:p-4 rounded-xl hover:bg-white/5 transition-colors">
            <div class="inline-flex items-center justify-center w-8 h-8 rounded-lg <%= @payment_health.past_due_accounts_count > 0 ? 'bg-amber-500/20' : 'bg-slate-500/20' %> mb-2">
              <svg class="w-4 h-4 <%= @payment_health.past_due_accounts_count > 0 ? 'text-amber-400' : 'text-slate-400' %>" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
              </svg>
            </div>
            <p class="text-xl sm:text-2xl lg:text-3xl font-bold <%= @payment_health.past_due_accounts_count > 0 ? 'text-amber-400' : 'text-white' %>"><%= @payment_health.past_due_accounts_count %></p>
            <p class="text-[10px] sm:text-xs text-slate-500 mt-1 uppercase tracking-wider">Past Due</p>
          </div>
        </div>

        <%# Decorative gradient line at bottom %>
        <div class="absolute bottom-0 left-0 right-0 h-px bg-linear-to-r from-transparent via-purple-500/30 to-transparent"></div>
      </div>
    </div>

  </div>
</div>
