<% content_for :page_title, "MRR Report" %>

<div class="min-h-screen -mx-4 sm:-mx-6 lg:-mx-8 -mt-6 px-4 sm:px-6 lg:px-8 py-6 sm:py-8">
  <%# Ambient glow effects %>
  <div class="fixed inset-0 overflow-hidden pointer-events-none">
    <div class="absolute top-0 left-1/4 w-[500px] h-[500px] bg-emerald-600/20 rounded-full blur-[120px] mix-blend-screen"></div>
    <div class="absolute top-1/3 right-1/4 w-[400px] h-[400px] bg-teal-500/15 rounded-full blur-[100px] mix-blend-screen"></div>
    <div class="absolute bottom-0 left-1/2 w-[300px] h-[300px] bg-cyan-500/10 rounded-full blur-[80px] mix-blend-screen"></div>
  </div>

  <div class="relative max-w-6xl mx-auto space-y-6 sm:space-y-8">
    <%# Header %>
    <div class="flex flex-col sm:flex-row sm:items-center gap-4 pt-4 sm:pt-6">
      <%= link_to owner_reports_path, class: "inline-flex items-center gap-2 px-3 py-2 text-slate-400 hover:text-white hover:bg-white/10 rounded-xl transition-all duration-200 w-fit" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.5 19.5L3 12m0 0l7.5-7.5M3 12h18" />
        </svg>
        <span class="text-sm font-medium">Back to Reports</span>
      <% end %>
      <div class="flex items-center gap-4">
        <div class="w-12 h-12 sm:w-14 sm:h-14 rounded-xl bg-linear-to-br from-emerald-400 via-teal-400 to-cyan-500 p-px shadow-lg shadow-emerald-500/30">
          <div class="w-full h-full rounded-xl bg-linear-to-br from-emerald-500/80 to-teal-600/80 backdrop-blur flex items-center justify-center">
            <svg class="w-6 h-6 sm:w-7 sm:h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
        </div>
        <div>
          <h1 class="text-2xl sm:text-3xl font-bold text-white tracking-tight">MRR Report</h1>
          <p class="text-sm text-slate-400 mt-1">Monthly recurring revenue breakdown</p>
        </div>
      </div>
    </div>

    <%# Stats Cards %>
    <div class="grid grid-cols-2 lg:grid-cols-4 gap-3 sm:gap-4">
      <%# MRR Card %>
      <div class="relative group">
        <div class="absolute -inset-0.5 bg-linear-to-br from-emerald-500/30 to-teal-500/20 rounded-2xl blur-lg opacity-0 group-hover:opacity-100 transition-all duration-300"></div>
        <div class="relative overflow-hidden rounded-xl bg-linear-to-br from-slate-800/90 via-slate-900/95 to-slate-950 backdrop-blur-xl border border-white/10 p-4 sm:p-5">
          <div class="absolute inset-0 bg-linear-to-br from-emerald-600/20 to-transparent opacity-60"></div>
          <div class="absolute -top-8 -right-8 w-20 h-20 bg-emerald-500/30 rounded-full blur-2xl"></div>
          <div class="relative">
            <div class="flex items-center gap-2 mb-2">
              <div class="w-6 h-6 rounded-lg bg-emerald-500/20 flex items-center justify-center">
                <svg class="w-3.5 h-3.5 text-emerald-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8V7m0 1v8m0 0v1" />
                </svg>
              </div>
              <p class="text-[10px] sm:text-xs font-medium text-slate-400 uppercase tracking-wider">MRR</p>
            </div>
            <p class="text-xl sm:text-2xl lg:text-3xl font-bold text-white"><%= number_to_currency(@mrr) %></p>
          </div>
        </div>
      </div>

      <%# ARR Card %>
      <div class="relative group">
        <div class="absolute -inset-0.5 bg-linear-to-br from-teal-500/30 to-cyan-500/20 rounded-2xl blur-lg opacity-0 group-hover:opacity-100 transition-all duration-300"></div>
        <div class="relative overflow-hidden rounded-xl bg-linear-to-br from-slate-800/90 via-slate-900/95 to-slate-950 backdrop-blur-xl border border-white/10 p-4 sm:p-5">
          <div class="absolute inset-0 bg-linear-to-br from-teal-600/20 to-transparent opacity-60"></div>
          <div class="absolute -top-8 -right-8 w-20 h-20 bg-teal-500/30 rounded-full blur-2xl"></div>
          <div class="relative">
            <div class="flex items-center gap-2 mb-2">
              <div class="w-6 h-6 rounded-lg bg-teal-500/20 flex items-center justify-center">
                <svg class="w-3.5 h-3.5 text-teal-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
                </svg>
              </div>
              <p class="text-[10px] sm:text-xs font-medium text-slate-400 uppercase tracking-wider">ARR</p>
            </div>
            <p class="text-xl sm:text-2xl lg:text-3xl font-bold text-white"><%= number_to_currency(@arr) %></p>
          </div>
        </div>
      </div>

      <%# Growth Rate Card %>
      <div class="relative group">
        <div class="absolute -inset-0.5 bg-linear-to-br from-cyan-500/30 to-blue-500/20 rounded-2xl blur-lg opacity-0 group-hover:opacity-100 transition-all duration-300"></div>
        <div class="relative overflow-hidden rounded-xl bg-linear-to-br from-slate-800/90 via-slate-900/95 to-slate-950 backdrop-blur-xl border border-white/10 p-4 sm:p-5">
          <div class="absolute inset-0 bg-linear-to-br from-cyan-600/20 to-transparent opacity-60"></div>
          <div class="absolute -top-8 -right-8 w-20 h-20 bg-cyan-500/30 rounded-full blur-2xl"></div>
          <div class="relative">
            <div class="flex items-center gap-2 mb-2">
              <div class="w-6 h-6 rounded-lg <%= @mrr_growth_rate >= 0 ? 'bg-emerald-500/20' : 'bg-red-500/20' %> flex items-center justify-center">
                <svg class="w-3.5 h-3.5 <%= @mrr_growth_rate >= 0 ? 'text-emerald-400' : 'text-red-400' %>" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="<%= @mrr_growth_rate >= 0 ? 'M13 7h8m0 0v8m0-8l-8 8-4-4-6 6' : 'M13 17h8m0 0V9m0 8l-8-8-4 4-6-6' %>" />
                </svg>
              </div>
              <p class="text-[10px] sm:text-xs font-medium text-slate-400 uppercase tracking-wider">Growth</p>
            </div>
            <p class="text-xl sm:text-2xl lg:text-3xl font-bold <%= @mrr_growth_rate >= 0 ? 'text-emerald-400' : 'text-red-400' %>"><%= number_to_percentage(@mrr_growth_rate, precision: 1) %></p>
          </div>
        </div>
      </div>

      <%# Net Movement Card %>
      <div class="relative group">
        <div class="absolute -inset-0.5 bg-linear-to-br from-blue-500/30 to-indigo-500/20 rounded-2xl blur-lg opacity-0 group-hover:opacity-100 transition-all duration-300"></div>
        <div class="relative overflow-hidden rounded-xl bg-linear-to-br from-slate-800/90 via-slate-900/95 to-slate-950 backdrop-blur-xl border border-white/10 p-4 sm:p-5">
          <div class="absolute inset-0 bg-linear-to-br from-blue-600/20 to-transparent opacity-60"></div>
          <div class="absolute -top-8 -right-8 w-20 h-20 bg-blue-500/30 rounded-full blur-2xl"></div>
          <div class="relative">
            <div class="flex items-center gap-2 mb-2">
              <div class="w-6 h-6 rounded-lg <%= @net_mrr_movement >= 0 ? 'bg-emerald-500/20' : 'bg-red-500/20' %> flex items-center justify-center">
                <svg class="w-3.5 h-3.5 <%= @net_mrr_movement >= 0 ? 'text-emerald-400' : 'text-red-400' %>" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4" />
                </svg>
              </div>
              <p class="text-[10px] sm:text-xs font-medium text-slate-400 uppercase tracking-wider">Net</p>
            </div>
            <p class="text-xl sm:text-2xl lg:text-3xl font-bold <%= @net_mrr_movement >= 0 ? 'text-emerald-400' : 'text-red-400' %>"><%= number_to_currency(@net_mrr_movement) %></p>
          </div>
        </div>
      </div>
    </div>

    <%# MRR by Plan Table %>
    <div class="relative">
      <div class="absolute -inset-1 bg-linear-to-br from-emerald-500/20 via-teal-500/10 to-cyan-500/5 rounded-3xl blur-xl"></div>
      <div class="relative overflow-hidden rounded-2xl bg-linear-to-br from-slate-800/90 via-slate-900/95 to-slate-950 backdrop-blur-xl border border-white/10">
        <%# Table Header %>
        <div class="px-5 sm:px-6 py-4 border-b border-white/10 flex items-center justify-between">
          <div class="flex items-center gap-3">
            <div class="w-10 h-10 rounded-xl bg-linear-to-br from-emerald-500/20 to-teal-500/20 flex items-center justify-center">
              <svg class="w-5 h-5 text-emerald-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 17V7m0 10a2 2 0 01-2 2H5a2 2 0 01-2-2V7a2 2 0 012-2h2a2 2 0 012 2m0 10a2 2 0 002 2h2a2 2 0 002-2M9 7a2 2 0 012-2h2a2 2 0 012 2m0 10V7m0 10a2 2 0 002 2h2a2 2 0 002-2V7a2 2 0 00-2-2h-2a2 2 0 00-2 2" />
              </svg>
            </div>
            <div>
              <h2 class="text-lg font-semibold text-white">MRR by Plan</h2>
              <p class="text-xs text-slate-500">Revenue distribution across subscription tiers</p>
            </div>
          </div>
          <div class="hidden sm:flex items-center gap-2 px-3 py-1.5 rounded-full bg-white/5 border border-white/10">
            <div class="w-2 h-2 rounded-full bg-emerald-400"></div>
            <span class="text-xs text-slate-400"><%= @mrr_by_plan.size %> plans</span>
          </div>
        </div>

        <%# Table %>
        <div class="overflow-x-auto">
          <table class="min-w-full">
            <thead>
              <tr class="border-b border-white/5">
                <th class="px-5 sm:px-6 py-4 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">Plan</th>
                <th class="px-5 sm:px-6 py-4 text-right text-xs font-medium text-slate-500 uppercase tracking-wider">MRR</th>
                <th class="px-5 sm:px-6 py-4 text-right text-xs font-medium text-slate-500 uppercase tracking-wider">% of Total</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-white/5">
              <% @mrr_by_plan.each_with_index do |(plan_name, mrr), index| %>
                <% percentage = @mrr > 0 ? (mrr / @mrr) * 100 : 0 %>
                <% colors = ['emerald', 'teal', 'cyan', 'blue', 'indigo'] %>
                <% color = colors[index % colors.length] %>
                <tr class="hover:bg-white/5 transition-colors">
                  <td class="px-5 sm:px-6 py-4 whitespace-nowrap">
                    <div class="flex items-center gap-3">
                      <div class="w-8 h-8 rounded-lg bg-<%= color %>-500/20 flex items-center justify-center">
                        <span class="text-sm font-bold text-<%= color %>-400"><%= plan_name.first.upcase %></span>
                      </div>
                      <span class="text-sm font-medium text-white"><%= plan_name %></span>
                    </div>
                  </td>
                  <td class="px-5 sm:px-6 py-4 whitespace-nowrap text-right">
                    <span class="text-sm font-semibold text-white"><%= number_to_currency(mrr) %></span>
                  </td>
                  <td class="px-5 sm:px-6 py-4 whitespace-nowrap text-right">
                    <div class="flex items-center justify-end gap-3">
                      <div class="hidden sm:block w-24 h-2 rounded-full bg-white/10 overflow-hidden">
                        <div class="h-full rounded-full bg-linear-to-r from-<%= color %>-500 to-<%= color %>-400" style="width: <%= percentage %>%"></div>
                      </div>
                      <span class="text-sm text-slate-400 font-medium w-14 text-right"><%= number_to_percentage(percentage, precision: 1) %></span>
                    </div>
                  </td>
                </tr>
              <% end %>
              <% if @mrr_by_plan.empty? %>
                <tr>
                  <td colspan="3" class="px-5 sm:px-6 py-12 text-center">
                    <div class="flex flex-col items-center gap-3">
                      <div class="w-12 h-12 rounded-xl bg-slate-800 flex items-center justify-center">
                        <svg class="w-6 h-6 text-slate-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4" />
                        </svg>
                      </div>
                      <p class="text-sm text-slate-500">No revenue data available</p>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>

        <%# Table Footer with Total %>
        <% if @mrr_by_plan.any? %>
          <div class="px-5 sm:px-6 py-4 border-t border-white/10 bg-white/5">
            <div class="flex items-center justify-between">
              <span class="text-sm font-medium text-slate-400">Total MRR</span>
              <span class="text-lg font-bold text-emerald-400"><%= number_to_currency(@mrr) %></span>
            </div>
          </div>
        <% end %>
      </div>
    </div>

  </div>
</div>
