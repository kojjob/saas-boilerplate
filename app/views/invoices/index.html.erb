<div class="space-y-6">
  <%# Header %>
  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
    <div>
      <h1 class="text-2xl font-bold text-slate-900">Invoices</h1>
      <p class="mt-1 text-sm text-slate-500">Manage your invoices and track payments</p>
    </div>
    <%= link_to new_invoice_path, class: "inline-flex items-center gap-2 px-4 py-2 text-sm font-medium text-white bg-gradient-to-r from-indigo-500 to-purple-600 rounded-lg hover:from-indigo-600 hover:to-purple-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-all", data: { turbo_frame: "modal" } do %>
      <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
      </svg>
      New Invoice
    <% end %>
  </div>

  <%# Stats Cards %>
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
    <div class="bg-white rounded-xl shadow-sm border border-slate-200 p-4">
      <div class="flex items-center gap-3">
        <div class="flex-shrink-0 w-10 h-10 bg-blue-100 rounded-lg flex items-center justify-center">
          <svg class="w-5 h-5 text-blue-600" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v12m-3-2.818l.879.659c1.171.879 3.07.879 4.242 0 1.172-.879 1.172-2.303 0-3.182C13.536 12.219 12.768 12 12 12c-.725 0-1.45-.22-2.003-.659-1.106-.879-1.106-2.303 0-3.182s2.9-.879 4.006 0l.415.33M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
        <div>
          <p class="text-sm font-medium text-slate-500">Outstanding</p>
          <p class="text-xl font-bold text-slate-900"><%= number_to_currency(@stats[:total_outstanding]) %></p>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-xl shadow-sm border border-slate-200 p-4">
      <div class="flex items-center gap-3">
        <div class="flex-shrink-0 w-10 h-10 bg-red-100 rounded-lg flex items-center justify-center">
          <svg class="w-5 h-5 text-red-600" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v3.75m-9.303 3.376c-.866 1.5.217 3.374 1.948 3.374h14.71c1.73 0 2.813-1.874 1.948-3.374L13.949 3.378c-.866-1.5-3.032-1.5-3.898 0L2.697 16.126zM12 15.75h.007v.008H12v-.008z" />
          </svg>
        </div>
        <div>
          <p class="text-sm font-medium text-slate-500">Overdue</p>
          <p class="text-xl font-bold text-red-600"><%= number_to_currency(@stats[:total_overdue]) %></p>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-xl shadow-sm border border-slate-200 p-4">
      <div class="flex items-center gap-3">
        <div class="flex-shrink-0 w-10 h-10 bg-green-100 rounded-lg flex items-center justify-center">
          <svg class="w-5 h-5 text-green-600" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
        <div>
          <p class="text-sm font-medium text-slate-500">Paid This Month</p>
          <p class="text-xl font-bold text-green-600"><%= number_to_currency(@stats[:paid_this_month]) %></p>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-xl shadow-sm border border-slate-200 p-4">
      <div class="flex items-center gap-3">
        <div class="flex-shrink-0 w-10 h-10 bg-amber-100 rounded-lg flex items-center justify-center">
          <svg class="w-5 h-5 text-amber-600" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
        <div>
          <p class="text-sm font-medium text-slate-500">Due Soon</p>
          <p class="text-xl font-bold text-amber-600"><%= @stats[:due_soon_count] %> invoices</p>
        </div>
      </div>
    </div>
  </div>

  <%# Search and Filter %>
  <div class="bg-white rounded-xl shadow-sm border border-slate-200 p-4">
    <%= form_with url: invoices_path, method: :get, class: "flex flex-col sm:flex-row gap-4", data: { turbo_frame: "_self" } do |f| %>
      <div class="flex-1">
        <div class="relative">
          <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
            <svg class="h-5 w-5 text-slate-400" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M21 21l-5.197-5.197m0 0A7.5 7.5 0 105.196 5.196a7.5 7.5 0 0010.607 10.607z" />
            </svg>
          </div>
          <%= f.search_field :search, value: params[:search], placeholder: "Search by invoice number or client...", class: "block w-full pl-10 pr-3 py-2 border border-slate-300 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" %>
        </div>
      </div>
      <div>
        <%= f.select :status, [["All Statuses", "all"], ["Draft", "draft"], ["Sent", "sent"], ["Viewed", "viewed"], ["Paid", "paid"], ["Overdue", "overdue"], ["Cancelled", "cancelled"]], { selected: params[:status] || "all" }, class: "block w-full px-3 py-2 border border-slate-300 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" %>
      </div>
      <div class="flex gap-2">
        <%= f.submit "Search", class: "px-4 py-2 text-sm font-medium text-white bg-indigo-600 rounded-lg hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 cursor-pointer transition-colors" %>
        <% if params[:search].present? || params[:status].present? %>
          <%= link_to "Clear", invoices_path, class: "px-4 py-2 text-sm font-medium text-slate-700 bg-white border border-slate-300 rounded-lg hover:bg-slate-50 transition-colors" %>
        <% end %>
      </div>
    <% end %>
  </div>

  <%# Invoices Table %>
  <div class="bg-white rounded-xl shadow-sm border border-slate-200 overflow-hidden">
    <% if @invoices.any? %>
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-slate-200">
          <thead class="bg-slate-50">
            <tr>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">Invoice</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">Client</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">Amount</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">Status</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">Due Date</th>
              <th scope="col" class="relative px-6 py-3">
                <span class="sr-only">Actions</span>
              </th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-slate-200">
            <% @invoices.each do |invoice| %>
              <tr class="hover:bg-slate-50 transition-colors">
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="flex items-center">
                    <div>
                      <div class="text-sm font-medium text-slate-900">
                        <%= link_to invoice.invoice_number, invoice_path(invoice), class: "hover:text-indigo-600" %>
                      </div>
                      <div class="text-sm text-slate-500">
                        Issued <%= invoice.issue_date.strftime("%b %d, %Y") %>
                      </div>
                    </div>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="text-sm text-slate-900"><%= invoice.client.name %></div>
                  <% if invoice.project.present? %>
                    <div class="text-sm text-slate-500"><%= invoice.project.name %></div>
                  <% end %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="text-sm font-medium text-slate-900"><%= number_to_currency(invoice.total_amount) %></div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <% badge_classes = {
                    draft: "bg-slate-100 text-slate-700",
                    sent: "bg-blue-100 text-blue-700",
                    viewed: "bg-indigo-100 text-indigo-700",
                    paid: "bg-green-100 text-green-700",
                    overdue: "bg-red-100 text-red-700",
                    cancelled: "bg-slate-100 text-slate-500"
                  } %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= badge_classes[invoice.status.to_sym] %>">
                    <%= invoice.status.humanize %>
                  </span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-500">
                  <% if invoice.paid? %>
                    Paid <%= invoice.paid_at&.strftime("%b %d, %Y") %>
                  <% elsif invoice.cancelled? %>
                    -
                  <% elsif invoice.past_due? %>
                    <span class="text-red-600 font-medium"><%= invoice.days_overdue %> days overdue</span>
                  <% else %>
                    <%= invoice.due_date.strftime("%b %d, %Y") %>
                    <% if invoice.days_until_due <= 7 && invoice.days_until_due > 0 %>
                      <span class="text-amber-600 text-xs">(<%= invoice.days_until_due %> days)</span>
                    <% end %>
                  <% end %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                  <div class="flex items-center justify-end gap-2">
                    <%= link_to invoice_path(invoice), class: "text-slate-400 hover:text-slate-600 transition-colors" do %>
                      <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M2.036 12.322a1.012 1.012 0 010-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178z" />
                        <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                      </svg>
                    <% end %>
                    <% if invoice.draft? %>
                      <%= link_to edit_invoice_path(invoice), class: "text-slate-400 hover:text-indigo-600 transition-colors", data: { turbo_frame: "modal" } do %>
                        <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" d="M16.862 4.487l1.687-1.688a1.875 1.875 0 112.652 2.652L10.582 16.07a4.5 4.5 0 01-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 011.13-1.897l8.932-8.931zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0115.75 21H5.25A2.25 2.25 0 013 18.75V8.25A2.25 2.25 0 015.25 6H10" />
                        </svg>
                      <% end %>
                    <% end %>
                    <% if invoice.draft? %>
                      <%= button_to send_invoice_invoice_path(invoice), method: :patch, class: "text-slate-400 hover:text-blue-600 transition-colors", form: { data: { turbo_confirm: "Mark this invoice as sent?" } } do %>
                        <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" d="M6 12L3.269 3.126A59.768 59.768 0 0121.485 12 59.77 59.77 0 013.27 20.876L5.999 12zm0 0h7.5" />
                        </svg>
                      <% end %>
                    <% end %>
                    <% if invoice.unpaid? %>
                      <%= button_to mark_paid_invoice_path(invoice), method: :patch, class: "text-slate-400 hover:text-green-600 transition-colors", form: { data: { turbo_confirm: "Mark this invoice as paid?" } } do %>
                        <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                      <% end %>
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <%# Pagination %>
      <% if @invoices.respond_to?(:total_pages) && @invoices.total_pages > 1 %>
        <div class="bg-slate-50 px-6 py-3 border-t border-slate-200">
          <div class="flex items-center justify-between">
            <div class="text-sm text-slate-500">
              Showing <%= @invoices.offset_value + 1 %> to <%= [@invoices.offset_value + @invoices.length, @invoices.total_count].min %> of <%= @invoices.total_count %> invoices
            </div>
            <div class="flex gap-2">
              <% if @invoices.prev_page %>
                <%= link_to "Previous", invoices_path(page: @invoices.prev_page, search: params[:search], status: params[:status]), class: "px-3 py-1 text-sm font-medium text-slate-700 bg-white border border-slate-300 rounded-lg hover:bg-slate-50" %>
              <% end %>
              <% if @invoices.next_page %>
                <%= link_to "Next", invoices_path(page: @invoices.next_page, search: params[:search], status: params[:status]), class: "px-3 py-1 text-sm font-medium text-slate-700 bg-white border border-slate-300 rounded-lg hover:bg-slate-50" %>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    <% else %>
      <%# Empty State %>
      <div class="text-center py-12">
        <svg class="mx-auto h-12 w-12 text-slate-400" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 14.25v-2.625a3.375 3.375 0 00-3.375-3.375h-1.5A1.125 1.125 0 0113.5 7.125v-1.5a3.375 3.375 0 00-3.375-3.375H8.25m0 12.75h7.5m-7.5 3H12M10.5 2.25H5.625c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 00-9-9z" />
        </svg>
        <h3 class="mt-2 text-sm font-semibold text-slate-900">No invoices found</h3>
        <p class="mt-1 text-sm text-slate-500">
          <% if params[:search].present? || params[:status].present? %>
            Try adjusting your search or filter criteria.
          <% else %>
            Get started by creating your first invoice.
          <% end %>
        </p>
        <div class="mt-6">
          <%= link_to new_invoice_path, class: "inline-flex items-center gap-2 px-4 py-2 text-sm font-medium text-white bg-indigo-600 rounded-lg hover:bg-indigo-700 transition-colors", data: { turbo_frame: "modal" } do %>
            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
            </svg>
            Create Invoice
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<%# Modal container %>
<%= turbo_frame_tag "modal" %>
