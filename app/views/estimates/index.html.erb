<% content_for :title, "Estimates" %>

<div class="min-h-screen bg-gray-50">
  <!-- Header with gradient background -->
  <div class="bg-gradient-to-r from-purple-600 to-indigo-700">
    <div class="mx-auto max-w-7xl px-4 py-8 sm:px-6 lg:px-8">
      <div class="sm:flex sm:items-center sm:justify-between">
        <div>
          <h1 class="text-2xl font-bold text-white">Estimates</h1>
          <p class="mt-1 text-purple-100">Create and manage quotes for your clients.</p>
        </div>
        <div class="mt-4 sm:mt-0">
          <%= link_to new_estimate_path, class: "inline-flex items-center gap-x-2 rounded-lg bg-white px-4 py-2.5 text-sm font-semibold text-purple-700 shadow-sm hover:bg-purple-50 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-white transition-colors" do %>
            <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
            </svg>
            New Estimate
          <% end %>
        </div>
      </div>

      <!-- Stats Cards -->
      <div class="mt-8 grid grid-cols-1 gap-4 sm:grid-cols-2 lg:grid-cols-4">
        <!-- Pending Amount -->
        <div class="rounded-xl bg-white/10 backdrop-blur-sm px-5 py-4">
          <div class="flex items-center gap-3">
            <div class="flex h-10 w-10 items-center justify-center rounded-lg bg-white/20">
              <svg class="h-5 w-5 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <div>
              <p class="text-sm text-purple-100">Pending</p>
              <p class="text-xl font-semibold text-white"><%= number_to_currency(@stats[:total_pending]) %></p>
            </div>
          </div>
        </div>

        <!-- Accepted This Month -->
        <div class="rounded-xl bg-white/10 backdrop-blur-sm px-5 py-4">
          <div class="flex items-center gap-3">
            <div class="flex h-10 w-10 items-center justify-center rounded-lg bg-white/20">
              <svg class="h-5 w-5 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <div>
              <p class="text-sm text-purple-100">Accepted This Month</p>
              <p class="text-xl font-semibold text-white"><%= number_to_currency(@stats[:accepted_this_month]) %></p>
            </div>
          </div>
        </div>

        <!-- Expiring Soon -->
        <div class="rounded-xl bg-white/10 backdrop-blur-sm px-5 py-4">
          <div class="flex items-center gap-3">
            <div class="flex h-10 w-10 items-center justify-center rounded-lg bg-white/20">
              <svg class="h-5 w-5 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <div>
              <p class="text-sm text-purple-100">Expiring Soon</p>
              <p class="text-xl font-semibold text-white"><%= @stats[:expiring_soon_count] %></p>
            </div>
          </div>
        </div>

        <!-- Conversion Rate -->
        <div class="rounded-xl bg-white/10 backdrop-blur-sm px-5 py-4">
          <div class="flex items-center gap-3">
            <div class="flex h-10 w-10 items-center justify-center rounded-lg bg-white/20">
              <svg class="h-5 w-5 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
              </svg>
            </div>
            <div>
              <p class="text-sm text-purple-100">Conversion Rate</p>
              <p class="text-xl font-semibold text-white"><%= @stats[:conversion_rate] %>%</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Main Content -->
  <div class="mx-auto max-w-7xl px-4 py-8 sm:px-6 lg:px-8">
    <!-- Search and Filter -->
    <div class="mb-6 flex flex-col gap-4 sm:flex-row sm:items-center sm:justify-between">
      <%= form_with url: estimates_path, method: :get, class: "flex flex-col gap-4 sm:flex-row sm:items-center" do |f| %>
        <div class="relative">
          <div class="pointer-events-none absolute inset-y-0 left-0 flex items-center pl-3">
            <svg class="h-5 w-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
            </svg>
          </div>
          <%= f.text_field :search, value: params[:search], placeholder: "Search estimates...", class: "block w-full rounded-lg border-0 py-2.5 pl-10 pr-4 text-gray-900 ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-purple-600 sm:text-sm sm:leading-6" %>
        </div>

        <div>
          <%= f.select :status, options_for_select([
            ["All Statuses", "all"],
            ["Draft", "draft"],
            ["Sent", "sent"],
            ["Viewed", "viewed"],
            ["Accepted", "accepted"],
            ["Declined", "declined"],
            ["Expired", "expired"],
            ["Converted", "converted"]
          ], params[:status] || "all"), {}, { class: "block rounded-lg border-0 py-2.5 pl-3 pr-10 text-gray-900 ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-purple-600 sm:text-sm sm:leading-6" } %>
        </div>

        <%= f.submit "Filter", class: "inline-flex items-center rounded-lg bg-purple-600 px-4 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-purple-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-purple-600 cursor-pointer" %>

        <% if params[:search].present? || params[:status].present? %>
          <%= link_to "Clear", estimates_path, class: "text-sm font-medium text-gray-600 hover:text-gray-900" %>
        <% end %>
      <% end %>
    </div>

    <!-- Estimates Table -->
    <div class="overflow-hidden bg-white shadow-sm ring-1 ring-gray-900/5 rounded-xl">
      <% if @estimates.any? %>
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th scope="col" class="py-3.5 pl-6 pr-3 text-left text-xs font-semibold uppercase tracking-wide text-gray-500">Estimate #</th>
              <th scope="col" class="px-3 py-3.5 text-left text-xs font-semibold uppercase tracking-wide text-gray-500">Client</th>
              <th scope="col" class="px-3 py-3.5 text-left text-xs font-semibold uppercase tracking-wide text-gray-500">Amount</th>
              <th scope="col" class="px-3 py-3.5 text-left text-xs font-semibold uppercase tracking-wide text-gray-500">Status</th>
              <th scope="col" class="px-3 py-3.5 text-left text-xs font-semibold uppercase tracking-wide text-gray-500">Valid Until</th>
              <th scope="col" class="relative py-3.5 pl-3 pr-6">
                <span class="sr-only">Actions</span>
              </th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-200 bg-white">
            <% @estimates.each do |estimate| %>
              <tr class="hover:bg-gray-50 transition-colors">
                <td class="whitespace-nowrap py-4 pl-6 pr-3 text-sm">
                  <%= link_to estimate_path(estimate), class: "font-medium text-gray-900 hover:text-purple-600" do %>
                    <%= estimate.estimate_number %>
                  <% end %>
                </td>
                <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-900">
                  <div class="flex items-center gap-3">
                    <div class="flex h-8 w-8 items-center justify-center rounded-full bg-purple-100 text-purple-700 font-medium text-xs">
                      <%= estimate.client.name.first(2).upcase %>
                    </div>
                    <div>
                      <div class="font-medium"><%= estimate.client.name %></div>
                      <% if estimate.project.present? %>
                        <div class="text-xs text-gray-500"><%= estimate.project.name %></div>
                      <% end %>
                    </div>
                  </div>
                </td>
                <td class="whitespace-nowrap px-3 py-4 text-sm font-medium text-gray-900">
                  <%= number_to_currency(estimate.total_amount) %>
                </td>
                <td class="whitespace-nowrap px-3 py-4 text-sm">
                  <span class="inline-flex items-center rounded-full px-2.5 py-0.5 text-xs font-medium bg-<%= estimate.status_color %>-100 text-<%= estimate.status_color %>-800">
                    <%= estimate.status.humanize %>
                  </span>
                </td>
                <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
                  <% if estimate.valid_until.present? %>
                    <span class="<%= 'text-red-600 font-medium' if estimate.valid_until < Date.current %>">
                      <%= estimate.valid_until.strftime("%b %d, %Y") %>
                    </span>
                    <% if estimate.valid_until >= Date.current && estimate.days_until_expiry <= 7 %>
                      <span class="text-amber-600 text-xs ml-1">(<%= estimate.days_until_expiry %> days)</span>
                    <% end %>
                  <% end %>
                </td>
                <td class="relative whitespace-nowrap py-4 pl-3 pr-6 text-right text-sm font-medium">
                  <div class="flex items-center justify-end gap-2">
                    <%= link_to estimate_path(estimate), class: "text-gray-400 hover:text-gray-600" do %>
                      <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                      </svg>
                    <% end %>
                    <% if estimate.draft? %>
                      <%= link_to edit_estimate_path(estimate), class: "text-gray-400 hover:text-gray-600" do %>
                        <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                        </svg>
                      <% end %>
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>

        <% if @estimates.respond_to?(:total_pages) && @estimates.total_pages > 1 %>
          <div class="border-t border-gray-200 bg-white px-4 py-3 sm:px-6">
            <%= paginate @estimates %>
          </div>
        <% end %>
      <% else %>
        <div class="text-center py-12">
          <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
          </svg>
          <h3 class="mt-2 text-sm font-semibold text-gray-900">No estimates</h3>
          <p class="mt-1 text-sm text-gray-500">Get started by creating a new estimate.</p>
          <div class="mt-6">
            <%= link_to new_estimate_path, class: "inline-flex items-center rounded-lg bg-purple-600 px-4 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-purple-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-purple-600" do %>
              <svg class="mr-2 h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
              </svg>
              New Estimate
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
