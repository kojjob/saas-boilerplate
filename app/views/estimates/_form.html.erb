<%= form_with(model: @estimate, local: true, data: { controller: "estimate-form", action: "estimate-form#calculateTotals" }) do |form| %>
  <% if @estimate.errors.any? %>
    <div class="rounded-lg bg-red-50 p-4 mb-6">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">
            <%= pluralize(@estimate.errors.count, "error") %> prohibited this estimate from being saved:
          </h3>
          <div class="mt-2 text-sm text-red-700">
            <ul class="list-disc list-inside space-y-1">
              <% @estimate.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div class="space-y-8">
    <!-- Estimate Details Section -->
    <div class="bg-white shadow-sm ring-1 ring-gray-900/5 rounded-xl">
      <div class="px-6 py-5 border-b border-gray-200">
        <h3 class="text-base font-semibold leading-6 text-gray-900">Estimate Details</h3>
        <p class="mt-1 text-sm text-gray-500">Basic information about this estimate.</p>
      </div>
      <div class="px-6 py-5 space-y-6">
        <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
          <!-- Client -->
          <div>
            <%= form.label :client_id, "Client", class: "block text-sm font-medium leading-6 text-gray-900" %>
            <div class="mt-2">
              <%= form.select :client_id, options_from_collection_for_select(@clients, :id, :name, @estimate.client_id),
                  { include_blank: "Select a client" },
                  { class: "block w-full rounded-lg border-0 py-2.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-inset focus:ring-blue-600 sm:text-sm sm:leading-6" } %>
            </div>
          </div>

          <!-- Project (Optional) -->
          <div>
            <%= form.label :project_id, "Project (Optional)", class: "block text-sm font-medium leading-6 text-gray-900" %>
            <div class="mt-2">
              <%= form.select :project_id, options_from_collection_for_select(@projects, :id, :name, @estimate.project_id),
                  { include_blank: "No project" },
                  { class: "block w-full rounded-lg border-0 py-2.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-inset focus:ring-blue-600 sm:text-sm sm:leading-6" } %>
            </div>
          </div>

          <!-- Estimate Number -->
          <div>
            <%= form.label :estimate_number, class: "block text-sm font-medium leading-6 text-gray-900" %>
            <div class="mt-2">
              <%= form.text_field :estimate_number,
                  placeholder: "Auto-generated if blank",
                  class: "block w-full rounded-lg border-0 py-2.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-blue-600 sm:text-sm sm:leading-6" %>
            </div>
            <p class="mt-1 text-xs text-gray-500">Leave blank to auto-generate</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Dates Section -->
    <div class="bg-white shadow-sm ring-1 ring-gray-900/5 rounded-xl">
      <div class="px-6 py-5 border-b border-gray-200">
        <h3 class="text-base font-semibold leading-6 text-gray-900">Dates</h3>
        <p class="mt-1 text-sm text-gray-500">When the estimate was issued and expires.</p>
      </div>
      <div class="px-6 py-5">
        <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
          <!-- Issue Date -->
          <div>
            <%= form.label :issue_date, class: "block text-sm font-medium leading-6 text-gray-900" %>
            <div class="mt-2">
              <%= form.date_field :issue_date,
                  value: @estimate.issue_date || Date.current,
                  class: "block w-full rounded-lg border-0 py-2.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-inset focus:ring-blue-600 sm:text-sm sm:leading-6" %>
            </div>
          </div>

          <!-- Valid Until -->
          <div>
            <%= form.label :valid_until, "Valid Until", class: "block text-sm font-medium leading-6 text-gray-900" %>
            <div class="mt-2">
              <%= form.date_field :valid_until,
                  value: @estimate.valid_until || (Date.current + 30.days),
                  class: "block w-full rounded-lg border-0 py-2.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-inset focus:ring-blue-600 sm:text-sm sm:leading-6" %>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Line Items Section -->
    <div class="bg-white shadow-sm ring-1 ring-gray-900/5 rounded-xl">
      <div class="px-6 py-5 border-b border-gray-200">
        <h3 class="text-base font-semibold leading-6 text-gray-900">Line Items</h3>
        <p class="mt-1 text-sm text-gray-500">Add services, materials, or other items to this estimate.</p>
      </div>
      <div class="px-6 py-5">
        <div data-estimate-form-target="lineItemsContainer" class="space-y-4">
          <%= form.fields_for :line_items do |line_item_form| %>
            <div class="line-item flex gap-4 items-start p-4 bg-gray-50 rounded-lg" data-estimate-form-target="lineItem">
              <div class="flex-1">
                <%= line_item_form.label :description, class: "block text-sm font-medium leading-6 text-gray-900" %>
                <%= line_item_form.text_field :description,
                    placeholder: "Description of work or materials",
                    class: "mt-1 block w-full rounded-lg border-0 py-2 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-blue-600 sm:text-sm sm:leading-6" %>
              </div>
              <div class="w-24">
                <%= line_item_form.label :quantity, class: "block text-sm font-medium leading-6 text-gray-900" %>
                <%= line_item_form.number_field :quantity,
                    step: "0.01",
                    min: "0",
                    value: line_item_form.object.quantity || 1,
                    data: { action: "input->estimate-form#calculateTotals" },
                    class: "mt-1 block w-full rounded-lg border-0 py-2 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-inset focus:ring-blue-600 sm:text-sm sm:leading-6" %>
              </div>
              <div class="w-32">
                <%= line_item_form.label :unit_price, "Unit Price", class: "block text-sm font-medium leading-6 text-gray-900" %>
                <div class="mt-1 relative rounded-lg shadow-sm">
                  <div class="pointer-events-none absolute inset-y-0 left-0 flex items-center pl-3">
                    <span class="text-gray-500 sm:text-sm">$</span>
                  </div>
                  <%= line_item_form.number_field :unit_price,
                      step: "0.01",
                      min: "0",
                      value: line_item_form.object.unit_price || 0,
                      data: { action: "input->estimate-form#calculateTotals" },
                      class: "block w-full rounded-lg border-0 py-2 pl-7 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-inset focus:ring-blue-600 sm:text-sm sm:leading-6" %>
                </div>
              </div>
              <div class="w-10 pt-7">
                <%= line_item_form.hidden_field :_destroy, value: false, class: "destroy-field" %>
                <button type="button" data-action="click->estimate-form#removeLineItem" class="text-red-500 hover:text-red-700">
                  <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                  </svg>
                </button>
              </div>
              <%= line_item_form.hidden_field :position, value: line_item_form.index %>
            </div>
          <% end %>
        </div>

        <template data-estimate-form-target="lineItemTemplate">
          <div class="line-item flex gap-4 items-start p-4 bg-gray-50 rounded-lg" data-estimate-form-target="lineItem">
            <div class="flex-1">
              <label class="block text-sm font-medium leading-6 text-gray-900">Description</label>
              <input type="text" name="estimate[line_items_attributes][NEW_RECORD][description]" placeholder="Description of work or materials" class="mt-1 block w-full rounded-lg border-0 py-2 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-blue-600 sm:text-sm sm:leading-6">
            </div>
            <div class="w-24">
              <label class="block text-sm font-medium leading-6 text-gray-900">Quantity</label>
              <input type="number" step="0.01" min="0" value="1" name="estimate[line_items_attributes][NEW_RECORD][quantity]" data-action="input->estimate-form#calculateTotals" class="mt-1 block w-full rounded-lg border-0 py-2 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-inset focus:ring-blue-600 sm:text-sm sm:leading-6">
            </div>
            <div class="w-32">
              <label class="block text-sm font-medium leading-6 text-gray-900">Unit Price</label>
              <div class="mt-1 relative rounded-lg shadow-sm">
                <div class="pointer-events-none absolute inset-y-0 left-0 flex items-center pl-3">
                  <span class="text-gray-500 sm:text-sm">$</span>
                </div>
                <input type="number" step="0.01" min="0" value="0" name="estimate[line_items_attributes][NEW_RECORD][unit_price]" data-action="input->estimate-form#calculateTotals" class="block w-full rounded-lg border-0 py-2 pl-7 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-inset focus:ring-blue-600 sm:text-sm sm:leading-6">
              </div>
            </div>
            <div class="w-10 pt-7">
              <input type="hidden" name="estimate[line_items_attributes][NEW_RECORD][_destroy]" value="false" class="destroy-field">
              <button type="button" data-action="click->estimate-form#removeLineItem" class="text-red-500 hover:text-red-700">
                <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                </svg>
              </button>
            </div>
            <input type="hidden" name="estimate[line_items_attributes][NEW_RECORD][position]" value="0">
          </div>
        </template>

        <button type="button" data-action="click->estimate-form#addLineItem" class="mt-4 inline-flex items-center gap-x-1.5 text-sm font-semibold text-blue-600 hover:text-blue-500">
          <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
          </svg>
          Add Line Item
        </button>
      </div>
    </div>

    <!-- Pricing Section -->
    <div class="bg-white shadow-sm ring-1 ring-gray-900/5 rounded-xl">
      <div class="px-6 py-5 border-b border-gray-200">
        <h3 class="text-base font-semibold leading-6 text-gray-900">Pricing</h3>
        <p class="mt-1 text-sm text-gray-500">Tax rate and discounts for this estimate.</p>
      </div>
      <div class="px-6 py-5">
        <div class="grid grid-cols-1 gap-6 sm:grid-cols-3">
          <!-- Tax Rate -->
          <div>
            <%= form.label :tax_rate, "Tax Rate (%)", class: "block text-sm font-medium leading-6 text-gray-900" %>
            <div class="mt-2 relative rounded-lg shadow-sm">
              <%= form.number_field :tax_rate,
                  step: "0.01",
                  min: "0",
                  max: "100",
                  value: @estimate.tax_rate || 0,
                  data: { action: "input->estimate-form#calculateTotals", estimate_form_target: "taxRate" },
                  class: "block w-full rounded-lg border-0 py-2.5 pr-8 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-inset focus:ring-blue-600 sm:text-sm sm:leading-6" %>
              <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center pr-3">
                <span class="text-gray-500 sm:text-sm">%</span>
              </div>
            </div>
          </div>

          <!-- Discount -->
          <div>
            <%= form.label :discount_amount, "Discount Amount", class: "block text-sm font-medium leading-6 text-gray-900" %>
            <div class="mt-2 relative rounded-lg shadow-sm">
              <div class="pointer-events-none absolute inset-y-0 left-0 flex items-center pl-3">
                <span class="text-gray-500 sm:text-sm">$</span>
              </div>
              <%= form.number_field :discount_amount,
                  step: "0.01",
                  min: "0",
                  value: @estimate.discount_amount || 0,
                  data: { action: "input->estimate-form#calculateTotals", estimate_form_target: "discount" },
                  class: "block w-full rounded-lg border-0 py-2.5 pl-7 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-inset focus:ring-blue-600 sm:text-sm sm:leading-6" %>
            </div>
          </div>
        </div>

        <!-- Totals Display -->
        <div class="mt-6 rounded-lg bg-gray-50 p-4">
          <dl class="space-y-2">
            <div class="flex justify-between text-sm">
              <dt class="text-gray-600">Subtotal</dt>
              <dd class="font-medium text-gray-900" data-estimate-form-target="subtotal">$<%= number_with_precision(@estimate.subtotal || 0, precision: 2) %></dd>
            </div>
            <div class="flex justify-between text-sm">
              <dt class="text-gray-600">Tax</dt>
              <dd class="font-medium text-gray-900" data-estimate-form-target="taxAmount">$<%= number_with_precision(@estimate.tax_amount || 0, precision: 2) %></dd>
            </div>
            <div class="flex justify-between text-sm">
              <dt class="text-gray-600">Discount</dt>
              <dd class="font-medium text-red-600" data-estimate-form-target="discountDisplay">-$<%= number_with_precision(@estimate.discount_amount || 0, precision: 2) %></dd>
            </div>
            <div class="flex justify-between border-t border-gray-200 pt-2">
              <dt class="text-base font-semibold text-gray-900">Total</dt>
              <dd class="text-base font-semibold text-gray-900" data-estimate-form-target="total">$<%= number_with_precision(@estimate.total_amount || 0, precision: 2) %></dd>
            </div>
          </dl>
        </div>
      </div>
    </div>

    <!-- Notes & Terms Section -->
    <div class="bg-white shadow-sm ring-1 ring-gray-900/5 rounded-xl">
      <div class="px-6 py-5 border-b border-gray-200">
        <h3 class="text-base font-semibold leading-6 text-gray-900">Notes & Terms</h3>
        <p class="mt-1 text-sm text-gray-500">Additional information for the client.</p>
      </div>
      <div class="px-6 py-5 space-y-6">
        <!-- Notes -->
        <div>
          <%= form.label :notes, class: "block text-sm font-medium leading-6 text-gray-900" %>
          <div class="mt-2">
            <%= form.text_area :notes,
                rows: 3,
                placeholder: "Any additional notes for the client...",
                class: "block w-full rounded-lg border-0 py-2.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-blue-600 sm:text-sm sm:leading-6" %>
          </div>
        </div>

        <!-- Terms -->
        <div>
          <%= form.label :terms, class: "block text-sm font-medium leading-6 text-gray-900" %>
          <div class="mt-2">
            <%= form.text_area :terms,
                rows: 3,
                placeholder: "Terms and conditions...",
                class: "block w-full rounded-lg border-0 py-2.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-blue-600 sm:text-sm sm:leading-6" %>
          </div>
        </div>
      </div>
    </div>

    <!-- Form Actions -->
    <div class="flex items-center justify-end gap-x-4">
      <%= link_to "Cancel", estimates_path, class: "text-sm font-semibold leading-6 text-gray-900 hover:text-gray-700" %>
      <%= form.submit @estimate.new_record? ? "Create Estimate" : "Update Estimate",
          class: "rounded-lg bg-blue-600 px-4 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-blue-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-600 cursor-pointer" %>
    </div>
  </div>
<% end %>
