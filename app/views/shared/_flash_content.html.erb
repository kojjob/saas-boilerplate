<%# Flash message content for Turbo Stream updates %>
<% flash.each do |type, message| %>
  <% next if message.blank? %>
  <%
    # Map flash types to styles
    styles = case type.to_sym
             when :notice, :success
               {
                 bg: "bg-emerald-50",
                 border: "border-emerald-200",
                 text: "text-emerald-800",
                 icon_bg: "bg-emerald-100",
                 icon_color: "text-emerald-500",
                 progress: "bg-emerald-500"
               }
             when :alert, :error
               {
                 bg: "bg-red-50",
                 border: "border-red-200",
                 text: "text-red-800",
                 icon_bg: "bg-red-100",
                 icon_color: "text-red-500",
                 progress: "bg-red-500"
               }
             when :warning
               {
                 bg: "bg-amber-50",
                 border: "border-amber-200",
                 text: "text-amber-800",
                 icon_bg: "bg-amber-100",
                 icon_color: "text-amber-500",
                 progress: "bg-amber-500"
               }
             else
               {
                 bg: "bg-blue-50",
                 border: "border-blue-200",
                 text: "text-blue-800",
                 icon_bg: "bg-blue-100",
                 icon_color: "text-blue-500",
                 progress: "bg-blue-500"
               }
             end
  %>

  <div class="pointer-events-auto <%= styles[:bg] %> <%= styles[:border] %> border rounded-xl shadow-lg overflow-hidden animate-slide-in"
       data-controller="flash"
       data-flash-auto-dismiss-value="true"
       data-flash-dismiss-delay-value="5000"
       role="alert">
    <div class="p-4">
      <div class="flex items-start gap-3">
        <%# Icon %>
        <div class="shrink-0">
          <div class="w-8 h-8 <%= styles[:icon_bg] %> rounded-full flex items-center justify-center">
            <% case type.to_sym %>
            <% when :notice, :success %>
              <svg class="w-5 h-5 <%= styles[:icon_color] %>" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
            <% when :alert, :error %>
              <svg class="w-5 h-5 <%= styles[:icon_color] %>" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
              </svg>
            <% when :warning %>
              <svg class="w-5 h-5 <%= styles[:icon_color] %>" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
              </svg>
            <% else %>
              <svg class="w-5 h-5 <%= styles[:icon_color] %>" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            <% end %>
          </div>
        </div>

        <%# Message content %>
        <div class="flex-1 pt-0.5">
          <p class="text-sm font-medium <%= styles[:text] %>">
            <%= message %>
          </p>
        </div>

        <%# Dismiss button %>
        <div class="shrink-0">
          <button type="button"
                  class="inline-flex rounded-lg p-1.5 <%= styles[:text] %> hover:<%= styles[:icon_bg] %> transition-colors focus:outline-none"
                  data-action="flash#dismiss"
                  aria-label="Dismiss">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
          </button>
        </div>
      </div>
    </div>

    <%# Progress bar for auto-dismiss %>
    <div class="h-1 w-full bg-white/50">
      <div class="h-full <%= styles[:progress] %> animate-progress-shrink"
           data-flash-target="progress"
           style="animation-duration: 5000ms;"></div>
    </div>
  </div>
<% end %>

