<% if current_onboarding&.visible? %>
  <div id="onboarding-checklist"
       class="bg-gradient-to-r from-indigo-500 to-purple-600 rounded-2xl shadow-lg mb-8 overflow-hidden"
       data-controller="onboarding">
    <div class="px-6 py-5 sm:px-8">
      <div class="flex items-center justify-between">
        <div class="flex items-center space-x-4">
          <div class="flex-shrink-0">
            <div class="h-12 w-12 bg-white/20 rounded-xl flex items-center justify-center">
              <svg class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
          </div>
          <div>
            <h3 class="text-lg font-semibold text-white">Get started with your account</h3>
            <p class="text-indigo-100 text-sm mt-0.5">Complete these steps to set up your business</p>
          </div>
        </div>

        <div class="hidden sm:flex items-center space-x-4">
          <div class="flex items-center">
            <span class="text-white/90 text-sm font-medium"><%= current_onboarding.completed_steps_count %> of <%= current_onboarding.total_steps %> complete</span>
          </div>
          <button type="button"
                  class="text-white/70 hover:text-white transition-colors"
                  data-action="click->onboarding#dismiss"
                  aria-label="Dismiss checklist">
            <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
            </svg>
          </button>
        </div>
      </div>

      <%# Progress bar %>
      <div class="mt-4">
        <div class="h-2 bg-white/20 rounded-full overflow-hidden">
          <div class="h-full bg-white rounded-full transition-all duration-500"
               style="width: <%= current_onboarding.progress_percentage %>%"></div>
        </div>
      </div>

      <%# Steps %>
      <div class="mt-6 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
        <% OnboardingProgress::STEPS.each_with_index do |step, index| %>
          <% step_info = current_onboarding.step_info(step) %>
          <% completed = current_onboarding.send(step) %>
          <% is_next = current_onboarding.next_step == step %>

          <div class="<%= completed ? 'bg-white/20' : (is_next ? 'bg-white' : 'bg-white/10') %> rounded-xl p-4 transition-all duration-200 <%= is_next ? 'ring-2 ring-white/50 shadow-lg' : '' %>">
            <div class="flex items-start space-x-3">
              <div class="flex-shrink-0">
                <% if completed %>
                  <div class="h-8 w-8 rounded-full bg-green-500 flex items-center justify-center">
                    <svg class="h-5 w-5 text-white" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" />
                    </svg>
                  </div>
                <% else %>
                  <div class="h-8 w-8 rounded-full <%= is_next ? 'bg-indigo-600' : 'bg-white/30' %> flex items-center justify-center">
                    <span class="<%= is_next ? 'text-white' : 'text-white/70' %> text-sm font-semibold"><%= index + 1 %></span>
                  </div>
                <% end %>
              </div>
              <div class="flex-1 min-w-0">
                <p class="<%= completed ? 'text-white/80' : (is_next ? 'text-slate-900' : 'text-white/60') %> font-medium text-sm">
                  <%= step_info[:title] %>
                </p>
                <p class="<%= completed ? 'text-white/60' : (is_next ? 'text-slate-500' : 'text-white/40') %> text-xs mt-0.5">
                  <%= step_info[:description] %>
                </p>
                <% if is_next %>
                  <%= link_to send(step_info[:path_helper]),
                      class: "inline-flex items-center mt-2 text-xs font-medium text-indigo-600 hover:text-indigo-800" do %>
                    Start
                    <svg class="ml-1 h-3 w-3" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
                    </svg>
                  <% end %>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>

      <%# Mobile dismiss button %>
      <div class="sm:hidden mt-4 text-center">
        <button type="button"
                class="text-white/70 hover:text-white text-sm"
                data-action="click->onboarding#dismiss">
          Dismiss checklist
        </button>
      </div>
    </div>
  </div>
<% end %>
