<%# Dark Sidebar Navigation - Unified Design System %>
<aside id="sidebar" class="hidden lg:flex lg:flex-shrink-0">
  <div class="flex flex-col w-64 bg-gradient-to-b from-slate-900 via-slate-900 to-slate-950 border-r border-slate-800/50">
    <%# Logo Section with Subcontractor Command Branding %>
    <div class="flex items-center h-16 px-5 border-b border-slate-800/50">
      <%= link_to root_path, class: "flex items-center gap-3 group" do %>
        <div class="relative">
          <div class="w-9 h-9 bg-gradient-to-br from-amber-500 to-orange-600 rounded-xl flex items-center justify-center shadow-lg shadow-amber-500/20 group-hover:shadow-amber-500/40 transition-all duration-300 group-hover:scale-105">
            <%# Wrench/Tool Icon for Subcontractors %>
            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
          </div>
          <%# Decorative glow %>
          <div class="absolute inset-0 bg-gradient-to-br from-amber-500 to-orange-600 rounded-xl blur-lg opacity-0 group-hover:opacity-30 transition-opacity duration-300"></div>
        </div>
        <div class="flex flex-col">
          <span class="text-sm font-bold text-white leading-tight">Subcontractor</span>
          <span class="text-xs font-semibold text-amber-400 leading-tight">Command</span>
        </div>
      <% end %>
    </div>

    <%# Navigation Menu %>
    <nav class="flex-1 px-3 py-4 space-y-1 overflow-y-auto scrollbar-thin scrollbar-thumb-slate-700 scrollbar-track-transparent">
      <%# Main Navigation Section %>
      <div class="space-y-1">
        <p class="px-3 mb-2 text-[10px] font-bold text-slate-500 uppercase tracking-widest">Main Menu</p>
        <%= sidebar_link_to "Dashboard", dashboard_path, icon: "home" %>
        <%= sidebar_link_to "Clients", clients_path, icon: "users" %>
        <%= sidebar_link_to "Projects", projects_path, icon: "folder" %>
        <%= sidebar_link_to "Invoices", invoices_path, icon: "document-text" %>
      </div>

      <%# Work Management Section %>
      <div class="pt-5 mt-5 border-t border-slate-800/50">
        <p class="px-3 mb-2 text-[10px] font-bold text-slate-500 uppercase tracking-widest">Work</p>
        <div class="space-y-1">
          <%= sidebar_link_to "Time Entries", time_entries_path, icon: "clock" %>
          <%= sidebar_link_to "Materials", material_entries_path, icon: "cube" %>
          <%= sidebar_link_to "Documents", documents_path, icon: "document-duplicate" %>
        </div>
      </div>

      <%# Reports Section %>
      <div class="pt-5 mt-5 border-t border-slate-800/50">
        <p class="px-3 mb-2 text-[10px] font-bold text-slate-500 uppercase tracking-widest">Reports</p>
        <div class="space-y-1">
          <%= sidebar_link_to "Time Report", report_time_entries_path, icon: "chart-bar" %>
          <%= sidebar_link_to "Materials Report", report_material_entries_path, icon: "chart-pie" %>
        </div>
      </div>

      <%# Communication Section %>
      <div class="pt-5 mt-5 border-t border-slate-800/50">
        <p class="px-3 mb-2 text-[10px] font-bold text-slate-500 uppercase tracking-widest">Communication</p>
        <div class="space-y-1">
          <%= sidebar_link_to "Messages", conversations_path, icon: "chat-alt-2" %>
        </div>
      </div>

      <%# Account Section %>
      <div class="pt-5 mt-5 border-t border-slate-800/50">
        <p class="px-3 mb-2 text-[10px] font-bold text-slate-500 uppercase tracking-widest">Account</p>
        <div class="space-y-1">
          <%= sidebar_link_to "Settings", account_path, icon: "cog" %>
          <%= sidebar_link_to "Team Members", account_members_path, icon: "user-group" %>
          <%= sidebar_link_to "Billing", billing_path, icon: "credit-card" %>
        </div>
      </div>
    </nav>

    <%# Quick Stats Card %>
    <div class="mx-3 mb-3 p-3 bg-gradient-to-br from-slate-800/50 to-slate-800/30 rounded-xl border border-slate-700/50">
      <div class="flex items-center justify-between mb-2">
        <span class="text-[10px] font-bold text-slate-400 uppercase tracking-wider">This Month</span>
        <span class="w-2 h-2 bg-green-500 rounded-full animate-pulse"></span>
      </div>
      <div class="flex items-baseline gap-1">
        <span class="text-lg font-bold text-white"><%= number_to_currency(current_account&.invoices&.where(created_at: Time.current.beginning_of_month..Time.current.end_of_month)&.sum(:total_amount) || 0, precision: 0) %></span>
        <span class="text-xs text-slate-400">invoiced</span>
      </div>
    </div>

    <%# User Profile Section %>
    <div class="flex-shrink-0 p-3 border-t border-slate-800/50 bg-slate-900/50">
      <div class="flex items-center gap-3">
        <div class="relative flex-shrink-0">
          <div class="w-10 h-10 rounded-xl bg-gradient-to-br from-amber-500 to-orange-600 flex items-center justify-center shadow-lg shadow-amber-500/20">
            <span class="text-sm font-bold text-white">
              <%= current_user&.first_name&.first&.upcase || current_user&.email&.first&.upcase || "U" %><%= current_user&.last_name&.first&.upcase || "" %>
            </span>
          </div>
          <%# Online status indicator %>
          <div class="absolute -bottom-0.5 -right-0.5 w-3 h-3 bg-green-500 border-2 border-slate-900 rounded-full"></div>
        </div>
        <div class="flex-1 min-w-0">
          <p class="text-sm font-semibold text-white truncate">
            <%= current_user&.full_name.presence || current_user&.email&.split("@")&.first || "User" %>
          </p>
          <p class="text-xs text-slate-400 truncate">
            <%= current_account&.name || "No Account" %>
          </p>
        </div>
        <%= button_to sign_out_path, method: :delete, class: "flex-shrink-0 p-2 text-slate-400 hover:text-white hover:bg-slate-800 rounded-lg transition-all duration-200", title: "Sign out" do %>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
          </svg>
        <% end %>
      </div>
    </div>
  </div>
</aside>

