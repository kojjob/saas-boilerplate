<%# Modern, elegant footer with gradient accents %>
<footer class="bg-slate-900 text-slate-300 mt-auto">
  <%# Gradient top border %>
  <div class="h-1 bg-gradient-to-r from-indigo-500 via-purple-500 to-pink-500"></div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <%# Main footer content %>
    <div class="py-12 lg:py-16">
      <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-5 gap-8 lg:gap-12">
        <%# Brand column %>
        <div class="col-span-2 md:col-span-4 lg:col-span-2">
          <div class="flex items-center gap-2 mb-4">
            <div class="w-8 h-8 bg-gradient-to-br from-indigo-500 to-purple-600 rounded-lg flex items-center justify-center shadow-lg">
