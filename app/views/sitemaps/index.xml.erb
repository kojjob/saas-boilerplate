<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9"
        xmlns:news="http://www.google.com/schemas/sitemap-news/0.9"
        xmlns:image="http://www.google.com/schemas/sitemap-image/1.1">

  <!-- Static Pages -->
  <url>
    <loc><%= root_url %></loc>
    <changefreq>weekly</changefreq>
    <priority>1.0</priority>
  </url>

  <url>
    <loc><%= about_url %></loc>
    <changefreq>monthly</changefreq>
    <priority>0.8</priority>
  </url>

  <url>
    <loc><%= contact_url %></loc>
    <changefreq>monthly</changefreq>
    <priority>0.8</priority>
  </url>

  <!-- Blog Index -->
  <url>
    <loc><%= posts_url %></loc>
    <changefreq>daily</changefreq>
    <priority>0.9</priority>
  </url>

  <!-- Blog Categories -->
  <url>
    <loc><%= categories_url %></loc>
    <changefreq>weekly</changefreq>
    <priority>0.7</priority>
  </url>

  <% @categories.each do |category| %>
  <url>
    <loc><%= category_url(category) %></loc>
    <lastmod><%= category.updated_at.iso8601 %></lastmod>
    <changefreq>weekly</changefreq>
    <priority>0.7</priority>
  </url>
  <% end %>

  <!-- Blog Tags -->
  <% @tags.each do |tag| %>
  <url>
    <loc><%= tag_url(tag) %></loc>
    <lastmod><%= tag.updated_at.iso8601 %></lastmod>
    <changefreq>weekly</changefreq>
    <priority>0.6</priority>
  </url>
  <% end %>

  <!-- Blog Posts -->
  <% @posts.each do |post| %>
  <url>
    <loc><%= post_url(post) %></loc>
    <lastmod><%= post.updated_at.iso8601 %></lastmod>
    <changefreq>monthly</changefreq>
    <priority>0.8</priority>
    <% if post.featured_image_url.present? %>
    <image:image>
      <image:loc><%= post.featured_image_url %></image:loc>
      <image:title><%= post.title %></image:title>
      <image:caption><%= post.excerpt.presence || truncate(strip_tags(post.content), length: 160) %></image:caption>
    </image:image>
    <% end %>
  </url>
  <% end %>

</urlset>
