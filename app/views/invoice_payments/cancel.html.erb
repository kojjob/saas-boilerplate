<% content_for :title, "Payment Cancelled" %>

<div class="min-h-screen bg-gray-50 flex flex-col justify-center py-12 sm:px-6 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-lg">
    <div class="mx-auto flex items-center justify-center h-16 w-16 rounded-full bg-yellow-100">
      <svg class="h-10 w-10 text-yellow-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
      </svg>
    </div>
    <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
      Payment cancelled
    </h2>
    <p class="mt-2 text-center text-sm text-gray-600">
      Your payment for Invoice <%= @invoice.invoice_number %> was not completed.
    </p>
  </div>

  <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-lg">
    <div class="bg-white py-8 px-4 shadow sm:rounded-lg sm:px-10">
      <div class="text-center">
        <p class="text-sm text-gray-500 mb-6">
          No charges have been made to your account. You can try again whenever you're ready.
        </p>
        <dl class="space-y-3 text-left border-t border-gray-200 pt-4 mb-6">
          <div class="flex justify-between">
            <dt class="text-sm text-gray-500">Invoice Number</dt>
            <dd class="text-sm font-medium text-gray-900"><%= @invoice.invoice_number %></dd>
          </div>
          <div class="flex justify-between">
            <dt class="text-sm text-gray-500">Amount Due</dt>
            <dd class="text-sm font-medium text-gray-900"><%= number_to_currency(@invoice.total_amount) %></dd>
          </div>
        </dl>
        <% if @invoice.payable? %>
          <%= link_to pay_invoice_path(payment_token: @invoice.payment_token), class: "w-full inline-flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do %>
            Try Again
          <% end %>
        <% end %>
      </div>
    </div>
    <p class="mt-4 text-center text-xs text-gray-500">
      If you have any questions, please contact <%= @invoice.account.name %>.
    </p>
  </div>
</div>
