<% content_for :title, "Pay Invoice #{@invoice.invoice_number}" %>

<div class="min-h-screen bg-gray-50 flex flex-col justify-center py-12 sm:px-6 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-lg">
    <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
      Invoice <%= @invoice.invoice_number %>
    </h2>
    <p class="mt-2 text-center text-sm text-gray-600">
      From <%= @invoice.account.name %>
    </p>
  </div>

  <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-lg">
    <div class="bg-white py-8 px-4 shadow sm:rounded-lg sm:px-10">
      <% if @invoice.paid? %>
        <div class="rounded-md bg-green-50 p-4 mb-6">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-green-400" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
            </div>
            <div class="ml-3">
              <h3 class="text-sm font-medium text-green-800">This invoice has been paid</h3>
              <% if @invoice.paid_at %>
                <p class="mt-1 text-sm text-green-700">
                  Paid on <%= @invoice.paid_at.strftime("%B %d, %Y") %>
                </p>
              <% end %>
            </div>
          </div>
        </div>
      <% elsif @invoice.cancelled? %>
        <div class="rounded-md bg-gray-50 p-4 mb-6">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-gray-400" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
              </svg>
            </div>
            <div class="ml-3">
              <h3 class="text-sm font-medium text-gray-800">This invoice has been cancelled</h3>
            </div>
          </div>
        </div>
      <% end %>

      <!-- Invoice Details -->
      <div class="border-b border-gray-200 pb-4 mb-4">
        <dl class="space-y-3">
          <div class="flex justify-between">
            <dt class="text-sm text-gray-500">Invoice Date</dt>
            <dd class="text-sm font-medium text-gray-900"><%= @invoice.issue_date.strftime("%B %d, %Y") %></dd>
          </div>
          <div class="flex justify-between">
            <dt class="text-sm text-gray-500">Due Date</dt>
            <dd class="text-sm font-medium <%= @invoice.past_due? && @invoice.unpaid? ? 'text-red-600' : 'text-gray-900' %>">
              <%= @invoice.due_date.strftime("%B %d, %Y") %>
              <% if @invoice.past_due? && @invoice.unpaid? %>
                <span class="ml-1">(Overdue)</span>
              <% end %>
            </dd>
          </div>
          <div class="flex justify-between">
            <dt class="text-sm text-gray-500">Bill To</dt>
            <dd class="text-sm font-medium text-gray-900"><%= @invoice.client.name %></dd>
          </div>
        </dl>
      </div>

      <!-- Line Items -->
      <% if @invoice.line_items.any? %>
        <div class="border-b border-gray-200 pb-4 mb-4">
          <h4 class="text-sm font-medium text-gray-900 mb-3">Items</h4>
          <dl class="space-y-2">
            <% @invoice.line_items.each do |item| %>
              <div class="flex justify-between text-sm">
                <dt class="text-gray-500">
                  <%= item.description %>
                  <% if item.quantity > 1 %>
                    <span class="text-gray-400">(x<%= item.quantity %>)</span>
                  <% end %>
                </dt>
                <dd class="font-medium text-gray-900"><%= number_to_currency(item.amount) %></dd>
              </div>
            <% end %>
          </dl>
        </div>
      <% end %>

      <!-- Totals -->
      <dl class="space-y-2">
        <div class="flex justify-between text-sm">
          <dt class="text-gray-500">Subtotal</dt>
          <dd class="font-medium text-gray-900"><%= number_to_currency(@invoice.subtotal) %></dd>
        </div>
        <% if @invoice.tax_amount && @invoice.tax_amount > 0 %>
          <div class="flex justify-between text-sm">
            <dt class="text-gray-500">Tax (<%= @invoice.tax_rate %>%)</dt>
            <dd class="font-medium text-gray-900"><%= number_to_currency(@invoice.tax_amount) %></dd>
          </div>
        <% end %>
        <% if @invoice.discount_amount && @invoice.discount_amount > 0 %>
          <div class="flex justify-between text-sm">
            <dt class="text-gray-500">Discount</dt>
            <dd class="font-medium text-green-600">-<%= number_to_currency(@invoice.discount_amount) %></dd>
          </div>
        <% end %>
        <div class="flex justify-between text-lg font-bold border-t border-gray-200 pt-2 mt-2">
          <dt class="text-gray-900">Total</dt>
          <dd class="text-gray-900"><%= number_to_currency(@invoice.total_amount) %></dd>
        </div>
      </dl>

      <!-- Pay Button -->
      <% if @invoice.payable? %>
        <div class="mt-6">
          <%= form_with url: pay_invoice_checkout_path(payment_token: @invoice.payment_token), method: :post, local: true do %>
            <button type="submit" class="w-full flex justify-center py-3 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
              Pay <%= number_to_currency(@invoice.total_amount) %> Now
            </button>
          <% end %>
        </div>
        <p class="mt-3 text-center text-xs text-gray-500">
          Secure payment powered by Stripe
        </p>
      <% end %>

      <!-- Notes -->
      <% if @invoice.notes.present? %>
        <div class="mt-6 pt-4 border-t border-gray-200">
          <h4 class="text-sm font-medium text-gray-900 mb-2">Notes</h4>
          <p class="text-sm text-gray-500"><%= @invoice.notes %></p>
        </div>
      <% end %>
    </div>
  </div>
</div>
