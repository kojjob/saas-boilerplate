<% content_for :page_title, "Expenses" %>

<div class="space-y-6">
  <%# Hero Header with Dark Background %>
  <div class="relative overflow-hidden bg-gradient-to-r from-slate-900 via-slate-800 to-slate-900 rounded-2xl shadow-2xl">
    <%# Decorative grid pattern %>
    <div class="absolute inset-0 opacity-10">
      <svg class="w-full h-full" viewBox="0 0 100 100" preserveAspectRatio="none">
        <defs>
          <pattern id="expense-grid" width="10" height="10" patternUnits="userSpaceOnUse">
            <path d="M 10 0 L 0 0 0 10" fill="none" stroke="currentColor" stroke-width="0.5"/>
          </pattern>
        </defs>
        <rect width="100%" height="100%" fill="url(#expense-grid)"/>
      </svg>
    </div>

    <%# Gradient orbs %>
    <div class="absolute top-0 right-0 w-72 h-72 bg-emerald-500/20 rounded-full blur-3xl"></div>
    <div class="absolute bottom-0 left-0 w-48 h-48 bg-teal-500/20 rounded-full blur-3xl"></div>

    <div class="relative px-6 py-8 sm:px-8 sm:py-10">
      <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-6">
        <%# Title and stats %>
        <div class="flex items-start gap-4">
          <div class="flex-shrink-0 w-14 h-14 rounded-2xl bg-gradient-to-br from-emerald-500 to-teal-600 flex items-center justify-center shadow-lg shadow-emerald-500/30">
            <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2zm7-5a2 2 0 11-4 0 2 2 0 014 0z"/>
            </svg>
          </div>
          <div>
            <h1 class="text-2xl sm:text-3xl font-bold text-white">Expenses</h1>
            <p class="mt-1 text-slate-400">Track business expenses and receipts</p>
            <div class="mt-3 flex items-center gap-4">
              <div class="flex items-center gap-2">
                <span class="text-2xl font-bold text-white"><%= number_to_currency(@stats[:total_this_month], precision: 0) %></span>
                <span class="text-sm text-slate-400">this month</span>
              </div>
              <div class="w-px h-6 bg-slate-700"></div>
              <div class="flex items-center gap-2">
                <span class="text-2xl font-bold text-emerald-400"><%= number_to_currency(@stats[:billable_total], precision: 0) %></span>
                <span class="text-sm text-slate-400">billable</span>
              </div>
            </div>
          </div>
        </div>

        <%# Action button %>
        <div class="flex-shrink-0">
          <%= link_to new_expense_path, class: "inline-flex items-center gap-2 px-5 py-3 bg-gradient-to-r from-emerald-500 to-teal-600 hover:from-emerald-600 hover:to-teal-700 text-white font-semibold rounded-xl shadow-lg shadow-emerald-500/30 hover:shadow-emerald-500/50 transition-all duration-300 hover:scale-105" do %>
            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
            </svg>
            Add Expense
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <%# Stats Cards %>
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
    <%# This Month %>
    <div class="bg-white rounded-2xl shadow-sm border border-slate-200 p-5 hover:shadow-lg hover:border-emerald-200 transition-all duration-300 group">
      <div class="flex items-center gap-4">
        <div class="w-12 h-12 rounded-xl bg-gradient-to-br from-blue-500 to-blue-600 flex items-center justify-center shadow-lg shadow-blue-500/25 group-hover:scale-110 transition-transform duration-300">
          <svg class="w-6 h-6 text-white" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M6.75 3v2.25M17.25 3v2.25M3 18.75V7.5a2.25 2.25 0 012.25-2.25h13.5A2.25 2.25 0 0121 7.5v11.25m-18 0A2.25 2.25 0 005.25 21h13.5A2.25 2.25 0 0021 18.75m-18 0v-7.5A2.25 2.25 0 015.25 9h13.5A2.25 2.25 0 0121 11.25v7.5" />
          </svg>
        </div>
        <div>
          <p class="text-xs font-medium text-slate-500 uppercase tracking-wider">This Month</p>
          <p class="text-2xl font-bold text-slate-900"><%= number_to_currency(@stats[:total_this_month], precision: 0) %></p>
        </div>
      </div>
    </div>

    <%# This Year %>
    <div class="bg-white rounded-2xl shadow-sm border border-slate-200 p-5 hover:shadow-lg hover:border-emerald-200 transition-all duration-300 group">
      <div class="flex items-center gap-4">
        <div class="w-12 h-12 rounded-xl bg-gradient-to-br from-purple-500 to-purple-600 flex items-center justify-center shadow-lg shadow-purple-500/25 group-hover:scale-110 transition-transform duration-300">
          <svg class="w-6 h-6 text-white" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M3 13.125C3 12.504 3.504 12 4.125 12h2.25c.621 0 1.125.504 1.125 1.125v6.75C7.5 20.496 6.996 21 6.375 21h-2.25A1.125 1.125 0 013 19.875v-6.75zM9.75 8.625c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125v11.25c0 .621-.504 1.125-1.125 1.125h-2.25a1.125 1.125 0 01-1.125-1.125V8.625zM16.5 4.125c0-.621.504-1.125 1.125-1.125h2.25C20.496 3 21 3.504 21 4.125v15.75c0 .621-.504 1.125-1.125 1.125h-2.25a1.125 1.125 0 01-1.125-1.125V4.125z" />
          </svg>
        </div>
        <div>
          <p class="text-xs font-medium text-slate-500 uppercase tracking-wider">This Year</p>
          <p class="text-2xl font-bold text-slate-900"><%= number_to_currency(@stats[:total_this_year], precision: 0) %></p>
        </div>
      </div>
    </div>

    <%# Billable %>
    <div class="bg-white rounded-2xl shadow-sm border border-slate-200 p-5 hover:shadow-lg hover:border-emerald-200 transition-all duration-300 group">
      <div class="flex items-center gap-4">
        <div class="w-12 h-12 rounded-xl bg-gradient-to-br from-green-500 to-emerald-600 flex items-center justify-center shadow-lg shadow-green-500/25 group-hover:scale-110 transition-transform duration-300">
          <svg class="w-6 h-6 text-white" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
        <div>
          <p class="text-xs font-medium text-slate-500 uppercase tracking-wider">Billable</p>
          <p class="text-2xl font-bold text-slate-900"><%= number_to_currency(@stats[:billable_total], precision: 0) %></p>
        </div>
      </div>
    </div>

    <%# Reimbursable %>
    <div class="bg-white rounded-2xl shadow-sm border border-slate-200 p-5 hover:shadow-lg hover:border-emerald-200 transition-all duration-300 group">
      <div class="flex items-center gap-4">
        <div class="w-12 h-12 rounded-xl bg-gradient-to-br from-amber-500 to-orange-600 flex items-center justify-center shadow-lg shadow-amber-500/25 group-hover:scale-110 transition-transform duration-300">
          <svg class="w-6 h-6 text-white" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 18.75a60.07 60.07 0 0115.797 2.101c.727.198 1.453-.342 1.453-1.096V18.75M3.75 4.5v.75A.75.75 0 013 6h-.75m0 0v-.375c0-.621.504-1.125 1.125-1.125H20.25M2.25 6v9m18-10.5v.75c0 .414.336.75.75.75h.75m-1.5-1.5h.375c.621 0 1.125.504 1.125 1.125v9.75c0 .621-.504 1.125-1.125 1.125h-.375m1.5-1.5H21a.75.75 0 00-.75.75v.75m0 0H3.75m0 0h-.375a1.125 1.125 0 01-1.125-1.125V15m1.5 1.5v-.75A.75.75 0 003 15h-.75M15 10.5a3 3 0 11-6 0 3 3 0 016 0zm3 0h.008v.008H18V10.5zm-12 0h.008v.008H6V10.5z" />
          </svg>
        </div>
        <div>
          <p class="text-xs font-medium text-slate-500 uppercase tracking-wider">Reimbursable</p>
          <p class="text-2xl font-bold text-slate-900"><%= number_to_currency(@stats[:reimbursable_total], precision: 0) %></p>
        </div>
      </div>
    </div>
  </div>

  <%# Category Breakdown %>
  <% if @category_summary.any? %>
    <div class="bg-white rounded-2xl shadow-sm border border-slate-200 p-5">
      <h3 class="text-sm font-semibold text-slate-900 mb-4">This Month by Category</h3>
      <div class="flex flex-wrap gap-3">
        <% @category_summary.each do |category, amount| %>
          <div class="inline-flex items-center gap-2 px-3 py-2 bg-slate-50 rounded-lg">
            <span class="text-sm font-medium text-slate-700"><%= category.to_s.humanize %></span>
            <span class="text-sm font-bold text-slate-900"><%= number_to_currency(amount, precision: 0) %></span>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>

  <%# Filters %>
  <div class="bg-white rounded-2xl shadow-sm border border-slate-200 p-4">
    <%= form_with url: expenses_path, method: :get, class: "flex flex-wrap items-end gap-4" do |f| %>
      <div class="flex-1 min-w-[150px]">
        <label class="block text-xs font-medium text-slate-500 uppercase tracking-wider mb-2">Project</label>
        <%= select_tag :project_id,
            options_from_collection_for_select(current_account.projects.order(:name), :id, :name, params[:project_id]),
            include_blank: "All projects",
            class: "w-full px-4 py-3 border border-slate-200 rounded-xl text-sm focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500 transition-all bg-white" %>
      </div>

      <div class="flex-1 min-w-[150px]">
        <label class="block text-xs font-medium text-slate-500 uppercase tracking-wider mb-2">Client</label>
        <%= select_tag :client_id,
            options_from_collection_for_select(current_account.clients.order(:name), :id, :name, params[:client_id]),
            include_blank: "All clients",
            class: "w-full px-4 py-3 border border-slate-200 rounded-xl text-sm focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500 transition-all bg-white" %>
      </div>

      <div class="flex-1 min-w-[150px]">
        <label class="block text-xs font-medium text-slate-500 uppercase tracking-wider mb-2">Category</label>
        <%= select_tag :category,
            options_for_select(Expense.categories.keys.map { |c| [c.humanize, c] }, params[:category]),
            include_blank: "All categories",
            class: "w-full px-4 py-3 border border-slate-200 rounded-xl text-sm focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500 transition-all bg-white" %>
      </div>

      <div class="flex-1 min-w-[120px]">
        <label class="block text-xs font-medium text-slate-500 uppercase tracking-wider mb-2">Period</label>
        <%= select_tag :period,
            options_for_select([["All time", ""], ["This week", "this_week"], ["This month", "this_month"], ["This year", "this_year"]], params[:period]),
            class: "w-full px-4 py-3 border border-slate-200 rounded-xl text-sm focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500 transition-all bg-white" %>
      </div>

      <div class="flex items-center gap-2">
        <%= submit_tag "Filter", class: "px-5 py-3 bg-slate-100 text-slate-700 text-sm font-medium rounded-xl hover:bg-slate-200 transition-colors cursor-pointer" %>
        <% if params[:project_id].present? || params[:client_id].present? || params[:category].present? || params[:period].present? || params[:billable].present? || params[:reimbursable].present? %>
          <%= link_to "Clear", expenses_path, class: "px-5 py-3 text-slate-600 text-sm font-medium hover:text-slate-900 transition-colors" %>
        <% end %>
      </div>
    <% end %>
  </div>

  <%# Expenses List %>
  <% if @expenses.any? %>
    <div class="bg-white rounded-2xl shadow-sm border border-slate-200 overflow-hidden">
      <div class="overflow-x-auto">
        <table class="min-w-full">
          <thead>
            <tr class="bg-gradient-to-r from-slate-50 to-slate-100 border-b border-slate-200">
              <th class="px-6 py-4 text-left text-xs font-semibold text-slate-600 uppercase tracking-wider">Date</th>
              <th class="px-6 py-4 text-left text-xs font-semibold text-slate-600 uppercase tracking-wider">Description</th>
              <th class="px-6 py-4 text-left text-xs font-semibold text-slate-600 uppercase tracking-wider">Category</th>
              <th class="px-6 py-4 text-left text-xs font-semibold text-slate-600 uppercase tracking-wider">Project/Client</th>
              <th class="px-6 py-4 text-right text-xs font-semibold text-slate-600 uppercase tracking-wider">Amount</th>
              <th class="px-6 py-4 text-center text-xs font-semibold text-slate-600 uppercase tracking-wider">Status</th>
              <th class="px-6 py-4 text-right text-xs font-semibold text-slate-600 uppercase tracking-wider">Actions</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-slate-100">
            <% @expenses.each do |expense| %>
              <tr class="hover:bg-emerald-50/50 transition-colors group">
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="flex items-center gap-3">
                    <div class="w-10 h-10 rounded-xl bg-gradient-to-br from-slate-100 to-slate-200 flex items-center justify-center group-hover:from-emerald-100 group-hover:to-teal-100 transition-colors">
                      <span class="text-xs font-bold text-slate-600 group-hover:text-emerald-600"><%= expense.expense_date.strftime("%d") %></span>
                    </div>
                    <div>
                      <p class="text-sm font-medium text-slate-900"><%= expense.expense_date.strftime("%b %d") %></p>
                      <p class="text-xs text-slate-500"><%= expense.expense_date.strftime("%Y") %></p>
                    </div>
                  </div>
                </td>
                <td class="px-6 py-4 max-w-xs">
                  <%= link_to expense_path(expense), class: "group-hover:text-emerald-600 transition-colors" do %>
                    <p class="text-sm font-medium text-slate-900 truncate group-hover:text-emerald-600"><%= expense.description %></p>
                    <% if expense.vendor.present? %>
                      <p class="text-xs text-slate-500"><%= expense.vendor %></p>
                    <% end %>
                  <% end %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <span class="inline-flex items-center px-2.5 py-1 rounded-lg text-xs font-medium bg-slate-100 text-slate-700">
                    <%= expense.category_display_name %>
                  </span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <% effective_client = expense.effective_client %>
                  <% if expense.project.present? %>
                    <div class="flex items-center gap-2">
                      <div class="w-7 h-7 rounded-lg bg-gradient-to-br from-blue-500 to-indigo-600 flex items-center justify-center text-white text-xs font-bold">
                        <%= expense.project.name.first(2).upcase %>
                      </div>
                      <div>
                        <p class="text-sm font-medium text-slate-900"><%= expense.project.name.truncate(20) %></p>
                        <% if effective_client %>
                          <p class="text-xs text-slate-500"><%= effective_client.name.truncate(20) %></p>
                        <% end %>
                      </div>
                    </div>
                  <% elsif effective_client %>
                    <div class="flex items-center gap-2">
                      <div class="w-7 h-7 rounded-lg bg-gradient-to-br from-purple-500 to-pink-600 flex items-center justify-center text-white text-xs font-bold">
                        <%= effective_client.name.first(2).upcase %>
                      </div>
                      <p class="text-sm font-medium text-slate-900"><%= effective_client.name.truncate(20) %></p>
                    </div>
                  <% else %>
                    <span class="text-sm text-slate-400">-</span>
                  <% end %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-right">
                  <span class="text-sm font-semibold text-slate-900"><%= expense.formatted_amount %></span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="flex items-center justify-center gap-1.5">
                    <% if expense.billable? %>
                      <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-green-100 text-green-700" title="Billable">
                        B
                      </span>
                    <% end %>
                    <% if expense.reimbursable? %>
                      <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-amber-100 text-amber-700" title="Reimbursable">
                        R
                      </span>
                    <% end %>
                    <% if expense.receipt_attached? %>
                      <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-blue-100 text-blue-700" title="Has receipt">
                        <svg class="w-3 h-3" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" d="M18.375 12.739l-7.693 7.693a4.5 4.5 0 01-6.364-6.364l10.94-10.94A3 3 0 1119.5 7.372L8.552 18.32m.009-.01l-.01.01m5.699-9.941l-7.81 7.81a1.5 1.5 0 002.112 2.13" />
                        </svg>
                      </span>
                    <% end %>
                    <% unless expense.billable? || expense.reimbursable? || expense.receipt_attached? %>
                      <span class="text-sm text-slate-400">-</span>
                    <% end %>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-right">
                  <div class="flex items-center justify-end gap-1">
                    <%= link_to expense_path(expense),
                        class: "p-2 text-slate-400 hover:text-emerald-600 hover:bg-emerald-50 rounded-lg transition-all" do %>
                      <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M2.036 12.322a1.012 1.012 0 010-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178z" />
                        <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                      </svg>
                    <% end %>
                    <%= link_to edit_expense_path(expense),
                        class: "p-2 text-slate-400 hover:text-emerald-600 hover:bg-emerald-50 rounded-lg transition-all" do %>
                      <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M16.862 4.487l1.687-1.688a1.875 1.875 0 112.652 2.652L10.582 16.07a4.5 4.5 0 01-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 011.13-1.897l8.932-8.931zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0115.75 21H5.25A2.25 2.25 0 013 18.75V8.25A2.25 2.25 0 015.25 6H10" />
                      </svg>
                    <% end %>
                    <%= button_to expense_path(expense),
                        method: :delete,
                        form: { data: { turbo_confirm: "Are you sure you want to delete this expense?" } },
                        class: "p-2 text-slate-400 hover:text-red-600 hover:bg-red-50 rounded-lg transition-all" do %>
                      <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0" />
                      </svg>
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>

    <%# Pagination %>
    <% if @expenses.respond_to?(:total_pages) && @expenses.total_pages > 1 %>
      <div class="flex justify-center">
        <div class="bg-white rounded-2xl shadow-sm border border-slate-200 px-6 py-4">
          <%== pagy_nav(@pagy) if defined?(@pagy) %>
        </div>
      </div>
    <% end %>
  <% else %>
    <%# Empty State %>
    <div class="bg-white rounded-2xl shadow-sm border border-slate-200 overflow-hidden">
      <div class="px-6 py-16 text-center">
        <div class="mx-auto w-20 h-20 rounded-2xl bg-gradient-to-br from-emerald-100 to-teal-100 flex items-center justify-center mb-6">
          <svg class="w-10 h-10 text-emerald-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2zm7-5a2 2 0 11-4 0 2 2 0 014 0z"/>
          </svg>
        </div>
        <h3 class="text-xl font-semibold text-slate-900 mb-2">No expenses yet</h3>
        <p class="text-slate-500 mb-8 max-w-sm mx-auto">
          <% if params[:project_id].present? || params[:client_id].present? || params[:category].present? || params[:period].present? %>
            Try adjusting your filters to find what you're looking for.
          <% else %>
            Get started by recording your first business expense. Track purchases, upload receipts, and bill clients for reimbursable expenses.
          <% end %>
        </p>
        <div class="flex flex-col sm:flex-row items-center justify-center gap-3">
          <%= link_to new_expense_path, class: "inline-flex items-center gap-2 px-6 py-3 bg-gradient-to-r from-emerald-500 to-teal-600 hover:from-emerald-600 hover:to-teal-700 text-white font-semibold rounded-xl shadow-lg shadow-emerald-500/30 hover:shadow-emerald-500/50 transition-all" do %>
