<% content_for :page_title, "Expense Report" %>

<div class="space-y-6">
  <%# Header %>
  <div class="relative overflow-hidden bg-gradient-to-br from-emerald-600 via-teal-600 to-cyan-700 rounded-2xl shadow-lg">
    <div class="absolute inset-0 bg-grid-white/10"></div>
    <div class="absolute top-0 right-0 -mt-4 -mr-4 w-24 h-24 bg-white/10 rounded-full blur-2xl"></div>
    <div class="absolute bottom-0 left-0 -mb-4 -ml-4 w-32 h-32 bg-teal-400/20 rounded-full blur-2xl"></div>

    <div class="relative px-6 py-6">
      <div class="flex items-center justify-between">
        <div class="flex items-center gap-4">
          <%= link_to expenses_path, class: "p-2 text-white/70 hover:text-white hover:bg-white/10 rounded-lg transition-all" do %>
            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5L3 12m0 0l7.5-7.5M3 12h18" />
            </svg>
          <% end %>
          <div>
            <h1 class="text-2xl font-bold text-white">Expense Report</h1>
            <p class="text-emerald-100 text-sm mt-1">
              <%= @start_date.strftime("%B %d, %Y") %> - <%= @end_date.strftime("%B %d, %Y") %>
            </p>
          </div>
        </div>

        <div class="flex items-center gap-3">
          <button onclick="window.print()" class="inline-flex items-center gap-2 px-4 py-2 text-sm font-medium text-emerald-700 bg-white rounded-lg hover:bg-emerald-50 transition-colors">
            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M6.72 13.829c-.24.03-.48.062-.72.096m.72-.096a42.415 42.415 0 0110.56 0m-10.56 0L6.34 18m10.94-4.171c.24.03.48.062.72.096m-.72-.096L17.66 18m0 0l.229 2.523a1.125 1.125 0 01-1.12 1.227H7.231c-.662 0-1.18-.568-1.12-1.227L6.34 18m11.318 0h1.091A2.25 2.25 0 0021 15.75V9.456c0-1.081-.768-2.015-1.837-2.175a48.055 48.055 0 00-1.913-.247M6.34 18H5.25A2.25 2.25 0 013 15.75V9.456c0-1.081.768-2.015 1.837-2.175a48.041 48.041 0 011.913-.247m10.5 0a48.536 48.536 0 00-10.5 0m10.5 0V3.375c0-.621-.504-1.125-1.125-1.125h-8.25c-.621 0-1.125.504-1.125 1.125v3.659M18 10.5h.008v.008H18V10.5zm-3 0h.008v.008H15V10.5z" />
            </svg>
            Print
          </button>
        </div>
      </div>
    </div>
  </div>

  <%# Date Range Filter %>
  <div class="bg-white rounded-2xl shadow-sm border border-slate-200 p-6">
    <h3 class="text-sm font-medium text-slate-900 mb-4">Select Date Range</h3>
    <%= form_with url: report_expenses_path, method: :get, class: "flex items-end gap-4" do |f| %>
      <div class="flex-1">
        <label class="block text-sm font-medium text-slate-600 mb-1">Start Date</label>
        <%= date_field_tag :start_date, @start_date, class: "w-full px-3 py-2 border border-slate-200 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-emerald-500" %>
      </div>
      <div class="flex-1">
        <label class="block text-sm font-medium text-slate-600 mb-1">End Date</label>
        <%= date_field_tag :end_date, @end_date, class: "w-full px-3 py-2 border border-slate-200 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-emerald-500" %>
      </div>
      <div>
        <%= f.submit "Generate Report", class: "px-4 py-2 bg-emerald-600 text-white text-sm font-medium rounded-lg hover:bg-emerald-700 transition-colors cursor-pointer" %>
      </div>
    <% end %>
  </div>

  <%# Summary Cards %>
  <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
    <%# Total Expenses %>
    <div class="bg-white rounded-2xl shadow-sm border border-slate-200 p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm font-medium text-slate-500">Total Expenses</p>
          <p class="text-2xl font-bold text-slate-900 mt-1"><%= number_to_currency(@total_amount) %></p>
          <p class="text-xs text-slate-400 mt-1"><%= @expenses.count %> expense<%= @expenses.count == 1 ? '' : 's' %></p>
        </div>
        <div class="w-12 h-12 bg-emerald-100 rounded-xl flex items-center justify-center">
          <svg class="w-6 h-6 text-emerald-600" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 18.75a60.07 60.07 0 0115.797 2.101c.727.198 1.453-.342 1.453-1.096V18.75M3.75 4.5v.75A.75.75 0 013 6h-.75m0 0v-.375c0-.621.504-1.125 1.125-1.125H20.25M2.25 6v9m18-10.5v.75c0 .414.336.75.75.75h.75m-1.5-1.5h.375c.621 0 1.125.504 1.125 1.125v9.75c0 .621-.504 1.125-1.125 1.125h-.375m1.5-1.5H21a.75.75 0 00-.75.75v.75m0 0H3.75m0 0h-.375a1.125 1.125 0 01-1.125-1.125V15m1.5 1.5v-.75A.75.75 0 003 15h-.75M15 10.5a3 3 0 11-6 0 3 3 0 016 0zm3 0h.008v.008H18V10.5zm-12 0h.008v.008H6V10.5z" />
          </svg>
        </div>
      </div>
    </div>

    <%# Billable %>
    <div class="bg-white rounded-2xl shadow-sm border border-slate-200 p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm font-medium text-slate-500">Billable Expenses</p>
          <p class="text-2xl font-bold text-blue-600 mt-1"><%= number_to_currency(@billable_amount) %></p>
          <p class="text-xs text-slate-400 mt-1"><%= (@total_amount > 0 ? (@billable_amount / @total_amount * 100).round : 0) %>% of total</p>
        </div>
        <div class="w-12 h-12 bg-blue-100 rounded-xl flex items-center justify-center">
          <svg class="w-6 h-6 text-blue-600" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M9 12h3.75M9 15h3.75M9 18h3.75m3 .75H18a2.25 2.25 0 002.25-2.25V6.108c0-1.135-.845-2.098-1.976-2.192a48.424 48.424 0 00-1.123-.08m-5.801 0c-.065.21-.1.433-.1.664 0 .414.336.75.75.75h4.5a.75.75 0 00.75-.75 2.25 2.25 0 00-.1-.664m-5.8 0A2.251 2.251 0 0113.5 2.25H15c1.012 0 1.867.668 2.15 1.586m-5.8 0c-.376.023-.75.05-1.124.08C9.095 4.01 8.25 4.973 8.25 6.108V8.25m0 0H4.875c-.621 0-1.125.504-1.125 1.125v11.25c0 .621.504 1.125 1.125 1.125h9.75c.621 0 1.125-.504 1.125-1.125V9.375c0-.621-.504-1.125-1.125-1.125H8.25z" />
          </svg>
        </div>
      </div>
    </div>

    <%# Non-Billable %>
    <div class="bg-white rounded-2xl shadow-sm border border-slate-200 p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm font-medium text-slate-500">Non-Billable Expenses</p>
          <p class="text-2xl font-bold text-slate-600 mt-1"><%= number_to_currency(@total_amount - @billable_amount) %></p>
          <p class="text-xs text-slate-400 mt-1"><%= (@total_amount > 0 ? ((@total_amount - @billable_amount) / @total_amount * 100).round : 0) %>% of total</p>
        </div>
        <div class="w-12 h-12 bg-slate-100 rounded-xl flex items-center justify-center">
          <svg class="w-6 h-6 text-slate-600" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M15 12H9m12 0a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
      </div>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <%# Category Breakdown %>
    <div class="bg-white rounded-2xl shadow-sm border border-slate-200 p-6">
      <h3 class="text-lg font-semibold text-slate-900 mb-4">By Category</h3>
      <% if @category_summary.any? %>
        <div class="space-y-3">
          <% @category_summary.each do |category, amount| %>
            <% percentage = @total_amount > 0 ? (amount / @total_amount * 100).round : 0 %>
            <div>
              <div class="flex items-center justify-between mb-1">
                <span class="text-sm font-medium text-slate-700"><%= category.to_s.humanize %></span>
                <span class="text-sm font-semibold text-slate-900"><%= number_to_currency(amount) %></span>
              </div>
              <div class="w-full bg-slate-100 rounded-full h-2">
                <div class="bg-emerald-500 h-2 rounded-full" style="width: <%= percentage %>%"></div>
              </div>
              <p class="text-xs text-slate-400 mt-1"><%= percentage %>%</p>
            </div>
          <% end %>
        </div>
      <% else %>
        <p class="text-sm text-slate-500">No expenses in this period</p>
      <% end %>
    </div>

    <%# Expense List %>
    <div class="lg:col-span-2 bg-white rounded-2xl shadow-sm border border-slate-200 overflow-hidden">
      <div class="px-6 py-4 border-b border-slate-100">
        <h3 class="text-lg font-semibold text-slate-900">Expense Details</h3>
      </div>

      <% if @expenses.any? %>
        <div class="overflow-x-auto">
          <table class="w-full">
            <thead class="bg-slate-50">
              <tr>
                <th class="text-left text-xs font-medium text-slate-500 uppercase tracking-wider px-6 py-3">Date</th>
                <th class="text-left text-xs font-medium text-slate-500 uppercase tracking-wider px-6 py-3">Description</th>
                <th class="text-left text-xs font-medium text-slate-500 uppercase tracking-wider px-6 py-3">Category</th>
                <th class="text-left text-xs font-medium text-slate-500 uppercase tracking-wider px-6 py-3">Project/Client</th>
                <th class="text-right text-xs font-medium text-slate-500 uppercase tracking-wider px-6 py-3">Amount</th>
                <th class="text-center text-xs font-medium text-slate-500 uppercase tracking-wider px-6 py-3">Status</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-slate-100">
              <% @expenses.each do |expense| %>
                <tr class="hover:bg-slate-50">
                  <td class="px-6 py-4 text-sm text-slate-900"><%= expense.expense_date.strftime("%b %d") %></td>
                  <td class="px-6 py-4">
                    <div class="text-sm font-medium text-slate-900"><%= expense.description.truncate(40) %></div>
                    <% if expense.vendor.present? %>
                      <div class="text-xs text-slate-500"><%= expense.vendor %></div>
                    <% end %>
                  </td>
                  <td class="px-6 py-4">
                    <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-slate-100 text-slate-700">
                      <%= expense.category.humanize %>
                    </span>
                  </td>
                  <td class="px-6 py-4 text-sm text-slate-500">
                    <% if expense.project.present? %>
                      <div><%= expense.project.name.truncate(20) %></div>
                    <% end %>
                    <% client = expense.client || expense.project&.client %>
                    <% if client %>
                      <div class="text-xs text-slate-400"><%= client.name.truncate(20) %></div>
                    <% end %>
                  </td>
                  <td class="px-6 py-4 text-sm font-semibold text-slate-900 text-right">
                    <%= expense.currency_symbol %><%= number_with_delimiter(expense.amount, precision: 2) %>
                  </td>
                  <td class="px-6 py-4 text-center">
                    <div class="flex items-center justify-center gap-1">
                      <% if expense.billable? %>
                        <span class="inline-flex items-center justify-center w-5 h-5 rounded bg-blue-100 text-blue-600 text-xs font-bold" title="Billable">B</span>
                      <% end %>
                      <% if expense.reimbursable? %>
                        <span class="inline-flex items-center justify-center w-5 h-5 rounded bg-amber-100 text-amber-600 text-xs font-bold" title="Reimbursable">R</span>
                      <% end %>
                      <% if expense.receipt.attached? %>
                        <span class="inline-flex items-center justify-center w-5 h-5 rounded bg-emerald-100 text-emerald-600" title="Has receipt">
                          <svg class="w-3 h-3" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M18.375 12.739l-7.693 7.693a4.5 4.5 0 01-6.364-6.364l10.94-10.94A3 3 0 1119.5 7.372L8.552 18.32m.009-.01l-.01.01m5.699-9.941l-7.81 7.81a1.5 1.5 0 002.112 2.13" />
                          </svg>
                        </span>
                      <% end %>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
            <tfoot class="bg-slate-50">
              <tr>
                <td colspan="4" class="px-6 py-4 text-sm font-semibold text-slate-900">Total</td>
                <td class="px-6 py-4 text-sm font-bold text-emerald-600 text-right"><%= number_to_currency(@total_amount) %></td>
                <td></td>
              </tr>
            </tfoot>
          </table>
        </div>
      <% else %>
        <div class="px-6 py-12 text-center">
          <div class="w-16 h-16 bg-slate-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-slate-400" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 18.75a60.07 60.07 0 0115.797 2.101c.727.198 1.453-.342 1.453-1.096V18.75M3.75 4.5v.75A.75.75 0 013 6h-.75m0 0v-.375c0-.621.504-1.125 1.125-1.125H20.25M2.25 6v9m18-10.5v.75c0 .414.336.75.75.75h.75m-1.5-1.5h.375c.621 0 1.125.504 1.125 1.125v9.75c0 .621-.504 1.125-1.125 1.125h-.375m1.5-1.5H21a.75.75 0 00-.75.75v.75m0 0H3.75m0 0h-.375a1.125 1.125 0 01-1.125-1.125V15m1.5 1.5v-.75A.75.75 0 003 15h-.75M15 10.5a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-slate-900 mb-1">No expenses found</h3>
          <p class="text-sm text-slate-500">No expenses recorded during this period.</p>
        </div>
      <% end %>
    </div>
  </div>

  <%# Print Styles %>
  <style>
    @media print {
      .no-print { display: none !important; }
      body { background: white !important; }
      .shadow-sm, .shadow-lg { box-shadow: none !important; }
      .border { border-color: #e2e8f0 !important; }
    }
  </style>
</div>
