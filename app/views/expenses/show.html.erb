<% content_for :page_title, "Expense Details" %>

<div class="max-w-3xl mx-auto space-y-6">
  <%# Header %>
  <div class="flex items-center justify-between">
    <div class="flex items-center gap-4">
      <%= link_to expenses_path, class: "p-2 text-slate-400 hover:text-slate-600 hover:bg-slate-100 rounded-lg transition-all" do %>
        <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5L3 12m0 0l7.5-7.5M3 12h18" />
        </svg>
      <% end %>
      <div>
        <h1 class="text-2xl font-bold text-slate-900"><%= @expense.description %></h1>
        <p class="text-sm text-slate-500">
          <span class="inline-flex items-center px-2 py-0.5 rounded-md text-xs font-medium bg-slate-100 text-slate-700">
            <%= @expense.category_display_name %>
          </span>
          &middot; <%= @expense.expense_date.strftime("%B %d, %Y") %>
        </p>
      </div>
    </div>
    <div class="flex items-center gap-2">
      <%= link_to edit_expense_path(@expense), class: "inline-flex items-center gap-2 px-4 py-2 text-sm font-medium text-slate-700 bg-white border border-slate-200 rounded-lg hover:bg-slate-50 transition-colors" do %>
        <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" d="M16.862 4.487l1.687-1.688a1.875 1.875 0 112.652 2.652L10.582 16.07a4.5 4.5 0 01-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 011.13-1.897l8.932-8.931zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0115.75 21H5.25A2.25 2.25 0 013 18.75V8.25A2.25 2.25 0 015.25 6H10" />
        </svg>
        Edit
      <% end %>
      <%= button_to expense_path(@expense),
          method: :delete,
          form: { data: { turbo_confirm: "Are you sure you want to delete this expense?" } },
          class: "inline-flex items-center gap-2 px-4 py-2 text-sm font-medium text-red-700 bg-red-50 border border-red-200 rounded-lg hover:bg-red-100 transition-colors" do %>
        <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" d="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0" />
        </svg>
        Delete
      <% end %>
    </div>
  </div>

  <%# Main Content %>
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <%# Left Column - Details %>
    <div class="lg:col-span-2 space-y-6">
      <%# Amount Card %>
      <div class="bg-gradient-to-br from-emerald-500 to-teal-600 rounded-2xl shadow-lg p-6 text-white">
        <p class="text-emerald-100 text-sm font-medium">Total Amount</p>
        <p class="text-4xl font-bold mt-1"><%= @expense.formatted_amount %></p>
        <div class="mt-4 flex items-center gap-4">
          <% if @expense.billable? %>
            <span class="inline-flex items-center gap-1.5 px-3 py-1 rounded-full text-xs font-medium bg-white/20 text-white">
              <svg class="w-3.5 h-3.5" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              Billable
            </span>
          <% end %>
          <% if @expense.reimbursable? %>
            <span class="inline-flex items-center gap-1.5 px-3 py-1 rounded-full text-xs font-medium bg-white/20 text-white">
              <svg class="w-3.5 h-3.5" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 18.75a60.07 60.07 0 0115.797 2.101c.727.198 1.453-.342 1.453-1.096V18.75M3.75 4.5v.75A.75.75 0 013 6h-.75m0 0v-.375c0-.621.504-1.125 1.125-1.125H20.25M2.25 6v9m18-10.5v.75c0 .414.336.75.75.75h.75m-1.5-1.5h.375c.621 0 1.125.504 1.125 1.125v9.75c0 .621-.504 1.125-1.125 1.125h-.375m1.5-1.5H21a.75.75 0 00-.75.75v.75m0 0H3.75m0 0h-.375a1.125 1.125 0 01-1.125-1.125V15m1.5 1.5v-.75A.75.75 0 003 15h-.75M15 10.5a3 3 0 11-6 0 3 3 0 016 0zm3 0h.008v.008H18V10.5zm-12 0h.008v.008H6V10.5z" />
              </svg>
              Reimbursable
            </span>
          <% end %>
        </div>
      </div>

      <%# Details Card %>
      <div class="bg-white rounded-2xl shadow-sm border border-slate-200 overflow-hidden">
        <div class="px-6 py-4 border-b border-slate-100">
          <h3 class="text-sm font-semibold text-slate-900">Expense Details</h3>
        </div>
        <div class="divide-y divide-slate-100">
          <div class="px-6 py-4 flex justify-between">
            <span class="text-sm text-slate-500">Date</span>
            <span class="text-sm font-medium text-slate-900"><%= @expense.expense_date.strftime("%B %d, %Y") %></span>
          </div>
          <div class="px-6 py-4 flex justify-between">
            <span class="text-sm text-slate-500">Category</span>
            <span class="text-sm font-medium text-slate-900"><%= @expense.category_display_name %></span>
          </div>
          <% if @expense.vendor.present? %>
            <div class="px-6 py-4 flex justify-between">
              <span class="text-sm text-slate-500">Vendor</span>
              <span class="text-sm font-medium text-slate-900"><%= @expense.vendor %></span>
            </div>
          <% end %>
          <div class="px-6 py-4 flex justify-between">
            <span class="text-sm text-slate-500">Currency</span>
            <span class="text-sm font-medium text-slate-900"><%= @expense.currency %> (<%= @expense.currency_name %>)</span>
          </div>
        </div>
      </div>

      <%# Notes Card %>
      <% if @expense.notes.present? %>
        <div class="bg-white rounded-2xl shadow-sm border border-slate-200 overflow-hidden">
          <div class="px-6 py-4 border-b border-slate-100">
            <h3 class="text-sm font-semibold text-slate-900">Notes</h3>
          </div>
          <div class="px-6 py-4">
            <p class="text-sm text-slate-600 whitespace-pre-wrap"><%= @expense.notes %></p>
          </div>
        </div>
      <% end %>
    </div>

    <%# Right Column - Associations & Receipt %>
    <div class="space-y-6">
      <%# Project/Client Card %>
      <div class="bg-white rounded-2xl shadow-sm border border-slate-200 overflow-hidden">
        <div class="px-6 py-4 border-b border-slate-100">
          <h3 class="text-sm font-semibold text-slate-900">Associated With</h3>
        </div>
        <div class="p-6 space-y-4">
          <% if @expense.project.present? %>
            <div>
              <p class="text-xs font-medium text-slate-500 uppercase tracking-wider mb-2">Project</p>
              <%= link_to project_path(@expense.project), class: "flex items-center gap-3 p-3 rounded-lg border border-slate-200 hover:border-emerald-300 hover:bg-emerald-50 transition-all" do %>
                <div class="w-10 h-10 rounded-lg bg-gradient-to-br from-blue-500 to-indigo-600 flex items-center justify-center text-white text-sm font-bold">
                  <%= @expense.project.name.first(2).upcase %>
                </div>
                <div>
                  <p class="text-sm font-medium text-slate-900"><%= @expense.project.name %></p>
                  <% if @expense.project.client %>
                    <p class="text-xs text-slate-500"><%= @expense.project.client.name %></p>
                  <% end %>
                </div>
              <% end %>
            </div>
          <% end %>

          <% if @expense.client.present? %>
            <div>
              <p class="text-xs font-medium text-slate-500 uppercase tracking-wider mb-2">Client</p>
              <%= link_to client_path(@expense.client), class: "flex items-center gap-3 p-3 rounded-lg border border-slate-200 hover:border-emerald-300 hover:bg-emerald-50 transition-all" do %>
                <div class="w-10 h-10 rounded-lg bg-gradient-to-br from-purple-500 to-pink-600 flex items-center justify-center text-white text-sm font-bold">
                  <%= @expense.client.name.first(2).upcase %>
                </div>
                <div>
                  <p class="text-sm font-medium text-slate-900"><%= @expense.client.name %></p>
                </div>
              <% end %>
            </div>
          <% end %>

          <% if @expense.project.blank? && @expense.client.blank? %>
            <div class="text-center py-4">
              <div class="w-12 h-12 rounded-full bg-slate-100 flex items-center justify-center mx-auto mb-3">
                <svg class="w-6 h-6 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1"/>
                </svg>
              </div>
              <p class="text-sm text-slate-500">Not associated with any project or client</p>
            </div>
          <% end %>
        </div>
      </div>

      <%# Receipt Card %>
      <div class="bg-white rounded-2xl shadow-sm border border-slate-200 overflow-hidden">
        <div class="px-6 py-4 border-b border-slate-100">
          <h3 class="text-sm font-semibold text-slate-900">Receipt</h3>
        </div>
        <div class="p-6">
          <% if @expense.receipt_attached? %>
            <div class="space-y-4">
              <% if @expense.receipt.content_type.start_with?("image/") %>
                <div class="rounded-lg overflow-hidden border border-slate-200">
                  <%= image_tag rails_blob_path(@expense.receipt), class: "w-full h-auto", alt: "Receipt" %>
                </div>
              <% else %>
                <div class="flex items-center gap-3 p-4 bg-slate-50 rounded-lg">
                  <div class="w-10 h-10 rounded-lg bg-red-100 flex items-center justify-center">
                    <svg class="w-5 h-5 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                    </svg>
                  </div>
                  <div>
                    <p class="text-sm font-medium text-slate-900"><%= @expense.receipt.filename %></p>
                    <p class="text-xs text-slate-500"><%= number_to_human_size(@expense.receipt.byte_size) %></p>
                  </div>
                </div>
              <% end %>
              <%= link_to rails_blob_path(@expense.receipt, disposition: "attachment"),
                  class: "w-full inline-flex items-center justify-center gap-2 px-4 py-2 text-sm font-medium text-emerald-700 bg-emerald-50 border border-emerald-200 rounded-lg hover:bg-emerald-100 transition-colors" do %>
                <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M3 16.5v2.25A2.25 2.25 0 005.25 21h13.5A2.25 2.25 0 0021 18.75V16.5M16.5 12L12 16.5m0 0L7.5 12m4.5 4.5V3" />
                </svg>
                Download Receipt
              <% end %>
            </div>
          <% else %>
            <div class="text-center py-4">
              <div class="w-12 h-12 rounded-full bg-slate-100 flex items-center justify-center mx-auto mb-3">
                <svg class="w-6 h-6 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                </svg>
              </div>
              <p class="text-sm text-slate-500">No receipt attached</p>
              <%= link_to "Add Receipt", edit_expense_path(@expense), class: "mt-2 inline-block text-sm text-emerald-600 hover:text-emerald-700 font-medium" %>
            </div>
          <% end %>
        </div>
      </div>

      <%# Metadata Card %>
      <div class="bg-white rounded-2xl shadow-sm border border-slate-200 overflow-hidden">
        <div class="px-6 py-4 border-b border-slate-100">
          <h3 class="text-sm font-semibold text-slate-900">Record Info</h3>
        </div>
        <div class="px-6 py-4 space-y-3">
          <div class="flex justify-between text-sm">
            <span class="text-slate-500">Created</span>
            <span class="text-slate-700"><%= @expense.created_at.strftime("%b %d, %Y at %I:%M %p") %></span>
          </div>
          <div class="flex justify-between text-sm">
            <span class="text-slate-500">Updated</span>
            <span class="text-slate-700"><%= @expense.updated_at.strftime("%b %d, %Y at %I:%M %p") %></span>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
