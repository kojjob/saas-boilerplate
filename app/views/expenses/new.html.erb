<% content_for :page_title, "New Expense" %>

<div class="max-w-2xl mx-auto space-y-6">
  <%# Header %>
  <div class="flex items-center gap-4">
    <%= link_to expenses_path, class: "p-2 text-slate-400 hover:text-slate-600 hover:bg-slate-100 rounded-lg transition-all" do %>
      <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5L3 12m0 0l7.5-7.5M3 12h18" />
      </svg>
    <% end %>
    <div>
      <h1 class="text-2xl font-bold text-slate-900">New Expense</h1>
      <p class="text-sm text-slate-500">Record a business expense</p>
    </div>
  </div>

  <%# Form Card %>
  <div class="bg-white rounded-2xl shadow-sm border border-slate-200 p-6">
    <%= render "form", expense: @expense %>
  </div>
</div>
