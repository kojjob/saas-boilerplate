<% content_for :title, "Invoice #{@invoice.invoice_number} - #{@client.display_name}" %>

<div class="space-y-6">
  <div class="flex items-center justify-between">
    <%= link_to portal_invoices_path(token: @client.portal_token), class: "inline-flex items-center text-sm text-slate-600 hover:text-slate-800" do %>
      <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
      </svg>
      Back to Invoices
    <% end %>

    <%= link_to portal_download_invoice_path(token: @client.portal_token, id: @invoice.id), class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do %>
      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
      </svg>
      Download PDF
    <% end %>
  </div>

  <div class="bg-white rounded-lg shadow-sm border border-slate-200 overflow-hidden">
    <div class="px-6 py-5 border-b border-slate-200">
      <div class="flex items-center justify-between">
        <div>
          <h1 class="text-2xl font-bold text-slate-900">Invoice <%= @invoice.invoice_number %></h1>
          <p class="mt-1 text-sm text-slate-600">
            Issued on <%= @invoice.issue_date&.strftime("%B %d, %Y") %>
          </p>
        </div>
        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium
          <%= case @invoice.status.to_sym
              when :draft then 'bg-slate-100 text-slate-800'
              when :sent then 'bg-blue-100 text-blue-800'
              when :viewed then 'bg-yellow-100 text-yellow-800'
              when :paid then 'bg-green-100 text-green-800'
              when :overdue then 'bg-red-100 text-red-800'
              when :cancelled then 'bg-slate-100 text-slate-800'
              else 'bg-slate-100 text-slate-800'
              end %>">
          <%= @invoice.status.humanize %>
        </span>
      </div>
    </div>

    <div class="px-6 py-5 grid grid-cols-1 md:grid-cols-2 gap-6">
      <div>
        <h3 class="text-sm font-medium text-slate-500 uppercase tracking-wider">Bill To</h3>
        <div class="mt-2 text-slate-900">
          <p class="font-medium"><%= @client.display_name %></p>
          <% if @client.full_address.present? %>
            <p class="text-sm text-slate-600 mt-1"><%= @client.full_address %></p>
          <% end %>
          <% if @client.email.present? %>
            <p class="text-sm text-slate-600"><%= @client.email %></p>
          <% end %>
          <% if @client.phone.present? %>
            <p class="text-sm text-slate-600"><%= @client.phone %></p>
          <% end %>
        </div>
      </div>

      <div class="text-right">
        <h3 class="text-sm font-medium text-slate-500 uppercase tracking-wider">Invoice Details</h3>
        <div class="mt-2 space-y-1">
          <div class="flex justify-end">
            <span class="text-sm text-slate-600">Invoice Number:</span>
            <span class="ml-2 text-sm font-medium text-slate-900"><%= @invoice.invoice_number %></span>
          </div>
          <div class="flex justify-end">
            <span class="text-sm text-slate-600">Issue Date:</span>
            <span class="ml-2 text-sm font-medium text-slate-900"><%= @invoice.issue_date&.strftime("%b %d, %Y") %></span>
          </div>
          <div class="flex justify-end">
            <span class="text-sm text-slate-600">Due Date:</span>
            <span class="ml-2 text-sm font-medium text-slate-900"><%= @invoice.due_date&.strftime("%b %d, %Y") %></span>
          </div>
          <% if @invoice.project.present? %>
            <div class="flex justify-end">
              <span class="text-sm text-slate-600">Project:</span>
              <span class="ml-2 text-sm font-medium text-slate-900"><%= @invoice.project.name %></span>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <div class="px-6 py-5 border-t border-slate-200">
      <h3 class="text-sm font-medium text-slate-500 uppercase tracking-wider mb-4">Line Items</h3>
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-slate-200">
          <thead>
            <tr>
              <th scope="col" class="text-left text-xs font-medium text-slate-500 uppercase tracking-wider pb-3">Description</th>
              <th scope="col" class="text-right text-xs font-medium text-slate-500 uppercase tracking-wider pb-3">Qty</th>
              <th scope="col" class="text-right text-xs font-medium text-slate-500 uppercase tracking-wider pb-3">Rate</th>
              <th scope="col" class="text-right text-xs font-medium text-slate-500 uppercase tracking-wider pb-3">Amount</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-slate-200">
            <% @invoice.line_items.each do |item| %>
              <tr>
                <td class="py-3 text-sm text-slate-900"><%= item.description %></td>
                <td class="py-3 text-sm text-slate-600 text-right"><%= item.quantity %></td>
                <td class="py-3 text-sm text-slate-600 text-right"><%= number_to_currency(item.unit_price) %></td>
                <td class="py-3 text-sm font-medium text-slate-900 text-right"><%= number_to_currency(item.total) %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>

    <div class="px-6 py-5 border-t border-slate-200 bg-slate-50">
      <div class="flex flex-col items-end space-y-2">
        <div class="flex justify-between w-full max-w-xs">
          <span class="text-sm text-slate-600">Subtotal:</span>
          <span class="text-sm font-medium text-slate-900"><%= number_to_currency(@invoice.subtotal) %></span>
        </div>
        <% if @invoice.tax_amount.present? && @invoice.tax_amount > 0 %>
          <div class="flex justify-between w-full max-w-xs">
            <span class="text-sm text-slate-600">Tax (<%= @invoice.tax_rate || 0 %>%):</span>
            <span class="text-sm font-medium text-slate-900"><%= number_to_currency(@invoice.tax_amount) %></span>
          </div>
        <% end %>
        <% if @invoice.discount_amount.present? && @invoice.discount_amount > 0 %>
          <div class="flex justify-between w-full max-w-xs">
            <span class="text-sm text-slate-600">Discount:</span>
            <span class="text-sm font-medium text-green-600">-<%= number_to_currency(@invoice.discount_amount) %></span>
          </div>
        <% end %>
        <div class="flex justify-between w-full max-w-xs pt-2 border-t border-slate-300">
          <span class="text-base font-semibold text-slate-900">Total:</span>
          <span class="text-base font-bold text-slate-900"><%= number_to_currency(@invoice.total_amount) %></span>
        </div>
      </div>
    </div>

    <% if @invoice.notes.present? %>
      <div class="px-6 py-5 border-t border-slate-200">
        <h3 class="text-sm font-medium text-slate-500 uppercase tracking-wider mb-2">Notes</h3>
        <p class="text-sm text-slate-600"><%= @invoice.notes %></p>
      </div>
    <% end %>

    <% if @invoice.terms.present? %>
      <div class="px-6 py-5 border-t border-slate-200">
        <h3 class="text-sm font-medium text-slate-500 uppercase tracking-wider mb-2">Terms & Conditions</h3>
        <p class="text-sm text-slate-600"><%= @invoice.terms %></p>
      </div>
    <% end %>
  </div>
</div>
