<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="md:flex md:items-center md:justify-between">
    <div class="flex-1 min-w-0">
      <h1 class="text-2xl font-bold leading-7 text-gray-900 sm:text-3xl sm:truncate">
        Billing & Subscription
      </h1>
      <p class="mt-1 text-sm text-gray-500">
        Manage your subscription and billing information
      </p>
    </div>
    <div class="mt-4 flex md:mt-0 md:ml-4">
      <%= link_to "Back to Account", account_path,
          class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
    </div>
  </div>

  <!-- Current Plan Section -->
  <div class="mt-8 bg-white shadow overflow-hidden sm:rounded-lg">
    <div class="px-4 py-5 sm:px-6">
      <h3 class="text-lg leading-6 font-medium text-gray-900">Current Plan</h3>
      <p class="mt-1 max-w-2xl text-sm text-gray-500">Your current subscription details.</p>
    </div>
    <div class="border-t border-gray-200 px-4 py-5 sm:px-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-lg font-medium text-gray-900">
            <%= @current_plan&.name || 'Free Plan' %>
          </p>
          <% if @current_plan && !@current_plan.free? %>
            <p class="text-sm text-gray-500">
              <%= @current_plan.formatted_price %>/<%= @current_plan.interval %>
            </p>
          <% end %>
        </div>
        <div>
          <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium
            <%= @account.subscription_status == 'active' ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-800' %>">
            <%= @account.subscription_status.humanize %>
          </span>
        </div>
      </div>
    </div>
  </div>

  <!-- Available Plans Section -->
  <div class="mt-8">
    <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">Available Plans</h3>
    <div class="grid gap-6 lg:grid-cols-3">
      <% @plans.each do |plan| %>
        <div class="bg-white shadow overflow-hidden sm:rounded-lg <%= @current_plan == plan ? 'ring-2 ring-indigo-500' : '' %>">
          <div class="px-4 py-5 sm:p-6">
            <h4 class="text-lg font-medium text-gray-900"><%= plan.name %></h4>
            <p class="mt-1 text-3xl font-bold text-gray-900">
              <% if plan.free? %>
                Free
              <% else %>
                <%= plan.formatted_price %><span class="text-sm font-normal text-gray-500">/<%= plan.interval %></span>
              <% end %>
            </p>
            <% if plan.description.present? %>
              <p class="mt-4 text-sm text-gray-500"><%= plan.description %></p>
            <% end %>

            <ul class="mt-6 space-y-3">
              <% plan.features&.each do |feature| %>
                <li class="flex items-start">
                  <svg class="flex-shrink-0 h-5 w-5 text-green-500" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                  </svg>
                  <span class="ml-2 text-sm text-gray-500"><%= feature %></span>
                </li>
              <% end %>
            </ul>

            <div class="mt-6">
              <% if @current_plan == plan %>
                <span class="block w-full text-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-gray-100">
                  Current Plan
                </span>
              <% else %>
                <%= link_to billing_checkout_path(plan_id: plan.id),
                    method: :post,
                    class: "block w-full text-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do %>
                  <%= @current_plan.present? && @current_plan.price_cents < plan.price_cents ? 'Upgrade' : 'Select Plan' %>
                <% end %>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Billing Portal Link -->
  <div class="mt-8 bg-white shadow overflow-hidden sm:rounded-lg">
    <div class="px-4 py-5 sm:p-6">
      <h3 class="text-lg leading-6 font-medium text-gray-900">Manage Billing</h3>
      <p class="mt-2 text-sm text-gray-500">
        Update your payment method, view invoices, and manage your subscription through our billing portal.
      </p>
      <div class="mt-4">
        <%= link_to "Open Billing Portal", billing_portal_path,
            class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
      </div>
    </div>
  </div>
</div>
