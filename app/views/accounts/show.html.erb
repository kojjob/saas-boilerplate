<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="md:flex md:items-center md:justify-between">
    <div class="flex-1 min-w-0">
      <h1 class="text-2xl font-bold leading-7 text-gray-900 sm:text-3xl sm:truncate">
        Account Settings
      </h1>
      <p class="mt-1 text-sm text-gray-500">
        Manage your account information and preferences
      </p>
    </div>
    <% if @membership&.can_manage_account? %>
      <div class="mt-4 flex md:mt-0 md:ml-4">
        <%= link_to "Edit Account", edit_account_path,
            class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
      </div>
    <% end %>
  </div>

  <div class="mt-8 bg-white shadow overflow-hidden sm:rounded-lg">
    <div class="px-4 py-5 sm:px-6">
      <h3 class="text-lg leading-6 font-medium text-gray-900">Account Information</h3>
      <p class="mt-1 max-w-2xl text-sm text-gray-500">Details and settings for your account.</p>
    </div>
    <div class="border-t border-gray-200">
      <dl>
        <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">Account name</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2"><%= @account.name %></dd>
        </div>
        <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">Subdomain</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
            <%= @account.subdomain.present? ? @account.subdomain : 'Not set' %>
          </dd>
        </div>
        <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">Your role</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
              <%= case @membership&.role
                  when 'owner' then 'bg-purple-100 text-purple-800'
                  when 'admin' then 'bg-blue-100 text-blue-800'
                  when 'member' then 'bg-green-100 text-green-800'
                  else 'bg-gray-100 text-gray-800'
                  end %>">
              <%= @membership&.role&.humanize || 'Unknown' %>
            </span>
          </dd>
        </div>
        <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">Subscription status</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
              <%= case @account.subscription_status
                  when 'active' then 'bg-green-100 text-green-800'
                  when 'trialing' then 'bg-yellow-100 text-yellow-800'
                  when 'past_due' then 'bg-red-100 text-red-800'
                  else 'bg-gray-100 text-gray-800'
                  end %>">
              <%= @account.subscription_status.humanize %>
            </span>
            <% if @account.on_trial? %>
              <span class="ml-2 text-sm text-gray-500">
                (<%= @account.days_remaining_in_trial %> days remaining)
              </span>
            <% end %>
          </dd>
        </div>
        <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">Current plan</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
            <%= @account.current_plan&.name || 'Free' %>
            <% if @account.current_plan && !@account.current_plan.free? %>
              <span class="ml-2 text-gray-500">
                (<%= @account.current_plan.formatted_price %>/<%= @account.current_plan.interval %>)
              </span>
            <% end %>
          </dd>
        </div>
        <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">Created</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
            <%= @account.created_at.strftime('%B %d, %Y') %>
          </dd>
        </div>
      </dl>
    </div>
  </div>

  <div class="mt-8 grid gap-6 lg:grid-cols-2">
    <div class="bg-white shadow overflow-hidden sm:rounded-lg">
      <div class="px-4 py-5 sm:px-6">
        <h3 class="text-lg leading-6 font-medium text-gray-900">Quick Actions</h3>
      </div>
      <div class="border-t border-gray-200 px-4 py-5 sm:px-6">
        <div class="space-y-3">
          <%= link_to account_members_path,
              class: "block w-full text-left px-4 py-3 rounded-md border border-gray-300 hover:bg-gray-50 transition-colors" do %>
            <div class="flex items-center">
              <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z" />
              </svg>
              <span class="ml-3 text-sm font-medium text-gray-900">Manage Team Members</span>
            </div>
          <% end %>

          <%= link_to billing_path,
              class: "block w-full text-left px-4 py-3 rounded-md border border-gray-300 hover:bg-gray-50 transition-colors" do %>
            <div class="flex items-center">
              <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z" />
              </svg>
              <span class="ml-3 text-sm font-medium text-gray-900">Billing & Subscription</span>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <% if current_user.accounts.count > 1 %>
      <div class="bg-white shadow overflow-hidden sm:rounded-lg">
        <div class="px-4 py-5 sm:px-6">
          <h3 class="text-lg leading-6 font-medium text-gray-900">Switch Account</h3>
          <p class="mt-1 text-sm text-gray-500">You have access to multiple accounts</p>
        </div>
        <div class="border-t border-gray-200 px-4 py-5 sm:px-6">
          <div class="space-y-3">
            <% current_user.accounts.each do |account| %>
              <% if account == @account %>
                <div class="flex items-center justify-between px-4 py-3 rounded-md bg-indigo-50 border border-indigo-200">
                  <span class="text-sm font-medium text-indigo-700"><%= account.name %></span>
                  <span class="text-xs text-indigo-500">Current</span>
                </div>
              <% else %>
                <%= button_to switch_account_path(account_id: account.id),
                    method: :post,
                    class: "flex items-center justify-between w-full px-4 py-3 rounded-md border border-gray-300 hover:bg-gray-50 transition-colors text-left" do %>
                  <span class="text-sm font-medium text-gray-900"><%= account.name %></span>
                  <span class="text-xs text-gray-500">Switch</span>
                <% end %>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
