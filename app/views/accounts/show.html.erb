<% content_for :page_title, "Account Settings" %>

<div class="space-y-6">
  <%# Hero Header with Dark Background %>
  <div class="relative overflow-hidden bg-gradient-to-r from-slate-900 via-slate-800 to-slate-900 rounded-2xl shadow-2xl">
    <%# Decorative grid pattern %>
    <div class="absolute inset-0 opacity-10">
      <svg class="w-full h-full" viewBox="0 0 100 100" preserveAspectRatio="none">
        <defs>
          <pattern id="settings-grid" width="10" height="10" patternUnits="userSpaceOnUse">
            <path d="M 10 0 L 0 0 0 10" fill="none" stroke="currentColor" stroke-width="0.5"/>
          </pattern>
        </defs>
        <rect width="100%" height="100%" fill="url(#settings-grid)"/>
      </svg>
    </div>

    <%# Gradient orbs %>
    <div class="absolute top-0 right-0 w-72 h-72 bg-amber-500/20 rounded-full blur-3xl"></div>
    <div class="absolute bottom-0 left-0 w-48 h-48 bg-orange-500/20 rounded-full blur-3xl"></div>

    <div class="relative px-6 py-8 sm:px-8 sm:py-10">
      <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-6">
        <%# Title and info %>
        <div class="flex items-start gap-4">
          <div class="flex-shrink-0 w-14 h-14 rounded-2xl bg-gradient-to-br from-amber-500 to-orange-600 flex items-center justify-center shadow-lg shadow-amber-500/30">
            <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
          </div>
          <div>
            <h1 class="text-2xl sm:text-3xl font-bold text-white">Account Settings</h1>
            <p class="mt-1 text-slate-400">Manage your account information and preferences</p>
            <div class="mt-3 flex items-center gap-3">
              <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium <%= @account.subscription_status == 'active' ? 'bg-green-500/20 text-green-300' : @account.subscription_status == 'trialing' ? 'bg-amber-500/20 text-amber-300' : 'bg-slate-500/20 text-slate-300' %>">
                <%= @account.subscription_status.humanize %>
              </span>
              <span class="text-slate-400">|</span>
              <span class="text-sm text-slate-300"><%= @account.current_plan&.name || 'Free' %> Plan</span>
            </div>
          </div>
        </div>

        <%# Action button %>
        <% if @membership&.can_manage_account? %>
          <div class="flex-shrink-0">
            <%= link_to edit_account_path, class: "inline-flex items-center gap-2 px-5 py-3 bg-gradient-to-r from-amber-500 to-orange-600 hover:from-amber-600 hover:to-orange-700 text-white font-semibold rounded-xl shadow-lg shadow-amber-500/30 hover:shadow-amber-500/50 transition-all duration-300 hover:scale-105" do %>
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
              </svg>
              Edit Account
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <%# Stats Cards Row %>
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-5">
    <%# Subscription Status Card %>
    <div class="group bg-white rounded-2xl shadow-sm border border-slate-200 p-5 hover:shadow-lg hover:shadow-amber-500/10 hover:border-amber-200 transition-all duration-300">
      <div class="flex items-center gap-4">
        <div class="flex-shrink-0 w-12 h-12 rounded-xl bg-gradient-to-br from-green-500 to-emerald-600 flex items-center justify-center shadow-lg shadow-green-500/20 group-hover:scale-110 transition-transform duration-300">
          <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
        <div class="flex-1 min-w-0">
          <p class="text-sm font-medium text-slate-500">Current Plan</p>
          <p class="text-xl font-bold text-slate-900 truncate"><%= @account.current_plan&.name || 'Free' %></p>
        </div>
      </div>
      <div class="mt-3 pt-3 border-t border-slate-100">
        <span class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-medium <%= @account.subscription_status == 'active' ? 'bg-green-100 text-green-700' : @account.subscription_status == 'trialing' ? 'bg-amber-100 text-amber-700' : 'bg-slate-100 text-slate-600' %>">
          <%= @account.subscription_status.humanize %>
        </span>
      </div>
    </div>

    <%# Role Card %>
    <div class="group bg-white rounded-2xl shadow-sm border border-slate-200 p-5 hover:shadow-lg hover:shadow-amber-500/10 hover:border-amber-200 transition-all duration-300">
      <div class="flex items-center gap-4">
        <div class="flex-shrink-0 w-12 h-12 rounded-xl bg-gradient-to-br from-amber-500 to-orange-600 flex items-center justify-center shadow-lg shadow-amber-500/20 group-hover:scale-110 transition-transform duration-300">
          <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
          </svg>
        </div>
        <div class="flex-1 min-w-0">
          <p class="text-sm font-medium text-slate-500">Your Role</p>
          <p class="text-xl font-bold text-slate-900"><%= @membership&.role&.humanize || 'N/A' %></p>
        </div>
      </div>
      <div class="mt-3 pt-3 border-t border-slate-100">
        <span class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-medium
          <%= case @membership&.role
              when 'owner' then 'bg-amber-100 text-amber-700'
              when 'admin' then 'bg-blue-100 text-blue-700'
              when 'member' then 'bg-green-100 text-green-700'
              else 'bg-slate-100 text-slate-600'
              end %>">
          <%= @membership&.role&.humanize || 'Unknown' %>
        </span>
      </div>
    </div>

    <%# Trial Days or Member Since Card %>
    <% if @account.on_trial? %>
      <div class="group bg-white rounded-2xl shadow-sm border border-slate-200 p-5 hover:shadow-lg hover:shadow-amber-500/10 hover:border-amber-200 transition-all duration-300">
        <div class="flex items-center gap-4">
          <div class="flex-shrink-0 w-12 h-12 rounded-xl bg-gradient-to-br from-amber-400 to-orange-500 flex items-center justify-center shadow-lg shadow-amber-500/20 group-hover:scale-110 transition-transform duration-300">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <div class="flex-1 min-w-0">
            <p class="text-sm font-medium text-slate-500">Days Remaining</p>
            <p class="text-xl font-bold text-slate-900"><%= @account.days_remaining_in_trial %></p>
          </div>
        </div>
        <div class="mt-3 pt-3 border-t border-slate-100">
          <span class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-medium bg-amber-100 text-amber-700">
            Trial Period
          </span>
        </div>
      </div>
    <% else %>
      <div class="group bg-white rounded-2xl shadow-sm border border-slate-200 p-5 hover:shadow-lg hover:shadow-amber-500/10 hover:border-amber-200 transition-all duration-300">
        <div class="flex items-center gap-4">
          <div class="flex-shrink-0 w-12 h-12 rounded-xl bg-gradient-to-br from-blue-500 to-indigo-600 flex items-center justify-center shadow-lg shadow-blue-500/20 group-hover:scale-110 transition-transform duration-300">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
          </div>
          <div class="flex-1 min-w-0">
            <p class="text-sm font-medium text-slate-500">Member Since</p>
            <p class="text-xl font-bold text-slate-900"><%= @account.created_at.strftime('%b %Y') %></p>
          </div>
        </div>
        <div class="mt-3 pt-3 border-t border-slate-100">
          <span class="text-xs text-slate-500"><%= @account.created_at.strftime('%B %d, %Y') %></span>
        </div>
      </div>
    <% end %>

    <%# Price Card %>
    <div class="group bg-white rounded-2xl shadow-sm border border-slate-200 p-5 hover:shadow-lg hover:shadow-amber-500/10 hover:border-amber-200 transition-all duration-300">
      <div class="flex items-center gap-4">
        <div class="flex-shrink-0 w-12 h-12 rounded-xl bg-gradient-to-br from-emerald-500 to-green-600 flex items-center justify-center shadow-lg shadow-emerald-500/20 group-hover:scale-110 transition-transform duration-300">
          <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
        <div class="flex-1 min-w-0">
          <p class="text-sm font-medium text-slate-500">
            <% if @account.current_plan && !@account.current_plan.free? %>
              per <%= @account.current_plan.interval %>
            <% else %>
              Forever
            <% end %>
          </p>
          <p class="text-xl font-bold text-slate-900">
            <% if @account.current_plan && !@account.current_plan.free? %>
              <%= @account.current_plan.formatted_price %>
            <% else %>
              $0
            <% end %>
          </p>
        </div>
      </div>
      <div class="mt-3 pt-3 border-t border-slate-100">
        <%= link_to billing_path, class: "text-amber-600 hover:text-amber-700 text-xs font-medium" do %>
          Manage billing &rarr;
        <% end %>
      </div>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <%# Account Information Card %>
    <div class="lg:col-span-2 bg-white rounded-2xl shadow-sm border border-slate-200 overflow-hidden">
      <div class="px-6 py-5 border-b border-slate-200 bg-gradient-to-r from-slate-50 to-white">
        <div class="flex items-center gap-3">
          <div class="w-10 h-10 rounded-xl bg-gradient-to-br from-amber-500 to-orange-600 flex items-center justify-center">
            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
            </svg>
          </div>
          <div>
            <h3 class="text-lg font-semibold text-slate-900">Account Information</h3>
            <p class="text-sm text-slate-500">Details and settings for your account</p>
          </div>
        </div>
      </div>
      <div class="divide-y divide-slate-100">
        <div class="px-6 py-4 flex items-center justify-between hover:bg-slate-50 transition-colors">
          <div>
            <p class="text-sm font-medium text-slate-500">Account Name</p>
            <p class="text-base font-semibold text-slate-900 mt-1"><%= @account.name %></p>
          </div>
          <% if @membership&.can_manage_account? %>
            <%= link_to edit_account_path, class: "text-amber-600 hover:text-amber-700 text-sm font-medium" do %>
              Edit
            <% end %>
          <% end %>
        </div>
        <div class="px-6 py-4 flex items-center justify-between hover:bg-slate-50 transition-colors">
          <div>
            <p class="text-sm font-medium text-slate-500">Subdomain</p>
            <p class="text-base font-semibold text-slate-900 mt-1">
              <%= @account.subdomain.present? ? "#{@account.subdomain}.#{request.domain}" : 'Not configured' %>
            </p>
          </div>
          <% if @membership&.can_manage_account? %>
            <%= link_to edit_account_path, class: "text-amber-600 hover:text-amber-700 text-sm font-medium" do %>
              Configure
            <% end %>
          <% end %>
        </div>
        <div class="px-6 py-4 flex items-center justify-between hover:bg-slate-50 transition-colors">
          <div>
            <p class="text-sm font-medium text-slate-500">Billing</p>
            <p class="text-base font-semibold text-slate-900 mt-1">
              <%= @account.current_plan&.name || 'Free Plan' %>
              <% if @account.current_plan && !@account.current_plan.free? %>
                <span class="text-slate-500 font-normal">- <%= @account.current_plan.formatted_price %>/<%= @account.current_plan.interval %></span>
              <% end %>
            </p>
          </div>
          <%= link_to billing_path, class: "text-amber-600 hover:text-amber-700 text-sm font-medium" do %>
            Manage
          <% end %>
        </div>
      </div>
    </div>

    <%# Quick Actions Card %>
    <div class="bg-white rounded-2xl shadow-sm border border-slate-200 overflow-hidden">
      <div class="px-6 py-5 border-b border-slate-200 bg-gradient-to-r from-slate-50 to-white">
        <h3 class="text-lg font-semibold text-slate-900">Quick Actions</h3>
      </div>
      <div class="p-4 space-y-2">
        <%= link_to account_members_path, class: "flex items-center p-3 rounded-xl hover:bg-gradient-to-r hover:from-amber-50/50 hover:to-orange-50/50 transition-all group" do %>
          <div class="flex-shrink-0 w-10 h-10 rounded-xl bg-gradient-to-br from-amber-500 to-orange-600 flex items-center justify-center shadow-lg shadow-amber-500/20 group-hover:scale-110 transition-transform duration-300">
            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
            </svg>
          </div>
          <div class="ml-4 flex-1">
            <p class="text-sm font-semibold text-slate-900 group-hover:text-amber-600 transition-colors">Team Members</p>
            <p class="text-xs text-slate-500">Manage your team</p>
          </div>
          <svg class="w-5 h-5 text-slate-400 group-hover:text-amber-500 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
        <% end %>

        <%= link_to billing_path, class: "flex items-center p-3 rounded-xl hover:bg-gradient-to-r hover:from-amber-50/50 hover:to-orange-50/50 transition-all group" do %>
          <div class="flex-shrink-0 w-10 h-10 rounded-xl bg-gradient-to-br from-green-500 to-emerald-600 flex items-center justify-center shadow-lg shadow-green-500/20 group-hover:scale-110 transition-transform duration-300">
            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z" />
            </svg>
          </div>
          <div class="ml-4 flex-1">
            <p class="text-sm font-semibold text-slate-900 group-hover:text-amber-600 transition-colors">Billing & Plans</p>
            <p class="text-xs text-slate-500">Manage subscription</p>
          </div>
          <svg class="w-5 h-5 text-slate-400 group-hover:text-amber-500 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
        <% end %>

        <%= link_to edit_account_path, class: "flex items-center p-3 rounded-xl hover:bg-gradient-to-r hover:from-amber-50/50 hover:to-orange-50/50 transition-all group" do %>
          <div class="flex-shrink-0 w-10 h-10 rounded-xl bg-gradient-to-br from-blue-500 to-indigo-600 flex items-center justify-center shadow-lg shadow-blue-500/20 group-hover:scale-110 transition-transform duration-300">
            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
            </svg>
          </div>
          <div class="ml-4 flex-1">
            <p class="text-sm font-semibold text-slate-900 group-hover:text-amber-600 transition-colors">Your Profile</p>
            <p class="text-xs text-slate-500">Update your info</p>
          </div>
          <svg class="w-5 h-5 text-slate-400 group-hover:text-amber-500 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
        <% end %>
      </div>
    </div>
  </div>

  <%# Switch Account Section (if multiple accounts) %>
  <% if current_user.accounts.count > 1 %>
    <div class="bg-white rounded-2xl shadow-sm border border-slate-200 overflow-hidden">
      <div class="px-6 py-5 border-b border-slate-200 bg-gradient-to-r from-slate-50 to-white">
        <div class="flex items-center gap-3">
          <div class="w-10 h-10 rounded-xl bg-gradient-to-br from-slate-600 to-slate-800 flex items-center justify-center">
            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4" />
            </svg>
          </div>
          <div>
            <h3 class="text-lg font-semibold text-slate-900">Switch Account</h3>
            <p class="text-sm text-slate-500">You have access to <%= current_user.accounts.count %> accounts</p>
          </div>
        </div>
      </div>
      <div class="p-5">
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
          <% current_user.accounts.each do |account| %>
            <% if account == @account %>
              <div class="flex items-center p-4 rounded-xl bg-gradient-to-r from-amber-50 to-orange-50 border-2 border-amber-200">
                <div class="flex-shrink-0 w-12 h-12 bg-gradient-to-br from-amber-500 to-orange-600 rounded-xl flex items-center justify-center shadow-lg shadow-amber-500/20">
                  <span class="text-base font-bold text-white"><%= account.name.first.upcase %></span>
                </div>
                <div class="ml-4 flex-1 min-w-0">
                  <p class="text-sm font-semibold text-slate-900 truncate"><%= account.name %></p>
                  <p class="text-xs text-amber-600 font-medium">Current Account</p>
                </div>
                <svg class="w-5 h-5 text-amber-500" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                </svg>
              </div>
            <% else %>
              <%= button_to switch_account_path(account_id: account.id), method: :post, class: "flex items-center p-4 rounded-xl border border-slate-200 hover:bg-gradient-to-r hover:from-amber-50/50 hover:to-orange-50/50 hover:border-amber-200 transition-all w-full text-left group" do %>
                <div class="flex-shrink-0 w-12 h-12 bg-slate-200 rounded-xl flex items-center justify-center group-hover:bg-gradient-to-br group-hover:from-slate-600 group-hover:to-slate-800 transition-all">
                  <span class="text-base font-bold text-slate-600 group-hover:text-white transition-colors"><%= account.name.first.upcase %></span>
                </div>
                <div class="ml-4 flex-1 min-w-0">
                  <p class="text-sm font-semibold text-slate-900 truncate"><%= account.name %></p>
                  <p class="text-xs text-slate-500 group-hover:text-amber-600 transition-colors">Click to switch</p>
                </div>
                <svg class="w-5 h-5 text-slate-400 group-hover:text-amber-500 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
              <% end %>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>
