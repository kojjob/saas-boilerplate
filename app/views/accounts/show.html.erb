<% content_for :page_title, "Account Settings" %>

<div class="space-y-6">
  <%# Page Header %>
  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between">
    <div>
      <h1 class="text-2xl font-bold text-slate-900">Account Settings</h1>
      <p class="mt-1 text-sm text-slate-500">Manage your account information and preferences</p>
    </div>
    <% if @membership&.can_manage_account? %>
      <div class="mt-4 sm:mt-0">
        <%= link_to edit_account_path, class: "inline-flex items-center px-4 py-2 bg-gradient-to-r from-indigo-600 to-purple-600 text-white text-sm font-medium rounded-lg shadow-lg shadow-indigo-500/25 hover:shadow-indigo-500/40 transition-all duration-200" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
          </svg>
          Edit Account
        <% end %>
      </div>
    <% end %>
  </div>

  <%# Stats Cards Row %>
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
    <%# Subscription Status Card %>
    <div class="bg-white rounded-xl shadow-sm border border-slate-200 p-5">
      <div class="flex items-center justify-between">
        <div class="flex-shrink-0 p-3 bg-green-100 rounded-lg">
          <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
        <span class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-medium <%= @account.subscription_status == 'active' ? 'bg-green-100 text-green-700' : 'bg-slate-100 text-slate-600' %>">
          <%= @account.subscription_status.humanize %>
        </span>
      </div>
      <div class="mt-4">
        <p class="text-2xl font-bold text-slate-900"><%= @account.current_plan&.name || 'Free' %></p>
        <p class="text-sm text-slate-500">Current Plan</p>
      </div>
    </div>

    <%# Role Card %>
    <div class="bg-white rounded-xl shadow-sm border border-slate-200 p-5">
      <div class="flex items-center justify-between">
        <div class="flex-shrink-0 p-3 bg-purple-100 rounded-lg">
          <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
          </svg>
        </div>
        <span class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-medium
          <%= case @membership&.role
              when 'owner' then 'bg-purple-100 text-purple-700'
              when 'admin' then 'bg-blue-100 text-blue-700'
              when 'member' then 'bg-green-100 text-green-700'
              else 'bg-slate-100 text-slate-600'
              end %>">
          <%= @membership&.role&.humanize || 'Unknown' %>
        </span>
      </div>
      <div class="mt-4">
        <p class="text-2xl font-bold text-slate-900"><%= @membership&.role&.humanize || 'N/A' %></p>
        <p class="text-sm text-slate-500">Your Role</p>
      </div>
    </div>

    <%# Trial Days Card %>
    <% if @account.on_trial? %>
      <div class="bg-white rounded-xl shadow-sm border border-slate-200 p-5">
        <div class="flex items-center justify-between">
          <div class="flex-shrink-0 p-3 bg-amber-100 rounded-lg">
            <svg class="w-6 h-6 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <span class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-medium bg-amber-100 text-amber-700">
            Trial
          </span>
        </div>
        <div class="mt-4">
          <p class="text-2xl font-bold text-slate-900"><%= @account.days_remaining_in_trial %></p>
          <p class="text-sm text-slate-500">Days Remaining</p>
        </div>
      </div>
    <% else %>
      <div class="bg-white rounded-xl shadow-sm border border-slate-200 p-5">
        <div class="flex items-center justify-between">
          <div class="flex-shrink-0 p-3 bg-blue-100 rounded-lg">
            <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
          </div>
        </div>
        <div class="mt-4">
          <p class="text-2xl font-bold text-slate-900"><%= @account.created_at.strftime('%b %d, %Y') %></p>
          <p class="text-sm text-slate-500">Member Since</p>
        </div>
      </div>
    <% end %>

    <%# Price Card %>
    <div class="bg-white rounded-xl shadow-sm border border-slate-200 p-5">
      <div class="flex items-center justify-between">
        <div class="flex-shrink-0 p-3 bg-indigo-100 rounded-lg">
          <svg class="w-6 h-6 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
      </div>
      <div class="mt-4">
        <p class="text-2xl font-bold text-slate-900">
          <% if @account.current_plan && !@account.current_plan.free? %>
            <%= @account.current_plan.formatted_price %>
          <% else %>
            $0
          <% end %>
        </p>
        <p class="text-sm text-slate-500">
          <% if @account.current_plan && !@account.current_plan.free? %>
            per <%= @account.current_plan.interval %>
          <% else %>
            Free forever
          <% end %>
        </p>
      </div>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <%# Account Information Card %>
    <div class="lg:col-span-2 bg-white rounded-xl shadow-sm border border-slate-200">
      <div class="px-6 py-4 border-b border-slate-200">
        <h3 class="text-lg font-semibold text-slate-900">Account Information</h3>
        <p class="text-sm text-slate-500">Details and settings for your account</p>
      </div>
      <div class="divide-y divide-slate-100">
        <div class="px-6 py-4 flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-slate-500">Account Name</p>
            <p class="text-base font-medium text-slate-900 mt-1"><%= @account.name %></p>
          </div>
          <% if @membership&.can_manage_account? %>
            <%= link_to edit_account_path, class: "text-indigo-600 hover:text-indigo-700 text-sm font-medium" do %>
              Edit
            <% end %>
          <% end %>
        </div>
        <div class="px-6 py-4 flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-slate-500">Subdomain</p>
            <p class="text-base font-medium text-slate-900 mt-1">
              <%= @account.subdomain.present? ? "#{@account.subdomain}.#{request.domain}" : 'Not configured' %>
            </p>
          </div>
          <% if @membership&.can_manage_account? %>
            <%= link_to edit_account_path, class: "text-indigo-600 hover:text-indigo-700 text-sm font-medium" do %>
              Configure
            <% end %>
          <% end %>
        </div>
        <div class="px-6 py-4 flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-slate-500">Billing</p>
            <p class="text-base font-medium text-slate-900 mt-1">
              <%= @account.current_plan&.name || 'Free Plan' %>
              <% if @account.current_plan && !@account.current_plan.free? %>
                <span class="text-slate-500">- <%= @account.current_plan.formatted_price %>/<%= @account.current_plan.interval %></span>
              <% end %>
            </p>
          </div>
          <%= link_to billing_path, class: "text-indigo-600 hover:text-indigo-700 text-sm font-medium" do %>
            Manage
          <% end %>
        </div>
      </div>
    </div>

    <%# Quick Actions Card %>
    <div class="bg-white rounded-xl shadow-sm border border-slate-200">
      <div class="px-6 py-4 border-b border-slate-200">
        <h3 class="text-lg font-semibold text-slate-900">Quick Actions</h3>
      </div>
      <div class="p-4 space-y-2">
        <%= link_to account_members_path, class: "flex items-center p-3 rounded-lg hover:bg-slate-50 transition-colors group" do %>
          <div class="flex-shrink-0 p-2 bg-indigo-100 rounded-lg group-hover:bg-indigo-200 transition-colors">
            <svg class="w-5 h-5 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
            </svg>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-slate-900">Team Members</p>
            <p class="text-xs text-slate-500">Manage your team</p>
          </div>
          <svg class="w-5 h-5 text-slate-400 ml-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
        <% end %>

        <%= link_to billing_path, class: "flex items-center p-3 rounded-lg hover:bg-slate-50 transition-colors group" do %>
          <div class="flex-shrink-0 p-2 bg-green-100 rounded-lg group-hover:bg-green-200 transition-colors">
            <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z" />
            </svg>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-slate-900">Billing & Plans</p>
            <p class="text-xs text-slate-500">Manage subscription</p>
          </div>
          <svg class="w-5 h-5 text-slate-400 ml-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
        <% end %>

        <%= link_to edit_account_path, class: "flex items-center p-3 rounded-lg hover:bg-slate-50 transition-colors group" do %>
          <div class="flex-shrink-0 p-2 bg-purple-100 rounded-lg group-hover:bg-purple-200 transition-colors">
            <svg class="w-5 h-5 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
            </svg>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-slate-900">Your Profile</p>
            <p class="text-xs text-slate-500">Update your info</p>
          </div>
          <svg class="w-5 h-5 text-slate-400 ml-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
        <% end %>
      </div>
    </div>
  </div>

  <%# Switch Account Section (if multiple accounts) %>
  <% if current_user.accounts.count > 1 %>
    <div class="bg-white rounded-xl shadow-sm border border-slate-200">
      <div class="px-6 py-4 border-b border-slate-200">
        <h3 class="text-lg font-semibold text-slate-900">Switch Account</h3>
        <p class="text-sm text-slate-500">You have access to <%= current_user.accounts.count %> accounts</p>
      </div>
      <div class="p-4">
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-3">
          <% current_user.accounts.each do |account| %>
            <% if account == @account %>
              <div class="flex items-center p-4 rounded-lg bg-gradient-to-r from-indigo-50 to-purple-50 border-2 border-indigo-200">
                <div class="flex-shrink-0 w-10 h-10 bg-gradient-to-br from-indigo-500 to-purple-600 rounded-lg flex items-center justify-center">
                  <span class="text-sm font-bold text-white"><%= account.name.first.upcase %></span>
                </div>
                <div class="ml-3 flex-1 min-w-0">
                  <p class="text-sm font-medium text-slate-900 truncate"><%= account.name %></p>
                  <p class="text-xs text-indigo-600">Current</p>
                </div>
                <svg class="w-5 h-5 text-indigo-600" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                </svg>
              </div>
            <% else %>
              <%= button_to switch_account_path(account_id: account.id), method: :post, class: "flex items-center p-4 rounded-lg border border-slate-200 hover:bg-slate-50 hover:border-slate-300 transition-all w-full text-left" do %>
                <div class="flex-shrink-0 w-10 h-10 bg-slate-200 rounded-lg flex items-center justify-center">
                  <span class="text-sm font-bold text-slate-600"><%= account.name.first.upcase %></span>
                </div>
                <div class="ml-3 flex-1 min-w-0">
                  <p class="text-sm font-medium text-slate-900 truncate"><%= account.name %></p>
                  <p class="text-xs text-slate-500">Switch</p>
                </div>
                <svg class="w-5 h-5 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
              <% end %>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>
