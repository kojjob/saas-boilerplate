<%# Profile Completion Card %>
<div class="bg-white rounded-2xl shadow-sm border border-slate-200 overflow-hidden">
  <div class="px-6 py-5 border-b border-slate-200 bg-linear-to-r from-slate-50 to-white">
    <div class="flex items-center gap-3">
      <div class="w-10 h-10 rounded-xl bg-linear-to-br from-emerald-500 to-teal-600 flex items-center justify-center">
        <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
      </div>
      <div>
        <h3 class="text-lg font-semibold text-slate-900">Profile Completion</h3>
      </div>
    </div>
  </div>

  <div class="p-6 space-y-4">
    <%# Progress Circle %>
    <div class="flex items-center justify-center">
      <div class="relative w-32 h-32">
        <svg class="w-32 h-32 transform -rotate-90">
          <circle cx="64" cy="64" r="56" stroke="currentColor" stroke-width="8" fill="none" class="text-slate-200" />
          <circle cx="64" cy="64" r="56" stroke="currentColor" stroke-width="8" fill="none" 
                  class="text-emerald-500"
                  stroke-dasharray="<%= 2 * Math::PI * 56 %>"
                  stroke-dashoffset="<%= 2 * Math::PI * 56 * (1 - user.profile_completion_percentage / 100.0) %>"
                  stroke-linecap="round" />
        </svg>
        <div class="absolute inset-0 flex items-center justify-center">
          <span class="text-3xl font-bold text-slate-900"><%= user.profile_completion_percentage %>%</span>
        </div>
      </div>
    </div>

    <%# Completion Checklist %>
    <div class="space-y-3">
      <div class="flex items-center gap-3">
        <% if user.first_name.present? && user.last_name.present? %>
          <div class="w-6 h-6 rounded-full bg-emerald-100 flex items-center justify-center">
            <svg class="w-4 h-4 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
          </div>
          <span class="text-sm text-slate-600">Full name added</span>
        <% else %>
          <div class="w-6 h-6 rounded-full bg-slate-100 flex items-center justify-center">
            <div class="w-2 h-2 rounded-full bg-slate-400"></div>
          </div>
          <span class="text-sm text-slate-400">Add your full name</span>
        <% end %>
      </div>

      <div class="flex items-center gap-3">
        <% if user.email.present? %>
          <div class="w-6 h-6 rounded-full bg-emerald-100 flex items-center justify-center">
            <svg class="w-4 h-4 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
          </div>
          <span class="text-sm text-slate-600">Email verified</span>
        <% else %>
          <div class="w-6 h-6 rounded-full bg-slate-100 flex items-center justify-center">
            <div class="w-2 h-2 rounded-full bg-slate-400"></div>
          </div>
          <span class="text-sm text-slate-400">Verify your email</span>
        <% end %>
      </div>

      <div class="flex items-center gap-3">
        <% if user.phone_number.present? %>
          <div class="w-6 h-6 rounded-full bg-emerald-100 flex items-center justify-center">
            <svg class="w-4 h-4 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
          </div>
          <span class="text-sm text-slate-600">Phone number added</span>
        <% else %>
          <div class="w-6 h-6 rounded-full bg-slate-100 flex items-center justify-center">
            <div class="w-2 h-2 rounded-full bg-slate-400"></div>
          </div>
          <span class="text-sm text-slate-400">Add phone number</span>
        <% end %>
      </div>

      <div class="flex items-center gap-3">
        <% if user.job_title.present? %>
          <div class="w-6 h-6 rounded-full bg-emerald-100 flex items-center justify-center">
            <svg class="w-4 h-4 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
          </div>
          <span class="text-sm text-slate-600">Trade specialty set</span>
        <% else %>
          <div class="w-6 h-6 rounded-full bg-slate-100 flex items-center justify-center">
            <div class="w-2 h-2 rounded-full bg-slate-400"></div>
          </div>
          <span class="text-sm text-slate-400">Add your trade specialty</span>
        <% end %>
      </div>

      <div class="flex items-center gap-3">
        <% if user.avatar.attached? %>
          <div class="w-6 h-6 rounded-full bg-emerald-100 flex items-center justify-center">
            <svg class="w-4 h-4 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
          </div>
          <span class="text-sm text-slate-600">Profile photo uploaded</span>
        <% else %>
          <div class="w-6 h-6 rounded-full bg-slate-100 flex items-center justify-center">
            <div class="w-2 h-2 rounded-full bg-slate-400"></div>
          </div>
          <span class="text-sm text-slate-400">Upload a profile photo</span>
        <% end %>
      </div>
    </div>
  </div>
</div>
