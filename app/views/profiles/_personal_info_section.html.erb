<%# Personal Information Section %>
<div id="personal-info-section" class="bg-white rounded-2xl shadow-sm border border-slate-200 overflow-hidden">
  <div class="px-6 py-5 border-b border-slate-200 bg-linear-to-r from-slate-50 to-white">
    <div class="flex items-center gap-3">
      <div class="w-10 h-10 rounded-xl bg-linear-to-br from-blue-500 to-indigo-600 flex items-center justify-center">
        <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
        </svg>
      </div>
      <div>
        <h3 class="text-lg font-semibold text-slate-900">Personal Information</h3>
        <p class="text-sm text-slate-500">Update your personal details and contact information</p>
      </div>
    </div>
  </div>

  <div class="p-6">
    <%= form_with model: user, url: profile_path, method: :patch, data: { turbo: true }, class: "space-y-6" do |form| %>
      <% if user.errors.any? %>
        <div class="rounded-xl bg-red-50 border border-red-200 p-4">
          <div class="flex">
            <svg class="h-5 w-5 text-red-400 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <div class="ml-3">
              <h3 class="text-sm font-medium text-red-800">Please fix the following errors:</h3>
              <ul class="mt-2 text-sm text-red-700 list-disc list-inside">
                <% user.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      <% end %>

      <%# Name Fields %>
      <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
        <div>
          <%= form.label :first_name, class: "block text-sm font-medium text-slate-700 mb-2" %>
          <%= form.text_field :first_name, 
              class: "w-full px-4 py-3 rounded-xl border border-slate-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200 text-slate-900 placeholder-slate-400",
              placeholder: "John" %>
        </div>
        <div>
          <%= form.label :last_name, class: "block text-sm font-medium text-slate-700 mb-2" %>
          <%= form.text_field :last_name, 
              class: "w-full px-4 py-3 rounded-xl border border-slate-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200 text-slate-900 placeholder-slate-400",
              placeholder: "Doe" %>
        </div>
      </div>

      <%# Email Field %>
      <div>
        <%= form.label :email, class: "block text-sm font-medium text-slate-700 mb-2" %>
        <%= form.email_field :email, 
            class: "w-full px-4 py-3 rounded-xl border border-slate-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200 text-slate-900 placeholder-slate-400",
            placeholder: "john@example.com" %>
        <p class="mt-1.5 text-xs text-slate-500">This email is used for login and notifications</p>
      </div>

      <%# Phone and Job Title %>
      <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
        <div>
          <%= form.label :phone_number, "Phone Number", class: "block text-sm font-medium text-slate-700 mb-2" %>
          <%= form.telephone_field :phone_number, 
              class: "w-full px-4 py-3 rounded-xl border border-slate-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200 text-slate-900 placeholder-slate-400",
              placeholder: "+1 (555) 123-4567" %>
        </div>
        <div>
          <%= form.label :job_title, "Trade / Specialty", class: "block text-sm font-medium text-slate-700 mb-2" %>
          <%= form.text_field :job_title, 
              class: "w-full px-4 py-3 rounded-xl border border-slate-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200 text-slate-900 placeholder-slate-400",
              placeholder: "Master Electrician" %>
        </div>
      </div>

      <%# Time Zone and Locale %>
      <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
        <div>
          <%= form.label :time_zone, class: "block text-sm font-medium text-slate-700 mb-2" %>
          <%= form.time_zone_select :time_zone, 
              ActiveSupport::TimeZone.us_zones,
              { default: user.time_zone || "UTC" },
              class: "w-full px-4 py-3 rounded-xl border border-slate-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200 text-slate-900" %>
        </div>
        <div>
          <%= form.label :locale, "Language", class: "block text-sm font-medium text-slate-700 mb-2" %>
          <%= form.select :locale, 
              [["English", "en"], ["Spanish", "es"], ["French", "fr"]],
              { selected: user.locale || "en" },
              class: "w-full px-4 py-3 rounded-xl border border-slate-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200 text-slate-900" %>
        </div>
      </div>

      <%# Submit Button %>
      <div class="flex justify-end pt-4 border-t border-slate-200">
        <%= form.submit "Save Changes", 
            class: "inline-flex items-center gap-2 px-6 py-3 bg-gradient-to-r from-blue-500 to-indigo-600 text-white font-semibold rounded-xl shadow-lg shadow-blue-500/30 hover:shadow-blue-500/50 hover:scale-[1.02] transition-all duration-300 cursor-pointer" %>
      </div>
    <% end %>
  </div>
</div>
