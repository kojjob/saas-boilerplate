<%# Avatar Upload Section %>
<div id="avatar-section" class="bg-white rounded-2xl shadow-sm border border-slate-200 overflow-hidden">
  <div class="px-6 py-5 border-b border-slate-200 bg-linear-to-r from-slate-50 to-white">
    <div class="flex items-center gap-3">
      <div class="w-10 h-10 rounded-xl bg-linear-to-br from-emerald-500 to-teal-600 flex items-center justify-center">
        <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
        </svg>
      </div>
      <div>
        <h3 class="text-lg font-semibold text-slate-900">Profile Photo</h3>
        <p class="text-sm text-slate-500">Upload a photo to personalize your account</p>
      </div>
    </div>
  </div>

  <div class="p-6">
    <div data-controller="avatar-upload" class="flex flex-col sm:flex-row gap-6">
      <%# Current Avatar Preview %>
      <div class="shrink-0">
        <div class="relative">
          <% if user.avatar.attached? %>
            <%= image_tag user.avatar.variant(:large), 
                data: { avatar_upload_target: "preview" },
                class: "w-32 h-32 rounded-2xl object-cover shadow-lg ring-4 ring-slate-100" %>
          <% else %>
            <div data-avatar-upload-target="placeholder" class="w-32 h-32 rounded-2xl bg-linear-to-br from-slate-100 to-slate-200 flex items-center justify-center shadow-lg ring-4 ring-slate-100">
              <span class="text-4xl font-bold text-slate-400"><%= user.first_name[0] %><%= user.last_name[0] %></span>
            </div>
            <img data-avatar-upload-target="preview" class="hidden w-32 h-32 rounded-2xl object-cover shadow-lg ring-4 ring-slate-100" />
          <% end %>
        </div>
      </div>

      <%# Upload Form %>
      <div class="flex-1 space-y-4">
        <form action="<%= update_avatar_profile_path %>" method="post" enctype="multipart/form-data" class="space-y-4" id="avatar-upload-form">
          <input type="hidden" name="_method" value="patch" />
          <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>" />

          <%# Dropzone %>
          <div data-avatar-upload-target="dropzone"
               data-action="click->avatar-upload#selectFile"
               class="relative border-2 border-dashed border-slate-300 rounded-xl p-6 text-center cursor-pointer hover:border-emerald-500 hover:bg-emerald-50/50 transition-all duration-300">
            <input type="file"
                   name="avatar"
                   id="avatar_file_input"
                   accept="image/jpeg,image/png,image/gif,image/webp"
                   data-avatar-upload-target="input"
                   data-action="change->avatar-upload#handleFileSelect"
                   class="hidden" />

            <svg class="mx-auto h-12 w-12 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12" />
            </svg>
            <p class="mt-2 text-sm text-slate-600">
              <span class="font-semibold text-emerald-600">Click to upload</span> or drag and drop
            </p>
            <p class="mt-1 text-xs text-slate-500">PNG, JPG, GIF or WebP (max. 5MB)</p>

            <%# Selected filename %>
            <p data-avatar-upload-target="filename" class="hidden mt-2 text-sm font-medium text-emerald-600"></p>
          </div>

          <%# Action Buttons %>
          <div class="flex flex-wrap gap-3">
            <button type="submit"
                    data-avatar-upload-target="submitBtn"
                    disabled
                    class="inline-flex items-center gap-2 px-4 py-2.5 bg-linear-to-r from-emerald-500 to-teal-600 text-white font-semibold rounded-xl shadow-lg shadow-emerald-500/30 hover:shadow-emerald-500/50 transition-all duration-300 disabled:opacity-50 disabled:cursor-not-allowed disabled:shadow-none">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-8l-4-4m0 0L8 8m4-4v12" />
              </svg>
              Upload Photo
            </button>

            <button type="button"
                    data-avatar-upload-target="removeBtn"
                    data-action="click->avatar-upload#removePreview"
                    class="hidden items-center gap-2 px-4 py-2.5 bg-slate-100 text-slate-700 font-semibold rounded-xl hover:bg-slate-200 transition-all duration-300">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
              </svg>
              Cancel
            </button>
          </div>
        </form>

        <% if user.avatar.attached? %>
          <%= button_to remove_avatar_profile_path, method: :delete, data: { turbo_confirm: "Are you sure you want to remove your profile photo?" }, class: "inline-flex items-center gap-2 px-4 py-2.5 text-red-600 font-medium hover:text-red-700 hover:bg-red-50 rounded-xl transition-all duration-300" do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
            </svg>
            Remove current photo
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
