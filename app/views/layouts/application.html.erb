<!DOCTYPE html>
<html class="h-full">
  <head>
    <title><%= content_for(:title) || "Deployable" %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="application-name" content="Deployable">
    <meta name="mobile-web-app-capable" content="yes">

    <%# SEO Meta Tags %>
    <% if content_for?(:meta_description) %>
      <meta name="description" content="<%= content_for(:meta_description) %>">
    <% end %>
    <% if content_for?(:meta_keywords) %>
      <meta name="keywords" content="<%= content_for(:meta_keywords) %>">
    <% end %>
    <meta name="robots" content="<%= content_for?(:meta_robots) ? content_for(:meta_robots) : 'index, follow' %>">

    <%# Open Graph Meta Tags %>
    <meta property="og:title" content="<%= content_for(:title) || 'Deployable' %>">
    <meta property="og:type" content="<%= content_for?(:og_type) ? content_for(:og_type) : 'website' %>">
    <meta property="og:url" content="<%= request.original_url %>">
    <% if content_for?(:meta_description) %>
      <meta property="og:description" content="<%= content_for(:meta_description) %>">
    <% end %>
    <% if content_for?(:og_image) %>
      <meta property="og:image" content="<%= content_for(:og_image) %>">
    <% end %>
    <meta property="og:site_name" content="Deployable">

    <%# Twitter Card Meta Tags %>
    <meta name="twitter:card" content="<%= content_for?(:twitter_card) ? content_for(:twitter_card) : 'summary_large_image' %>">
    <meta name="twitter:title" content="<%= content_for(:title) || 'Deployable' %>">
    <% if content_for?(:meta_description) %>
      <meta name="twitter:description" content="<%= content_for(:meta_description) %>">
    <% end %>
    <% if content_for?(:og_image) %>
      <meta name="twitter:image" content="<%= content_for(:og_image) %>">
    <% end %>

    <%# Canonical URL %>
    <% if content_for?(:canonical_url) %>
      <link rel="canonical" href="<%= content_for(:canonical_url) %>">
    <% end %>

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= yield :head %>

    <%# Enable PWA manifest for installable apps (make sure to enable in config/routes.rb too!) %>
    <%#= tag.link rel: "manifest", href: pwa_manifest_path(format: :json) %>

    <link rel="icon" href="/icon.png" type="image/png">
    <link rel="icon" href="/icon.svg" type="image/svg+xml">
    <link rel="apple-touch-icon" href="/icon.png">

    <%# Includes all stylesheet files in app/assets/stylesheets %>
    <%= stylesheet_link_tag :app, "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="min-h-full flex flex-col bg-slate-50 text-slate-900 antialiased">
    <%# Skip to main content link for accessibility %>
    <a href="#main-content" class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 focus:z-50 focus:px-4 focus:py-2 focus:bg-indigo-600 focus:text-white focus:rounded-lg">
      Skip to main content
    </a>

    <%# Flash messages %>
    <%= render "shared/flash" %>

    <%# Navigation - conditionally render based on layout type %>
    <% unless content_for?(:hide_navbar) %>
      <%= render "shared/navbar" %>
    <% end %>

    <%# Main content area %>
    <main id="main-content" class="flex-1">
      <%= yield %>
    </main>

    <%# Footer - conditionally render based on layout type %>
    <% unless content_for?(:hide_footer) %>
      <%= render "shared/footer" %>
    <% end %>

    <%= turbo_frame_tag "modal" %>
  </body>
</html>
