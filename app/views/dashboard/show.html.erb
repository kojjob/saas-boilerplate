<% content_for :page_title, "Dashboard" %>

<div class="space-y-6">
  <%# Welcome Section %>
  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between">
    <div>
      <h1 class="text-2xl font-bold text-slate-900">
        Welcome back, <%= current_user.first_name.presence || current_user.email.split('@').first %>!
      </h1>
      <p class="mt-1 text-sm text-slate-500">Here's what's happening with your account today.</p>
    </div>
    <div class="mt-4 sm:mt-0 flex items-center space-x-3">
      <span class="text-xs text-slate-400">
        <%= Time.current.strftime("%A, %B %d, %Y") %>
      </span>
    </div>
  </div>

  <%# Stats Cards Row %>
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
    <%# Account Status %>
    <div class="bg-white rounded-xl shadow-sm border border-slate-200 p-5 hover:shadow-md transition-shadow">
      <div class="flex items-center justify-between">
        <div class="w-12 h-12 rounded-xl bg-gradient-to-br from-green-400 to-emerald-500 flex items-center justify-center shadow-lg shadow-green-500/25">
          <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
        <span class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800">
          Active
        </span>
      </div>
      <div class="mt-4">
        <p class="text-sm text-slate-500">Account Status</p>
        <p class="text-xl font-bold text-slate-900"><%= @account.subscription_status.humanize %></p>
      </div>
    </div>

    <%# Current Plan %>
    <div class="bg-white rounded-xl shadow-sm border border-slate-200 p-5 hover:shadow-md transition-shadow">
      <div class="flex items-center justify-between">
        <div class="w-12 h-12 rounded-xl bg-gradient-to-br from-indigo-500 to-purple-600 flex items-center justify-center shadow-lg shadow-indigo-500/25">
          <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
          </svg>
        </div>
        <%= link_to billing_path, class: "text-xs text-indigo-600 hover:text-indigo-700 font-medium" do %>
          Upgrade
        <% end %>
      </div>
      <div class="mt-4">
        <p class="text-sm text-slate-500">Current Plan</p>
        <p class="text-xl font-bold text-slate-900"><%= @account.plan&.name || 'Free' %></p>
      </div>
    </div>

    <%# Team Members %>
    <div class="bg-white rounded-xl shadow-sm border border-slate-200 p-5 hover:shadow-md transition-shadow">
      <div class="flex items-center justify-between">
        <div class="w-12 h-12 rounded-xl bg-gradient-to-br from-orange-400 to-pink-500 flex items-center justify-center shadow-lg shadow-orange-500/25">
          <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
          </svg>
        </div>
        <%= link_to account_members_path, class: "text-xs text-orange-600 hover:text-orange-700 font-medium" do %>
          Manage
        <% end %>
      </div>
      <div class="mt-4">
        <p class="text-sm text-slate-500">Team Members</p>
        <p class="text-xl font-bold text-slate-900"><%= @account.memberships.count %></p>
      </div>
    </div>

    <%# Member Since %>
    <div class="bg-white rounded-xl shadow-sm border border-slate-200 p-5 hover:shadow-md transition-shadow">
      <div class="flex items-center justify-between">
        <div class="w-12 h-12 rounded-xl bg-gradient-to-br from-blue-400 to-cyan-500 flex items-center justify-center shadow-lg shadow-blue-500/25">
          <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
          </svg>
        </div>
      </div>
      <div class="mt-4">
        <p class="text-sm text-slate-500">Member Since</p>
        <p class="text-xl font-bold text-slate-900"><%= @account.created_at.strftime("%b %Y") %></p>
      </div>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <%# Quick Actions - Left Column %>
    <div class="lg:col-span-2 space-y-6">
      <%# Quick Actions Card %>
      <div class="bg-white rounded-xl shadow-sm border border-slate-200">
        <div class="px-6 py-4 border-b border-slate-200">
          <h3 class="text-lg font-semibold text-slate-900">Quick Actions</h3>
          <p class="text-sm text-slate-500">Common tasks and shortcuts</p>
        </div>
        <div class="p-6">
          <div class="grid grid-cols-2 sm:grid-cols-4 gap-4">
            <%= link_to edit_account_path, class: "flex flex-col items-center p-4 rounded-xl border border-slate-200 hover:border-indigo-300 hover:bg-indigo-50/50 transition-colors group" do %>
              <div class="w-12 h-12 rounded-xl bg-slate-100 group-hover:bg-indigo-100 flex items-center justify-center mb-2 transition-colors">
                <svg class="w-6 h-6 text-slate-600 group-hover:text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                </svg>
              </div>
              <span class="text-sm font-medium text-slate-700 group-hover:text-indigo-700">Edit Account</span>
            <% end %>

            <%= link_to account_path, class: "flex flex-col items-center p-4 rounded-xl border border-slate-200 hover:border-purple-300 hover:bg-purple-50/50 transition-colors group" do %>
              <div class="w-12 h-12 rounded-xl bg-slate-100 group-hover:bg-purple-100 flex items-center justify-center mb-2 transition-colors">
                <svg class="w-6 h-6 text-slate-600 group-hover:text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
              </div>
              <span class="text-sm font-medium text-slate-700 group-hover:text-purple-700">Account Settings</span>
            <% end %>

            <%= link_to account_members_path, class: "flex flex-col items-center p-4 rounded-xl border border-slate-200 hover:border-orange-300 hover:bg-orange-50/50 transition-colors group" do %>
              <div class="w-12 h-12 rounded-xl bg-slate-100 group-hover:bg-orange-100 flex items-center justify-center mb-2 transition-colors">
                <svg class="w-6 h-6 text-slate-600 group-hover:text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z" />
                </svg>
              </div>
              <span class="text-sm font-medium text-slate-700 group-hover:text-orange-700">Invite Team</span>
            <% end %>

            <%= link_to billing_path, class: "flex flex-col items-center p-4 rounded-xl border border-slate-200 hover:border-green-300 hover:bg-green-50/50 transition-colors group" do %>
              <div class="w-12 h-12 rounded-xl bg-slate-100 group-hover:bg-green-100 flex items-center justify-center mb-2 transition-colors">
                <svg class="w-6 h-6 text-slate-600 group-hover:text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z" />
                </svg>
              </div>
              <span class="text-sm font-medium text-slate-700 group-hover:text-green-700">Billing</span>
            <% end %>
          </div>
        </div>
      </div>

      <%# Getting Started Card %>
      <div class="bg-white rounded-xl shadow-sm border border-slate-200">
        <div class="px-6 py-4 border-b border-slate-200">
          <h3 class="text-lg font-semibold text-slate-900">Getting Started</h3>
          <p class="text-sm text-slate-500">Complete these steps to set up your account</p>
        </div>
        <div class="p-6">
          <div class="space-y-4">
            <%# Step 1 - Profile %>
            <div class="flex items-center p-4 rounded-lg border border-slate-200 <%= current_user.first_name.present? ? 'bg-green-50 border-green-200' : '' %>">
              <div class="flex-shrink-0 w-8 h-8 rounded-full <%= current_user.first_name.present? ? 'bg-green-500' : 'bg-slate-200' %> flex items-center justify-center">
                <% if current_user.first_name.present? %>
                  <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                  </svg>
                <% else %>
                  <span class="text-sm font-bold text-slate-500">1</span>
                <% end %>
              </div>
              <div class="ml-4 flex-1">
                <p class="text-sm font-medium <%= current_user.first_name.present? ? 'text-green-800' : 'text-slate-900' %>">Complete your profile</p>
                <p class="text-sm <%= current_user.first_name.present? ? 'text-green-600' : 'text-slate-500' %>">Add your name and profile information</p>
              </div>
              <% unless current_user.first_name.present? %>
                <%= link_to "Complete", edit_account_path, class: "px-4 py-2 text-sm font-medium text-indigo-600 hover:text-indigo-700" %>
              <% end %>
            </div>

            <%# Step 2 - Team %>
            <div class="flex items-center p-4 rounded-lg border border-slate-200 <%= @account.memberships.count > 1 ? 'bg-green-50 border-green-200' : '' %>">
              <div class="flex-shrink-0 w-8 h-8 rounded-full <%= @account.memberships.count > 1 ? 'bg-green-500' : 'bg-slate-200' %> flex items-center justify-center">
                <% if @account.memberships.count > 1 %>
                  <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                  </svg>
                <% else %>
                  <span class="text-sm font-bold text-slate-500">2</span>
                <% end %>
              </div>
              <div class="ml-4 flex-1">
                <p class="text-sm font-medium <%= @account.memberships.count > 1 ? 'text-green-800' : 'text-slate-900' %>">Invite team members</p>
                <p class="text-sm <%= @account.memberships.count > 1 ? 'text-green-600' : 'text-slate-500' %>">Add colleagues to collaborate with you</p>
              </div>
              <% unless @account.memberships.count > 1 %>
                <%= link_to "Invite", new_account_invitation_path, class: "px-4 py-2 text-sm font-medium text-indigo-600 hover:text-indigo-700" %>
              <% end %>
            </div>

            <%# Step 3 - Subscription %>
            <div class="flex items-center p-4 rounded-lg border border-slate-200 <%= @account.plan.present? && !@account.plan.free? ? 'bg-green-50 border-green-200' : '' %>">
              <div class="flex-shrink-0 w-8 h-8 rounded-full <%= @account.plan.present? && !@account.plan.free? ? 'bg-green-500' : 'bg-slate-200' %> flex items-center justify-center">
                <% if @account.plan.present? && !@account.plan.free? %>
                  <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                  </svg>
                <% else %>
                  <span class="text-sm font-bold text-slate-500">3</span>
                <% end %>
              </div>
              <div class="ml-4 flex-1">
                <p class="text-sm font-medium <%= @account.plan.present? && !@account.plan.free? ? 'text-green-800' : 'text-slate-900' %>">Choose a plan</p>
                <p class="text-sm <%= @account.plan.present? && !@account.plan.free? ? 'text-green-600' : 'text-slate-500' %>">Upgrade to unlock all features</p>
              </div>
              <% unless @account.plan.present? && !@account.plan.free? %>
                <%= link_to "View Plans", billing_path, class: "px-4 py-2 text-sm font-medium text-indigo-600 hover:text-indigo-700" %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>

    <%# Right Sidebar %>
    <div class="space-y-6">
      <%# Account Info Widget %>
      <div class="bg-white rounded-xl shadow-sm border border-slate-200">
        <div class="px-6 py-4 border-b border-slate-200">
          <h3 class="text-base font-semibold text-slate-900">Account Overview</h3>
        </div>
        <div class="p-6 space-y-4">
          <div class="flex items-center justify-between">
            <span class="text-sm text-slate-500">Organization</span>
            <span class="text-sm font-medium text-slate-900"><%= @account.name %></span>
          </div>
          <div class="flex items-center justify-between">
            <span class="text-sm text-slate-500">Role</span>
            <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-indigo-100 text-indigo-800">
              <%= current_user.membership_for(@account)&.role&.humanize || 'Member' %>
            </span>
          </div>
          <div class="flex items-center justify-between">
            <span class="text-sm text-slate-500">Plan</span>
            <span class="text-sm font-medium text-slate-900"><%= @account.plan&.name || 'Free' %></span>
          </div>
          <% if @account.subdomain.present? %>
            <div class="flex items-center justify-between">
              <span class="text-sm text-slate-500">Subdomain</span>
              <span class="text-sm font-medium text-slate-900"><%= @account.subdomain %></span>
            </div>
          <% end %>
        </div>
        <div class="px-6 py-4 bg-slate-50 rounded-b-xl">
          <%= link_to account_path, class: "text-sm font-medium text-indigo-600 hover:text-indigo-700" do %>
            View Account Details
            <svg class="w-4 h-4 inline-block ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          <% end %>
        </div>
      </div>

      <%# Resources Widget %>
      <div class="bg-white rounded-xl shadow-sm border border-slate-200">
        <div class="px-6 py-4 border-b border-slate-200">
          <h3 class="text-base font-semibold text-slate-900">Resources</h3>
        </div>
        <div class="p-4">
          <div class="space-y-2">
            <a href="#" class="flex items-center p-3 rounded-lg hover:bg-slate-50 transition-colors group">
              <div class="w-8 h-8 rounded-lg bg-blue-100 flex items-center justify-center mr-3">
                <svg class="w-4 h-4 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
                </svg>
              </div>
              <div class="flex-1">
                <p class="text-sm font-medium text-slate-700 group-hover:text-slate-900">Documentation</p>
                <p class="text-xs text-slate-500">Learn how to use the platform</p>
              </div>
              <svg class="w-4 h-4 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </a>

            <a href="#" class="flex items-center p-3 rounded-lg hover:bg-slate-50 transition-colors group">
              <div class="w-8 h-8 rounded-lg bg-purple-100 flex items-center justify-center mr-3">
                <svg class="w-4 h-4 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              <div class="flex-1">
                <p class="text-sm font-medium text-slate-700 group-hover:text-slate-900">Help Center</p>
                <p class="text-xs text-slate-500">Get answers to common questions</p>
              </div>
              <svg class="w-4 h-4 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </a>

            <a href="mailto:support@deployable.co" class="flex items-center p-3 rounded-lg hover:bg-slate-50 transition-colors group">
              <div class="w-8 h-8 rounded-lg bg-green-100 flex items-center justify-center mr-3">
                <svg class="w-4 h-4 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
              </div>
              <div class="flex-1">
                <p class="text-sm font-medium text-slate-700 group-hover:text-slate-900">Contact Support</p>
                <p class="text-xs text-slate-500">We're here to help</p>
              </div>
              <svg class="w-4 h-4 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </a>
          </div>
        </div>
      </div>

      <%# Trial/Upgrade Widget %>
      <% if @account.subscription_status == 'trialing' || (@account.plan.present? && @account.plan.free?) %>
        <div class="bg-gradient-to-br from-indigo-500 to-purple-600 rounded-xl shadow-lg p-6 text-white">
          <div class="flex items-center mb-4">
            <div class="w-10 h-10 rounded-lg bg-white/20 flex items-center justify-center">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
              </svg>
            </div>
          </div>
          <h3 class="text-lg font-bold mb-2">
            <% if @account.subscription_status == 'trialing' %>
              Upgrade Your Trial
            <% else %>
              Upgrade to Pro
            <% end %>
          </h3>
          <p class="text-sm text-indigo-100 mb-4">
            Unlock advanced features, priority support, and more with our Pro plan.
          </p>
          <%= link_to billing_path, class: "block w-full text-center px-4 py-2.5 bg-white text-indigo-600 text-sm font-medium rounded-lg hover:bg-indigo-50 transition-colors" do %>
            View Plans
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
