<div class="min-h-screen bg-gradient-to-br from-indigo-50 via-white to-purple-50 flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full">
    <div class="bg-white rounded-2xl shadow-xl border border-gray-100 overflow-hidden">
      <!-- Header -->
      <div class="bg-gradient-to-r from-indigo-600 to-purple-600 px-8 py-6 text-center">
        <div class="inline-flex items-center justify-center w-16 h-16 bg-white/20 rounded-2xl mb-4">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-white" viewBox="0 0 20 20" fill="currentColor">
            <path d="M8 9a3 3 0 100-6 3 3 0 000 6zM8 11a6 6 0 016 6H2a6 6 0 016-6zM16 7a1 1 0 10-2 0v1h-1a1 1 0 100 2h1v1a1 1 0 102 0v-1h1a1 1 0 100-2h-1V7z" />
          </svg>
        </div>
        <h1 class="text-2xl font-bold text-white">You're Invited!</h1>
        <p class="mt-2 text-indigo-100">Join <strong><%= @account.name %></strong></p>
      </div>

      <% if @membership.errors.any? %>
        <div class="mx-6 mt-4 p-4 bg-red-50 border border-red-200 rounded-lg">
          <ul class="text-red-800 text-sm">
            <% @membership.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <% if defined?(@user) && @user&.errors&.any? %>
        <div class="mx-6 mt-4 p-4 bg-red-50 border border-red-200 rounded-lg">
          <ul class="text-red-800 text-sm">
            <% @user.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="px-8 py-6">
        <div class="mb-6 p-4 bg-gray-50 rounded-lg">
          <p class="text-sm text-gray-600">
            You've been invited to join as a
            <span class="font-semibold text-gray-900"><%= @membership.role.humanize %></span>
          </p>
        </div>

        <%= form_with url: accept_invitation_path(@membership.invitation_token), method: :post, class: "space-y-6" do |f| %>
          <% if @existing_user %>
            <!-- Existing user - just show acceptance -->
            <div class="text-center">
              <div class="w-16 h-16 mx-auto rounded-full bg-gradient-to-r from-indigo-500 to-purple-500 flex items-center justify-center text-white text-xl font-semibold mb-4">
                <%= @existing_user.first_name[0].upcase %><%= @existing_user.last_name[0].upcase %>
              </div>
              <p class="text-gray-900 font-medium"><%= @existing_user.full_name %></p>
              <p class="text-sm text-gray-500"><%= @existing_user.email %></p>
            </div>

            <div class="pt-4">
              <%= f.submit "Accept Invitation", class: "w-full py-3 px-4 bg-gradient-to-r from-indigo-600 to-purple-600 text-white font-semibold rounded-lg shadow-md hover:from-indigo-700 hover:to-purple-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 transition-all duration-200 cursor-pointer" %>
            </div>
          <% else %>
            <!-- New user - create account form -->
            <p class="text-sm text-gray-600 text-center mb-4">
              Create your account to accept this invitation
            </p>

            <div class="grid grid-cols-2 gap-4">
              <div>
                <%= f.label 'user[first_name]', "First Name", class: "block text-sm font-medium text-gray-700 mb-1" %>
                <%= f.text_field 'user[first_name]', class: "w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-colors", required: true, autofocus: true %>
              </div>
              <div>
                <%= f.label 'user[last_name]', "Last Name", class: "block text-sm font-medium text-gray-700 mb-1" %>
                <%= f.text_field 'user[last_name]', class: "w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-colors", required: true %>
              </div>
            </div>

            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">Email</label>
              <input type="email" value="<%= @membership.invitation_email %>" disabled class="w-full px-4 py-3 rounded-lg border border-gray-200 bg-gray-50 text-gray-500">
              <p class="mt-1 text-xs text-gray-500">This email address was used for your invitation</p>
            </div>

            <div>
              <%= f.label 'user[password]', "Password", class: "block text-sm font-medium text-gray-700 mb-1" %>
              <%= f.password_field 'user[password]', class: "w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-colors", required: true, minlength: 8 %>
              <p class="mt-1 text-xs text-gray-500">At least 8 characters</p>
            </div>

            <div>
              <%= f.label 'user[password_confirmation]', "Confirm Password", class: "block text-sm font-medium text-gray-700 mb-1" %>
              <%= f.password_field 'user[password_confirmation]', class: "w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-colors", required: true, minlength: 8 %>
            </div>

            <div class="pt-4">
              <%= f.submit "Create Account & Join", class: "w-full py-3 px-4 bg-gradient-to-r from-indigo-600 to-purple-600 text-white font-semibold rounded-lg shadow-md hover:from-indigo-700 hover:to-purple-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 transition-all duration-200 cursor-pointer" %>
            </div>
          <% end %>
        <% end %>

        <div class="mt-6 text-center">
          <p class="text-sm text-gray-500">
            Already have an account?
            <%= link_to "Sign in", sign_in_path, class: "text-indigo-600 hover:text-indigo-800 font-medium" %>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>
