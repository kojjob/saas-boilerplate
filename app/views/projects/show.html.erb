<% content_for :page_title, @project.name %>

<div class="max-w-7xl mx-auto space-y-6">
  <%# Floating Sticky Header %>
  <div class="sticky top-0 z-10 bg-white/95 backdrop-blur-sm rounded-xl shadow-sm border border-slate-200 p-4 mb-6">
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
      <div class="flex items-center gap-4">
        <%= link_to projects_path, class: "p-2 text-slate-400 hover:text-slate-600 hover:bg-slate-100 rounded-lg transition-colors" do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
          </svg>
        <% end %>

        <%# Project Icon %>
        <div class="flex-shrink-0 w-14 h-14 rounded-full bg-gradient-to-br from-indigo-500 to-purple-600 flex items-center justify-center shadow-md">
          <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z" />
          </svg>
        </div>

        <div>
          <div class="flex items-center gap-3">
            <h1 class="text-2xl font-bold text-slate-900"><%= @project.name %></h1>
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= project_status_class(@project.status) %>">
              <span class="w-1.5 h-1.5 rounded-full mr-1.5 <%= @project.status == 'in_progress' ? 'bg-blue-500' : (@project.status == 'completed' ? 'bg-green-500' : 'bg-slate-400') %>"></span>
              <%= @project.status.humanize %>
            </span>
          </div>
          <% if @project.project_number.present? %>
            <p class="text-sm text-slate-500">#<%= @project.project_number %></p>
          <% elsif @project.client %>
            <p class="text-sm text-slate-500"><%= @project.client.name %></p>
          <% end %>
        </div>
      </div>

      <div class="flex items-center gap-2 flex-wrap">
        <%= link_to @project.client, class: "inline-flex items-center px-3 py-2 border border-slate-300 text-sm font-medium rounded-lg text-slate-700 bg-white hover:bg-slate-50 transition-colors" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
          </svg>
          Client
        <% end %>
        <%= link_to edit_project_path(@project), data: { turbo_frame: "modal" }, class: "inline-flex items-center px-3 py-2 border border-slate-300 text-sm font-medium rounded-lg text-slate-700 bg-white hover:bg-slate-50 transition-colors" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
          </svg>
          Edit
        <% end %>
        <%= link_to new_project_time_entry_path(@project), data: { turbo_frame: "modal" }, class: "inline-flex items-center px-4 py-2 bg-gradient-to-r from-indigo-500 to-purple-600 text-white text-sm font-medium rounded-lg hover:from-indigo-600 hover:to-purple-700 transition-all shadow-sm" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
          </svg>
          Log Time
        <% end %>
      </div>
    </div>
  </div>

  <%# Financial Stats Cards %>
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
    <%# Total Cost %>
    <div class="bg-gradient-to-br from-emerald-500 to-teal-600 rounded-xl p-5 text-white shadow-lg">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-emerald-100 text-sm font-medium">Total Cost</p>
          <p class="text-2xl font-bold mt-1"><%= number_to_currency(@project.total_project_cost) %></p>
          <p class="text-emerald-100 text-xs mt-1">Time + Materials</p>
        </div>
        <div class="w-12 h-12 rounded-full bg-white/20 flex items-center justify-center">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
      </div>
    </div>

    <%# Budget Remaining %>
    <% if @project.budget.present? && @project.budget > 0 %>
      <div class="bg-gradient-to-br <%= @project.budget_remaining && @project.budget_remaining < 0 ? 'from-red-500 to-rose-600' : 'from-amber-500 to-orange-600' %> rounded-xl p-5 text-white shadow-lg">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-amber-100 text-sm font-medium">Budget Remaining</p>
            <p class="text-2xl font-bold mt-1"><%= number_to_currency(@project.budget_remaining || 0) %></p>
            <p class="text-amber-100 text-xs mt-1"><%= @project.budget_percentage_used %>% used of <%= number_to_currency(@project.budget) %></p>
          </div>
          <div class="w-12 h-12 rounded-full bg-white/20 flex items-center justify-center">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z" />
            </svg>
          </div>
        </div>
      </div>
    <% else %>
      <div class="bg-gradient-to-br from-amber-500 to-orange-600 rounded-xl p-5 text-white shadow-lg">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-amber-100 text-sm font-medium">Time Cost</p>
            <p class="text-2xl font-bold mt-1"><%= number_to_currency(@project.total_time_cost) %></p>
            <p class="text-amber-100 text-xs mt-1">From logged hours</p>
          </div>
          <div class="w-12 h-12 rounded-full bg-white/20 flex items-center justify-center">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
        </div>
      </div>
    <% end %>

    <%# Hours Logged %>
    <div class="bg-gradient-to-br from-indigo-500 to-purple-600 rounded-xl p-5 text-white shadow-lg">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-indigo-100 text-sm font-medium">Hours Logged</p>
          <p class="text-2xl font-bold mt-1"><%= @project.time_entries.sum(:hours) %></p>
          <p class="text-indigo-100 text-xs mt-1"><%= pluralize(@project.time_entries.count, 'entry') %></p>
        </div>
        <div class="w-12 h-12 rounded-full bg-white/20 flex items-center justify-center">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
      </div>
    </div>

    <%# Timeline %>
    <div class="bg-gradient-to-br from-slate-600 to-slate-700 rounded-xl p-5 text-white shadow-lg">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-slate-300 text-sm font-medium">
            <% if @project.overdue? %>
              Overdue By
            <% elsif @project.due_date.present? && @project.due_date >= Date.today %>
              Due In
            <% else %>
              Started
            <% end %>
          </p>
          <p class="text-2xl font-bold mt-1">
            <% if @project.overdue? %>
              <%= (Date.today - @project.due_date).to_i %> days
            <% elsif @project.due_date.present? && @project.due_date >= Date.today %>
              <%= (@project.due_date - Date.today).to_i %> days
            <% elsif @project.start_date.present? %>
              <%= @project.start_date.strftime("%b %d") %>
            <% else %>
              Not set
            <% end %>
          </p>
          <p class="text-slate-300 text-xs mt-1">
            <% if @project.due_date.present? %>
              Due <%= @project.due_date.strftime("%b %d, %Y") %>
            <% else %>
              No due date set
            <% end %>
          </p>
        </div>
        <div class="w-12 h-12 rounded-full bg-white/20 flex items-center justify-center">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
          </svg>
        </div>
      </div>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <%# Left Column: Project Details %>
    <div class="lg:col-span-1 space-y-6">
      <%# Client Info Card %>
      <div class="bg-white rounded-xl shadow-sm border border-slate-200 overflow-hidden">
        <div class="px-6 py-4 bg-gradient-to-r from-slate-50 to-slate-100 border-b border-slate-200">
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5 text-slate-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
            </svg>
            <h2 class="text-base font-semibold text-slate-900">Client</h2>
          </div>
        </div>
        <div class="p-6">
          <div class="flex items-center gap-4">
            <div class="flex-shrink-0 w-12 h-12 rounded-full bg-gradient-to-br from-indigo-500 to-purple-600 flex items-center justify-center shadow-md">
              <span class="text-lg font-bold text-white"><%= @project.client.name.first(2).upcase %></span>
            </div>
            <div class="flex-1 min-w-0">
              <%= link_to @project.client.name, @project.client, class: "font-semibold text-slate-900 hover:text-indigo-600 transition-colors" %>
              <% if @project.client.company.present? %>
                <p class="text-sm text-slate-500 truncate"><%= @project.client.company %></p>
              <% end %>
            </div>
            <%= link_to @project.client, class: "p-2 text-slate-400 hover:text-indigo-600 hover:bg-indigo-50 rounded-lg transition-colors" do %>
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            <% end %>
          </div>
        </div>
      </div>

      <%# Timeline Card %>
      <div class="bg-white rounded-xl shadow-sm border border-slate-200 overflow-hidden">
        <div class="px-6 py-4 bg-gradient-to-r from-slate-50 to-slate-100 border-b border-slate-200">
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5 text-slate-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
            <h2 class="text-base font-semibold text-slate-900">Timeline</h2>
          </div>
        </div>
        <div class="p-6 space-y-4">
          <div class="flex items-center justify-between">
            <div class="flex items-center gap-3">
              <div class="w-10 h-10 rounded-lg bg-emerald-100 flex items-center justify-center">
                <svg class="w-5 h-5 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
              </div>
              <div>
                <p class="text-xs font-medium text-slate-500 uppercase tracking-wider">Start Date</p>
                <p class="text-sm font-semibold text-slate-900"><%= @project.start_date&.strftime("%b %d, %Y") || "Not set" %></p>
              </div>
            </div>
          </div>

          <div class="flex items-center justify-between">
            <div class="flex items-center gap-3">
              <div class="w-10 h-10 rounded-lg <%= @project.overdue? ? 'bg-red-100' : 'bg-amber-100' %> flex items-center justify-center">
                <svg class="w-5 h-5 <%= @project.overdue? ? 'text-red-600' : 'text-amber-600' %>" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              <div>
                <p class="text-xs font-medium text-slate-500 uppercase tracking-wider">Due Date</p>
                <p class="text-sm font-semibold <%= @project.overdue? ? 'text-red-600' : 'text-slate-900' %>">
                  <%= @project.due_date&.strftime("%b %d, %Y") || "Not set" %>
                  <% if @project.overdue? %>
                    <span class="text-xs font-normal text-red-500 ml-1">(Overdue)</span>
                  <% end %>
                </p>
              </div>
            </div>
          </div>

          <div class="flex items-center justify-between">
            <div class="flex items-center gap-3">
              <div class="w-10 h-10 rounded-lg bg-slate-100 flex items-center justify-center">
                <svg class="w-5 h-5 text-slate-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
              </div>
              <div>
                <p class="text-xs font-medium text-slate-500 uppercase tracking-wider">End Date</p>
                <p class="text-sm font-semibold text-slate-900"><%= @project.end_date&.strftime("%b %d, %Y") || "Not set" %></p>
              </div>
            </div>
          </div>
        </div>
      </div>

      <%# Budget Card %>
      <% if @project.budget.present? && @project.budget > 0 %>
        <div class="bg-white rounded-xl shadow-sm border border-slate-200 overflow-hidden">
          <div class="px-6 py-4 bg-gradient-to-r from-slate-50 to-slate-100 border-b border-slate-200">
            <div class="flex items-center gap-2">
              <svg class="w-5 h-5 text-slate-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <h2 class="text-base font-semibold text-slate-900">Budget Tracking</h2>
            </div>
          </div>
          <div class="p-6 space-y-4">
            <div class="flex items-center justify-between">
              <span class="text-sm text-slate-500">Total Budget</span>
              <span class="text-sm font-semibold text-slate-900"><%= number_to_currency(@project.budget) %></span>
            </div>
            <div class="flex items-center justify-between">
              <span class="text-sm text-slate-500">Spent</span>
              <span class="text-sm font-medium text-slate-900"><%= number_to_currency(@project.total_project_cost) %></span>
            </div>
            <div class="flex items-center justify-between">
              <span class="text-sm text-slate-500">Remaining</span>
              <span class="text-sm font-semibold <%= @project.budget_remaining && @project.budget_remaining < 0 ? 'text-red-600' : 'text-emerald-600' %>">
                <%= number_to_currency(@project.budget_remaining || 0) %>
              </span>
            </div>
            <div class="pt-2">
              <div class="flex items-center justify-between mb-2">
                <span class="text-xs font-medium text-slate-500">Budget Used</span>
                <span class="text-xs font-semibold <%= @project.budget_percentage_used > 100 ? 'text-red-600' : 'text-slate-900' %>"><%= @project.budget_percentage_used %>%</span>
              </div>
              <div class="w-full bg-slate-200 rounded-full h-2.5">
                <div class="<%= @project.budget_percentage_used > 100 ? 'bg-red-500' : (@project.budget_percentage_used > 80 ? 'bg-amber-500' : 'bg-emerald-500') %> h-2.5 rounded-full transition-all" style="width: <%= [@project.budget_percentage_used, 100].min %>%"></div>
              </div>
            </div>
          </div>
        </div>
      <% end %>

      <%# Job Site Location %>
      <% if @project.full_address.present? %>
        <div class="bg-white rounded-xl shadow-sm border border-slate-200 overflow-hidden">
          <div class="px-6 py-4 bg-gradient-to-r from-purple-50 to-indigo-50 border-b border-slate-200">
            <div class="flex items-center gap-2">
              <svg class="w-5 h-5 text-purple-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
              <h2 class="text-base font-semibold text-slate-900">Job Site Location</h2>
            </div>
          </div>
          <div class="p-6">
            <div class="flex items-start gap-4">
              <div class="flex-shrink-0 w-10 h-10 rounded-lg bg-purple-100 flex items-center justify-center">
                <svg class="w-5 h-5 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
              </div>
              <div class="text-sm text-slate-900">
                <% if @project.address_line1.present? %><p><%= @project.address_line1 %></p><% end %>
                <% if @project.address_line2.present? %><p><%= @project.address_line2 %></p><% end %>
                <% if @project.city.present? || @project.state.present? || @project.postal_code.present? %>
                  <p>
                    <%= [@project.city, @project.state].compact.join(", ") %>
                    <%= @project.postal_code %>
                  </p>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      <% end %>

      <%# Quick Actions Card %>
      <div class="bg-white rounded-xl shadow-sm border border-slate-200 overflow-hidden">
        <div class="px-6 py-4 bg-gradient-to-r from-slate-50 to-slate-100 border-b border-slate-200">
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5 text-slate-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
            </svg>
            <h2 class="text-base font-semibold text-slate-900">Quick Actions</h2>
          </div>
        </div>
        <div class="p-4 space-y-2">
          <%= link_to new_project_time_entry_path(@project), data: { turbo_frame: "modal" }, class: "flex items-center gap-3 w-full px-4 py-3 rounded-lg hover:bg-slate-50 transition-colors group" do %>
            <div class="w-9 h-9 rounded-lg bg-indigo-100 flex items-center justify-center group-hover:bg-indigo-200 transition-colors">
              <svg class="w-4 h-4 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <div class="flex-1">
              <p class="text-sm font-medium text-slate-900">Log Time</p>
              <p class="text-xs text-slate-500">Track hours worked on this project</p>
            </div>
            <svg class="w-5 h-5 text-slate-400 group-hover:text-slate-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          <% end %>

          <%= link_to new_project_material_entry_path(@project), data: { turbo_frame: "modal" }, class: "flex items-center gap-3 w-full px-4 py-3 rounded-lg hover:bg-slate-50 transition-colors group" do %>
            <div class="w-9 h-9 rounded-lg bg-amber-100 flex items-center justify-center group-hover:bg-amber-200 transition-colors">
              <svg class="w-4 h-4 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
              </svg>
            </div>
            <div class="flex-1">
              <p class="text-sm font-medium text-slate-900">Add Material</p>
              <p class="text-xs text-slate-500">Log materials used on this project</p>
            </div>
            <svg class="w-5 h-5 text-slate-400 group-hover:text-slate-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          <% end %>

          <%= link_to new_invoice_path(project_id: @project.id, client_id: @project.client_id), data: { turbo_frame: "modal" }, class: "flex items-center gap-3 w-full px-4 py-3 rounded-lg hover:bg-slate-50 transition-colors group" do %>
            <div class="w-9 h-9 rounded-lg bg-emerald-100 flex items-center justify-center group-hover:bg-emerald-200 transition-colors">
              <svg class="w-4 h-4 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
              </svg>
            </div>
            <div class="flex-1">
              <p class="text-sm font-medium text-slate-900">Create Invoice</p>
              <p class="text-xs text-slate-500">Bill the client for this project</p>
            </div>
            <svg class="w-5 h-5 text-slate-400 group-hover:text-slate-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          <% end %>
        </div>
      </div>

      <%# Notes %>
      <% if @project.notes.present? %>
        <div class="bg-white rounded-xl shadow-sm border border-slate-200 overflow-hidden">
          <div class="px-6 py-4 bg-gradient-to-r from-amber-50 to-yellow-50 border-b border-slate-200">
            <div class="flex items-center gap-2">
              <svg class="w-5 h-5 text-amber-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
              </svg>
              <h2 class="text-base font-semibold text-slate-900">Notes</h2>
            </div>
          </div>
          <div class="p-6">
            <p class="text-sm text-slate-600 whitespace-pre-wrap leading-relaxed"><%= @project.notes %></p>
          </div>
        </div>
      <% end %>
    </div>

    <%# Right Column: Time Entries, Materials, and Invoices %>
    <div class="lg:col-span-2 space-y-6">
      <%# Description %>
      <% if @project.description.present? %>
        <div class="bg-white rounded-xl shadow-sm border border-slate-200 overflow-hidden">
          <div class="px-6 py-4 bg-gradient-to-r from-slate-50 to-slate-100 border-b border-slate-200">
            <div class="flex items-center gap-2">
              <svg class="w-5 h-5 text-slate-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
              </svg>
              <h2 class="text-base font-semibold text-slate-900">Project Description</h2>
            </div>
          </div>
          <div class="p-6">
            <p class="text-sm text-slate-600 whitespace-pre-wrap leading-relaxed"><%= @project.description %></p>
          </div>
        </div>
      <% end %>

      <%# Recent Time Entries %>
      <div class="bg-white rounded-xl shadow-sm border border-slate-200 overflow-hidden">
        <div class="px-6 py-4 bg-gradient-to-r from-indigo-50 to-purple-50 border-b border-slate-200 flex items-center justify-between">
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5 text-indigo-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <h2 class="text-base font-semibold text-slate-900">Recent Time Entries</h2>
            <span class="ml-2 px-2 py-0.5 rounded-full bg-indigo-100 text-indigo-600 text-xs font-medium"><%= @project.time_entries.count %> total</span>
          </div>
          <%= link_to project_time_entries_path(@project), class: "text-sm text-indigo-600 hover:text-indigo-700 font-medium flex items-center gap-1" do %>
            View all
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          <% end %>
        </div>
        <% if @time_entries.any? %>
          <div class="divide-y divide-slate-100">
            <% @time_entries.each do |entry| %>
              <div class="px-6 py-4 hover:bg-slate-50 transition-colors">
                <div class="flex items-center justify-between">
                  <div class="flex items-center gap-4">
                    <div class="w-10 h-10 rounded-lg bg-gradient-to-br from-indigo-100 to-purple-100 flex items-center justify-center">
                      <svg class="w-5 h-5 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                      </svg>
                    </div>
                    <div>
                      <p class="text-sm font-medium text-slate-900"><%= entry.description.presence || "Time entry" %></p>
                      <p class="text-xs text-slate-500 mt-0.5">
                        <%= entry.date.strftime("%b %d, %Y") %> · <%= pluralize(entry.hours, "hour") %>
                      </p>
                    </div>
                  </div>
                  <div class="text-right flex items-center gap-3">
                    <div>
                      <p class="text-sm font-bold text-slate-900"><%= number_to_currency(entry.total_amount || 0) %></p>
                      <% if entry.billable? %>
                        <span class="inline-flex items-center text-xs text-emerald-600">
                          <span class="w-1.5 h-1.5 rounded-full bg-emerald-500 mr-1"></span>
                          Billable
                        </span>
                      <% else %>
                        <span class="text-xs text-slate-400">Non-billable</span>
                      <% end %>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="px-6 py-12 text-center">
            <div class="w-16 h-16 mx-auto rounded-full bg-indigo-100 flex items-center justify-center mb-4">
              <svg class="w-8 h-8 text-indigo-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <h3 class="text-sm font-medium text-slate-900">No time entries yet</h3>
            <p class="text-sm text-slate-500 mt-1 mb-4">Start tracking time spent on this project.</p>
            <%= link_to new_project_time_entry_path(@project), data: { turbo_frame: "modal" }, class: "inline-flex items-center px-4 py-2 bg-indigo-600 text-white text-sm font-medium rounded-lg hover:bg-indigo-700 transition-colors" do %>
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
              </svg>
              Log First Entry
            <% end %>
          </div>
        <% end %>
      </div>

      <%# Recent Material Entries %>
      <div class="bg-white rounded-xl shadow-sm border border-slate-200 overflow-hidden">
        <div class="px-6 py-4 bg-gradient-to-r from-amber-50 to-orange-50 border-b border-slate-200 flex items-center justify-between">
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5 text-amber-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
            </svg>
            <h2 class="text-base font-semibold text-slate-900">Recent Materials</h2>
            <span class="ml-2 px-2 py-0.5 rounded-full bg-amber-100 text-amber-600 text-xs font-medium"><%= @project.material_entries.count %> total</span>
          </div>
          <%= link_to project_material_entries_path(@project), class: "text-sm text-amber-600 hover:text-amber-700 font-medium flex items-center gap-1" do %>
            View all
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          <% end %>
        </div>
        <% if @material_entries.any? %>
          <div class="divide-y divide-slate-100">
            <% @material_entries.each do |entry| %>
              <div class="px-6 py-4 hover:bg-slate-50 transition-colors">
                <div class="flex items-center justify-between">
                  <div class="flex items-center gap-4">
                    <div class="w-10 h-10 rounded-lg bg-gradient-to-br from-amber-100 to-orange-100 flex items-center justify-center">
                      <svg class="w-5 h-5 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
                      </svg>
                    </div>
                    <div>
                      <p class="text-sm font-medium text-slate-900"><%= entry.name %></p>
                      <p class="text-xs text-slate-500 mt-0.5">
                        <%= entry.date.strftime("%b %d, %Y") %> · Qty: <%= entry.quantity %>
                      </p>
                    </div>
                  </div>
                  <div class="text-right flex items-center gap-3">
                    <div>
                      <p class="text-sm font-bold text-slate-900"><%= number_to_currency(entry.total_amount || 0) %></p>
                      <% if entry.billable? %>
                        <span class="inline-flex items-center text-xs text-emerald-600">
                          <span class="w-1.5 h-1.5 rounded-full bg-emerald-500 mr-1"></span>
                          Billable
                        </span>
                      <% else %>
                        <span class="text-xs text-slate-400">Non-billable</span>
                      <% end %>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="px-6 py-12 text-center">
            <div class="w-16 h-16 mx-auto rounded-full bg-amber-100 flex items-center justify-center mb-4">
              <svg class="w-8 h-8 text-amber-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
              </svg>
            </div>
            <h3 class="text-sm font-medium text-slate-900">No materials logged yet</h3>
            <p class="text-sm text-slate-500 mt-1 mb-4">Track materials used on this project.</p>
            <%= link_to new_project_material_entry_path(@project), data: { turbo_frame: "modal" }, class: "inline-flex items-center px-4 py-2 bg-amber-600 text-white text-sm font-medium rounded-lg hover:bg-amber-700 transition-colors" do %>
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
              </svg>
              Add First Material
            <% end %>
          </div>
        <% end %>
      </div>

      <%# Invoices %>
      <div class="bg-white rounded-xl shadow-sm border border-slate-200 overflow-hidden">
        <div class="px-6 py-4 bg-gradient-to-r from-emerald-50 to-teal-50 border-b border-slate-200 flex items-center justify-between">
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5 text-emerald-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
            </svg>
            <h2 class="text-base font-semibold text-slate-900">Invoices</h2>
            <span class="ml-2 px-2 py-0.5 rounded-full bg-emerald-100 text-emerald-600 text-xs font-medium"><%= @project.invoices.count %> total</span>
          </div>
          <%= link_to new_invoice_path(project_id: @project.id, client_id: @project.client_id), data: { turbo_frame: "modal" }, class: "text-sm text-emerald-600 hover:text-emerald-700 font-medium flex items-center gap-1" do %>
            Create Invoice
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
            </svg>
          <% end %>
        </div>
        <% if @invoices.any? %>
          <div class="divide-y divide-slate-100">
            <% @invoices.each do |invoice| %>
              <%= link_to invoice, class: "block px-6 py-4 hover:bg-slate-50 transition-colors" do %>
                <div class="flex items-center justify-between">
                  <div class="flex items-center gap-4">
                    <div class="w-10 h-10 rounded-lg flex items-center justify-center <%= invoice_status_bg_class(invoice.status) %>">
                      <svg class="w-5 h-5 <%= invoice_status_icon_class(invoice.status) %>" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                      </svg>
                    </div>
                    <div>
                      <p class="text-sm font-medium text-slate-900">#<%= invoice.invoice_number %></p>
                      <p class="text-xs text-slate-500 mt-0.5">
                        <% if invoice.issue_date.present? %>
                          Issued <%= invoice.issue_date.strftime("%b %d, %Y") %>
                        <% else %>
                          No issue date
                        <% end %>
                      </p>
                    </div>
                  </div>
                  <div class="text-right flex items-center gap-3">
                    <div>
                      <p class="text-sm font-bold text-slate-900"><%= number_to_currency(invoice.total_amount || 0) %></p>
                      <% if invoice.due_date.present? && invoice.unpaid? %>
                        <p class="text-xs text-slate-500">Due <%= invoice.due_date.strftime("%b %d") %></p>
                      <% end %>
                    </div>
                    <span class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-medium <%= invoice_status_class(invoice.status) %>">
                      <%= invoice.status&.humanize || "Draft" %>
                    </span>
                  </div>
                </div>
              <% end %>
            <% end %>
          </div>
        <% else %>
          <div class="px-6 py-12 text-center">
            <div class="w-16 h-16 mx-auto rounded-full bg-emerald-100 flex items-center justify-center mb-4">
              <svg class="w-8 h-8 text-emerald-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
              </svg>
            </div>
            <h3 class="text-sm font-medium text-slate-900">No invoices yet</h3>
            <p class="text-sm text-slate-500 mt-1 mb-4">Create an invoice to bill the client for this project.</p>
            <%= link_to new_invoice_path(project_id: @project.id, client_id: @project.client_id), data: { turbo_frame: "modal" }, class: "inline-flex items-center px-4 py-2 bg-emerald-600 text-white text-sm font-medium rounded-lg hover:bg-emerald-700 transition-colors" do %>
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
              </svg>
              Create First Invoice
            <% end %>
          </div>
        <% end %>
      </div>

      <%# Summary Stats Card %>
      <div class="bg-white rounded-xl shadow-sm border border-slate-200 overflow-hidden">
        <div class="px-6 py-4 bg-gradient-to-r from-slate-50 to-slate-100 border-b border-slate-200">
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5 text-slate-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
            </svg>
            <h2 class="text-base font-semibold text-slate-900">Cost Breakdown</h2>
          </div>
        </div>
        <div class="p-6">
          <div class="grid grid-cols-2 sm:grid-cols-4 gap-6">
            <div class="text-center">
              <div class="text-2xl font-bold text-indigo-600"><%= number_to_currency(@project.total_time_cost) %></div>
              <div class="text-xs text-slate-500 mt-1">Time Cost</div>
            </div>
            <div class="text-center">
              <div class="text-2xl font-bold text-amber-600"><%= number_to_currency(@project.total_materials_cost) %></div>
              <div class="text-xs text-slate-500 mt-1">Materials Cost</div>
            </div>
            <div class="text-center">
              <div class="text-2xl font-bold text-emerald-600"><%= @project.invoices.where(status: :paid).count %></div>
              <div class="text-xs text-slate-500 mt-1">Paid Invoices</div>
            </div>
            <div class="text-center">
              <div class="text-2xl font-bold text-slate-700"><%= @project.invoices.unpaid.count %></div>
              <div class="text-xs text-slate-500 mt-1">Pending Invoices</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <%# Delete action %>
  <% if @project.invoices.empty? %>
    <div class="mt-8 bg-red-50 rounded-xl border border-red-200 overflow-hidden">
      <div class="px-6 py-4 bg-gradient-to-r from-red-50 to-rose-50 border-b border-red-200">
        <div class="flex items-center gap-2">
          <svg class="w-5 h-5 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
          </svg>
          <h2 class="text-base font-semibold text-red-800">Danger Zone</h2>
        </div>
      </div>
      <div class="p-6">
        <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
          <div>
            <h3 class="text-sm font-medium text-red-800">Delete this project</h3>
            <p class="text-sm text-red-600 mt-1">Once you delete this project, all time entries, material entries, and documents will be permanently deleted.</p>
          </div>
          <%= button_to project_path(@project), method: :delete, data: { turbo_confirm: "Are you sure you want to delete #{@project.name}? This action cannot be undone." }, class: "inline-flex items-center px-4 py-2 border border-red-300 text-sm font-medium rounded-lg text-red-700 bg-white hover:bg-red-50 transition-colors whitespace-nowrap" do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
            </svg>
            Delete Project
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>
