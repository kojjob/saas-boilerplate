<% content_for :page_title, @project.name %>

<div class="space-y-6">
  <%# Header with actions %>
  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
    <div class="flex items-center gap-4">
      <%= link_to projects_path, class: "p-2 text-slate-400 hover:text-slate-600 transition-colors" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
        </svg>
      <% end %>
      <div>
        <div class="flex items-center gap-3">
          <h1 class="text-2xl font-bold text-slate-900"><%= @project.name %></h1>
          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= project_status_class(@project.status) %>">
            <%= @project.status.humanize %>
          </span>
        </div>
        <% if @project.project_number.present? %>
          <p class="mt-1 text-sm text-slate-500"><%= @project.project_number %></p>
        <% end %>
      </div>
    </div>
    <div class="flex items-center gap-3">
      <%= link_to edit_project_path(@project), data: { turbo_frame: "modal" }, class: "inline-flex items-center px-4 py-2 border border-slate-300 text-sm font-medium rounded-lg text-slate-700 bg-white hover:bg-slate-50 transition-colors" do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
        </svg>
        Edit
      <% end %>
      <%= link_to new_project_time_entry_path(@project), data: { turbo_frame: "modal" }, class: "inline-flex items-center px-4 py-2 bg-gradient-to-r from-indigo-500 to-purple-600 text-white text-sm font-medium rounded-lg hover:from-indigo-600 hover:to-purple-700 transition-all shadow-sm" do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        Log Time
      <% end %>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <%# Project Details Card %>
    <div class="lg:col-span-1 space-y-6">
      <%# Client Info %>
      <div class="bg-white rounded-xl shadow-sm border border-slate-200 overflow-hidden">
        <div class="px-6 py-4 border-b border-slate-200">
          <h2 class="text-base font-semibold text-slate-900">Client</h2>
        </div>
        <div class="px-6 py-4">
          <div class="flex items-center gap-3">
            <div class="flex-shrink-0 w-10 h-10 rounded-lg bg-gradient-to-br from-indigo-500 to-purple-600 flex items-center justify-center">
              <span class="text-white font-semibold text-sm"><%= @project.client.name.first(2).upcase %></span>
            </div>
            <div>
              <%= link_to @project.client.name, @project.client, class: "font-medium text-slate-900 hover:text-indigo-600" %>
              <% if @project.client.company.present? %>
                <p class="text-xs text-slate-500"><%= @project.client.company %></p>
              <% end %>
            </div>
          </div>
        </div>
      </div>

      <%# Timeline %>
      <div class="bg-white rounded-xl shadow-sm border border-slate-200 overflow-hidden">
        <div class="px-6 py-4 border-b border-slate-200">
          <h2 class="text-base font-semibold text-slate-900">Timeline</h2>
        </div>
        <div class="divide-y divide-slate-200">
          <div class="px-6 py-3 flex items-center justify-between">
            <span class="text-sm text-slate-500">Start Date</span>
            <span class="text-sm font-medium text-slate-900">
              <%= @project.start_date&.strftime("%b %d, %Y") || "Not set" %>
            </span>
          </div>
          <div class="px-6 py-3 flex items-center justify-between">
            <span class="text-sm text-slate-500">Due Date</span>
            <span class="text-sm font-medium <%= @project.overdue? ? 'text-red-600' : 'text-slate-900' %>">
              <%= @project.due_date&.strftime("%b %d, %Y") || "Not set" %>
              <% if @project.overdue? %>
                <span class="block text-xs text-red-500">Overdue</span>
              <% end %>
            </span>
          </div>
          <div class="px-6 py-3 flex items-center justify-between">
            <span class="text-sm text-slate-500">End Date</span>
            <span class="text-sm font-medium text-slate-900">
              <%= @project.end_date&.strftime("%b %d, %Y") || "Not set" %>
            </span>
          </div>
        </div>
      </div>

      <%# Budget %>
      <div class="bg-white rounded-xl shadow-sm border border-slate-200 overflow-hidden">
        <div class="px-6 py-4 border-b border-slate-200">
          <h2 class="text-base font-semibold text-slate-900">Budget & Costs</h2>
        </div>
        <div class="divide-y divide-slate-200">
          <% if @project.budget.present? %>
            <div class="px-6 py-3 flex items-center justify-between">
              <span class="text-sm text-slate-500">Budget</span>
              <span class="text-sm font-semibold text-slate-900"><%= number_to_currency(@project.budget) %></span>
            </div>
            <div class="px-6 py-3 flex items-center justify-between">
              <span class="text-sm text-slate-500">Remaining</span>
              <span class="text-sm font-medium <%= @project.budget_remaining && @project.budget_remaining < 0 ? 'text-red-600' : 'text-green-600' %>">
                <%= number_to_currency(@project.budget_remaining || 0) %>
              </span>
            </div>
            <div class="px-6 py-3">
              <div class="flex items-center justify-between mb-1">
                <span class="text-sm text-slate-500">Budget Used</span>
                <span class="text-sm font-medium text-slate-900"><%= @project.budget_percentage_used %>%</span>
              </div>
              <div class="w-full bg-slate-200 rounded-full h-2">
                <div class="<%= @project.budget_percentage_used > 100 ? 'bg-red-500' : 'bg-indigo-500' %> h-2 rounded-full transition-all" style="width: <%= [@project.budget_percentage_used, 100].min %>%"></div>
              </div>
            </div>
          <% end %>
          <div class="px-6 py-3 flex items-center justify-between">
            <span class="text-sm text-slate-500">Time Cost</span>
            <span class="text-sm font-medium text-slate-900"><%= number_to_currency(@project.total_time_cost) %></span>
          </div>
          <div class="px-6 py-3 flex items-center justify-between">
            <span class="text-sm text-slate-500">Materials Cost</span>
            <span class="text-sm font-medium text-slate-900"><%= number_to_currency(@project.total_materials_cost) %></span>
          </div>
          <div class="px-6 py-3 flex items-center justify-between bg-slate-50">
            <span class="text-sm font-medium text-slate-700">Total Cost</span>
            <span class="text-sm font-bold text-slate-900"><%= number_to_currency(@project.total_project_cost) %></span>
          </div>
        </div>
      </div>

      <%# Job Site Location %>
      <% if @project.full_address.present? %>
        <div class="bg-white rounded-xl shadow-sm border border-slate-200 overflow-hidden">
          <div class="px-6 py-4 border-b border-slate-200">
            <h2 class="text-base font-semibold text-slate-900">Job Site Location</h2>
          </div>
          <div class="px-6 py-4">
            <div class="flex items-start gap-3">
              <div class="flex-shrink-0 w-8 h-8 rounded-lg bg-purple-50 flex items-center justify-center">
                <svg class="w-4 h-4 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
              </div>
              <div class="text-sm text-slate-900">
                <% if @project.address_line1.present? %><p><%= @project.address_line1 %></p><% end %>
                <% if @project.address_line2.present? %><p><%= @project.address_line2 %></p><% end %>
                <p>
                  <%= [@project.city, @project.state].compact.join(", ") %>
                  <%= @project.postal_code %>
                </p>
              </div>
            </div>
          </div>
        </div>
      <% end %>

      <%# Notes %>
      <% if @project.notes.present? %>
        <div class="bg-white rounded-xl shadow-sm border border-slate-200 overflow-hidden">
          <div class="px-6 py-4 border-b border-slate-200">
            <h2 class="text-base font-semibold text-slate-900">Notes</h2>
          </div>
          <div class="px-6 py-4">
            <p class="text-sm text-slate-600 whitespace-pre-wrap"><%= @project.notes %></p>
          </div>
        </div>
      <% end %>
    </div>

    <%# Main Content Area %>
    <div class="lg:col-span-2 space-y-6">
      <%# Description %>
      <% if @project.description.present? %>
        <div class="bg-white rounded-xl shadow-sm border border-slate-200 overflow-hidden">
          <div class="px-6 py-4 border-b border-slate-200">
            <h2 class="text-base font-semibold text-slate-900">Description</h2>
          </div>
          <div class="px-6 py-4">
            <p class="text-sm text-slate-600 whitespace-pre-wrap"><%= @project.description %></p>
          </div>
        </div>
      <% end %>

      <%# Recent Time Entries %>
      <div class="bg-white rounded-xl shadow-sm border border-slate-200 overflow-hidden">
        <div class="px-6 py-4 border-b border-slate-200 flex items-center justify-between">
          <h2 class="text-base font-semibold text-slate-900">Recent Time Entries</h2>
          <div class="flex items-center gap-2">
            <%= link_to project_time_entries_path(@project), class: "text-sm text-indigo-600 hover:text-indigo-700 font-medium" do %>
              View all
            <% end %>
          </div>
        </div>
        <% if @time_entries.any? %>
          <div class="divide-y divide-slate-200">
            <% @time_entries.each do |entry| %>
              <div class="px-6 py-4 hover:bg-slate-50 transition-colors">
                <div class="flex items-center justify-between">
                  <div>
                    <p class="text-sm font-medium text-slate-900"><%= entry.description.presence || "Time entry" %></p>
                    <p class="text-xs text-slate-500 mt-1">
                      <%= entry.date.strftime("%b %d, %Y") %> &bull; <%= pluralize(entry.hours, "hour") %>
                    </p>
                  </div>
                  <div class="text-right">
                    <p class="text-sm font-semibold text-slate-900"><%= number_to_currency(entry.total_amount || 0) %></p>
                    <% if entry.billable? %>
                      <span class="text-xs text-green-600">Billable</span>
                    <% else %>
                      <span class="text-xs text-slate-400">Non-billable</span>
                    <% end %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="px-6 py-8 text-center">
            <svg class="mx-auto h-10 w-10 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <p class="mt-2 text-sm text-slate-500">No time entries yet</p>
            <%= link_to new_project_time_entry_path(@project), data: { turbo_frame: "modal" }, class: "mt-2 inline-flex text-sm text-indigo-600 hover:text-indigo-700 font-medium" do %>
              Log first entry
            <% end %>
          </div>
        <% end %>
      </div>

      <%# Recent Material Entries %>
      <div class="bg-white rounded-xl shadow-sm border border-slate-200 overflow-hidden">
        <div class="px-6 py-4 border-b border-slate-200 flex items-center justify-between">
          <h2 class="text-base font-semibold text-slate-900">Recent Materials</h2>
          <div class="flex items-center gap-2">
            <%= link_to project_material_entries_path(@project), class: "text-sm text-indigo-600 hover:text-indigo-700 font-medium" do %>
              View all
            <% end %>
          </div>
        </div>
        <% if @material_entries.any? %>
          <div class="divide-y divide-slate-200">
            <% @material_entries.each do |entry| %>
              <div class="px-6 py-4 hover:bg-slate-50 transition-colors">
                <div class="flex items-center justify-between">
                  <div>
                    <p class="text-sm font-medium text-slate-900"><%= entry.name %></p>
                    <p class="text-xs text-slate-500 mt-1">
                      <%= entry.date.strftime("%b %d, %Y") %> &bull; Qty: <%= entry.quantity %>
                    </p>
                  </div>
                  <div class="text-right">
                    <p class="text-sm font-semibold text-slate-900"><%= number_to_currency(entry.total_amount || 0) %></p>
                    <% if entry.billable? %>
                      <span class="text-xs text-green-600">Billable</span>
                    <% else %>
                      <span class="text-xs text-slate-400">Non-billable</span>
                    <% end %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="px-6 py-8 text-center">
            <svg class="mx-auto h-10 w-10 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
            </svg>
            <p class="mt-2 text-sm text-slate-500">No materials logged yet</p>
            <%= link_to new_project_material_entry_path(@project), data: { turbo_frame: "modal" }, class: "mt-2 inline-flex text-sm text-indigo-600 hover:text-indigo-700 font-medium" do %>
              Add first material
            <% end %>
          </div>
        <% end %>
      </div>

      <%# Invoices %>
      <div class="bg-white rounded-xl shadow-sm border border-slate-200 overflow-hidden">
        <div class="px-6 py-4 border-b border-slate-200 flex items-center justify-between">
          <h2 class="text-base font-semibold text-slate-900">Invoices</h2>
          <%= link_to new_invoice_path(project_id: @project.id), data: { turbo_frame: "modal" }, class: "text-sm text-indigo-600 hover:text-indigo-700 font-medium" do %>
            Create Invoice
          <% end %>
        </div>
        <% if @invoices.any? %>
          <div class="divide-y divide-slate-200">
            <% @invoices.each do |invoice| %>
              <div class="px-6 py-4 hover:bg-slate-50 transition-colors">
                <div class="flex items-center justify-between">
                  <div>
                    <%= link_to "##{invoice.invoice_number}", invoice, class: "text-sm font-medium text-slate-900 hover:text-indigo-600" %>
                    <p class="text-xs text-slate-500 mt-1">
                      <%= invoice.issue_date&.strftime("%b %d, %Y") || "No date" %>
                    </p>
                  </div>
                  <div class="text-right">
                    <p class="text-sm font-semibold text-slate-900"><%= number_to_currency(invoice.total_amount || 0) %></p>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= invoice_status_class(invoice.status) %>">
                      <%= invoice.status&.humanize || "Draft" %>
                    </span>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="px-6 py-8 text-center">
            <svg class="mx-auto h-10 w-10 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
            </svg>
            <p class="mt-2 text-sm text-slate-500">No invoices yet</p>
            <%= link_to new_invoice_path(project_id: @project.id), data: { turbo_frame: "modal" }, class: "mt-2 inline-flex text-sm text-indigo-600 hover:text-indigo-700 font-medium" do %>
              Create first invoice
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <%# Delete action %>
  <% if @project.invoices.empty? %>
    <div class="pt-6 border-t border-slate-200">
      <div class="bg-red-50 rounded-xl p-4">
        <div class="flex items-start">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M8.485 2.495c.673-1.167 2.357-1.167 3.03 0l6.28 10.875c.673 1.167-.17 2.625-1.516 2.625H3.72c-1.347 0-2.189-1.458-1.515-2.625L8.485 2.495zM10 5a.75.75 0 01.75.75v3.5a.75.75 0 01-1.5 0v-3.5A.75.75 0 0110 5zm0 9a1 1 0 100-2 1 1 0 000 2z" clip-rule="evenodd" />
            </svg>
          </div>
          <div class="ml-3 flex-1">
            <h3 class="text-sm font-medium text-red-800">Danger Zone</h3>
            <p class="mt-1 text-sm text-red-700">Once you delete this project, all time entries, material entries, and documents will be permanently deleted.</p>
            <div class="mt-3">
              <%= button_to "Delete Project", project_path(@project), method: :delete, data: { turbo_confirm: "Are you sure you want to delete this project? This action cannot be undone." }, class: "inline-flex items-center px-3 py-2 border border-red-300 text-sm font-medium rounded-lg text-red-700 bg-white hover:bg-red-50 transition-colors" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
