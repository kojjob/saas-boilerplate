<% content_for :page_title, "#{@client.name} - Invoices" %>

<div class="space-y-6">
  <%# Header %>
  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
    <div class="flex items-center gap-4">
      <%= link_to client_path(@client), class: "p-2 text-slate-400 hover:text-slate-600 transition-colors" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
        </svg>
      <% end %>
      <div>
        <h1 class="text-2xl font-bold text-slate-900">Invoices</h1>
        <p class="mt-1 text-sm text-slate-500"><%= @client.name %></p>
      </div>
    </div>
    <div class="flex items-center gap-3">
      <%= link_to new_invoice_path(client_id: @client.id), data: { turbo_frame: "modal" }, class: "inline-flex items-center px-4 py-2 bg-gradient-to-r from-indigo-500 to-purple-600 text-white text-sm font-medium rounded-lg hover:from-indigo-600 hover:to-purple-700 transition-all shadow-sm" do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
        </svg>
        New Invoice
      <% end %>
    </div>
  </div>

  <%# Invoices List %>
  <div class="bg-white rounded-xl shadow-sm border border-slate-200 overflow-hidden">
    <% if @invoices.any? %>
      <div class="divide-y divide-slate-200">
        <% @invoices.each do |invoice| %>
          <div class="px-6 py-4 hover:bg-slate-50 transition-colors">
            <div class="flex items-center justify-between">
              <div class="flex-1 min-w-0">
                <%= link_to "##{invoice.invoice_number}", invoice, class: "text-sm font-medium text-slate-900 hover:text-indigo-600" %>
                <p class="text-xs text-slate-500 mt-1">
                  Issued <%= invoice.issue_date&.strftime("%b %d, %Y") || "Not set" %>
                  <% if invoice.due_date.present? %>
                    &middot; Due <%= invoice.due_date.strftime("%b %d, %Y") %>
                  <% end %>
                </p>
              </div>
              <div class="flex items-center gap-4">
                <div class="text-right">
                  <p class="text-sm font-semibold text-slate-900"><%= number_to_currency(invoice.total_amount || 0) %></p>
                  <% if invoice.paid? %>
                    <p class="text-xs text-green-600">Paid</p>
                  <% elsif invoice.overdue? %>
                    <p class="text-xs text-red-600">Overdue</p>
                  <% else %>
                    <p class="text-xs text-slate-500">Pending</p>
                  <% end %>
                </div>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= invoice_status_class(invoice.status) %>">
                  <%= invoice.status&.humanize || "Draft" %>
                </span>
              </div>
            </div>
          </div>
        <% end %>
      </div>

      <%# Pagination %>
      <% if @invoices.respond_to?(:total_pages) && @invoices.total_pages > 1 %>
        <div class="px-6 py-4 border-t border-slate-200">
          <%= paginate @invoices %>
        </div>
      <% end %>
    <% else %>
      <div class="px-6 py-12 text-center">
        <svg class="mx-auto h-12 w-12 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
        </svg>
        <h3 class="mt-3 text-sm font-medium text-slate-900">No invoices yet</h3>
        <p class="mt-1 text-sm text-slate-500">Get started by creating a new invoice for this client.</p>
        <div class="mt-4">
          <%= link_to new_invoice_path(client_id: @client.id), data: { turbo_frame: "modal" }, class: "inline-flex items-center px-4 py-2 bg-indigo-600 text-white text-sm font-medium rounded-lg hover:bg-indigo-700 transition-colors" do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
            </svg>
            New Invoice
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<%# Modal container %>
<%= turbo_frame_tag "modal" %>
