<% content_for :page_title, @client.name %>

<div class="space-y-6">
  <%# Header with actions %>
  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
    <div class="flex items-center gap-4">
      <%= link_to clients_path, class: "p-2 text-slate-400 hover:text-slate-600 transition-colors" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
        </svg>
      <% end %>
      <div>
        <h1 class="text-2xl font-bold text-slate-900"><%= @client.name %></h1>
        <% if @client.company.present? %>
          <p class="mt-1 text-sm text-slate-500"><%= @client.company %></p>
        <% end %>
      </div>
    </div>
    <div class="flex items-center gap-3">
      <%= link_to edit_client_path(@client), data: { turbo_frame: "modal" }, class: "inline-flex items-center px-4 py-2 border border-slate-300 text-sm font-medium rounded-lg text-slate-700 bg-white hover:bg-slate-50 transition-colors" do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
        </svg>
        Edit
      <% end %>
      <%= link_to new_project_path(client_id: @client.id), data: { turbo_frame: "modal" }, class: "inline-flex items-center px-4 py-2 bg-gradient-to-r from-indigo-500 to-purple-600 text-white text-sm font-medium rounded-lg hover:from-indigo-600 hover:to-purple-700 transition-all shadow-sm" do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
        </svg>
        New Project
      <% end %>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <%# Client Details Card %>
    <div class="lg:col-span-1 space-y-6">
      <%# Contact Information %>
      <div class="bg-white rounded-xl shadow-sm border border-slate-200 overflow-hidden">
        <div class="px-6 py-4 border-b border-slate-200">
          <h2 class="text-base font-semibold text-slate-900">Contact Information</h2>
        </div>
        <div class="px-6 py-4 space-y-4">
          <% if @client.email.present? %>
            <div class="flex items-start gap-3">
              <div class="flex-shrink-0 w-8 h-8 rounded-lg bg-indigo-50 flex items-center justify-center">
                <svg class="w-4 h-4 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
              </div>
              <div>
                <p class="text-xs font-medium text-slate-500 uppercase tracking-wider">Email</p>
                <a href="mailto:<%= @client.email %>" class="text-sm text-indigo-600 hover:text-indigo-700"><%= @client.email %></a>
              </div>
            </div>
          <% end %>

          <% if @client.phone.present? %>
            <div class="flex items-start gap-3">
              <div class="flex-shrink-0 w-8 h-8 rounded-lg bg-green-50 flex items-center justify-center">
                <svg class="w-4 h-4 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
              </div>
              <div>
                <p class="text-xs font-medium text-slate-500 uppercase tracking-wider">Phone</p>
                <a href="tel:<%= @client.phone %>" class="text-sm text-slate-900"><%= @client.phone %></a>
              </div>
            </div>
          <% end %>

          <% if @client.address_line1.present? || @client.city.present? %>
            <div class="flex items-start gap-3">
              <div class="flex-shrink-0 w-8 h-8 rounded-lg bg-purple-50 flex items-center justify-center">
                <svg class="w-4 h-4 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
              </div>
              <div>
                <p class="text-xs font-medium text-slate-500 uppercase tracking-wider">Address</p>
                <div class="text-sm text-slate-900">
                  <% if @client.address_line1.present? %><p><%= @client.address_line1 %></p><% end %>
                  <% if @client.address_line2.present? %><p><%= @client.address_line2 %></p><% end %>
                  <p>
                    <%= [@client.city, @client.state].compact.join(", ") %>
                    <%= @client.postal_code %>
                  </p>
                  <% if @client.country.present? %><p><%= @client.country %></p><% end %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>

      <%# Notes %>
      <% if @client.notes.present? %>
        <div class="bg-white rounded-xl shadow-sm border border-slate-200 overflow-hidden">
          <div class="px-6 py-4 border-b border-slate-200">
            <h2 class="text-base font-semibold text-slate-900">Notes</h2>
          </div>
          <div class="px-6 py-4">
            <p class="text-sm text-slate-600 whitespace-pre-wrap"><%= @client.notes %></p>
          </div>
        </div>
      <% end %>

      <%# Quick Stats %>
      <div class="bg-white rounded-xl shadow-sm border border-slate-200 overflow-hidden">
        <div class="px-6 py-4 border-b border-slate-200">
          <h2 class="text-base font-semibold text-slate-900">Quick Stats</h2>
        </div>
        <div class="divide-y divide-slate-200">
          <div class="px-6 py-3 flex items-center justify-between">
            <span class="text-sm text-slate-500">Total Projects</span>
            <span class="text-sm font-semibold text-slate-900"><%= @client.projects.count %></span>
          </div>
          <div class="px-6 py-3 flex items-center justify-between">
            <span class="text-sm text-slate-500">Total Invoices</span>
            <span class="text-sm font-semibold text-slate-900"><%= @client.invoices.count %></span>
          </div>
          <div class="px-6 py-3 flex items-center justify-between">
            <span class="text-sm text-slate-500">Client Since</span>
            <span class="text-sm font-semibold text-slate-900"><%= @client.created_at.strftime("%B %Y") %></span>
          </div>
        </div>
      </div>
    </div>

    <%# Projects and Invoices %>
    <div class="lg:col-span-2 space-y-6">
      <%# Recent Projects %>
      <div class="bg-white rounded-xl shadow-sm border border-slate-200 overflow-hidden">
        <div class="px-6 py-4 border-b border-slate-200 flex items-center justify-between">
          <h2 class="text-base font-semibold text-slate-900">Recent Projects</h2>
          <%= link_to projects_client_path(@client), class: "text-sm text-indigo-600 hover:text-indigo-700 font-medium" do %>
            View all
          <% end %>
        </div>
        <% if @recent_projects.any? %>
          <div class="divide-y divide-slate-200">
            <% @recent_projects.each do |project| %>
              <div class="px-6 py-4 hover:bg-slate-50 transition-colors">
                <div class="flex items-center justify-between">
                  <div>
                    <%= link_to project.name, project, class: "text-sm font-medium text-slate-900 hover:text-indigo-600" %>
                    <p class="text-xs text-slate-500 mt-1">
                      Started <%= project.start_date&.strftime("%b %d, %Y") || "Not set" %>
                    </p>
                  </div>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= project_status_class(project.status) %>">
                    <%= project.status&.humanize || "Draft" %>
                  </span>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="px-6 py-8 text-center">
            <svg class="mx-auto h-10 w-10 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z" />
            </svg>
            <p class="mt-2 text-sm text-slate-500">No projects yet</p>
            <%= link_to new_project_path(client_id: @client.id), data: { turbo_frame: "modal" }, class: "mt-2 inline-flex text-sm text-indigo-600 hover:text-indigo-700 font-medium" do %>
              Create first project
            <% end %>
          </div>
        <% end %>
      </div>

      <%# Recent Invoices %>
      <div class="bg-white rounded-xl shadow-sm border border-slate-200 overflow-hidden">
        <div class="px-6 py-4 border-b border-slate-200 flex items-center justify-between">
          <h2 class="text-base font-semibold text-slate-900">Recent Invoices</h2>
          <%= link_to invoices_client_path(@client), class: "text-sm text-indigo-600 hover:text-indigo-700 font-medium" do %>
            View all
          <% end %>
        </div>
        <% if @recent_invoices.any? %>
          <div class="divide-y divide-slate-200">
            <% @recent_invoices.each do |invoice| %>
              <div class="px-6 py-4 hover:bg-slate-50 transition-colors">
                <div class="flex items-center justify-between">
                  <div>
                    <%= link_to "##{invoice.invoice_number}", invoice, class: "text-sm font-medium text-slate-900 hover:text-indigo-600" %>
                    <p class="text-xs text-slate-500 mt-1">
                      <%= invoice.issue_date&.strftime("%b %d, %Y") || "No date" %>
                    </p>
                  </div>
                  <div class="text-right">
                    <p class="text-sm font-semibold text-slate-900"><%= number_to_currency(invoice.total_amount || 0) %></p>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= invoice_status_class(invoice.status) %>">
                      <%= invoice.status&.humanize || "Draft" %>
                    </span>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="px-6 py-8 text-center">
            <svg class="mx-auto h-10 w-10 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
            </svg>
            <p class="mt-2 text-sm text-slate-500">No invoices yet</p>
            <%= link_to new_invoice_path(client_id: @client.id), data: { turbo_frame: "modal" }, class: "mt-2 inline-flex text-sm text-indigo-600 hover:text-indigo-700 font-medium" do %>
              Create first invoice
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <%# Delete action %>
  <% if @client.projects.empty? && @client.invoices.empty? %>
    <div class="pt-6 border-t border-slate-200">
      <div class="bg-red-50 rounded-xl p-4">
        <div class="flex items-start">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M8.485 2.495c.673-1.167 2.357-1.167 3.03 0l6.28 10.875c.673 1.167-.17 2.625-1.516 2.625H3.72c-1.347 0-2.189-1.458-1.515-2.625L8.485 2.495zM10 5a.75.75 0 01.75.75v3.5a.75.75 0 01-1.5 0v-3.5A.75.75 0 0110 5zm0 9a1 1 0 100-2 1 1 0 000 2z" clip-rule="evenodd" />
            </svg>
          </div>
          <div class="ml-3 flex-1">
            <h3 class="text-sm font-medium text-red-800">Danger Zone</h3>
            <p class="mt-1 text-sm text-red-700">Once you delete this client, there is no going back. Please be certain.</p>
            <div class="mt-3">
              <%= button_to "Delete Client", client_path(@client), method: :delete, data: { turbo_confirm: "Are you sure you want to delete this client? This action cannot be undone." }, class: "inline-flex items-center px-3 py-2 border border-red-300 text-sm font-medium rounded-lg text-red-700 bg-white hover:bg-red-50 transition-colors" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
