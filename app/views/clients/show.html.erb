<% content_for :page_title, @client.name %>

<div class="max-w-7xl mx-auto space-y-6">
  <%# Floating Sticky Header %>
  <div class="sticky top-0 z-10 bg-white/95 backdrop-blur-sm rounded-xl shadow-sm border border-slate-200 p-4 mb-6">
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
      <div class="flex items-center gap-4">
        <%= link_to clients_path, class: "p-2 text-slate-400 hover:text-slate-600 hover:bg-slate-100 rounded-lg transition-colors" do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
          </svg>
        <% end %>

        <%# Client Avatar with Initials %>
        <div class="flex-shrink-0 w-14 h-14 rounded-full bg-gradient-to-br from-indigo-500 to-purple-600 flex items-center justify-center shadow-md">
          <span class="text-xl font-bold text-white"><%= @client.initials %></span>
        </div>

        <div>
          <div class="flex items-center gap-3">
            <h1 class="text-2xl font-bold text-slate-900"><%= @client.name %></h1>
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= @client.active? ? 'bg-emerald-100 text-emerald-700' : 'bg-slate-100 text-slate-600' %>">
              <span class="w-1.5 h-1.5 rounded-full mr-1.5 <%= @client.active? ? 'bg-emerald-500' : 'bg-slate-400' %>"></span>
              <%= @client.status.humanize %>
            </span>
          </div>
          <% if @client.company.present? %>
            <p class="text-sm text-slate-500"><%= @client.company %></p>
          <% end %>
        </div>
      </div>

      <div class="flex items-center gap-2 flex-wrap">
        <% if @client.email.present? %>
          <%= link_to "mailto:#{@client.email}", class: "inline-flex items-center px-3 py-2 border border-slate-300 text-sm font-medium rounded-lg text-slate-700 bg-white hover:bg-slate-50 transition-colors" do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
            Email
          <% end %>
        <% end %>
        <% if @client.phone.present? %>
          <%= link_to "tel:#{@client.phone}", class: "inline-flex items-center px-3 py-2 border border-slate-300 text-sm font-medium rounded-lg text-slate-700 bg-white hover:bg-slate-50 transition-colors" do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
            Call
          <% end %>
        <% end %>
        <%= link_to edit_client_path(@client), data: { turbo_frame: "modal" }, class: "inline-flex items-center px-3 py-2 border border-slate-300 text-sm font-medium rounded-lg text-slate-700 bg-white hover:bg-slate-50 transition-colors" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
          </svg>
          Edit
        <% end %>
        <%= link_to new_project_path(client_id: @client.id), data: { turbo_frame: "modal" }, class: "inline-flex items-center px-4 py-2 bg-gradient-to-r from-indigo-500 to-purple-600 text-white text-sm font-medium rounded-lg hover:from-indigo-600 hover:to-purple-700 transition-all shadow-sm" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
          </svg>
          New Project
        <% end %>
      </div>
    </div>
  </div>

  <%# Financial Stats Cards %>
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
    <%# Total Revenue %>
    <div class="bg-gradient-to-br from-emerald-500 to-teal-600 rounded-xl p-5 text-white shadow-lg">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-emerald-100 text-sm font-medium">Total Revenue</p>
          <p class="text-2xl font-bold mt-1"><%= number_to_currency(@client.total_revenue) %></p>
          <p class="text-emerald-100 text-xs mt-1">From paid invoices</p>
        </div>
        <div class="w-12 h-12 rounded-full bg-white/20 flex items-center justify-center">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
      </div>
    </div>

    <%# Outstanding Balance %>
    <div class="bg-gradient-to-br from-amber-500 to-orange-600 rounded-xl p-5 text-white shadow-lg">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-amber-100 text-sm font-medium">Outstanding</p>
          <p class="text-2xl font-bold mt-1"><%= number_to_currency(@client.outstanding_balance) %></p>
          <p class="text-amber-100 text-xs mt-1">Awaiting payment</p>
        </div>
        <div class="w-12 h-12 rounded-full bg-white/20 flex items-center justify-center">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
      </div>
    </div>

    <%# Active Projects %>
    <div class="bg-gradient-to-br from-indigo-500 to-purple-600 rounded-xl p-5 text-white shadow-lg">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-indigo-100 text-sm font-medium">Active Projects</p>
          <p class="text-2xl font-bold mt-1"><%= @client.projects.where(status: :in_progress).count %></p>
          <p class="text-indigo-100 text-xs mt-1">Currently in progress</p>
        </div>
        <div class="w-12 h-12 rounded-full bg-white/20 flex items-center justify-center">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
          </svg>
        </div>
      </div>
    </div>

    <%# Client Since %>
    <div class="bg-gradient-to-br from-slate-600 to-slate-700 rounded-xl p-5 text-white shadow-lg">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-slate-300 text-sm font-medium">Client Since</p>
          <p class="text-2xl font-bold mt-1"><%= @client.created_at.strftime("%b %Y") %></p>
          <p class="text-slate-300 text-xs mt-1"><%= time_ago_in_words(@client.created_at) %> ago</p>
        </div>
        <div class="w-12 h-12 rounded-full bg-white/20 flex items-center justify-center">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
          </svg>
        </div>
      </div>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <%# Left Column: Client Details %>
    <div class="lg:col-span-1 space-y-6">
      <%# Contact Information Card %>
      <div class="bg-white rounded-xl shadow-sm border border-slate-200 overflow-hidden">
        <div class="px-6 py-4 bg-gradient-to-r from-slate-50 to-slate-100 border-b border-slate-200">
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5 text-slate-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
            </svg>
            <h2 class="text-base font-semibold text-slate-900">Contact Information</h2>
          </div>
        </div>
        <div class="p-6 space-y-5">
          <% if @client.email.present? %>
            <div class="flex items-start gap-4">
              <div class="flex-shrink-0 w-10 h-10 rounded-lg bg-indigo-100 flex items-center justify-center">
                <svg class="w-5 h-5 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
              </div>
              <div class="flex-1 min-w-0">
                <p class="text-xs font-medium text-slate-500 uppercase tracking-wider">Email</p>
                <a href="mailto:<%= @client.email %>" class="text-sm text-indigo-600 hover:text-indigo-700 font-medium truncate block"><%= @client.email %></a>
              </div>
            </div>
          <% end %>

          <% if @client.phone.present? %>
            <div class="flex items-start gap-4">
              <div class="flex-shrink-0 w-10 h-10 rounded-lg bg-emerald-100 flex items-center justify-center">
                <svg class="w-5 h-5 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
              </div>
              <div class="flex-1 min-w-0">
                <p class="text-xs font-medium text-slate-500 uppercase tracking-wider">Phone</p>
                <a href="tel:<%= @client.phone %>" class="text-sm text-slate-900 font-medium hover:text-indigo-600"><%= @client.phone %></a>
              </div>
            </div>
          <% end %>

          <% if @client.company.present? %>
            <div class="flex items-start gap-4">
              <div class="flex-shrink-0 w-10 h-10 rounded-lg bg-purple-100 flex items-center justify-center">
                <svg class="w-5 h-5 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                </svg>
              </div>
              <div class="flex-1 min-w-0">
                <p class="text-xs font-medium text-slate-500 uppercase tracking-wider">Company</p>
                <p class="text-sm text-slate-900 font-medium"><%= @client.company %></p>
              </div>
            </div>
          <% end %>

          <% if @client.address_line1.present? || @client.city.present? %>
            <div class="flex items-start gap-4">
              <div class="flex-shrink-0 w-10 h-10 rounded-lg bg-rose-100 flex items-center justify-center">
                <svg class="w-5 h-5 text-rose-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
              </div>
              <div class="flex-1 min-w-0">
                <p class="text-xs font-medium text-slate-500 uppercase tracking-wider">Address</p>
                <div class="text-sm text-slate-900">
                  <% if @client.address_line1.present? %><p><%= @client.address_line1 %></p><% end %>
                  <% if @client.address_line2.present? %><p><%= @client.address_line2 %></p><% end %>
                  <% if @client.city.present? || @client.state.present? || @client.postal_code.present? %>
                    <p>
                      <%= [@client.city, @client.state].compact.join(", ") %>
                      <%= @client.postal_code %>
                    </p>
                  <% end %>
                  <% if @client.country.present? %><p class="text-slate-500"><%= @client.country %></p><% end %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>

      <%# Notes Card %>
      <% if @client.notes.present? %>
        <div class="bg-white rounded-xl shadow-sm border border-slate-200 overflow-hidden">
          <div class="px-6 py-4 bg-gradient-to-r from-amber-50 to-yellow-50 border-b border-slate-200">
            <div class="flex items-center gap-2">
              <svg class="w-5 h-5 text-amber-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
              </svg>
              <h2 class="text-base font-semibold text-slate-900">Notes</h2>
            </div>
          </div>
          <div class="p-6">
            <p class="text-sm text-slate-600 whitespace-pre-wrap leading-relaxed"><%= @client.notes %></p>
          </div>
        </div>
      <% end %>

      <%# Quick Actions Card %>
      <div class="bg-white rounded-xl shadow-sm border border-slate-200 overflow-hidden">
        <div class="px-6 py-4 bg-gradient-to-r from-slate-50 to-slate-100 border-b border-slate-200">
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5 text-slate-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
            </svg>
            <h2 class="text-base font-semibold text-slate-900">Quick Actions</h2>
          </div>
        </div>
        <div class="p-4 space-y-2">
          <%= link_to new_invoice_path(client_id: @client.id), data: { turbo_frame: "modal" }, class: "flex items-center gap-3 w-full px-4 py-3 rounded-lg hover:bg-slate-50 transition-colors group" do %>
            <div class="w-9 h-9 rounded-lg bg-emerald-100 flex items-center justify-center group-hover:bg-emerald-200 transition-colors">
              <svg class="w-4 h-4 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
              </svg>
            </div>
            <div class="flex-1">
              <p class="text-sm font-medium text-slate-900">Create Invoice</p>
              <p class="text-xs text-slate-500">Generate a new invoice for this client</p>
            </div>
            <svg class="w-5 h-5 text-slate-400 group-hover:text-slate-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          <% end %>

          <%= link_to new_project_path(client_id: @client.id), data: { turbo_frame: "modal" }, class: "flex items-center gap-3 w-full px-4 py-3 rounded-lg hover:bg-slate-50 transition-colors group" do %>
            <div class="w-9 h-9 rounded-lg bg-indigo-100 flex items-center justify-center group-hover:bg-indigo-200 transition-colors">
              <svg class="w-4 h-4 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z" />
              </svg>
            </div>
            <div class="flex-1">
              <p class="text-sm font-medium text-slate-900">New Project</p>
              <p class="text-xs text-slate-500">Start a new project for this client</p>
            </div>
            <svg class="w-5 h-5 text-slate-400 group-hover:text-slate-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          <% end %>

          <% if @client.active? %>
            <div class="flex items-center gap-3 w-full px-4 py-3 rounded-lg opacity-50 cursor-not-allowed">
              <div class="w-9 h-9 rounded-lg bg-slate-100 flex items-center justify-center">
                <svg class="w-4 h-4 text-slate-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 8h14M5 8a2 2 0 110-4h14a2 2 0 110 4M5 8v10a2 2 0 002 2h10a2 2 0 002-2V8m-9 4h4" />
                </svg>
              </div>
              <div class="flex-1 text-left">
                <p class="text-sm font-medium text-slate-500">Archive Client</p>
                <p class="text-xs text-slate-400">Coming soon</p>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <%# Right Column: Projects and Invoices %>
    <div class="lg:col-span-2 space-y-6">
      <%# Recent Projects %>
      <div class="bg-white rounded-xl shadow-sm border border-slate-200 overflow-hidden">
        <div class="px-6 py-4 bg-gradient-to-r from-indigo-50 to-purple-50 border-b border-slate-200 flex items-center justify-between">
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5 text-indigo-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z" />
            </svg>
            <h2 class="text-base font-semibold text-slate-900">Recent Projects</h2>
            <span class="ml-2 px-2 py-0.5 rounded-full bg-indigo-100 text-indigo-600 text-xs font-medium"><%= @client.projects.count %> total</span>
          </div>
          <%= link_to projects_client_path(@client), class: "text-sm text-indigo-600 hover:text-indigo-700 font-medium flex items-center gap-1" do %>
            View all
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          <% end %>
        </div>
        <% if @recent_projects.any? %>
          <div class="divide-y divide-slate-100">
            <% @recent_projects.each do |project| %>
              <%= link_to project, class: "block px-6 py-4 hover:bg-slate-50 transition-colors" do %>
                <div class="flex items-center justify-between">
                  <div class="flex items-center gap-4">
                    <div class="w-10 h-10 rounded-lg bg-gradient-to-br from-indigo-100 to-purple-100 flex items-center justify-center">
                      <svg class="w-5 h-5 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                      </svg>
                    </div>
                    <div>
                      <p class="text-sm font-medium text-slate-900"><%= project.name %></p>
                      <p class="text-xs text-slate-500 mt-0.5">
                        Started <%= project.start_date&.strftime("%b %d, %Y") || "Not set" %>
                      </p>
                    </div>
                  </div>
                  <div class="flex items-center gap-3">
                    <% if project.respond_to?(:total_project_cost) && project.total_project_cost > 0 %>
                      <span class="text-sm font-medium text-slate-700"><%= number_to_currency(project.total_project_cost) %></span>
                    <% end %>
                    <span class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-medium <%= project_status_class(project.status) %>">
                      <%= project.status&.humanize || "Draft" %>
                    </span>
                  </div>
                </div>
              <% end %>
            <% end %>
          </div>
        <% else %>
          <div class="px-6 py-12 text-center">
            <div class="w-16 h-16 mx-auto rounded-full bg-indigo-100 flex items-center justify-center mb-4">
              <svg class="w-8 h-8 text-indigo-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z" />
              </svg>
            </div>
            <h3 class="text-sm font-medium text-slate-900">No projects yet</h3>
            <p class="text-sm text-slate-500 mt-1 mb-4">Get started by creating a new project for this client.</p>
            <%= link_to new_project_path(client_id: @client.id), data: { turbo_frame: "modal" }, class: "inline-flex items-center px-4 py-2 bg-indigo-600 text-white text-sm font-medium rounded-lg hover:bg-indigo-700 transition-colors" do %>
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
              </svg>
              Create First Project
            <% end %>
          </div>
        <% end %>
      </div>

      <%# Recent Invoices %>
      <div class="bg-white rounded-xl shadow-sm border border-slate-200 overflow-hidden">
        <div class="px-6 py-4 bg-gradient-to-r from-emerald-50 to-teal-50 border-b border-slate-200 flex items-center justify-between">
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5 text-emerald-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
            </svg>
            <h2 class="text-base font-semibold text-slate-900">Recent Invoices</h2>
            <span class="ml-2 px-2 py-0.5 rounded-full bg-emerald-100 text-emerald-600 text-xs font-medium"><%= @client.invoices.count %> total</span>
          </div>
          <%= link_to invoices_client_path(@client), class: "text-sm text-emerald-600 hover:text-emerald-700 font-medium flex items-center gap-1" do %>
            View all
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          <% end %>
        </div>
        <% if @recent_invoices.any? %>
          <div class="divide-y divide-slate-100">
            <% @recent_invoices.each do |invoice| %>
              <%= link_to invoice, class: "block px-6 py-4 hover:bg-slate-50 transition-colors" do %>
                <div class="flex items-center justify-between">
                  <div class="flex items-center gap-4">
                    <div class="w-10 h-10 rounded-lg flex items-center justify-center <%= invoice_status_bg_class(invoice.status) %>">
                      <svg class="w-5 h-5 <%= invoice_status_icon_class(invoice.status) %>" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                      </svg>
                    </div>
                    <div>
                      <p class="text-sm font-medium text-slate-900">#<%= invoice.invoice_number %></p>
                      <p class="text-xs text-slate-500 mt-0.5">
                        <% if invoice.issue_date.present? %>
                          Issued <%= invoice.issue_date.strftime("%b %d, %Y") %>
                        <% else %>
                          No issue date
                        <% end %>
                      </p>
                    </div>
                  </div>
                  <div class="text-right flex items-center gap-3">
                    <div>
                      <p class="text-sm font-bold text-slate-900"><%= number_to_currency(invoice.total_amount || 0) %></p>
                      <% if invoice.due_date.present? && invoice.unpaid? %>
                        <p class="text-xs text-slate-500">Due <%= invoice.due_date.strftime("%b %d") %></p>
                      <% end %>
                    </div>
                    <span class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-medium <%= invoice_status_class(invoice.status) %>">
                      <%= invoice.status&.humanize || "Draft" %>
                    </span>
                  </div>
                </div>
              <% end %>
            <% end %>
          </div>
        <% else %>
          <div class="px-6 py-12 text-center">
            <div class="w-16 h-16 mx-auto rounded-full bg-emerald-100 flex items-center justify-center mb-4">
              <svg class="w-8 h-8 text-emerald-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
              </svg>
            </div>
            <h3 class="text-sm font-medium text-slate-900">No invoices yet</h3>
            <p class="text-sm text-slate-500 mt-1 mb-4">Create an invoice to bill this client for your services.</p>
            <%= link_to new_invoice_path(client_id: @client.id), data: { turbo_frame: "modal" }, class: "inline-flex items-center px-4 py-2 bg-emerald-600 text-white text-sm font-medium rounded-lg hover:bg-emerald-700 transition-colors" do %>
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
              </svg>
              Create First Invoice
            <% end %>
          </div>
        <% end %>
      </div>

      <%# Summary Stats Card %>
      <div class="bg-white rounded-xl shadow-sm border border-slate-200 overflow-hidden">
        <div class="px-6 py-4 bg-gradient-to-r from-slate-50 to-slate-100 border-b border-slate-200">
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5 text-slate-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
            </svg>
            <h2 class="text-base font-semibold text-slate-900">Summary Statistics</h2>
          </div>
        </div>
        <div class="p-6">
          <div class="grid grid-cols-2 sm:grid-cols-4 gap-6">
            <div class="text-center">
              <div class="text-2xl font-bold text-indigo-600"><%= @client.projects.count %></div>
              <div class="text-xs text-slate-500 mt-1">Total Projects</div>
            </div>
            <div class="text-center">
              <div class="text-2xl font-bold text-emerald-600"><%= @client.invoices.where(status: :paid).count %></div>
              <div class="text-xs text-slate-500 mt-1">Paid Invoices</div>
            </div>
            <div class="text-center">
              <div class="text-2xl font-bold text-amber-600"><%= @client.invoices.unpaid.count %></div>
              <div class="text-xs text-slate-500 mt-1">Pending Invoices</div>
            </div>
            <div class="text-center">
              <div class="text-2xl font-bold text-slate-700"><%= @client.invoices.count %></div>
              <div class="text-xs text-slate-500 mt-1">Total Invoices</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <%# Delete action %>
  <% if @client.projects.empty? && @client.invoices.empty? %>
    <div class="mt-8 bg-red-50 rounded-xl border border-red-200 overflow-hidden">
      <div class="px-6 py-4 bg-gradient-to-r from-red-50 to-rose-50 border-b border-red-200">
        <div class="flex items-center gap-2">
          <svg class="w-5 h-5 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
          </svg>
          <h2 class="text-base font-semibold text-red-800">Danger Zone</h2>
        </div>
      </div>
      <div class="p-6">
        <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
          <div>
            <h3 class="text-sm font-medium text-red-800">Delete this client</h3>
            <p class="text-sm text-red-600 mt-1">Once you delete this client, there is no going back. Please be certain.</p>
          </div>
          <%= button_to client_path(@client), method: :delete, data: { turbo_confirm: "Are you sure you want to delete #{@client.name}? This action cannot be undone." }, class: "inline-flex items-center px-4 py-2 border border-red-300 text-sm font-medium rounded-lg text-red-700 bg-white hover:bg-red-50 transition-colors whitespace-nowrap" do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
            </svg>
            Delete Client
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>
