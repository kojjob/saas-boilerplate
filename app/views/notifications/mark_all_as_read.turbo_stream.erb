<%= turbo_stream.replace "notifications_list" do %>
  <div id="notifications_list" class="bg-white shadow rounded-lg divide-y divide-gray-200">
    <% @notifications.each do |notification| %>
      <%= link_to notification_path(notification), class: "block p-4 hover:bg-gray-50", id: dom_id(notification) do %>
        <div class="flex items-start">
          <div class="flex-shrink-0">
            <% case notification.notification_type %>
            <% when "success" %>
              <span class="inline-flex items-center justify-center h-8 w-8 rounded-full bg-green-100 text-green-600">
                <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                </svg>
              </span>
            <% when "warning" %>
              <span class="inline-flex items-center justify-center h-8 w-8 rounded-full bg-yellow-100 text-yellow-600">
                <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
                </svg>
              </span>
            <% when "error" %>
              <span class="inline-flex items-center justify-center h-8 w-8 rounded-full bg-red-100 text-red-600">
                <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
                </svg>
              </span>
            <% else %>
              <span class="inline-flex items-center justify-center h-8 w-8 rounded-full bg-blue-100 text-blue-600">
                <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
                </svg>
              </span>
            <% end %>
          </div>
          <div class="ml-3 flex-1">
            <p class="text-sm font-medium text-gray-900">
              <%= notification.title %>
            </p>
            <% if notification.body.present? %>
              <p class="mt-1 text-sm text-gray-500 line-clamp-2"><%= notification.body %></p>
            <% end %>
            <p class="mt-1 text-xs text-gray-400"><%= time_ago_in_words(notification.created_at) %> ago</p>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
<% end %>
