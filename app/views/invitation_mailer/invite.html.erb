<%= email_heading "You're invited to join #{@account.name}!" %>

<%= email_paragraph "Hi there," %>

<%= email_paragraph "#{@inviter.full_name} has invited you to join their team on #{@account.name} as a #{@membership.role.humanize}." %>

<%= email_info_box "Join #{@account.name} and start collaborating with your team today.", type: :info %>

<%= email_spacer %>

<table role="presentation" cellspacing="0" cellpadding="0" border="0" align="center">
  <tr>
    <td>
      <%= email_button "Accept Invitation", @accept_url %>
    </td>
  </tr>
</table>

<%= email_spacer %>

<%= email_info_box "This invitation will expire in 7 days.", type: :warning %>

<%= email_divider %>

<p style="margin: 0; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif; font-size: 13px; line-height: 1.5; color: #6b7280;">
  If the button doesn't work, copy and paste this link into your browser:<br>
  <%= email_text_link @accept_url, @accept_url %>
</p>

<p style="margin: 16px 0 0; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif; font-size: 13px; line-height: 1.5; color: #6b7280;">
  If you weren't expecting this invitation, you can safely ignore this email.
</p>
