<%= form_with model: document, class: "space-y-6" do |f| %>
  <% if document.errors.any? %>
    <div class="rounded-lg bg-red-50 p-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">There were errors with your submission</h3>
          <div class="mt-2 text-sm text-red-700">
            <ul class="list-disc pl-5 space-y-1">
              <% document.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <%# File Upload %>
  <div class="space-y-4">
    <h4 class="text-sm font-medium text-slate-900">File</h4>

    <div class="flex items-center justify-center w-full">
      <label class="flex flex-col items-center justify-center w-full h-48 border-2 border-slate-300 border-dashed rounded-lg cursor-pointer bg-slate-50 hover:bg-slate-100 transition-colors">
        <div class="flex flex-col items-center justify-center pt-5 pb-6">
          <svg class="w-10 h-10 mb-3 text-slate-400" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M3 16.5v2.25A2.25 2.25 0 005.25 21h13.5A2.25 2.25 0 0021 18.75V16.5m-13.5-9L12 3m0 0l4.5 4.5M12 3v13.5" />
          </svg>
          <p class="mb-2 text-sm text-slate-500">
            <span class="font-semibold">Click to upload</span> or drag and drop
          </p>
          <p class="text-xs text-slate-500">
            Images, PDF, Word, Excel, or CSV (max 25MB)
          </p>
          <% if document.file.attached? %>
            <p class="mt-2 text-sm text-indigo-600 font-medium">
              Current file: <%= document.file.filename %>
            </p>
          <% end %>
        </div>
        <%= f.file_field :file, class: "hidden", accept: ".jpg,.jpeg,.png,.gif,.webp,.pdf,.doc,.docx,.xls,.xlsx,.txt,.csv" %>
      </label>
    </div>
  </div>

  <%# Document Details %>
  <div class="space-y-4">
    <h4 class="text-sm font-medium text-slate-900">Document Details</h4>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <div class="md:col-span-2">
        <%= f.label :name, class: "block text-sm font-medium text-slate-700 mb-1" %>
        <%= f.text_field :name, class: "block w-full px-3 py-2 border border-slate-300 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500", placeholder: "Document name" %>
      </div>

      <div>
        <%= f.label :category, class: "block text-sm font-medium text-slate-700 mb-1" %>
        <%= f.select :category, Document.categories.keys.map { |c| [c.humanize, c] }, {}, class: "block w-full px-3 py-2 border border-slate-300 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" %>
      </div>

      <div>
        <%= f.label :project_id, "Project (optional)", class: "block text-sm font-medium text-slate-700 mb-1" %>
        <%= f.collection_select :project_id, @projects, :id, :name, { include_blank: "No project" }, class: "block w-full px-3 py-2 border border-slate-300 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" %>
      </div>

      <div class="md:col-span-2">
        <%= f.label :description, class: "block text-sm font-medium text-slate-700 mb-1" %>
        <%= f.text_area :description, rows: 3, class: "block w-full px-3 py-2 border border-slate-300 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500", placeholder: "Optional description..." %>
      </div>
    </div>
  </div>

  <%# Form actions %>
  <div class="flex items-center justify-end gap-3 pt-4 border-t border-slate-200">
    <button type="button"
            data-action="modal#close"
            class="px-4 py-2 text-sm font-medium text-slate-700 bg-white border border-slate-300 rounded-lg hover:bg-slate-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors">
      Cancel
    </button>
    <%= f.submit document.persisted? ? "Update Document" : "Upload Document", class: "px-4 py-2 text-sm font-medium text-white bg-gradient-to-r from-indigo-500 to-purple-600 rounded-lg hover:from-indigo-600 hover:to-purple-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-all cursor-pointer" %>
  </div>
<% end %>
