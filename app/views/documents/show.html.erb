<% content_for :page_title, @document.name %>

<div class="space-y-6">
  <%# Hero Header with Dark Background %>
  <div class="relative overflow-hidden bg-gradient-to-r from-slate-900 via-slate-800 to-slate-900 rounded-2xl shadow-2xl">
    <%# Decorative grid pattern %>
    <div class="absolute inset-0 opacity-10">
      <svg class="w-full h-full" viewBox="0 0 100 100" preserveAspectRatio="none">
        <defs>
          <pattern id="document-grid" width="10" height="10" patternUnits="userSpaceOnUse">
            <path d="M 10 0 L 0 0 0 10" fill="none" stroke="currentColor" stroke-width="0.5"/>
          </pattern>
        </defs>
        <rect width="100%" height="100%" fill="url(#document-grid)"/>
      </svg>
    </div>

    <%# Gradient orbs %>
    <div class="absolute top-0 right-0 w-72 h-72 bg-amber-500/20 rounded-full blur-3xl"></div>
    <div class="absolute bottom-0 left-0 w-48 h-48 bg-orange-500/20 rounded-full blur-3xl"></div>

    <div class="relative px-6 py-8 sm:px-8 sm:py-10">
      <%# Back Navigation %>
      <div class="mb-6">
        <%= link_to documents_path, class: "inline-flex items-center gap-2 text-sm text-slate-400 hover:text-white transition-colors" do %>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
          </svg>
          Back to Documents
        <% end %>
      </div>

      <div class="flex flex-col sm:flex-row sm:items-start sm:justify-between gap-6">
        <%# Document Info %>
        <div class="flex items-start gap-4">
          <div class="flex-shrink-0 w-14 h-14 rounded-2xl bg-gradient-to-br from-amber-500 to-orange-600 flex items-center justify-center shadow-lg shadow-amber-500/30">
            <% if @document.image? %>
              <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
              </svg>
            <% elsif @document.pdf? %>
              <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z"/>
              </svg>
            <% else %>
              <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
              </svg>
            <% end %>
          </div>
          <div>
            <h1 class="text-2xl sm:text-3xl font-bold text-white"><%= @document.name %></h1>
            <p class="mt-1 text-slate-400">
              Uploaded <%= time_ago_in_words(@document.created_at) %> ago
              <% if @document.uploaded_by.present? %>
                by <%= @document.uploaded_by.full_name %>
              <% end %>
            </p>
            <div class="mt-3 flex flex-wrap items-center gap-3">
              <% category_colors = {
                general: "bg-slate-500/20 text-slate-300 border-slate-500/30",
                contract: "bg-blue-500/20 text-blue-300 border-blue-500/30",
                proposal: "bg-purple-500/20 text-purple-300 border-purple-500/30",
                receipt: "bg-green-500/20 text-green-300 border-green-500/30",
                photo: "bg-amber-500/20 text-amber-300 border-amber-500/30",
                permit: "bg-red-500/20 text-red-300 border-red-500/30",
                insurance: "bg-indigo-500/20 text-indigo-300 border-indigo-500/30",
                other: "bg-slate-500/20 text-slate-300 border-slate-500/30"
              } %>
              <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium border <%= category_colors[@document.category.to_sym] || 'bg-slate-500/20 text-slate-300 border-slate-500/30' %>">
                <%= @document.category.humanize %>
              </span>
              <% if @document.file.attached? %>
                <span class="text-sm text-slate-400">
                  <%= number_to_human_size(@document.file.byte_size) %>
                </span>
              <% end %>
            </div>
          </div>
        </div>

        <%# Action Buttons %>
        <div class="flex flex-wrap gap-3">
          <% if @document.file.attached? %>
            <%= link_to download_document_path(@document), class: "inline-flex items-center gap-2 px-5 py-3 bg-gradient-to-r from-amber-500 to-orange-600 hover:from-amber-600 hover:to-orange-700 text-white font-semibold rounded-xl shadow-lg shadow-amber-500/30 hover:shadow-amber-500/50 transition-all duration-300 hover:scale-105" do %>
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"/>
              </svg>
              Download
            <% end %>
          <% end %>
          <%= link_to edit_document_path(@document), data: { turbo_frame: "modal" }, class: "inline-flex items-center gap-2 px-4 py-3 bg-white/10 hover:bg-white/20 text-white font-medium rounded-xl border border-white/20 transition-all duration-300" do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
            </svg>
            Edit
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <%# Main Content - Document Viewer %>
    <div class="lg:col-span-2 space-y-6">
      <%# Document Viewer Card %>
      <div class="bg-white rounded-2xl shadow-sm border border-slate-200 overflow-hidden">
        <div class="px-6 py-4 border-b border-slate-200 flex items-center justify-between">
          <h2 class="text-lg font-semibold text-slate-900">Document Preview</h2>
          <% if @document.file.attached? %>
            <span class="text-sm text-slate-500"><%= @document.file.filename %></span>
          <% end %>
        </div>

        <div class="p-6">
          <% if @document.file.attached? %>
            <% if @document.image? %>
              <%# Image Viewer %>
              <div class="relative group">
                <div class="flex justify-center bg-gradient-to-br from-slate-100 to-slate-50 rounded-xl p-4">
                  <%= image_tag url_for(@document.file), class: "max-w-full h-auto rounded-lg shadow-lg", alt: @document.name %>
                </div>
                <%# Fullscreen hint %>
                <div class="absolute bottom-6 left-1/2 -translate-x-1/2 opacity-0 group-hover:opacity-100 transition-opacity">
                  <span class="inline-flex items-center gap-1 px-3 py-1 bg-black/70 text-white text-xs font-medium rounded-full">
                    <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0zM10 7v3m0 0v3m0-3h3m-3 0H7"/>
                    </svg>
                    Click to expand
                  </span>
                </div>
              </div>
            <% elsif @document.pdf? %>
              <%# PDF Viewer with embedded iframe %>
              <div class="bg-gradient-to-br from-slate-100 to-slate-50 rounded-xl overflow-hidden">
                <%# PDF Embed Container %>
                <div class="relative" style="height: 80vh; min-height: 600px;">
                  <iframe
                    src="<%= rails_blob_path(@document.file) %>#toolbar=1&navpanes=1&scrollbar=1"
                    class="w-full h-full border-0"
                    type="application/pdf"
                    title="<%= @document.name %>"
                  ></iframe>
                  <%# Fallback message for browsers that don't support PDF embedding %>
                  <noscript>
                    <div class="absolute inset-0 flex flex-col items-center justify-center bg-slate-100">
                      <svg class="w-16 h-16 text-slate-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z"/>
                      </svg>
                      <p class="text-slate-600 mb-4">Unable to display PDF in browser</p>
                      <%= link_to download_document_path(@document), class: "inline-flex items-center gap-2 px-4 py-2 bg-amber-500 hover:bg-amber-600 text-white font-medium rounded-lg transition-colors" do %>
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"/>
                        </svg>
                        Download PDF
                      <% end %>
                    </div>
                  </noscript>
                </div>
                <%# PDF Controls Bar %>
                <div class="flex items-center justify-between px-4 py-3 bg-slate-800 text-white">
                  <div class="flex items-center gap-2">
                    <svg class="w-5 h-5 text-red-400" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8l-6-6zm-1 1v5h5L13 3zm-3 9h.01M13 12h.01M10 15h4"/>
                    </svg>
                    <span class="text-sm font-medium">PDF Document</span>
                  </div>
                  <div class="flex items-center gap-2">
                    <%= link_to rails_blob_path(@document.file), target: "_blank", class: "inline-flex items-center gap-1 px-3 py-1.5 text-xs font-medium bg-white/10 hover:bg-white/20 rounded-lg transition-colors" do %>
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
                      </svg>
                      Open in New Tab
                    <% end %>
                    <%= link_to download_document_path(@document), class: "inline-flex items-center gap-1 px-3 py-1.5 text-xs font-medium bg-amber-500 hover:bg-amber-600 rounded-lg transition-colors" do %>
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"/>
                      </svg>
                      Download
                    <% end %>
                  </div>
                </div>
              </div>
            <% else %>
              <%# Other File Types - Show download prompt %>
              <div class="aspect-[4/3] bg-gradient-to-br from-slate-100 to-slate-50 rounded-xl flex flex-col items-center justify-center">
                <div class="w-20 h-20 rounded-2xl bg-gradient-to-br from-amber-100 to-orange-100 flex items-center justify-center mb-6">
                  <% content_type = @document.file.content_type %>
                  <% if content_type.include?('spreadsheet') || content_type.include?('excel') %>
                    <svg class="w-10 h-10 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 17v-2m3 2v-4m3 4v-6m2 10H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                    </svg>
                  <% elsif content_type.include?('word') || content_type.include?('document') %>
                    <svg class="w-10 h-10 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                    </svg>
                  <% elsif content_type.include?('text') || content_type.include?('csv') %>
                    <svg class="w-10 h-10 text-slate-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                    </svg>
                  <% else %>
                    <svg class="w-10 h-10 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                    </svg>
                  <% end %>
                </div>
                <p class="text-lg font-medium text-slate-900 mb-1"><%= @document.file.filename %></p>
                <p class="text-sm text-slate-500 mb-6"><%= number_to_human_size(@document.file.byte_size) %> &bull; <%= @document.file.content_type.split('/').last.upcase %></p>
                <p class="text-sm text-slate-500 mb-6">This file type cannot be previewed in the browser</p>
                <%= link_to download_document_path(@document), class: "inline-flex items-center gap-2 px-6 py-3 bg-gradient-to-r from-amber-500 to-orange-600 hover:from-amber-600 hover:to-orange-700 text-white font-semibold rounded-xl shadow-lg shadow-amber-500/30 hover:shadow-amber-500/50 transition-all duration-300 hover:scale-105" do %>
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"/>
                  </svg>
                  Download File
                <% end %>
              </div>
            <% end %>
          <% else %>
            <%# No file attached %>
            <div class="aspect-[4/3] bg-gradient-to-br from-slate-100 to-slate-50 rounded-xl flex flex-col items-center justify-center">
              <div class="w-20 h-20 rounded-2xl bg-slate-200 flex items-center justify-center mb-6">
                <svg class="w-10 h-10 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                </svg>
              </div>
              <p class="text-lg font-medium text-slate-900 mb-2">No File Attached</p>
              <p class="text-sm text-slate-500">This document doesn't have a file attached yet</p>
            </div>
          <% end %>
        </div>

        <% if @document.description.present? %>
          <div class="px-6 py-4 border-t border-slate-200 bg-slate-50">
            <h3 class="text-sm font-semibold text-slate-900 mb-2">Description</h3>
            <p class="text-sm text-slate-600 leading-relaxed"><%= simple_format(@document.description) %></p>
          </div>
        <% end %>
      </div>
    </div>

    <%# Sidebar %>
    <div class="space-y-6">
      <%# Document Details Card %>
      <div class="bg-white rounded-2xl shadow-sm border border-slate-200 overflow-hidden">
        <div class="px-6 py-4 border-b border-slate-200 bg-gradient-to-r from-slate-50 to-white">
          <h3 class="text-lg font-semibold text-slate-900">Document Details</h3>
        </div>
        <div class="p-6 space-y-5">
          <div class="flex items-start gap-3">
            <div class="flex-shrink-0 w-10 h-10 rounded-xl bg-amber-100 flex items-center justify-center">
              <svg class="w-5 h-5 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"/>
              </svg>
            </div>
            <div>
              <dt class="text-sm font-medium text-slate-500">Category</dt>
              <dd class="mt-1">
                <% category_badge_colors = {
                  general: "bg-slate-100 text-slate-700",
                  contract: "bg-blue-100 text-blue-700",
                  proposal: "bg-purple-100 text-purple-700",
                  receipt: "bg-green-100 text-green-700",
                  photo: "bg-amber-100 text-amber-700",
                  permit: "bg-red-100 text-red-700",
                  insurance: "bg-indigo-100 text-indigo-700",
                  other: "bg-slate-100 text-slate-700"
                } %>
                <span class="inline-flex items-center px-2.5 py-1 rounded-lg text-xs font-semibold <%= category_badge_colors[@document.category.to_sym] || 'bg-slate-100 text-slate-700' %>">
                  <%= @document.category.humanize %>
                </span>
              </dd>
            </div>
          </div>

          <% if @document.file.attached? %>
            <div class="flex items-start gap-3">
              <div class="flex-shrink-0 w-10 h-10 rounded-xl bg-blue-100 flex items-center justify-center">
                <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                </svg>
              </div>
              <div>
                <dt class="text-sm font-medium text-slate-500">File Name</dt>
                <dd class="mt-1 text-sm font-medium text-slate-900 break-all"><%= @document.file.filename %></dd>
              </div>
            </div>

            <div class="flex items-start gap-3">
              <div class="flex-shrink-0 w-10 h-10 rounded-xl bg-green-100 flex items-center justify-center">
                <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4"/>
                </svg>
              </div>
              <div>
                <dt class="text-sm font-medium text-slate-500">File Size</dt>
                <dd class="mt-1 text-sm font-medium text-slate-900"><%= number_to_human_size(@document.file.byte_size) %></dd>
              </div>
            </div>

            <div class="flex items-start gap-3">
              <div class="flex-shrink-0 w-10 h-10 rounded-xl bg-purple-100 flex items-center justify-center">
                <svg class="w-5 h-5 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z"/>
                </svg>
              </div>
              <div>
                <dt class="text-sm font-medium text-slate-500">File Type</dt>
                <dd class="mt-1 text-sm font-medium text-slate-900"><%= @document.file.content_type %></dd>
              </div>
            </div>
          <% end %>

          <div class="flex items-start gap-3">
            <div class="flex-shrink-0 w-10 h-10 rounded-xl bg-slate-100 flex items-center justify-center">
              <svg class="w-5 h-5 text-slate-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
              </svg>
            </div>
            <div>
              <dt class="text-sm font-medium text-slate-500">Uploaded</dt>
              <dd class="mt-1 text-sm font-medium text-slate-900"><%= @document.created_at.strftime("%B %d, %Y") %></dd>
              <dd class="text-xs text-slate-500"><%= @document.created_at.strftime("%I:%M %p") %></dd>
            </div>
          </div>

          <% if @document.updated_at != @document.created_at %>
            <div class="flex items-start gap-3">
              <div class="flex-shrink-0 w-10 h-10 rounded-xl bg-orange-100 flex items-center justify-center">
                <svg class="w-5 h-5 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
                </svg>
              </div>
              <div>
                <dt class="text-sm font-medium text-slate-500">Last Updated</dt>
                <dd class="mt-1 text-sm font-medium text-slate-900"><%= @document.updated_at.strftime("%B %d, %Y") %></dd>
                <dd class="text-xs text-slate-500"><%= @document.updated_at.strftime("%I:%M %p") %></dd>
              </div>
            </div>
          <% end %>
        </div>
      </div>

      <% if @document.project.present? %>
        <%# Related Project Card %>
        <div class="bg-white rounded-2xl shadow-sm border border-slate-200 overflow-hidden">
          <div class="px-6 py-4 border-b border-slate-200 bg-gradient-to-r from-slate-50 to-white">
            <h3 class="text-lg font-semibold text-slate-900">Related Project</h3>
          </div>
          <div class="p-6">
            <%= link_to project_path(@document.project), class: "block p-4 bg-gradient-to-br from-amber-50 to-orange-50 rounded-xl border border-amber-100 hover:border-amber-200 hover:shadow-md transition-all duration-200 group" do %>
              <div class="flex items-center gap-4">
                <div class="w-12 h-12 rounded-xl bg-gradient-to-br from-amber-500 to-orange-600 flex items-center justify-center shadow-lg shadow-amber-500/20 group-hover:scale-110 transition-transform duration-300">
                  <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
                  </svg>
                </div>
                <div class="flex-1 min-w-0">
                  <p class="text-base font-semibold text-slate-900 group-hover:text-amber-600 transition-colors truncate"><%= @document.project.name %></p>
                  <% if @document.project.client.present? %>
                    <p class="text-sm text-slate-500 truncate"><%= @document.project.client.name %></p>
                  <% end %>
                </div>
                <svg class="w-5 h-5 text-amber-500 opacity-0 group-hover:opacity-100 transition-opacity" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                </svg>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>

      <%# Danger Zone - Delete %>
      <div class="bg-white rounded-2xl shadow-sm border border-red-200 overflow-hidden">
        <div class="px-6 py-4 border-b border-red-100 bg-red-50">
          <h3 class="text-lg font-semibold text-red-900">Danger Zone</h3>
        </div>
        <div class="p-6">
          <p class="text-sm text-slate-600 mb-4">Once you delete this document, there is no going back. Please be certain.</p>
          <%= button_to document_path(@document), method: :delete, class: "flex items-center justify-center gap-2 w-full px-4 py-3 text-sm font-medium text-white bg-red-600 hover:bg-red-700 rounded-xl transition-colors", data: { turbo_confirm: "Are you sure you want to delete this document? This action cannot be undone." } do %>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
            </svg>
            Delete Document
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

