<div class="space-y-6">
  <%# Back Button %>
  <div>
    <%= link_to documents_path, class: "inline-flex items-center gap-2 text-sm text-slate-600 hover:text-slate-900 transition-colors" do %>
      <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5L3 12m0 0l7.5-7.5M3 12h18" />
      </svg>
      Back to Documents
    <% end %>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <%# Main Content - Document Preview %>
    <div class="lg:col-span-2 space-y-6">
      <%# Document Preview Card %>
      <div class="bg-white rounded-xl shadow-sm border border-slate-200 overflow-hidden">
        <div class="px-6 py-4 border-b border-slate-200">
          <h2 class="text-lg font-semibold text-slate-900"><%= @document.name %></h2>
          <p class="mt-1 text-sm text-slate-500">
            Uploaded <%= time_ago_in_words(@document.created_at) %> ago
            <% if @document.uploaded_by.present? %>
              by <%= @document.uploaded_by.full_name %>
            <% end %>
          </p>
        </div>

        <div class="p-6">
          <% if @document.file.attached? %>
            <% if @document.image? %>
              <div class="flex justify-center bg-slate-100 rounded-lg p-4">
                <%= image_tag @document.file.variant(resize_to_limit: [800, 800]), class: "max-w-full h-auto rounded-lg shadow-sm" %>
              </div>
            <% elsif @document.pdf? %>
              <div class="aspect-[8.5/11] bg-slate-100 rounded-lg flex flex-col items-center justify-center">
                <svg class="w-16 h-16 text-slate-400 mb-4" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 14.25v-2.625a3.375 3.375 0 00-3.375-3.375h-1.5A1.125 1.125 0 0113.5 7.125v-1.5a3.375 3.375 0 00-3.375-3.375H8.25m0 12.75h7.5m-7.5 3H12M10.5 2.25H5.625c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 00-9-9z" />
                </svg>
                <p class="text-sm text-slate-600 mb-4">PDF Document</p>
                <%= link_to download_document_path(@document), class: "inline-flex items-center gap-2 px-4 py-2 text-sm font-medium text-white bg-indigo-600 rounded-lg hover:bg-indigo-700 transition-colors" do %>
                  <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M3 16.5v2.25A2.25 2.25 0 005.25 21h13.5A2.25 2.25 0 0021 18.75V16.5M16.5 12L12 16.5m0 0L7.5 12m4.5 4.5V3" />
                  </svg>
                  Download PDF
                <% end %>
              </div>
            <% else %>
              <div class="aspect-[4/3] bg-slate-100 rounded-lg flex flex-col items-center justify-center">
                <svg class="w-16 h-16 text-slate-400 mb-4" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 14.25v-2.625a3.375 3.375 0 00-3.375-3.375h-1.5A1.125 1.125 0 0113.5 7.125v-1.5a3.375 3.375 0 00-3.375-3.375H8.25m2.25 0H5.625c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 00-9-9z" />
                </svg>
                <p class="text-sm text-slate-600 mb-2"><%= @document.file.filename %></p>
                <%= link_to download_document_path(@document), class: "inline-flex items-center gap-2 px-4 py-2 text-sm font-medium text-white bg-indigo-600 rounded-lg hover:bg-indigo-700 transition-colors" do %>
                  <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M3 16.5v2.25A2.25 2.25 0 005.25 21h13.5A2.25 2.25 0 0021 18.75V16.5M16.5 12L12 16.5m0 0L7.5 12m4.5 4.5V3" />
                  </svg>
                  Download File
                <% end %>
              </div>
            <% end %>
          <% else %>
            <div class="aspect-[4/3] bg-slate-100 rounded-lg flex items-center justify-center">
              <p class="text-sm text-slate-500">No file attached</p>
            </div>
          <% end %>
        </div>

        <% if @document.description.present? %>
          <div class="px-6 py-4 border-t border-slate-200">
            <h3 class="text-sm font-medium text-slate-900 mb-2">Description</h3>
            <p class="text-sm text-slate-600"><%= @document.description %></p>
          </div>
        <% end %>
      </div>
    </div>

    <%# Sidebar %>
    <div class="space-y-6">
      <%# Document Details Card %>
      <div class="bg-white rounded-xl shadow-sm border border-slate-200">
        <div class="px-6 py-4 border-b border-slate-200">
          <h3 class="text-lg font-semibold text-slate-900">Document Details</h3>
        </div>
        <div class="p-6 space-y-4">
          <div>
            <dt class="text-sm font-medium text-slate-500">Category</dt>
            <dd class="mt-1">
              <% category_colors = {
                general: "bg-slate-100 text-slate-700",
                contract: "bg-blue-100 text-blue-700",
                proposal: "bg-purple-100 text-purple-700",
                receipt: "bg-green-100 text-green-700",
                photo: "bg-amber-100 text-amber-700",
                permit: "bg-red-100 text-red-700",
                insurance: "bg-indigo-100 text-indigo-700",
                other: "bg-slate-100 text-slate-700"
              } %>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= category_colors[@document.category.to_sym] || 'bg-slate-100 text-slate-700' %>">
                <%= @document.category.humanize %>
              </span>
            </dd>
          </div>

          <% if @document.file.attached? %>
            <div>
              <dt class="text-sm font-medium text-slate-500">File Name</dt>
              <dd class="mt-1 text-sm text-slate-900"><%= @document.file.filename %></dd>
            </div>

            <div>
              <dt class="text-sm font-medium text-slate-500">File Size</dt>
              <dd class="mt-1 text-sm text-slate-900"><%= number_to_human_size(@document.file.byte_size) %></dd>
            </div>

            <div>
              <dt class="text-sm font-medium text-slate-500">File Type</dt>
              <dd class="mt-1 text-sm text-slate-900"><%= @document.file.content_type %></dd>
            </div>
          <% end %>

          <div>
            <dt class="text-sm font-medium text-slate-500">Uploaded</dt>
            <dd class="mt-1 text-sm text-slate-900"><%= @document.created_at.strftime("%B %d, %Y at %I:%M %p") %></dd>
          </div>

          <% if @document.updated_at != @document.created_at %>
            <div>
              <dt class="text-sm font-medium text-slate-500">Last Updated</dt>
              <dd class="mt-1 text-sm text-slate-900"><%= @document.updated_at.strftime("%B %d, %Y at %I:%M %p") %></dd>
            </div>
          <% end %>
        </div>
      </div>

      <% if @document.project.present? %>
        <%# Project Card %>
        <div class="bg-white rounded-xl shadow-sm border border-slate-200">
          <div class="px-6 py-4 border-b border-slate-200">
            <h3 class="text-lg font-semibold text-slate-900">Related Project</h3>
          </div>
          <div class="p-6">
            <%= link_to project_path(@document.project), class: "block p-4 bg-slate-50 rounded-lg hover:bg-slate-100 transition-colors" do %>
              <div class="flex items-center gap-3">
                <div class="w-10 h-10 rounded-lg bg-indigo-100 flex items-center justify-center">
                  <svg class="w-5 h-5 text-indigo-600" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 21h19.5m-18-18v18m10.5-18v18m6-13.5V21M6.75 6.75h.75m-.75 3h.75m-.75 3h.75m3-6h.75m-.75 3h.75m-.75 3h.75M6.75 21v-3.375c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125V21M3 3h12m-.75 4.5H21m-3.75 3.75h.008v.008h-.008v-.008zm0 3h.008v.008h-.008v-.008zm0 3h.008v.008h-.008v-.008z" />
                  </svg>
                </div>
                <div>
                  <p class="text-sm font-medium text-slate-900"><%= @document.project.name %></p>
                  <% if @document.project.client.present? %>
                    <p class="text-xs text-slate-500"><%= @document.project.client.name %></p>
                  <% end %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>

      <%# Actions Card %>
      <div class="bg-white rounded-xl shadow-sm border border-slate-200">
        <div class="px-6 py-4 border-b border-slate-200">
          <h3 class="text-lg font-semibold text-slate-900">Actions</h3>
        </div>
        <div class="p-6 space-y-3">
          <% if @document.file.attached? %>
            <%= link_to download_document_path(@document), class: "flex items-center justify-center gap-2 w-full px-4 py-2 text-sm font-medium text-white bg-gradient-to-r from-indigo-500 to-purple-600 rounded-lg hover:from-indigo-600 hover:to-purple-700 transition-all" do %>
              <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M3 16.5v2.25A2.25 2.25 0 005.25 21h13.5A2.25 2.25 0 0021 18.75V16.5M16.5 12L12 16.5m0 0L7.5 12m4.5 4.5V3" />
              </svg>
              Download
            <% end %>
          <% end %>

          <%= link_to edit_document_path(@document), class: "flex items-center justify-center gap-2 w-full px-4 py-2 text-sm font-medium text-slate-700 bg-white border border-slate-300 rounded-lg hover:bg-slate-50 transition-colors", data: { turbo_frame: "modal" } do %>
            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M16.862 4.487l1.687-1.688a1.875 1.875 0 112.652 2.652L10.582 16.07a4.5 4.5 0 01-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 011.13-1.897l8.932-8.931zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0115.75 21H5.25A2.25 2.25 0 013 18.75V8.25A2.25 2.25 0 015.25 6H10" />
            </svg>
            Edit Document
          <% end %>

          <%= button_to document_path(@document), method: :delete, class: "flex items-center justify-center gap-2 w-full px-4 py-2 text-sm font-medium text-red-700 bg-white border border-red-300 rounded-lg hover:bg-red-50 transition-colors", data: { turbo_confirm: "Are you sure you want to delete this document? This cannot be undone." } do %>
            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0" />
            </svg>
            Delete Document
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<%# Modal container %>
<%= turbo_frame_tag "modal" %>
