<% content_for :title, "Blog Categories" %>
<% content_for :meta_description, "Explore our blog categories to find articles on topics that matter to you." %>

<div class="min-h-screen bg-gradient-to-b from-slate-950 via-slate-900 to-slate-950">
  <!-- Header Section -->
  <section class="relative py-20 overflow-hidden">
    <!-- Background Effects -->
    <div class="absolute inset-0 overflow-hidden pointer-events-none">
      <div class="absolute top-1/4 left-1/4 w-96 h-96 bg-amber-500/10 rounded-full blur-3xl"></div>
      <div class="absolute bottom-1/4 right-1/4 w-96 h-96 bg-indigo-500/10 rounded-full blur-3xl"></div>
    </div>

    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Breadcrumb -->
      <nav class="flex items-center gap-2 text-sm text-slate-400 mb-8">
        <%= link_to "Blog", posts_path, class: "hover:text-amber-400 transition-colors" %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
        </svg>
        <span class="text-slate-500">Categories</span>
      </nav>

      <div class="text-center">
        <h1 class="text-4xl md:text-5xl font-bold text-white mb-6">
          Browse by <span class="text-transparent bg-clip-text bg-gradient-to-r from-amber-400 to-orange-500">Category</span>
        </h1>
        <p class="text-xl text-slate-400 max-w-2xl mx-auto">
          Find articles organized by topic to explore what interests you most
        </p>
      </div>
    </div>
  </section>

  <!-- Categories Grid -->
  <section class="py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <% if @categories.any? %>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          <% @categories.each do |category| %>
            <%= link_to category_path(category), class: "group block" do %>
              <div class="h-full p-8 rounded-2xl bg-white/5 backdrop-blur-md border border-white/10 hover:border-amber-500/30 transition-all duration-300 hover:-translate-y-1">
                <!-- Category Icon -->
                <div class="w-14 h-14 rounded-xl bg-gradient-to-r from-amber-500/20 to-orange-500/20 flex items-center justify-center mb-6 group-hover:scale-110 transition-transform">
                  <svg class="w-7 h-7 text-amber-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z"/>
                  </svg>
                </div>

                <!-- Category Info -->
                <h2 class="text-xl font-bold text-white mb-2 group-hover:text-amber-400 transition-colors">
                  <%= category.name %>
                </h2>

                <% if category.description.present? %>
                  <p class="text-slate-400 text-sm mb-4 line-clamp-2">
                    <%= category.description %>
                  </p>
                <% end %>

                <div class="flex items-center justify-between">
                  <span class="text-sm text-slate-500">
                    <%= pluralize(category.posts_count, 'article') %>
                  </span>
                  <span class="text-amber-500 group-hover:translate-x-1 transition-transform">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                    </svg>
                  </span>
                </div>

                <!-- Subcategories -->
                <% if category.children.any? %>
                  <div class="mt-4 pt-4 border-t border-white/10">
                    <div class="flex flex-wrap gap-2">
                      <% category.children.take(3).each do |child| %>
                        <span class="inline-block px-2 py-0.5 bg-white/5 rounded text-xs text-slate-400">
                          <%= child.name %>
                        </span>
                      <% end %>
                      <% if category.children.count > 3 %>
                        <span class="inline-block px-2 py-0.5 bg-white/5 rounded text-xs text-slate-500">
                          +<%= category.children.count - 3 %> more
                        </span>
                      <% end %>
                    </div>
                  </div>
                <% end %>
              </div>
            <% end %>
          <% end %>
        </div>
      <% else %>
        <div class="text-center py-16 rounded-2xl bg-white/5 backdrop-blur-md border border-white/10">
          <svg class="w-16 h-16 mx-auto text-slate-600 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z"/>
          </svg>
          <h3 class="text-xl font-semibold text-white mb-2">No categories yet</h3>
          <p class="text-slate-400 mb-6">Categories will appear here once content is published.</p>
          <%= link_to posts_path, class: "inline-flex items-center gap-2 px-6 py-3 bg-gradient-to-r from-amber-500 to-orange-500 text-white font-medium rounded-xl hover:shadow-lg hover:shadow-amber-500/25 transition-all" do %>
            Browse All Articles
          <% end %>
        </div>
      <% end %>
    </div>
  </section>
</div>
