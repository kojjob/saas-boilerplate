<% content_for :title, "Blog - Insights & Resources" %>
<% content_for :meta_description, "Explore our blog for expert insights, industry trends, and resources to help grow your business." %>
<% content_for :canonical_url, posts_url %>

<% content_for :head do %>
  <%= blog_index_structured_data %>
  <%= breadcrumb_structured_data([
    { name: "Home", url: root_url },
    { name: "Blog", url: posts_url }
  ]) %>
<% end %>

<div class="min-h-screen bg-gradient-to-b from-slate-950 via-slate-900 to-slate-950">
  <!-- Hero Section -->
  <section class="relative py-20 overflow-hidden">
    <!-- Background Effects -->
    <div class="absolute inset-0 overflow-hidden pointer-events-none">
      <div class="absolute top-1/4 left-1/4 w-96 h-96 bg-amber-500/10 rounded-full blur-3xl"></div>
      <div class="absolute bottom-1/4 right-1/4 w-96 h-96 bg-indigo-500/10 rounded-full blur-3xl"></div>
    </div>

    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-white mb-6">
          Our <span class="text-transparent bg-clip-text bg-gradient-to-r from-amber-400 to-orange-500">Blog</span>
        </h1>
        <p class="text-xl text-slate-400 max-w-2xl mx-auto">
          Expert insights, industry trends, and resources to help you succeed
        </p>
      </div>

      <!-- Search Bar -->
      <div class="mt-10 max-w-xl mx-auto">
        <%= form_with url: search_posts_path, method: :get, class: "relative", data: { turbo_frame: "_top" } do |f| %>
          <div class="relative">
            <svg class="absolute left-4 top-1/2 -translate-y-1/2 w-5 h-5 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
            </svg>
            <%= f.text_field :q,
                value: params[:q],
                placeholder: "Search articles...",
                class: "w-full pl-12 pr-4 py-4 bg-white/5 backdrop-blur-md border border-white/10 rounded-2xl text-white placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-amber-500/50 focus:border-amber-500/50 transition-all" %>
          </div>
        <% end %>
      </div>
    </div>
  </section>

  <!-- Featured Posts Section -->
  <% if @featured_posts&.any? %>
    <section class="py-16">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-2xl font-bold text-white mb-8 flex items-center gap-3">
          <svg class="w-6 h-6 text-amber-500" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
          </svg>
          Featured Articles
        </h2>

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
          <% @featured_posts.each_with_index do |post, index| %>
            <% if index == 0 %>
              <!-- Large Featured Card -->
              <div class="lg:col-span-2 lg:row-span-2">
                <%= link_to post_path(post), class: "group block h-full" do %>
                  <div class="relative h-full min-h-[400px] lg:min-h-[500px] rounded-3xl overflow-hidden bg-gradient-to-br from-amber-500/20 via-orange-500/10 to-transparent backdrop-blur-md border border-white/10 hover:border-amber-500/50 transition-all duration-300">
                    <% if post.featured_image_url.present? %>
                      <div class="absolute inset-0">
                        <img src="<%= post.featured_image_url %>" alt="<%= post.title %>" class="w-full h-full object-cover opacity-30 group-hover:opacity-40 transition-opacity">
                      </div>
                    <% end %>
                    <div class="absolute inset-0 bg-gradient-to-t from-slate-950 via-slate-950/50 to-transparent"></div>
                    <div class="absolute bottom-0 left-0 right-0 p-8">
                      <% if post.blog_category %>
                        <span class="inline-block px-3 py-1 bg-amber-500/20 text-amber-400 text-sm font-medium rounded-full mb-4">
                          <%= post.blog_category.name %>
                        </span>
                      <% end %>
                      <h3 class="text-2xl lg:text-3xl font-bold text-white mb-4 group-hover:text-amber-400 transition-colors line-clamp-2">
                        <%= post.title %>
                      </h3>
                      <p class="text-slate-400 mb-6 line-clamp-3">
                        <%= post.excerpt.presence || truncate(strip_tags(post.content), length: 200) %>
                      </p>
                      <div class="flex items-center gap-4 text-sm text-slate-500">
                        <span><%= post.published_at&.strftime("%B %d, %Y") %></span>
                        <span>&middot;</span>
                        <span><%= post.reading_time %> min read</span>
                      </div>
                    </div>
                  </div>
                <% end %>
              </div>
            <% else %>
              <!-- Smaller Featured Cards -->
              <%= link_to post_path(post), class: "group block" do %>
                <div class="relative h-full min-h-[240px] rounded-2xl overflow-hidden bg-white/5 backdrop-blur-md border border-white/10 hover:border-amber-500/50 transition-all duration-300">
                  <% if post.featured_image_url.present? %>
                    <div class="absolute inset-0">
                      <img src="<%= post.featured_image_url %>" alt="<%= post.title %>" class="w-full h-full object-cover opacity-20 group-hover:opacity-30 transition-opacity">
                    </div>
                  <% end %>
                  <div class="absolute inset-0 bg-gradient-to-t from-slate-950 via-slate-950/80 to-transparent"></div>
                  <div class="absolute bottom-0 left-0 right-0 p-6">
                    <% if post.blog_category %>
                      <span class="inline-block px-2 py-0.5 bg-amber-500/20 text-amber-400 text-xs font-medium rounded-full mb-3">
                        <%= post.blog_category.name %>
                      </span>
                    <% end %>
                    <h3 class="text-lg font-bold text-white mb-2 group-hover:text-amber-400 transition-colors line-clamp-2">
                      <%= post.title %>
                    </h3>
                    <div class="flex items-center gap-3 text-xs text-slate-500">
                      <span><%= post.published_at&.strftime("%b %d, %Y") %></span>
                      <span>&middot;</span>
                      <span><%= post.reading_time %> min read</span>
                    </div>
                  </div>
                </div>
              <% end %>
            <% end %>
          <% end %>
        </div>
      </div>
    </section>
  <% end %>

  <!-- Main Content -->
  <section class="py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-4 gap-12">
        <!-- Posts Grid -->
        <div class="lg:col-span-3">
          <div class="flex items-center justify-between mb-8">
            <h2 class="text-2xl font-bold text-white">Latest Articles</h2>
            <span class="text-slate-400 text-sm"><%= @posts.total_count %> articles</span>
          </div>

          <% if @posts.any? %>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
              <% @posts.each do |post| %>
                <%= link_to post_path(post), class: "group block" do %>
                  <article class="h-full rounded-2xl overflow-hidden bg-white/5 backdrop-blur-md border border-white/10 hover:border-amber-500/30 transition-all duration-300 hover:-translate-y-1">
                    <% if post.featured_image_url.present? %>
                      <div class="aspect-video overflow-hidden">
                        <img src="<%= post.featured_image_url %>" alt="<%= post.title %>" class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300">
                      </div>
                    <% else %>
                      <div class="aspect-video bg-gradient-to-br from-amber-500/20 to-indigo-500/20 flex items-center justify-center">
                        <svg class="w-12 h-12 text-white/20" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"/>
                        </svg>
                      </div>
                    <% end %>

                    <div class="p-6">
                      <% if post.blog_category %>
                        <span class="inline-block px-2 py-0.5 bg-amber-500/20 text-amber-400 text-xs font-medium rounded-full mb-3">
                          <%= post.blog_category.name %>
                        </span>
                      <% end %>

                      <h3 class="text-xl font-bold text-white mb-3 group-hover:text-amber-400 transition-colors line-clamp-2">
                        <%= post.title %>
                      </h3>

                      <p class="text-slate-400 text-sm mb-4 line-clamp-2">
                        <%= post.excerpt.presence || truncate(strip_tags(post.content), length: 120) %>
                      </p>

                      <div class="flex items-center justify-between text-xs text-slate-500">
                        <div class="flex items-center gap-2">
                          <% if post.author %>
                            <div class="w-6 h-6 rounded-full bg-gradient-to-r from-amber-500 to-orange-500 flex items-center justify-center text-white text-xs font-medium">
                              <%= post.author.email[0].upcase %>
                            </div>
                            <span><%= post.author.email.split('@').first %></span>
                          <% end %>
                        </div>
                        <div class="flex items-center gap-3">
                          <span><%= post.published_at&.strftime("%b %d") %></span>
                          <span>&middot;</span>
                          <span><%= post.reading_time %> min</span>
                        </div>
                      </div>
                    </div>
                  </article>
                <% end %>
              <% end %>
            </div>

            <!-- Pagination -->
            <% if @posts.total_pages > 1 %>
              <div class="mt-12 flex justify-center">
                <nav class="flex items-center gap-2">
                  <% if @posts.current_page > 1 %>
                    <%= link_to posts_path(page: @posts.current_page - 1), class: "p-2 rounded-lg bg-white/5 border border-white/10 text-slate-400 hover:text-white hover:border-amber-500/50 transition-all" do %>
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
                      </svg>
                    <% end %>
                  <% end %>

                  <% (1..@posts.total_pages).each do |page| %>
                    <% if page == @posts.current_page %>
                      <span class="px-4 py-2 rounded-lg bg-amber-500 text-white font-medium">
                        <%= page %>
                      </span>
                    <% elsif (page - @posts.current_page).abs <= 2 || page == 1 || page == @posts.total_pages %>
                      <%= link_to page, posts_path(page: page), class: "px-4 py-2 rounded-lg bg-white/5 border border-white/10 text-slate-400 hover:text-white hover:border-amber-500/50 transition-all" %>
                    <% elsif (page - @posts.current_page).abs == 3 %>
                      <span class="px-2 text-slate-500">...</span>
                    <% end %>
                  <% end %>

                  <% if @posts.current_page < @posts.total_pages %>
                    <%= link_to posts_path(page: @posts.current_page + 1), class: "p-2 rounded-lg bg-white/5 border border-white/10 text-slate-400 hover:text-white hover:border-amber-500/50 transition-all" do %>
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                      </svg>
                    <% end %>
                  <% end %>
                </nav>
              </div>
            <% end %>
          <% else %>
            <div class="text-center py-16 rounded-2xl bg-white/5 backdrop-blur-md border border-white/10">
              <svg class="w-16 h-16 mx-auto text-slate-600 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"/>
              </svg>
              <h3 class="text-xl font-semibold text-white mb-2">No articles yet</h3>
              <p class="text-slate-400">Check back soon for new content!</p>
            </div>
          <% end %>
        </div>

        <!-- Sidebar -->
        <aside class="lg:col-span-1 space-y-8">
          <!-- Categories -->
          <% if @categories&.any? %>
            <div class="rounded-2xl bg-white/5 backdrop-blur-md border border-white/10 p-6">
              <h3 class="text-lg font-bold text-white mb-4 flex items-center gap-2">
                <svg class="w-5 h-5 text-amber-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z"/>
                </svg>
                Categories
              </h3>
              <ul class="space-y-2">
                <% @categories.each do |category| %>
                  <li>
                    <%= link_to category_path(category), class: "flex items-center justify-between py-2 px-3 rounded-lg hover:bg-white/5 text-slate-400 hover:text-white transition-colors group" do %>
                      <span class="group-hover:text-amber-400 transition-colors"><%= category.name %></span>
                      <span class="text-xs bg-white/10 px-2 py-0.5 rounded-full"><%= category.posts_count %></span>
                    <% end %>
                  </li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <!-- Popular Tags -->
          <% if @popular_tags&.any? %>
            <div class="rounded-2xl bg-white/5 backdrop-blur-md border border-white/10 p-6">
              <h3 class="text-lg font-bold text-white mb-4 flex items-center gap-2">
                <svg class="w-5 h-5 text-amber-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"/>
                </svg>
                Popular Tags
              </h3>
              <div class="flex flex-wrap gap-2">
                <% @popular_tags.each do |tag| %>
                  <%= link_to tag_path(tag), class: "inline-block px-3 py-1.5 bg-white/5 border border-white/10 rounded-lg text-sm text-slate-400 hover:text-white hover:border-amber-500/50 hover:bg-amber-500/10 transition-all" do %>
                    #<%= tag.name %>
                  <% end %>
                <% end %>
              </div>
            </div>
          <% end %>

          <!-- Newsletter CTA -->
          <div class="rounded-2xl bg-gradient-to-br from-amber-500/20 via-orange-500/10 to-transparent backdrop-blur-md border border-amber-500/20 p-6">
            <h3 class="text-lg font-bold text-white mb-2">Stay Updated</h3>
            <p class="text-slate-400 text-sm mb-4">Get the latest articles and insights delivered to your inbox.</p>
            <div class="space-y-3">
              <input type="email" placeholder="Your email" class="w-full px-4 py-2.5 bg-white/5 border border-white/10 rounded-lg text-white placeholder-slate-500 focus:outline-none focus:ring-2 focus:ring-amber-500/50 focus:border-amber-500/50">
              <button class="w-full px-4 py-2.5 bg-gradient-to-r from-amber-500 to-orange-500 text-white font-medium rounded-lg hover:shadow-lg hover:shadow-amber-500/25 transition-all">
                Subscribe
              </button>
            </div>
          </div>
        </aside>
      </div>
    </div>
  </section>
</div>
