<div class="min-h-screen flex">
  <!-- Left Side - Branding & Visual -->
  <div class="hidden lg:flex lg:w-1/2 relative overflow-hidden" style="background: linear-gradient(135deg, #0f0c29 0%, #302b63 50%, #24243e 100%);">
    <!-- Mesh Gradient Orbs -->
    <div class="absolute inset-0 overflow-hidden">
      <div class="absolute -top-40 -left-40 w-[500px] h-[500px] rounded-full opacity-60" style="background: radial-gradient(circle, #667eea 0%, transparent 70%); filter: blur(60px);"></div>
      <div class="absolute top-1/3 -right-20 w-[400px] h-[400px] rounded-full opacity-50" style="background: radial-gradient(circle, #f093fb 0%, transparent 70%); filter: blur(80px);"></div>
      <div class="absolute -bottom-32 left-1/4 w-[450px] h-[450px] rounded-full opacity-40" style="background: radial-gradient(circle, #4facfe 0%, transparent 70%); filter: blur(70px);"></div>
      <div class="absolute top-2/3 right-1/3 w-[300px] h-[300px] rounded-full opacity-30" style="background: radial-gradient(circle, #fa709a 0%, transparent 70%); filter: blur(50px);"></div>
    </div>

    <!-- Noise Texture Overlay -->
    <div class="absolute inset-0 opacity-[0.03]" style="background-image: url('data:image/svg+xml,%3Csvg viewBox=&quot;0 0 256 256&quot; xmlns=&quot;http://www.w3.org/2000/svg&quot;%3E%3Cfilter id=&quot;noise&quot;%3E%3CfeTurbulence type=&quot;fractalNoise&quot; baseFrequency=&quot;0.85&quot; numOctaves=&quot;4&quot; stitchTiles=&quot;stitch&quot;/%3E%3C/filter%3E%3Crect width=&quot;100%25&quot; height=&quot;100%25&quot; filter=&quot;url(%23noise)&quot;/%3E%3C/svg%3E');"></div>

    <!-- Content -->
    <div class="relative z-10 flex flex-col justify-center px-12 xl:px-20 text-white">
      <!-- Logo -->
      <div class="mb-12">
        <div class="flex items-center gap-3">
          <div class="w-12 h-12 bg-white/20 backdrop-blur-sm rounded-xl flex items-center justify-center">
            <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
            </svg>
          </div>
          <span class="text-2xl font-bold tracking-tight">Deployable</span>
        </div>
      </div>

      <!-- Main Heading -->
      <h1 class="text-4xl xl:text-5xl font-bold leading-tight mb-6">
        Start your<br/>
        <span class="text-transparent bg-clip-text" style="background: linear-gradient(90deg, #f093fb 0%, #f5576c 50%, #4facfe 100%); -webkit-background-clip: text;">14-day free trial</span>
      </h1>

      <p class="text-lg text-white/80 mb-12 max-w-md leading-relaxed">
        No credit card required. Get instant access to all features and start building today.
      </p>

      <!-- Features -->
      <div class="space-y-4">
        <div class="flex items-center gap-4">
          <div class="w-10 h-10 rounded-lg bg-white/10 backdrop-blur-sm flex items-center justify-center">
            <svg class="w-5 h-5 text-green-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
            </svg>
          </div>
          <span class="text-white/90">Unlimited projects & team members</span>
        </div>
        <div class="flex items-center gap-4">
          <div class="w-10 h-10 rounded-lg bg-white/10 backdrop-blur-sm flex items-center justify-center">
            <svg class="w-5 h-5 text-green-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
            </svg>
          </div>
          <span class="text-white/90">Full API access & integrations</span>
        </div>
        <div class="flex items-center gap-4">
          <div class="w-10 h-10 rounded-lg bg-white/10 backdrop-blur-sm flex items-center justify-center">
            <svg class="w-5 h-5 text-green-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
            </svg>
          </div>
          <span class="text-white/90">Priority email & chat support</span>
        </div>
      </div>

      <!-- Social Proof -->
      <div class="mt-16 flex items-center gap-4">
        <div class="flex -space-x-3">
          <div class="w-10 h-10 rounded-full border-2 border-white/20 bg-gradient-to-br from-pink-400 to-purple-500"></div>
          <div class="w-10 h-10 rounded-full border-2 border-white/20 bg-gradient-to-br from-cyan-400 to-blue-500"></div>
          <div class="w-10 h-10 rounded-full border-2 border-white/20 bg-gradient-to-br from-orange-400 to-red-500"></div>
          <div class="w-10 h-10 rounded-full border-2 border-white/20 bg-gradient-to-br from-green-400 to-teal-500"></div>
        </div>
        <div>
          <p class="text-white/90 font-medium">Join 10,000+ teams</p>
          <p class="text-white/60 text-sm">already using Deployable</p>
        </div>
      </div>
    </div>
  </div>

  <!-- Right Side - Registration Form -->
  <div class="w-full lg:w-1/2 flex items-center justify-center px-6 sm:px-12 lg:px-16 xl:px-24 bg-gray-50 dark:bg-gray-900 py-12 overflow-y-auto">
    <div class="w-full max-w-md">
      <!-- Mobile Logo -->
      <div class="lg:hidden mb-10 flex justify-center">
        <div class="flex items-center gap-3">
          <div class="w-10 h-10 rounded-xl flex items-center justify-center" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
            </svg>
          </div>
          <span class="text-xl font-bold text-gray-900 dark:text-white">Deployable</span>
        </div>
      </div>

      <!-- Header -->
      <div class="text-center lg:text-left mb-8">
        <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-2">
          Create your account
        </h2>
        <p class="text-gray-500 dark:text-gray-400">
          Already have an account?
          <%= link_to 'Sign in', sign_in_path, class: 'font-semibold transition-colors hover:opacity-80', style: 'background: linear-gradient(90deg, #667eea, #764ba2); -webkit-background-clip: text; -webkit-text-fill-color: transparent;' %>
        </p>
      </div>

      <!-- Error Messages -->
      <% if @user.errors.any? || @account.errors.any? %>
        <div class="mb-6 p-4 rounded-xl bg-red-50 dark:bg-red-900/20 border border-red-100 dark:border-red-800/30">
          <div class="flex gap-3">
            <div class="shrink-0">
              <svg class="w-5 h-5 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
            </div>
            <div>
              <p class="text-sm font-medium text-red-800 dark:text-red-200 mb-1">Please fix the following errors:</p>
              <ul class="list-disc list-inside text-sm text-red-700 dark:text-red-300 space-y-1">
                <% @user.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
                <% @account.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      <% end %>

      <!-- Social Login Buttons -->
      <div class="space-y-3 mb-6">
        <%= link_to '/auth/google_oauth2', method: :post, data: { turbo: false }, class: 'w-full flex items-center justify-center gap-3 px-4 py-3 bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-xl text-gray-700 dark:text-gray-200 font-medium hover:bg-gray-50 dark:hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 dark:focus:ring-offset-gray-900 transition-all duration-200 shadow-sm hover:shadow-md' do %>
          <svg class="w-5 h-5" viewBox="0 0 24 24">
            <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
            <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
            <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
            <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
          </svg>
          Sign up with Google
        <% end %>

        <%= link_to '/auth/github', method: :post, data: { turbo: false }, class: 'w-full flex items-center justify-center gap-3 px-4 py-3 bg-gray-900 dark:bg-white border border-gray-900 dark:border-white rounded-xl text-white dark:text-gray-900 font-medium hover:bg-gray-800 dark:hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 dark:focus:ring-offset-gray-900 transition-all duration-200 shadow-sm hover:shadow-md' do %>
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
          </svg>
          Sign up with GitHub
        <% end %>
      </div>

      <!-- Divider -->
      <div class="relative mb-6">
        <div class="absolute inset-0 flex items-center">
          <div class="w-full border-t border-gray-200 dark:border-gray-700"></div>
        </div>
        <div class="relative flex justify-center text-sm">
          <span class="px-4 bg-gray-50 dark:bg-gray-900 text-gray-500 dark:text-gray-400">or sign up with email</span>
        </div>
      </div>

      <!-- Form -->
      <%= form_with url: sign_up_path, method: :post, class: 'space-y-4' do |f| %>
        <!-- Name Fields -->
        <div class="grid grid-cols-2 gap-4">
          <div class="space-y-2">
            <%= label_tag 'user[first_name]', 'First name', class: 'block text-sm font-medium text-gray-700 dark:text-gray-300' %>
            <%= text_field_tag 'user[first_name]', @user.first_name,
                required: true,
                autofocus: true,
                autocomplete: 'given-name',
                placeholder: 'John',
                class: 'w-full px-4 py-3 bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-xl text-gray-900 dark:text-white placeholder-gray-400 dark:placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all duration-200' %>
          </div>
          <div class="space-y-2">
            <%= label_tag 'user[last_name]', 'Last name', class: 'block text-sm font-medium text-gray-700 dark:text-gray-300' %>
            <%= text_field_tag 'user[last_name]', @user.last_name,
                required: true,
                autocomplete: 'family-name',
                placeholder: 'Doe',
                class: 'w-full px-4 py-3 bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-xl text-gray-900 dark:text-white placeholder-gray-400 dark:placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all duration-200' %>
          </div>
        </div>

        <!-- Email Field -->
        <div class="space-y-2">
          <%= label_tag 'user[email]', 'Work email', class: 'block text-sm font-medium text-gray-700 dark:text-gray-300' %>
          <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
              <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207"/>
              </svg>
            </div>
            <%= email_field_tag 'user[email]', @user.email,
                required: true,
                autocomplete: 'email',
                placeholder: 'name@company.com',
                class: 'w-full pl-12 pr-4 py-3 bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-xl text-gray-900 dark:text-white placeholder-gray-400 dark:placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all duration-200' %>
          </div>
        </div>

        <!-- Company Name Field -->
        <div class="space-y-2">
          <%= label_tag 'account[name]', 'Company name', class: 'block text-sm font-medium text-gray-700 dark:text-gray-300' %>
          <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
              <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
              </svg>
            </div>
            <%= text_field_tag 'account[name]', @account.name,
                required: true,
                autocomplete: 'organization',
                placeholder: 'Acme Inc.',
                class: 'w-full pl-12 pr-4 py-3 bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-xl text-gray-900 dark:text-white placeholder-gray-400 dark:placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all duration-200' %>
          </div>
        </div>

        <!-- Password Field -->
        <div class="space-y-2">
          <%= label_tag 'user[password]', 'Password', class: 'block text-sm font-medium text-gray-700 dark:text-gray-300' %>
          <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
              <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
              </svg>
            </div>
            <%= password_field_tag 'user[password]', nil,
                required: true,
                autocomplete: 'new-password',
                placeholder: 'Min. 8 characters',
                class: 'w-full pl-12 pr-4 py-3 bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-xl text-gray-900 dark:text-white placeholder-gray-400 dark:placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all duration-200' %>
          </div>
        </div>

        <!-- Password Confirmation Field -->
        <div class="space-y-2">
          <%= label_tag 'user[password_confirmation]', 'Confirm password', class: 'block text-sm font-medium text-gray-700 dark:text-gray-300' %>
          <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
              <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
              </svg>
            </div>
            <%= password_field_tag 'user[password_confirmation]', nil,
                required: true,
                autocomplete: 'new-password',
                placeholder: 'Confirm your password',
                class: 'w-full pl-12 pr-4 py-3 bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-xl text-gray-900 dark:text-white placeholder-gray-400 dark:placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all duration-200' %>
          </div>
        </div>

        <!-- Submit Button -->
        <div class="pt-2">
          <%= submit_tag 'Create account', class: 'w-full py-3.5 px-4 text-white font-semibold rounded-xl shadow-lg hover:shadow-xl focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-purple-500 dark:focus:ring-offset-gray-900 transition-all duration-300 cursor-pointer transform hover:-translate-y-0.5 hover:scale-[1.02]', style: 'background: linear-gradient(135deg, #667eea 0%, #764ba2 50%, #f093fb 100%); box-shadow: 0 10px 40px -10px rgba(102, 126, 234, 0.5);' %>
        </div>
      <% end %>

      <!-- Footer -->
      <p class="mt-6 text-center text-xs text-gray-500 dark:text-gray-500">
        By creating an account, you agree to our
        <%= link_to 'Terms of Service', '#', class: 'text-indigo-600 dark:text-indigo-400 hover:underline' %>
        and
        <%= link_to 'Privacy Policy', '#', class: 'text-indigo-600 dark:text-indigo-400 hover:underline' %>
      </p>

      <!-- Security Badge -->
      <div class="mt-6 flex items-center justify-center gap-2 text-xs text-gray-400 dark:text-gray-500">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
        </svg>
        <span>256-bit SSL encrypted connection</span>
      </div>
    </div>
  </div>
</div>
